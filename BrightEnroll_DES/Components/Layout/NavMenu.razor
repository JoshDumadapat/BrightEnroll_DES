@using Microsoft.AspNetCore.Components.Routing
@implements IDisposable
@inject IAuthorizationService AuthorizationService
@inject NavigationManager Navigation

@code {
    [Parameter] public EventCallback OnNavigate { get; set; }
    [Parameter] public EventCallback OnLogout { get; set; }

    protected override void OnInitialized()
    {
        Navigation.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        // Force re-render when location changes to update active state
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }

    private async Task HandleNavigate()
    {
        await OnNavigate.InvokeAsync();
    }

    private async Task HandleSuperAdminNavigate(string url)
    {
        try
        {
            // Close sidebar first
            await OnNavigate.InvokeAsync();
            
            // Small delay to ensure sidebar closes before navigation
            await Task.Delay(50);
            
            // Navigate to the page
            Navigation.NavigateTo(url, forceLoad: false);
        }
        catch (Exception ex)
        {
            // Log error but still try to navigate
            System.Diagnostics.Debug.WriteLine($"[NavMenu] Error navigating to {url}: {ex.Message}");
            Navigation.NavigateTo(url, forceLoad: true);
        }
    }

    private async Task HandleLogout()
    {
        await OnLogout.InvokeAsync();
    }

    // Check if user is SuperAdmin specifically
    private bool IsSuperAdmin()
    {
        var userRole = AuthorizationService.GetUserRole();
        if (string.IsNullOrWhiteSpace(userRole))
        {
            return false;
        }
        
        // Check if role is SuperAdmin (case-insensitive, handle both "SuperAdmin" and "Super Admin")
        var roleLower = userRole.ToLower().Trim().Replace(" ", "");
        return roleLower == "superadmin";
    }

    // Check if user is Admin (but not SuperAdmin) - they see all school admin menu items
    private bool IsAdmin()
    {
        var userRole = AuthorizationService.GetUserRole();
        if (string.IsNullOrWhiteSpace(userRole))
        {
            return false;
        }
        
        // Check if role is Admin (case-insensitive) but NOT SuperAdmin
        var roleLower = userRole.ToLower().Trim().Replace(" ", "");
        return roleLower == "admin" && !IsSuperAdmin();
    }

    // Helper to check if menu item should be shown
    private bool ShouldShowMenuItem(string permission)
    {
        // SuperAdmin sees everything
        if (IsSuperAdmin())
        {
            return true;
        }
        
        // Admin users: Check module-based permissions (restriction based on purchased modules)
        // This ensures customers can only see menu items for modules they've purchased
        if (IsAdmin())
        {
            // Gradebook is Teacher-only, even for Admins
            if (permission == Permissions.ViewGradebook)
            {
                return false;
            }
            
            // For Admin users, check if they have the permission from their purchased modules
            // AuthorizationService.HasPermission() now checks module access for Admin users
            return AuthorizationService.HasPermission(permission);
        }
        
        // Other roles need permission (role-based)
        return AuthorizationService.HasPermission(permission);
    }

    // Check if user is Teacher
    private bool IsTeacher()
    {
        var userRole = AuthorizationService.GetUserRole();
        if (string.IsNullOrWhiteSpace(userRole))
        {
            return false;
        }
        return string.Equals(userRole, "Teacher", StringComparison.OrdinalIgnoreCase);
    }

    // Check if current route is Settings-related (including sub-pages)
    private bool IsSettingsRoute()
    {
        var uri = new Uri(Navigation.Uri);
        var path = uri.AbsolutePath.ToLower();
        return path == "/settings" || 
               path.StartsWith("/settings/") ||
               path == "/contact-support" ||
               path == "/documentation" ||
               path == "/system-admin/settings" ||
               path.StartsWith("/system-admin/settings/");
    }

    // Get the class string for Settings nav link
    private string GetSettingsNavLinkClass()
    {
        return $"nav-link relative block {(IsSettingsRoute() ? "active" : "")}";
    }

    // Check if user is Cashier
    private bool IsCashier()
    {
        var userRole = AuthorizationService.GetUserRole();
        if (string.IsNullOrWhiteSpace(userRole))
        {
            return false;
        }
        return string.Equals(userRole, "Cashier", StringComparison.OrdinalIgnoreCase);
    }
}

