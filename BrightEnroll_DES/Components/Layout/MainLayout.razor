@inherits LayoutComponentBase
@implements IDisposable
@using System.Threading.Tasks
@using Microsoft.JSInterop
@using BrightEnroll_DES.Components.Shared
@inject NavigationManager Navigation
@inject BrightEnroll_DES.Services.Authentication.IAuthService AuthService
@inject BrightEnroll_DES.Services.Infrastructure.IConnectivityService ConnectivityService
@inject BrightEnroll_DES.Services.Database.Sync.IDatabaseSyncService DatabaseSyncService
@inject BrightEnroll_DES.Services.Database.Sync.ISyncStatusService SyncStatusService
@inject BrightEnroll_DES.Services.Business.Notifications.ApprovalNotificationService ApprovalNotificationService
@inject BrightEnroll_DES.Services.Business.Notifications.NotificationService NotificationService
@inject BrightEnroll_DES.Services.Business.Notifications.UserNotificationReadService UserNotificationReadService
@inject IServiceScopeFactory ServiceScopeFactory
@inject IJSRuntime JSRuntime

<!-- Loading Screen -->
<LoadingScreen />

<!-- Connectivity Toast -->
<ConnectivityToast Show="@showConnectivityToast" IsOnline="@isOnline" Message="@connectivityMessage" />

<div class="page paddin-0">
    <!-- Mobile Overlay -->
    @if (isSidebarOpen)
    {
        <div class="sidebar-overlay" @onclick="ToggleSidebar"></div>
    }

    <!-- Dropdown Overlay -->
    @if (isDropdownOpen)
    {
        <div class="fixed inset-0 z-[99]" @onclick="CloseDropdown"></div>
    }

    <!-- Sidebar -->
    <div class="sidebar @(isSidebarOpen ? "sidebar-open" : "sidebar-closed")">
        <NavMenu OnNavigate="@CloseSidebarOnNavigate" OnLogout="@ShowLogoutConfirmation" />
    </div>

    <main>
        <div class="flex flex-1 flex-col overflow-hidden">
            <!-- Top Bar with Rounded Card -->
            <div class="p-4">
                <div class="rounded-xl border border-gray-200 bg-white px-4 md:px-8 py-3 shadow-sm">
                    <div class="flex items-center justify-between gap-4">
                        <!-- Left Side: Burger Menu (Mobile Only) -->
                        <div class="md:hidden">
                            <button @onclick="ToggleSidebar" class="p-2 text-gray-600 hover:text-gray-800 hover:bg-gray-100 rounded-lg transition-colors focus:outline-none">
                                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                                </svg>
                            </button>
                        </div>

                        <!-- Right Side: Notification + Profile (Always Right-Aligned) -->
                        <div class="flex items-center justify-end gap-0 ml-auto">
                            @if (!IsTeacherOrRegistrar())
                            {
                                <!-- Notification Icon with Badge -->
                                <div class="group relative">
                                    <button type="button" @onclick="ToggleNotificationDropdown" class="relative p-2 text-gray-600 hover:text-gray-800 hover:bg-gray-100 rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                                        </svg>
                                        @if (notificationCount > 0)
                                        {
                                            <span class="absolute top-1 right-1 flex h-4 w-4 items-center justify-center rounded-full bg-red-500 text-[10px] font-bold text-white">
                                                @(notificationCount > 9 ? "9+" : notificationCount.ToString())
                                            </span>
                                        }
                                    </button>
                                    <span class="tooltip-delay">View notifications</span>
                                    
                                    <!-- Notification Dropdown -->
                                    <NotificationDropdown isOpen="@isNotificationDropdownOpen" 
                                                          isOpenChanged="@((bool value) => isNotificationDropdownOpen = value)"
                                                          unreadCount="@notificationCount"
                                                          OnNotificationRead="@RefreshNotificationCount" />
                                </div>

                                <!-- Partition -->
                                <div class="h-8 w-px bg-gray-300 mx-2"></div>
                            }

                            <!-- User Profile with Dropdown -->
                            <div class="relative flex items-center gap-3 md:gap-4 px-3 md:px-4">
                                <div class="flex items-center gap-3 md:gap-4">
                                    <div class="text-right">
                                        <p class="text-sm md:text-base font-semibold text-gray-800">@GetUserDisplayName()</p>
                                        <p class="text-xs md:text-sm text-gray-500">@GetUserRole()</p>
                                    </div>
                                    <div class="group relative">
                                        <button type="button" @onclick="ToggleDropdown" class="cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded-full">
                                            <img src="/images/profile.jpg" alt="User Avatar" class="h-10 w-10 md:h-12 md:w-12 rounded-full object-cover ring-2 ring-gray-200 hover:ring-blue-400 transition-all duration-200" />
                                        </button>
                                        <span class="tooltip-delay">View profile menu</span>
                                    </div>
                                </div>

                                <!-- Dropdown Menu -->
                                @if (isDropdownOpen)
                                {
                                    <div class="z-[100] absolute right-0 top-full mt-2 w-52 rounded-lg border border-gray-300 bg-white py-1 shadow-xl" @onclick:stopPropagation="true">
                                    <!-- Profile Option -->
                                    <a href="@GetProfileUrl()" @onclick="CloseDropdown" class="flex h-10 items-center gap-4 px-4 text-gray-700 transition-colors hover:bg-gray-100">
                                        <svg class="h-5 w-5 flex-shrink-0 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                        </svg>
                                        <span class="text-sm font-medium whitespace-nowrap overflow-hidden text-ellipsis">My Profile</span>
                                    </a>

                                    <!-- Settings Option -->
                                    <a href="@GetSettingsUrl()" @onclick="CloseDropdown" class="flex h-10 items-center gap-3 px-4 text-gray-700 transition-colors hover:bg-gray-100">
                                        <svg class="h-5 w-5 flex-shrink-0 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        </svg>
                                        <span class="text-sm font-medium whitespace-nowrap overflow-hidden text-ellipsis">Settings</span>
                                    </a>

                                    <!-- Divider -->
                                    <div class="my-1 border-t border-gray-200"></div>

                                    <!-- Logout Option -->
                                    <button type="button" @onclick="ShowLogoutConfirmation" @onclick:stopPropagation="true" class="flex h-10 w-full items-center gap-3 px-4 text-left text-red-600 transition-colors hover:bg-gray-100 hover:text-red-700">
                                        <svg class="h-5 w-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                        </svg>
                                        <span class="text-sm font-medium whitespace-nowrap overflow-hidden text-ellipsis">Logout</span>
                                    </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Page Content -->
            <div class="flex-1 overflow-auto">
                <div class="px-8 pb-8">
                    @Body
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Logout Confirmation Modal -->
@if (showLogoutModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" @onclick="HandleBackdropClick">
        <div id="logout-modal" class="w-full max-w-md overflow-hidden rounded-2xl bg-white shadow-xl" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="flex items-center justify-between rounded-t-2xl bg-white px-6 py-2.5 border-b border-gray-200">
                <h3 class="text-base font-semibold text-red-500 text-left">Confirm Logout</h3>
            </div>
 
            <!-- Modal Body -->
            <div class="rounded-b-2xl bg-white px-6 py-4">
                <p class="text-sm text-gray-700 mb-4">
                    Are you sure you want to logout?
                </p>

                <div class="flex justify-end gap-2 border-t border-gray-200 pt-3 mt-4">
                    <button type="button" @onclick="CloseLogoutModal" @onclick:stopPropagation="true" class="rounded-lg border border-gray-300 bg-transparent px-3 py-1.5 text-sm font-medium text-gray-700 hover:bg-gray-50 transition-all">
                        Cancel
                    </button>
                    <button type="button" @onclick="ConfirmLogout" @onclick:stopPropagation="true" class="rounded-lg px-3 py-1.5 text-sm font-medium text-white bg-red-500 transition-all hover:opacity-90">
                        Logout
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool isDropdownOpen = false;
    private bool isSidebarOpen = false;
    private bool isNotificationDropdownOpen = false;
    private int notificationCount = 0;
    private bool showLogoutModal = false;
    
    // Connectivity toast state
    private bool showConnectivityToast = false;
    private bool isOnline = false;
    private string connectivityMessage = "";

    private System.Threading.CancellationTokenSource? _notificationRefreshTokenSource;
    private System.Threading.Timer? _connectivityToastTimer;
    private bool _isDisposed = false;

    protected override async Task OnInitializedAsync()
    {
        // Only load notifications if user is not Teacher or Registrar
        if (!IsTeacherOrRegistrar())
        {
            await LoadNotificationCount();
            
            // Set up periodic refresh (every 3 seconds for real-time updates) with proper cancellation
            _notificationRefreshTokenSource = new System.Threading.CancellationTokenSource();
            
            _ = Task.Run(async () =>
            {
                while (!_notificationRefreshTokenSource.Token.IsCancellationRequested && !_isDisposed)
                {
                    await Task.Delay(3000, _notificationRefreshTokenSource.Token);
                    
                    if (!_isDisposed)
                    {
                        await InvokeAsync(async () =>
                        {
                            if (!_isDisposed && !IsTeacherOrRegistrar())
                            {
                                // Use IServiceScopeFactory to create new scope for background operation
                                // This prevents concurrency errors by using a separate DbContext instance
                                using var scope = ServiceScopeFactory.CreateScope();
                                var notificationService = scope.ServiceProvider.GetRequiredService<BrightEnroll_DES.Services.Business.Notifications.NotificationService>();
                                
                                try
                                {
                                    // Get all notifications and calculate unread count based on per-user read status
                                    var allNotifications = await notificationService.GetAllNotificationsAsync();
                                    var userNotificationReadService = scope.ServiceProvider.GetRequiredService<BrightEnroll_DES.Services.Business.Notifications.UserNotificationReadService>();
                                    userNotificationReadService.UpdateNotificationReadStatus(allNotifications);
                                    notificationCount = userNotificationReadService.GetUnreadCountForCurrentUser(allNotifications);
                                    StateHasChanged();
                                }
                                catch (Exception)
                                {
                                    // Silently fail - don't break the layout
                                    if (!_isDisposed)
                                    {
                                        notificationCount = 0;
                                    }
                                }
                            }
                        });
                    }
                }
            }, _notificationRefreshTokenSource.Token);
        }
        
        // Subscribe to connectivity changes (only show toast on connection changes, not on initial load)
        ConnectivityService.ConnectivityChanged += OnConnectivityChanged;
        
        // Set JS Runtime and ensure connectivity monitoring is started
        ConnectivityService.SetJSRuntime(JSRuntime);
        
        // Connect ConnectivityService with SyncStatusService and ServiceScopeFactory
        var connectivityService = ConnectivityService as BrightEnroll_DES.Services.Infrastructure.ConnectivityService;
        if (connectivityService != null)
        {
            connectivityService.SetSyncServices(SyncStatusService, DatabaseSyncService);
            connectivityService.SetServiceScopeFactory(ServiceScopeFactory);
        }
        
        // Start monitoring and ensure initial toast flag is set
        await ConnectivityService.StartMonitoringAsync();
        
        // If initial toast hasn't been shown yet, set the flag so subsequent changes will show toast
        // This handles cases where user is already logged in and MainLayout loads directly
        if (!ConnectivityService.HasShownInitialToast)
        {
            // Perform initial check and set flag after a short delay to avoid showing on initial load
            _ = Task.Run(async () =>
            {
                await Task.Delay(1000); // Wait 1 second for initial load to complete
                await ConnectivityService.CheckConnectivityAsync();
                await InvokeAsync(() =>
                {
                    ConnectivityService.HasShownInitialToast = true;
                });
            });
        }
    }

    private async Task LoadNotificationCount()
    {
        if (_isDisposed || IsTeacherOrRegistrar())
            return;
            
        try
        {
            // Get all notifications and calculate unread count based on per-user read status
            if (NotificationService != null)
            {
                var allNotifications = await NotificationService.GetAllNotificationsAsync();
                // Update read status based on per-user tracking
                UserNotificationReadService.UpdateNotificationReadStatus(allNotifications);
                // Calculate unread count using per-user service
                notificationCount = UserNotificationReadService.GetUnreadCountForCurrentUser(allNotifications);
            }
            else
            {
                notificationCount = await ApprovalNotificationService.GetPendingApprovalsCountAsync();
            }
        }
        catch (Exception)
        {
            // Silently fail - don't break the layout
            if (!_isDisposed)
            {
                notificationCount = 0;
            }
        }
    }
    
    private async Task RefreshNotificationCount()
    {
        await LoadNotificationCount();
        StateHasChanged();
    }
    
    // Public method to refresh notification count from external events
    public async Task RefreshNotificationsAsync()
    {
        await LoadNotificationCount();
        StateHasChanged();
    }

    private void OnConnectivityChanged(object? sender, bool isConnected)
    {
        // Always show toast immediately for connectivity changes without delay
        // Cancel any existing auto-hide timer
        _connectivityToastTimer?.Dispose();
        
        isOnline = isConnected;
        connectivityMessage = isConnected 
            ? "You are now online. Data will sync to cloud." 
            : "Offline. Changes saved locally, will sync when online.";
        
        showConnectivityToast = true;
        InvokeAsync(StateHasChanged);
        
        // Auto-hide after 5 seconds
        _connectivityToastTimer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                showConnectivityToast = false;
                StateHasChanged();
            });
        }, null, 5000, Timeout.Infinite);
    }

    public void Dispose()
    {
        _isDisposed = true;
        _notificationRefreshTokenSource?.Cancel();
        _notificationRefreshTokenSource?.Dispose();
        _connectivityToastTimer?.Dispose();
        ConnectivityService.ConnectivityChanged -= OnConnectivityChanged;
    }

    private void ToggleSidebar()
    {
        isSidebarOpen = !isSidebarOpen;
        StateHasChanged();
    }

    private void CloseSidebarOnNavigate()
    {
        // Close sidebar on mobile when navigation occurs
        if (isSidebarOpen)
        {
            isSidebarOpen = false;
            StateHasChanged();
        }
    }

    private void ToggleDropdown()
    {
        isDropdownOpen = !isDropdownOpen;
        StateHasChanged();
    }

    private void CloseDropdown()
    {
        isDropdownOpen = false;
        StateHasChanged();
    }

    private void CloseDropdownIfOpen()
    {
        if (isDropdownOpen)
        {
            CloseDropdown();
        }
    }

    private void ShowLogoutConfirmation()
    {
        CloseDropdown();
        showLogoutModal = true;
        StateHasChanged();
    }

    private void HandleBackdropClick()
    {
        // Allow closing logout modal on backdrop click
        CloseLogoutModal();
    }

    private void CloseLogoutModal()
    {
        showLogoutModal = false;
        StateHasChanged();
    }

    private void ConfirmLogout()
    {
        CloseLogoutModal();
        AuthService.Logout();
        Navigation.NavigateTo("/login", forceLoad: true);
    }

    private void HandleHelp()
    {
        // TODO: Implement help/support functionality
        // You can navigate to a help page or open a help modal
        CloseDropdown();
    }

    private async Task ToggleNotificationDropdown()
    {
        var wasOpen = isNotificationDropdownOpen;
        isNotificationDropdownOpen = !isNotificationDropdownOpen;
        CloseDropdown(); // Close profile dropdown if open
        
        // Always refresh notification count when toggling (especially when opening)
        await LoadNotificationCount();
        
        // If opening the dropdown, refresh count again after a small delay to ensure fresh data
        if (isNotificationDropdownOpen && !wasOpen)
        {
            await Task.Delay(200);
            await LoadNotificationCount();
        }
        
        StateHasChanged();
    }
    
    // Method to refresh notification count from external events (e.g., when expense is added)
    public async Task RefreshNotificationCountAsync()
    {
        await LoadNotificationCount();
        StateHasChanged();
    }

    private string GetPageTitle()
    {
        var uri = new Uri(Navigation.Uri);
        var path = uri.AbsolutePath.TrimStart('/');
        
        if (string.IsNullOrEmpty(path) || path == "/")
            return "Dashboard";
        
        // Capitalize first letter and replace hyphens with spaces
        var title = path.Split('/')[0];
        title = title.Replace("-", " ");
        title = char.ToUpper(title[0]) + title.Substring(1);
        
        return title;
    }

    private string GetUserDisplayName()
    {
        var user = AuthService.CurrentUser;
        if (user == null) return "User";
        
        var nameParts = new List<string> { user.first_name };
        if (!string.IsNullOrWhiteSpace(user.mid_name))
            nameParts.Add(user.mid_name);
        nameParts.Add(user.last_name);
        if (!string.IsNullOrWhiteSpace(user.suffix))
            nameParts.Add(user.suffix);
        
        return string.Join(" ", nameParts);
    }

    private string GetUserRole()
    {
        var user = AuthService.CurrentUser;
        return user?.user_role ?? "User";
    }

    private string GetSettingsUrl()
    {
        var user = AuthService.CurrentUser;
        if (user != null)
        {
            var roleLower = user.user_role?.ToLower().Trim().Replace(" ", "") ?? "";
            if (roleLower == "superadmin")
            {
                return "/system-admin/settings";
            }
        }
        return "/settings";
    }

    private string GetProfileUrl()
    {
        var user = AuthService.CurrentUser;
        if (user != null)
        {
            var roleLower = user.user_role?.ToLower().Trim().Replace(" ", "") ?? "";
            if (roleLower == "superadmin")
            {
                return "/system-admin/profile";
            }
        }
        return "/profile";
    }

    private bool IsTeacherOrRegistrar()
    {
        var user = AuthService.CurrentUser;
        if (user == null || string.IsNullOrWhiteSpace(user.user_role))
            return false;
        
        var roleLower = user.user_role.ToLower().Trim();
        return roleLower == "teacher" || roleLower == "registrar";
    }
}
