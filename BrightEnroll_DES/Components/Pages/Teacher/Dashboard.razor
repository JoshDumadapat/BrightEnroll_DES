@page "/teacher/dashboard"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Services
@using BrightEnroll_DES.Services.AuthFunction
@inject IAuthService AuthService
@inject ILoadingService LoadingService
@inject NavigationManager Navigation

<PageTitle>Teacher Dashboard</PageTitle>

<div class="text-gray-800">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Teacher Dashboard</h1>
    <p class="mb-6 text-sm text-gray-600">Welcome back, @GetTeacherName()!</p>
</div>

<!-- Quick Stats -->
<div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
    <!-- My Classes -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-start justify-between">
            <div>
                <p class="mb-1 text-sm font-medium text-gray-500">My Classes</p>
                <h3 class="text-3xl font-bold text-gray-800">@TotalClasses</h3>
            </div>
            <div class="rounded-xl bg-blue-100 p-3">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Total Students -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-start justify-between">
            <div>
                <p class="mb-1 text-sm font-medium text-gray-500">Total Students</p>
                <h3 class="text-3xl font-bold text-gray-800">@TotalStudents</h3>
            </div>
            <div class="rounded-xl bg-green-100 p-3">
                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Pending Grades -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-start justify-between">
            <div>
                <p class="mb-1 text-sm font-medium text-gray-500">Pending Grades</p>
                <h3 class="text-3xl font-bold text-gray-800">@PendingGrades</h3>
            </div>
            <div class="rounded-xl bg-yellow-100 p-3">
                <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Classes Today -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-start justify-between">
            <div>
                <p class="mb-1 text-sm font-medium text-gray-500">Classes Today</p>
                <h3 class="text-3xl font-bold text-gray-800">@ClassesToday</h3>
            </div>
            <div class="rounded-xl bg-purple-100 p-3">
                <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="mb-6">
    <h2 class="mb-4 text-xl font-bold text-gray-800">Quick Actions</h2>
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <button @onclick="NavigateToGradeEntry" class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition-all hover:shadow-md">
            <div class="rounded-lg bg-blue-100 p-3">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
            </div>
            <div class="text-left">
                <h3 class="font-semibold text-gray-800">Enter Grades</h3>
                <p class="text-sm text-gray-500">Input student grades</p>
            </div>
        </button>

        <button @onclick="NavigateToMyClasses" class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition-all hover:shadow-md">
            <div class="rounded-lg bg-green-100 p-3">
                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
            </div>
            <div class="text-left">
                <h3 class="font-semibold text-gray-800">My Classes</h3>
                <p class="text-sm text-gray-500">View assigned classes</p>
            </div>
        </button>

        <button @onclick="NavigateToMyStudents" class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition-all hover:shadow-md">
            <div class="rounded-lg bg-purple-100 p-3">
                <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
            </div>
            <div class="text-left">
                <h3 class="font-semibold text-gray-800">My Students</h3>
                <p class="text-sm text-gray-500">View student list</p>
            </div>
        </button>
    </div>
</div>

<!-- Today's Schedule -->
<div class="mb-6 rounded-2xl border border-gray-100 bg-white p-6 shadow-sm">
    <h2 class="mb-4 text-xl font-bold text-gray-800">Today's Schedule</h2>
    <div class="space-y-3">
        @if (TodaySchedule.Any())
        {
            @foreach (var schedule in TodaySchedule)
            {
                <div class="flex items-center justify-between rounded-lg border border-gray-200 p-4">
                    <div class="flex items-center gap-4">
                        <div class="rounded-lg bg-blue-100 p-2">
                            <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-800">@schedule.Subject</h3>
                            <p class="text-sm text-gray-500">@schedule.GradeLevel - @schedule.Section</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="font-semibold text-gray-800">@schedule.Time</p>
                        <p class="text-sm text-gray-500">@schedule.Room</p>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="py-8 text-center text-gray-500">
                <p>No classes scheduled for today</p>
            </div>
        }
    </div>
</div>

@code {
    private int TotalClasses { get; set; } = 0;
    private int TotalStudents { get; set; } = 0;
    private int PendingGrades { get; set; } = 0;
    private int ClassesToday { get; set; } = 0;

    private List<ScheduleItem> TodaySchedule { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        // Check if user is a teacher
        if (AuthService.CurrentUser?.user_role != "Teacher")
        {
            Navigation.NavigateTo("/dashboard");
            return;
        }

        LoadingService.ShowLoading("Loading dashboard...");
        
        try
        {
            await LoadDashboardData();
        }
        finally
        {
            LoadingService.HideLoading();
        }
    }

    private async Task LoadDashboardData()
    {
        // TODO: Load actual data from database
        // For now, using mock data
        await Task.Delay(500);

        TotalClasses = 5;
        TotalStudents = 150;
        PendingGrades = 12;
        ClassesToday = 3;

        TodaySchedule = new List<ScheduleItem>
        {
            new ScheduleItem { Subject = "Mathematics", GradeLevel = "Grade 7", Section = "Section A", Time = "8:00 AM - 9:00 AM", Room = "Room 101" },
            new ScheduleItem { Subject = "Science", GradeLevel = "Grade 8", Section = "Section B", Time = "10:00 AM - 11:00 AM", Room = "Room 205" },
            new ScheduleItem { Subject = "English", GradeLevel = "Grade 7", Section = "Section C", Time = "1:00 PM - 2:00 PM", Room = "Room 102" }
        };
    }

    private string GetTeacherName()
    {
        var user = AuthService.CurrentUser;
        if (user == null) return "Teacher";
        
        return $"{user.first_name} {user.last_name}";
    }

    private void NavigateToGradeEntry()
    {
        Navigation.NavigateTo("/teacher/grade-entry");
    }

    private void NavigateToMyClasses()
    {
        Navigation.NavigateTo("/teacher/my-classes");
    }

    private void NavigateToMyStudents()
    {
        Navigation.NavigateTo("/teacher/my-students");
    }

    public class ScheduleItem
    {
        public string Subject { get; set; } = string.Empty;
        public string GradeLevel { get; set; } = string.Empty;
        public string Section { get; set; } = string.Empty;
        public string Time { get; set; } = string.Empty;
        public string Room { get; set; } = string.Empty;
    }
}
