@page "/teacher/reports"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Services
@using BrightEnroll_DES.Services.AuthFunction
@inject IAuthService AuthService
@inject ILoadingService LoadingService
@inject NavigationManager Navigation
@inject ReportService ReportService
@inject ClassAssignmentService ClassAssignmentService

<PageTitle>Reports</PageTitle>

<div class="text-gray-800">
    <div class="mb-6 flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Reports</h1>
            <p class="mt-1 text-sm text-gray-600">Generate and view grade reports</p>
        </div>
        <button @onclick="GoBack" class="flex items-center gap-2 rounded-full bg-gray-600 px-4 py-2 text-sm font-medium text-white shadow-md transition-all duration-300 hover:bg-gray-700 hover:shadow-lg">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back
        </button>
    </div>
</div>

<!-- Report Types -->
<div class="mb-6 grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
    <!-- Class Performance Report -->
    <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-center gap-3">
            <div class="rounded-lg bg-blue-100 p-3">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-800">Class Performance</h3>
        </div>
        <p class="mb-4 text-sm text-gray-600">View overall class performance and statistics</p>
        <button @onclick="() => SelectReportType(ReportType.ClassPerformance)" class="w-full rounded-full bg-blue-600 px-4 py-2 text-sm font-semibold text-white transition-all hover:bg-blue-700">
            Generate Report
        </button>
    </div>

    <!-- Student Grade Report -->
    <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-center gap-3">
            <div class="rounded-lg bg-green-100 p-3">
                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-800">Student Grades</h3>
        </div>
        <p class="mb-4 text-sm text-gray-600">Generate individual student grade reports</p>
        <button @onclick="() => SelectReportType(ReportType.StudentGrades)" class="w-full rounded-full bg-green-600 px-4 py-2 text-sm font-semibold text-white transition-all hover:bg-green-700">
            Generate Report
        </button>
    </div>

    <!-- Subject Summary Report -->
    <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-center gap-3">
            <div class="rounded-lg bg-purple-100 p-3">
                <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-800">Subject Summary</h3>
        </div>
        <p class="mb-4 text-sm text-gray-600">View summary of all subjects taught</p>
        <button @onclick="() => SelectReportType(ReportType.SubjectSummary)" class="w-full rounded-full bg-purple-600 px-4 py-2 text-sm font-semibold text-white transition-all hover:bg-purple-700">
            Generate Report
        </button>
    </div>
</div>

<!-- Report Generation Form -->
@if (SelectedReportType != ReportType.None)
{
    <div class="rounded-xl border border-gray-100 bg-white p-6 shadow-sm">
        <div class="mb-6 flex items-center justify-between">
            <h2 class="text-xl font-bold text-gray-800">@GetReportTitle()</h2>
            <button @onclick="ClearSelection" class="text-sm text-gray-600 hover:text-gray-800">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <div class="mb-6 grid grid-cols-1 gap-4 md:grid-cols-2">
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">School Year</label>
                <select @bind="ReportSchoolYear" @bind:after="OnSchoolYearChanged" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400">
                    <option value="">Select School Year</option>
                    @foreach (var year in AvailableSchoolYears)
                    {
                        <option value="@year">@year</option>
                    }
                </select>
            </div>

            @if (SelectedReportType != ReportType.SubjectSummary)
            {
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Class</label>
                    <select @bind="ReportClass" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400">
                        <option value="">Select Class</option>
                        @foreach (var cls in AvailableClasses)
                        {
                            <option value="@cls">@cls</option>
                        }
                    </select>
                </div>
            }

            @if (SelectedReportType != ReportType.SubjectSummary)
            {
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Subject</label>
                    <select @bind="ReportSubject" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400">
                        <option value="">Select Subject</option>
                        @foreach (var subject in AvailableSubjects)
                        {
                            <option value="@subject">@subject</option>
                        }
                    </select>
                </div>
            }

            @if (SelectedReportType == ReportType.StudentGrades)
            {
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Student (Optional)</label>
                    <input type="text" @bind="ReportStudent" placeholder="Enter student name or ID" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                </div>
            }

            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">Grading Period</label>
                <select @bind="ReportPeriod" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400">
                    <option value="All">All Quarters</option>
                    <option value="1st">1st Quarter</option>
                    <option value="2nd">2nd Quarter</option>
                    <option value="3rd">3rd Quarter</option>
                    <option value="4th">4th Quarter</option>
                    <option value="Final">Final Grades</option>
                </select>
            </div>
        </div>

        <div class="flex justify-end gap-3">
            <button @onclick="PreviewReport" class="flex items-center gap-2 rounded-full border border-blue-600 bg-transparent px-6 py-2.5 text-sm font-semibold text-blue-600 transition-all hover:bg-blue-50">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                Preview
            </button>
            <button @onclick="GenerateReport" class="flex items-center gap-2 rounded-full bg-blue-600 px-6 py-2.5 text-sm font-semibold text-white transition-all hover:bg-blue-700">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                </svg>
                Generate & Download
            </button>
        </div>
    </div>
}

<!-- Recent Reports -->
<div class="mt-6 rounded-xl border border-gray-100 bg-white shadow-sm">
    <div class="border-b border-gray-200 p-6">
        <h2 class="text-lg font-bold text-gray-800">Recent Reports</h2>
    </div>
    <div class="divide-y divide-gray-200">
        @foreach (var report in RecentReports)
        {
            <div class="flex items-center justify-between p-6 hover:bg-gray-50">
                <div class="flex items-center gap-4">
                    <div class="rounded-lg bg-gray-100 p-3">
                        <svg class="h-6 w-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="font-semibold text-gray-800">@report.Title</h3>
                        <p class="text-sm text-gray-600">Generated on @report.GeneratedDate.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>
                <button class="rounded-full bg-blue-600 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-blue-700">
                    Download
                </button>
            </div>
        }
    </div>
    
    @if (!RecentReports.Any())
    {
        <div class="py-12 text-center text-gray-500">
            <svg class="mx-auto mb-4 h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <p>No recent reports</p>
        </div>
    }
</div>

@code {
    private ReportType SelectedReportType { get; set; } = ReportType.None;
    private string ReportSchoolYear { get; set; } = string.Empty;
    private string ReportClass { get; set; } = string.Empty;
    private string ReportSubject { get; set; } = string.Empty;
    private string ReportStudent { get; set; } = string.Empty;
    private string ReportPeriod { get; set; } = "All";

    private List<string> AvailableSchoolYears { get; set; } = new();
    private List<string> AvailableClasses { get; set; } = new();
    private List<string> AvailableSubjects { get; set; } = new();
    private List<ReportInfo> RecentReports { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        // Check if user is a teacher
        if (AuthService.CurrentUser?.user_role != "Teacher")
        {
            Navigation.NavigateTo("/dashboard");
            return;
        }

        LoadingService.ShowLoading("Loading reports...");
        
        try
        {
            await LoadInitialData();
            await LoadRecentReports();
        }
        finally
        {
            LoadingService.HideLoading();
        }
    }

    private async Task LoadInitialData()
    {
        try
        {
            var teacherId = AuthService.CurrentUser?.user_ID;
            if (!teacherId.HasValue) return;

            // Load available school years
            AvailableSchoolYears = await ReportService.GetAvailableSchoolYearsAsync(teacherId.Value);
            
            // Load classes and subjects will be loaded when school year is selected
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading initial data: {ex.Message}");
        }
    }

    private async Task OnSchoolYearChanged()
    {
        try
        {
            var teacherId = AuthService.CurrentUser?.user_ID;
            if (!teacherId.HasValue) return;

            if (!string.IsNullOrEmpty(ReportSchoolYear))
            {
                // Load classes and subjects for selected school year
                AvailableClasses = await ClassAssignmentService.GetTeacherClassesAsync(teacherId.Value, ReportSchoolYear);
                AvailableSubjects = await ClassAssignmentService.GetTeacherSubjectsAsync(teacherId.Value, ReportSchoolYear);
            }
            else
            {
                AvailableClasses = new List<string>();
                AvailableSubjects = new List<string>();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading classes and subjects: {ex.Message}");
        }
    }

    private async Task LoadRecentReports()
    {
        try
        {
            var teacherId = AuthService.CurrentUser?.user_ID;
            if (!teacherId.HasValue)
            {
                RecentReports = new List<ReportInfo>();
                return;
            }

            var reports = await ReportService.GetRecentReportsAsync(teacherId.Value);

            RecentReports = reports.Select(r => new ReportInfo
            {
                ReportId = r.ReportId,
                Title = r.Title,
                GeneratedDate = r.GeneratedDate
            }).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading recent reports: {ex.Message}");
            RecentReports = new List<ReportInfo>();
        }
    }

    private void SelectReportType(ReportType type)
    {
        SelectedReportType = type;
        ReportSchoolYear = string.Empty;
        ReportClass = string.Empty;
        ReportSubject = string.Empty;
        ReportStudent = string.Empty;
        ReportPeriod = "All";
    }

    private void ClearSelection()
    {
        SelectedReportType = ReportType.None;
    }

    private string GetReportTitle()
    {
        return SelectedReportType switch
        {
            ReportType.ClassPerformance => "Class Performance Report",
            ReportType.StudentGrades => "Student Grade Report",
            ReportType.SubjectSummary => "Subject Summary Report",
            _ => "Report"
        };
    }

    private async Task PreviewReport()
    {
        if (!ValidateReportParameters())
        {
            return;
        }

        LoadingService.ShowLoading("Generating preview...");
        
        try
        {
            // Parse class to get grade level and section
            var (gradeLevel, section) = ParseClass(ReportClass);

            // Generate report data based on type
            var reportType = SelectedReportType.ToString();
            var teacherId = AuthService.CurrentUser?.user_ID ?? 0;
            var generatedBy = AuthService.CurrentUser?.system_ID;

            // For preview, we just validate the data can be generated
            // In a real implementation, you would generate and display the preview
            await Task.Delay(500);
            
            // Show success message (could use toast notification)
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error generating preview: {ex.Message}");
        }
        finally
        {
            LoadingService.HideLoading();
        }
    }

    private async Task GenerateReport()
    {
        if (!ValidateReportParameters())
        {
            return;
        }

        LoadingService.ShowLoading("Generating report...");
        
        try
        {
            var teacherId = AuthService.CurrentUser?.user_ID ?? 0;
            var generatedBy = AuthService.CurrentUser?.system_ID;

            // Parse class to get grade level and section
            var (gradeLevel, section) = ParseClass(ReportClass);

            // Create report record
            var report = await ReportService.CreateReportAsync(
                teacherId,
                SelectedReportType.ToString(),
                ReportSchoolYear,
                gradeLevel,
                section,
                string.IsNullOrEmpty(ReportSubject) ? null : ReportSubject,
                ReportPeriod == "All" ? null : ReportPeriod,
                string.IsNullOrEmpty(ReportStudent) ? null : ReportStudent,
                null, // filePath - could be set if file is saved
                generatedBy);

            // Reload recent reports
            await LoadRecentReports();
            
            // Show success message (could use toast notification)
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error generating report: {ex.Message}");
        }
        finally
        {
            LoadingService.HideLoading();
        }
    }

    private bool ValidateReportParameters()
    {
        if (string.IsNullOrEmpty(ReportSchoolYear))
        {
            // Show error: School year is required
            return false;
        }

        if (SelectedReportType != ReportType.SubjectSummary)
        {
            if (string.IsNullOrEmpty(ReportClass))
            {
                // Show error: Class is required
                return false;
            }
        }

        return true;
    }

    private (string? gradeLevel, string? section) ParseClass(string classString)
    {
        if (string.IsNullOrEmpty(classString))
            return (null, null);

        var parts = classString.Split(new[] { " - " }, StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 1)
        {
            var gradeLevel = parts[0].Trim();
            var section = parts.Length >= 2 ? parts[1].Trim() : null;
            if (section == "N/A")
                section = null;
            return (gradeLevel, section);
        }

        return (null, null);
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/teacher/dashboard");
    }

    public enum ReportType
    {
        None,
        ClassPerformance,
        StudentGrades,
        SubjectSummary
    }

    public class ReportInfo
    {
        public int ReportId { get; set; }
        public string Title { get; set; } = string.Empty;
        public DateTime GeneratedDate { get; set; }
    }
}
