@page "/cashier/dashboard"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Services
@using BrightEnroll_DES.Services.AuthFunction
@inject IAuthService AuthService
@inject ILoadingService LoadingService
@inject NavigationManager Navigation

<PageTitle>Cashier Dashboard</PageTitle>

<div class="text-gray-800">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Cashier Dashboard</h1>
    <p class="mb-6 text-sm text-gray-600">Welcome back, @GetCashierName()!</p>
</div>

<!-- Quick Stats -->
<div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
    <!-- Today's Collections -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-start justify-between">
            <div>
                <p class="mb-1 text-sm font-medium text-gray-500">Today's Collections</p>
                <h3 class="text-3xl font-bold text-gray-800">?@TodayCollections.ToString("N2")</h3>
            </div>
            <div class="rounded-xl bg-green-100 p-3">
                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Pending Payments -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-start justify-between">
            <div>
                <p class="mb-1 text-sm font-medium text-gray-500">Pending Payments</p>
                <h3 class="text-3xl font-bold text-gray-800">@PendingPayments</h3>
            </div>
            <div class="rounded-xl bg-yellow-100 p-3">
                <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Transactions Today -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-start justify-between">
            <div>
                <p class="mb-1 text-sm font-medium text-gray-500">Transactions Today</p>
                <h3 class="text-3xl font-bold text-gray-800">@TransactionsToday</h3>
            </div>
            <div class="rounded-xl bg-blue-100 p-3">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Outstanding Balance -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-start justify-between">
            <div>
                <p class="mb-1 text-sm font-medium text-gray-500">Outstanding Balance</p>
                <h3 class="text-3xl font-bold text-gray-800">?@OutstandingBalance.ToString("N2")</h3>
            </div>
            <div class="rounded-xl bg-red-100 p-3">
                <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="mb-6">
    <h2 class="mb-4 text-xl font-bold text-gray-800">Quick Actions</h2>
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <button @onclick="NavigateToProcessPayment" class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition-all hover:shadow-md">
            <div class="rounded-lg bg-green-100 p-3">
                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
            </div>
            <div class="text-left">
                <h3 class="font-semibold text-gray-800">Process Payment</h3>
                <p class="text-sm text-gray-500">Accept student payments</p>
            </div>
        </button>

        <button @onclick="NavigateToPaymentHistory" class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition-all hover:shadow-md">
            <div class="rounded-lg bg-blue-100 p-3">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                </svg>
            </div>
            <div class="text-left">
                <h3 class="font-semibold text-gray-800">Payment History</h3>
                <p class="text-sm text-gray-500">View transaction records</p>
            </div>
        </button>

        <button @onclick="NavigateToStudentAccounts" class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition-all hover:shadow-md">
            <div class="rounded-lg bg-purple-100 p-3">
                <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
            </div>
            <div class="text-left">
                <h3 class="font-semibold text-gray-800">Student Accounts</h3>
                <p class="text-sm text-gray-500">View student balances</p>
            </div>
        </button>
    </div>
</div>

<!-- Recent Transactions -->
<div class="mb-6 rounded-2xl border border-gray-100 bg-white p-6 shadow-sm">
    <div class="mb-4 flex items-center justify-between">
        <h2 class="text-xl font-bold text-gray-800">Recent Transactions</h2>
        <button @onclick="NavigateToPaymentHistory" class="text-sm font-medium text-blue-600 hover:text-blue-800">
            View All
        </button>
    </div>
    <div class="space-y-3">
        @if (RecentTransactions.Any())
        {
            @foreach (var transaction in RecentTransactions)
            {
                <div class="flex items-center justify-between rounded-lg border border-gray-200 p-4">
                    <div class="flex items-center gap-4">
                        <div class="rounded-lg bg-green-100 p-2">
                            <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-800">@transaction.StudentName</h3>
                            <p class="text-sm text-gray-500">@transaction.PaymentType - OR #@transaction.ORNumber</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="font-semibold text-gray-800">?@transaction.Amount.ToString("N2")</p>
                        <p class="text-sm text-gray-500">@transaction.TimeStamp.ToString("hh:mm tt")</p>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="py-8 text-center text-gray-500">
                <p>No transactions yet today</p>
            </div>
        }
    </div>
</div>

@code {
    private decimal TodayCollections { get; set; } = 0;
    private int PendingPayments { get; set; } = 0;
    private int TransactionsToday { get; set; } = 0;
    private decimal OutstandingBalance { get; set; } = 0;

    private List<TransactionItem> RecentTransactions { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        // Check if user is a cashier
        if (AuthService.CurrentUser?.user_role != "Cashier")
        {
            Navigation.NavigateTo("/dashboard");
            return;
        }

        LoadingService.ShowLoading("Loading dashboard...");
        
        try
        {
            await LoadDashboardData();
        }
        finally
        {
            LoadingService.HideLoading();
        }
    }

    private async Task LoadDashboardData()
    {
        // TODO: Load actual data from database
        // For now, using mock data
        await Task.Delay(500);

        TodayCollections = 125500.00m;
        PendingPayments = 48;
        TransactionsToday = 32;
        OutstandingBalance = 2450000.00m;

        RecentTransactions = new List<TransactionItem>
        {
            new TransactionItem { StudentName = "Juan Dela Cruz", PaymentType = "Tuition Fee", Amount = 5000.00m, ORNumber = "2024-001234", TimeStamp = DateTime.Now.AddMinutes(-15) },
            new TransactionItem { StudentName = "Maria Santos", PaymentType = "Miscellaneous Fee", Amount = 2500.00m, ORNumber = "2024-001235", TimeStamp = DateTime.Now.AddMinutes(-30) },
            new TransactionItem { StudentName = "Pedro Reyes", PaymentType = "Books", Amount = 1800.00m, ORNumber = "2024-001236", TimeStamp = DateTime.Now.AddHours(-1) },
            new TransactionItem { StudentName = "Ana Garcia", PaymentType = "Tuition Fee", Amount = 5000.00m, ORNumber = "2024-001237", TimeStamp = DateTime.Now.AddHours(-2) }
        };
    }

    private string GetCashierName()
    {
        var user = AuthService.CurrentUser;
        if (user == null) return "Cashier";
        
        return $"{user.first_name} {user.last_name}";
    }

    private void NavigateToProcessPayment()
    {
        Navigation.NavigateTo("/cashier/process-payment");
    }

    private void NavigateToPaymentHistory()
    {
        Navigation.NavigateTo("/cashier/payment-history");
    }

    private void NavigateToStudentAccounts()
    {
        Navigation.NavigateTo("/cashier/student-accounts");
    }

    public class TransactionItem
    {
        public string StudentName { get; set; } = string.Empty;
        public string PaymentType { get; set; } = string.Empty;
        public decimal Amount { get; set; }
        public string ORNumber { get; set; } = string.Empty;
        public DateTime TimeStamp { get; set; }
    }
}
