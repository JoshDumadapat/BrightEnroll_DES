@page "/cashier/reports"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Services
@using BrightEnroll_DES.Services.AuthFunction
@using BrightEnroll_DES.Services.Cashier
@inject IAuthService AuthService
@inject ILoadingService LoadingService
@inject NavigationManager Navigation
@inject CashierService CashierService

<PageTitle>Reports</PageTitle>

<div class="text-gray-800">
    <div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="min-w-0 flex-1">
            <h1 class="text-xl sm:text-2xl font-bold text-gray-800">Financial Reports</h1>
            <p class="mt-1 text-sm text-gray-600">Generate and view payment reports</p>
        </div>
        <button @onclick="GoBack" class="flex items-center justify-center gap-2 rounded-full bg-gray-600 px-4 py-2 text-sm font-medium text-white shadow-md transition-all duration-300 hover:bg-gray-700 hover:shadow-lg flex-shrink-0">
            <svg class="h-4 w-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            <span class="hidden sm:inline">Back</span>
        </button>
    </div>
</div>

<!-- Report Types -->
<div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <!-- Daily Collection Report -->
    <div class="rounded-xl border border-gray-200 bg-white p-4 sm:p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-center gap-2 sm:gap-3">
            <div class="flex-shrink-0 rounded-lg bg-green-100 p-2 sm:p-3">
                <svg class="h-5 w-5 sm:h-6 sm:w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
            </div>
            <div class="min-w-0 flex-1">
                <h3 class="text-sm sm:text-base font-semibold text-gray-800">Daily Collection</h3>
                <p class="text-xs text-gray-500">Today's transactions</p>
            </div>
        </div>
        <button @onclick='() => GenerateReport("daily")' class="w-full rounded-full bg-green-600 px-4 py-2 text-sm font-medium text-white transition-all hover:bg-green-700">
            Generate Report
        </button>
    </div>

    <!-- Monthly Collection Report -->
    <div class="rounded-xl border border-gray-200 bg-white p-4 sm:p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-center gap-2 sm:gap-3">
            <div class="flex-shrink-0 rounded-lg bg-blue-100 p-2 sm:p-3">
                <svg class="h-5 w-5 sm:h-6 sm:w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
            </div>
            <div class="min-w-0 flex-1">
                <h3 class="text-sm sm:text-base font-semibold text-gray-800">Monthly Collection</h3>
                <p class="text-xs text-gray-500">This month's summary</p>
            </div>
        </div>
        <button @onclick='() => GenerateReport("monthly")' class="w-full rounded-full bg-blue-600 px-4 py-2 text-sm font-medium text-white transition-all hover:bg-blue-700">
            Generate Report
        </button>
    </div>

    <!-- Payment Summary Report -->
    <div class="rounded-xl border border-gray-200 bg-white p-4 sm:p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-center gap-2 sm:gap-3">
            <div class="flex-shrink-0 rounded-lg bg-purple-100 p-2 sm:p-3">
                <svg class="h-5 w-5 sm:h-6 sm:w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
            </div>
            <div class="min-w-0 flex-1">
                <h3 class="text-sm sm:text-base font-semibold text-gray-800">Payment Summary</h3>
                <p class="text-xs text-gray-500">By payment type</p>
            </div>
        </div>
        <button @onclick='() => GenerateReport("summary")' class="w-full rounded-full bg-purple-600 px-4 py-2 text-sm font-medium text-white transition-all hover:bg-purple-700">
            Generate Report
        </button>
    </div>

    <!-- Student Account Status -->
    <div class="rounded-xl border border-gray-200 bg-white p-4 sm:p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-center gap-2 sm:gap-3">
            <div class="flex-shrink-0 rounded-lg bg-yellow-100 p-2 sm:p-3">
                <svg class="h-5 w-5 sm:h-6 sm:w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
            </div>
            <div class="min-w-0 flex-1">
                <h3 class="text-sm sm:text-base font-semibold text-gray-800">Account Status</h3>
                <p class="text-xs text-gray-500">Student balances</p>
            </div>
        </div>
        <button @onclick='() => GenerateReport("accounts")' class="w-full rounded-full bg-yellow-600 px-4 py-2 text-sm font-medium text-white transition-all hover:bg-yellow-700">
            Generate Report
        </button>
    </div>

    <!-- Outstanding Balance Report -->
    <div class="rounded-xl border border-gray-200 bg-white p-4 sm:p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-center gap-2 sm:gap-3">
            <div class="flex-shrink-0 rounded-lg bg-red-100 p-2 sm:p-3">
                <svg class="h-5 w-5 sm:h-6 sm:w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <div class="min-w-0 flex-1">
                <h3 class="text-sm sm:text-base font-semibold text-gray-800">Outstanding Balance</h3>
                <p class="text-xs text-gray-500">Unpaid accounts</p>
            </div>
        </div>
        <button @onclick='() => GenerateReport("outstanding")' class="w-full rounded-full bg-red-600 px-4 py-2 text-sm font-medium text-white transition-all hover:bg-red-700">
            Generate Report
        </button>
    </div>

    <!-- Custom Date Range Report -->
    <div class="rounded-xl border border-gray-200 bg-white p-4 sm:p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-center gap-2 sm:gap-3">
            <div class="flex-shrink-0 rounded-lg bg-indigo-100 p-2 sm:p-3">
                <svg class="h-5 w-5 sm:h-6 sm:w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                </svg>
            </div>
            <div class="min-w-0 flex-1">
                <h3 class="text-sm sm:text-base font-semibold text-gray-800">Custom Range</h3>
                <p class="text-xs text-gray-500">Select date range</p>
            </div>
        </div>
        <button @onclick="ShowCustomRangeModal" class="w-full rounded-full bg-indigo-600 px-4 py-2 text-sm font-medium text-white transition-all hover:bg-indigo-700">
            Generate Report
        </button>
    </div>
</div>

<!-- Custom Date Range Modal -->
@if (showCustomRangeModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" @onclick="CloseCustomRangeModal">
        <div class="w-full max-w-md rounded-2xl bg-white p-6 shadow-xl" @onclick:stopPropagation="true">
            <h3 class="mb-4 text-lg font-bold text-gray-800">Custom Date Range Report</h3>
            
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="mb-4 rounded-lg border border-red-200 bg-red-50 p-3">
                    <p class="text-sm font-medium text-red-800">@ErrorMessage</p>
                </div>
            }
            
            <div class="mb-4">
                <label class="mb-2 block text-sm font-medium text-gray-700">From Date</label>
                <input type="date" @bind="CustomFromDate" class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
            </div>

            <div class="mb-6">
                <label class="mb-2 block text-sm font-medium text-gray-700">To Date</label>
                <input type="date" @bind="CustomToDate" class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
            </div>

            <div class="flex justify-end gap-3">
                <button @onclick="CloseCustomRangeModal" class="rounded-full border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 transition-all hover:bg-gray-50">
                    Cancel
                </button>
                <button @onclick="GenerateCustomRangeReport" class="rounded-full bg-blue-600 px-4 py-2 text-sm font-medium text-white transition-all hover:bg-blue-700">
                    Generate
                </button>
            </div>
        </div>
    </div>
}

<!-- Report Display Section -->
@if (CurrentReport != null)
{
    <div class="mb-6 rounded-xl border border-gray-100 bg-white p-6 shadow-sm">
        <div class="mb-4 flex items-center justify-between">
            <h2 class="text-xl font-bold text-gray-800">@CurrentReportTitle</h2>
            <button @onclick="CloseReport" class="text-sm font-medium text-gray-600 hover:text-gray-800">
                Close Report
            </button>
        </div>
        
        @if (ErrorMessage != null)
        {
            <div class="rounded-lg border border-red-200 bg-red-50 p-4">
                <p class="text-sm font-medium text-red-800">@ErrorMessage</p>
            </div>
        }
        else
        {
            @if (CurrentReportType == "daily" && CurrentReport is DailyCollectionReport dailyReport)
            {
                @if (dailyReport.TransactionCount == 0)
                {
                    <div class="rounded-lg border border-yellow-200 bg-yellow-50 p-6 text-center">
                        <svg class="mx-auto mb-4 h-12 w-12 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                        <h3 class="mb-2 text-lg font-semibold text-yellow-800">No Data Available</h3>
                        <p class="text-sm text-yellow-700">There are no payment transactions recorded for today. Please check back later or process some payments to generate this report.</p>
                    </div>
                }
                else
                {
                    <div class="space-y-4">
                        <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                            <div class="rounded-lg border border-blue-200 bg-blue-50 p-4">
                                <p class="text-sm text-blue-600">Total Collection</p>
                                <p class="text-2xl font-bold text-blue-800">₱@dailyReport.TotalCollection.ToString("N2")</p>
                            </div>
                            <div class="rounded-lg border border-green-200 bg-green-50 p-4">
                                <p class="text-sm text-green-600">Total Transactions</p>
                                <p class="text-2xl font-bold text-green-800">@dailyReport.TransactionCount</p>
                            </div>
                        </div>
                        @if (dailyReport.PaymentTypeBreakdown.Any())
                        {
                            <div class="mt-4">
                                <h3 class="mb-2 text-lg font-semibold text-gray-800">Payment Type Breakdown</h3>
                                <div class="overflow-x-auto">
                                    <table class="w-full">
                                        <thead class="bg-gray-50">
                                            <tr>
                                                <th class="px-4 py-2 text-left text-sm font-semibold text-gray-600">Payment Type</th>
                                                <th class="px-4 py-2 text-right text-sm font-semibold text-gray-600">Count</th>
                                                <th class="px-4 py-2 text-right text-sm font-semibold text-gray-600">Total Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody class="divide-y divide-gray-200">
                                            @foreach (var item in dailyReport.PaymentTypeBreakdown)
                                            {
                                                <tr>
                                                    <td class="px-4 py-2 text-sm text-gray-800">@item.PaymentType</td>
                                                    <td class="px-4 py-2 text-right text-sm text-gray-600">@item.Count</td>
                                                    <td class="px-4 py-2 text-right text-sm font-semibold text-gray-800">₱@item.TotalAmount.ToString("N2")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
            else if (CurrentReportType == "monthly" && CurrentReport is MonthlyCollectionReport monthlyReport)
            {
                @if (monthlyReport.TransactionCount == 0)
                {
                    <div class="rounded-lg border border-yellow-200 bg-yellow-50 p-6 text-center">
                        <svg class="mx-auto mb-4 h-12 w-12 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                        <h3 class="mb-2 text-lg font-semibold text-yellow-800">No Data Available</h3>
                        <p class="text-sm text-yellow-700">There are no payment transactions recorded for @(new DateTime(monthlyReport.Year, monthlyReport.Month, 1).ToString("MMMM yyyy")). Please process some payments to generate this report.</p>
                    </div>
                }
                else
                {
                    <div class="space-y-4">
                        <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                            <div class="rounded-lg border border-blue-200 bg-blue-50 p-4">
                                <p class="text-sm text-blue-600">Total Collection for @(new DateTime(monthlyReport.Year, monthlyReport.Month, 1).ToString("MMMM yyyy"))</p>
                                <p class="text-2xl font-bold text-blue-800">₱@monthlyReport.TotalCollection.ToString("N2")</p>
                            </div>
                            <div class="rounded-lg border border-green-200 bg-green-50 p-4">
                                <p class="text-sm text-green-600">Total Transactions</p>
                                <p class="text-2xl font-bold text-green-800">@monthlyReport.TransactionCount</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else if (CurrentReportType == "summary" && CurrentReport is PaymentSummaryReport summaryReport)
            {
                @if (summaryReport.TotalTransactions == 0)
                {
                    <div class="rounded-lg border border-yellow-200 bg-yellow-50 p-6 text-center">
                        <svg class="mx-auto mb-4 h-12 w-12 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                        <h3 class="mb-2 text-lg font-semibold text-yellow-800">No Data Available</h3>
                        <p class="text-sm text-yellow-700">There are no payment transactions in the database. Please process some payments to generate this report.</p>
                    </div>
                }
                else
                {
                    <div class="space-y-4">
                        <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                            <div class="rounded-lg border border-blue-200 bg-blue-50 p-4">
                                <p class="text-sm text-blue-600">Total Collection</p>
                                <p class="text-2xl font-bold text-blue-800">₱@summaryReport.TotalCollection.ToString("N2")</p>
                            </div>
                            <div class="rounded-lg border border-green-200 bg-green-50 p-4">
                                <p class="text-sm text-green-600">Total Transactions</p>
                                <p class="text-2xl font-bold text-green-800">@summaryReport.TotalTransactions</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else if (CurrentReportType == "accounts" && CurrentReport is AccountStatusReport accountReport)
            {
                @if (accountReport.TotalStudents == 0)
                {
                    <div class="rounded-lg border border-yellow-200 bg-yellow-50 p-6 text-center">
                        <svg class="mx-auto mb-4 h-12 w-12 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                        <h3 class="mb-2 text-lg font-semibold text-yellow-800">No Data Available</h3>
                        <p class="text-sm text-yellow-700">There are no student accounts in the database. Please create student accounts first to generate this report.</p>
                    </div>
                }
                else
                {
                    <div class="space-y-4">
                        <div class="grid grid-cols-1 gap-4 md:grid-cols-4">
                            <div class="rounded-lg border border-blue-200 bg-blue-50 p-4">
                                <p class="text-sm text-blue-600">Total Students</p>
                                <p class="text-2xl font-bold text-blue-800">@accountReport.TotalStudents</p>
                            </div>
                            <div class="rounded-lg border border-purple-200 bg-purple-50 p-4">
                                <p class="text-sm text-purple-600">Total Assessment</p>
                                <p class="text-2xl font-bold text-purple-800">₱@accountReport.TotalAssessment.ToString("N2")</p>
                            </div>
                            <div class="rounded-lg border border-green-200 bg-green-50 p-4">
                                <p class="text-sm text-green-600">Total Collected</p>
                                <p class="text-2xl font-bold text-green-800">₱@accountReport.TotalCollected.ToString("N2")</p>
                            </div>
                            <div class="rounded-lg border border-red-200 bg-red-50 p-4">
                                <p class="text-sm text-red-600">Total Outstanding</p>
                                <p class="text-2xl font-bold text-red-800">₱@accountReport.TotalOutstanding.ToString("N2")</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else if (CurrentReportType == "outstanding" && CurrentReport is OutstandingBalanceReport outstandingReport)
            {
                @if (outstandingReport.TotalStudents == 0)
                {
                    <div class="rounded-lg border border-green-200 bg-green-50 p-6 text-center">
                        <svg class="mx-auto mb-4 h-12 w-12 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <h3 class="mb-2 text-lg font-semibold text-green-800">Excellent News!</h3>
                        <p class="text-sm text-green-700">All student accounts are fully paid. There are no outstanding balances in the system.</p>
                    </div>
                }
                else
                {
                    <div class="space-y-4">
                        <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                            <div class="rounded-lg border border-red-200 bg-red-50 p-4">
                                <p class="text-sm text-red-600">Total Outstanding</p>
                                <p class="text-2xl font-bold text-red-800">₱@outstandingReport.TotalOutstanding.ToString("N2")</p>
                            </div>
                            <div class="rounded-lg border border-yellow-200 bg-yellow-50 p-4">
                                <p class="text-sm text-yellow-600">Students with Outstanding Balance</p>
                                <p class="text-2xl font-bold text-yellow-800">@outstandingReport.TotalStudents</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else if (CurrentReportType == "custom" && CurrentReport is CustomDateRangeReport customReport)
            {
                @if (customReport.TransactionCount == 0)
                {
                    <div class="rounded-lg border border-yellow-200 bg-yellow-50 p-6 text-center">
                        <svg class="mx-auto mb-4 h-12 w-12 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                        <h3 class="mb-2 text-lg font-semibold text-yellow-800">No Data Available</h3>
                        <p class="text-sm text-yellow-700">There are no payment transactions recorded for the selected date range (@customReport.DateFrom.ToString("MMM dd, yyyy") - @customReport.DateTo.ToString("MMM dd, yyyy")). Please try a different date range or process some payments.</p>
                    </div>
                }
                else
                {
                    <div class="space-y-4">
                        <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                            <div class="rounded-lg border border-blue-200 bg-blue-50 p-4">
                                <p class="text-sm text-blue-600">Total Collection</p>
                                <p class="text-2xl font-bold text-blue-800">₱@customReport.TotalCollection.ToString("N2")</p>
                            </div>
                            <div class="rounded-lg border border-green-200 bg-green-50 p-4">
                                <p class="text-sm text-green-600">Total Transactions</p>
                                <p class="text-2xl font-bold text-green-800">@customReport.TransactionCount</p>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>
}

@code {
    private bool showCustomRangeModal = false;
    private DateTime? CustomFromDate { get; set; }
    private DateTime? CustomToDate { get; set; }
    private string? CurrentReportType { get; set; }
    private string CurrentReportTitle { get; set; } = string.Empty;
    private object? CurrentReport { get; set; }
    private string? ErrorMessage { get; set; }

    protected override void OnInitialized()
    {
        // Check if user is a cashier
        if (AuthService.CurrentUser?.user_role != "Cashier")
        {
            Navigation.NavigateTo("/dashboard");
            return;
        }
    }

    private async Task GenerateReport(string reportType)
    {
        LoadingService.ShowLoading("Generating report...");
        ErrorMessage = null;
        CurrentReportType = reportType;
        
        try
        {
            CurrentReport = reportType switch
            {
                "daily" => await CashierService.GetDailyCollectionReportAsync(),
                "monthly" => await CashierService.GetMonthlyCollectionReportAsync(),
                "summary" => await CashierService.GetPaymentSummaryReportAsync(),
                "accounts" => await CashierService.GetAccountStatusReportAsync(),
                "outstanding" => await CashierService.GetOutstandingBalanceReportAsync(),
                "custom" => CustomFromDate.HasValue && CustomToDate.HasValue
                    ? await CashierService.GetCustomDateRangeReportAsync(CustomFromDate.Value, CustomToDate.Value)
                    : null,
                _ => null
            };

            CurrentReportTitle = reportType switch
            {
                "daily" => "Daily Collection Report",
                "monthly" => "Monthly Collection Report",
                "summary" => "Payment Summary Report",
                "accounts" => "Account Status Report",
                "outstanding" => "Outstanding Balance Report",
                "custom" => $"Custom Date Range Report ({CustomFromDate?.ToString("MMM dd, yyyy")} - {CustomToDate?.ToString("MMM dd, yyyy")})",
                _ => "Report"
            };
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error generating report: {ex.Message}";
            System.Diagnostics.Debug.WriteLine($"Error generating report: {ex.Message}");
            CurrentReport = null;
        }
        finally
        {
            LoadingService.HideLoading();
        }
    }

    private void CloseReport()
    {
        CurrentReport = null;
        CurrentReportType = null;
        CurrentReportTitle = string.Empty;
        ErrorMessage = null;
    }

    private void ShowCustomRangeModal()
    {
        CustomFromDate = DateTime.Today.AddDays(-30);
        CustomToDate = DateTime.Today;
        showCustomRangeModal = true;
    }

    private void CloseCustomRangeModal()
    {
        showCustomRangeModal = false;
        ErrorMessage = null;
    }

    private async Task GenerateCustomRangeReport()
    {
        ErrorMessage = null;
        
        if (!CustomFromDate.HasValue || !CustomToDate.HasValue)
        {
            ErrorMessage = "Please select both from and to dates.";
            return;
        }

        if (CustomFromDate.Value > CustomToDate.Value)
        {
            ErrorMessage = "From date cannot be after To date.";
            return;
        }

        CloseCustomRangeModal();
        await GenerateReport("custom");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/cashier/dashboard");
    }
