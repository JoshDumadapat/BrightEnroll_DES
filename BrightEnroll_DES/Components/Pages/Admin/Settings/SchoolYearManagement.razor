    private void ValidateSchoolYearSelection()
    {
        isValidSchoolYearFormat = false;
        schoolYearError = "";
        newSchoolYear = "";

        // Check if both fields are filled
        if (string.IsNullOrWhiteSpace(selectedStartYear) || string.IsNullOrWhiteSpace(selectedEndYear))
        {
            return;
        }

        // Check if both are valid years
        if (!int.TryParse(selectedStartYear, out int start))
        {
            schoolYearError = "Start Year must be a valid year";
            return;
        }

        if (!int.TryParse(selectedEndYear, out int end))
        {
            schoolYearError = "End Year must be a valid year";
            return;
        }

        // Validation: End Year - Start Year must equal 1
        int yearGap = end - start;
        if (yearGap != 1)
        {
            schoolYearError = "End Year must be exactly 1 year after Start Year (e.g., 2026-2027)";
            return;
        }

        // Check if school year already exists
        var proposedSchoolYear = $"{start}-{end}";
        if (schoolYears.Any(sy => sy.SchoolYearName == proposedSchoolYear))
        {
            schoolYearError = "This school year already exists";
            return;
        }

        // All validations passed
        isValidSchoolYearFormat = true;
        newSchoolYear = proposedSchoolYear;
        
        // Auto-update date years when school year is selected
        UpdateStartDate();
        UpdateEndDate();
    }

