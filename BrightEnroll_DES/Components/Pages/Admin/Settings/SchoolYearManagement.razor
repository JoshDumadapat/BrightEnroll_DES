    private async Task AddSchoolYear()
    {
        // Show validation errors only after Add button is clicked
        showValidationErrors = true;
        
        // Clear all previous errors
        schoolYearError = string.Empty;
        dateError = string.Empty;
        startYearError = string.Empty;
        endYearError = string.Empty;
        startDateError = string.Empty;
        endDateError = string.Empty;
        
        bool hasErrors = false;
        
        // Validate Start Year
        if (string.IsNullOrWhiteSpace(selectedStartYear))
        {
            startYearError = "Start Year is required";
            hasErrors = true;
        }
        
        // Validate End Year
        if (string.IsNullOrWhiteSpace(selectedEndYear))
        {
            endYearError = "End Year is required";
            hasErrors = true;
        }
        
        // Validate school year format
        if (!isValidSchoolYearFormat || string.IsNullOrWhiteSpace(newSchoolYear))
        {
            if (string.IsNullOrWhiteSpace(schoolYearError))
            {
                schoolYearError = "Please select valid Start Year and End Year";
            }
            hasErrors = true;
        }
        
        // Validate Start Date
        if (!newStartDate.HasValue)
        {
            if (string.IsNullOrWhiteSpace(selectedStartYear))
            {
                startDateError = "Please select a school year first";
            }
            else if (!startDateMonth.HasValue || !startDateDay.HasValue)
            {
                startDateError = "Start Date is required. Please select month and day.";
            }
            else
            {
                startDateError = "Invalid Start Date. Please check month and day values.";
            }
            hasErrors = true;
        }
        
        // Validate End Date
        if (!newEndDate.HasValue)
        {
            if (string.IsNullOrWhiteSpace(selectedEndYear))
            {
                endDateError = "Please select a school year first";
            }
            else if (!endDateMonth.HasValue || !endDateDay.HasValue)
            {
                endDateError = "End Date is required. Please select month and day.";
            }
            else
            {
                endDateError = "Invalid End Date. Please check month and day values.";
            }
            hasErrors = true;
        }
        
        if (hasErrors)
        {
            StateHasChanged();
            return;
        }

        isProcessing = true;
        StateHasChanged();

        try
        {
            var success = await SchoolYearService.AddSchoolYearAsync(newSchoolYear, newStartDate, newEndDate);
            
            if (success)
            {
                ShowToast($"School year {newSchoolYear} added successfully", ToastType.Success);
                // Reset form
                newSchoolYear = string.Empty;
                selectedStartYear = string.Empty;
                selectedEndYear = string.Empty;
                newStartDate = null;
                newEndDate = null;
                startDateMonth = null;
                startDateDay = null;
                endDateMonth = null;
                endDateDay = null;
                isValidSchoolYearFormat = false;
                schoolYearError = string.Empty;
                dateError = string.Empty;
                startYearError = string.Empty;
                endYearError = string.Empty;
                startDateError = string.Empty;
                endDateError = string.Empty;
                showValidationErrors = false; // Reset validation errors display
                CurrentPage = 1; // Reset to first page after adding
                await LoadSchoolYearsAsync(); // This will refresh available years and remove the added one
            }
            else
            {
                schoolYearError = "Failed to add school year. It may already exist.";
                ShowToast($"Failed to add school year. It may already exist.", ToastType.Error);
            }
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Error adding school year: {Message}", ex.Message);
            schoolYearError = $"Error adding school year: {ex.Message}";
            ShowToast($"Error adding school year: {ex.Message}", ToastType.Error);
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

