        {
            return;
        }

        // Check all requirements
        if (newPassword.Length < 12 || 
            !HasUppercase(newPassword) || 
            !HasLowercase(newPassword) || 
            !HasNumber(newPassword) || 
            !HasSpecialChar(newPassword))
        {
            newPasswordError = true;
        }

        // Check if confirm password matches
