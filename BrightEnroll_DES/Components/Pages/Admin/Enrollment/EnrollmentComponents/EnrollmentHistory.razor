@namespace BrightEnroll_DES.Components.Pages.Admin.Enrollment.EnrollmentComponents
@using BrightEnroll_DES.Data.Models
@using BrightEnroll_DES.Services.Business.Finance
@using BrightEnroll_DES.Components.Pages.Admin.Enrollment.EnrollmentCS
@inject PaymentService PaymentService

<!-- Enrollment History Component -->
<div class="p-6">
    <div class="mb-4 flex items-center justify-between">
        <h2 class="text-xl font-bold text-gray-800">Enrollment History</h2>
        <button @onclick="OnClose" class="rounded-lg bg-gray-100 px-4 py-2 text-sm font-semibold text-gray-700 hover:bg-gray-200">
            Close
        </button>
    </div>

    @if (IsLoading)
    {
        <div class="flex items-center justify-center py-12">
            <svg class="h-8 w-8 animate-spin text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="ml-2 text-gray-600">Loading enrollment history...</span>
        </div>
    }
    else if (EnrollmentRecords != null && EnrollmentRecords.Any())
    {
        <div class="space-y-4">
            @foreach (var record in EnrollmentRecords.OrderByDescending(r => r.SchoolYear))
            {
                <div class="rounded-lg border border-gray-200 bg-white p-4 shadow-sm">
                    <div class="mb-3 flex items-center justify-between border-b border-gray-100 pb-2">
                        <div class="flex items-center gap-3">
                            <div class="flex h-10 w-10 items-center justify-center rounded-full bg-blue-100">
                                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-lg font-bold text-gray-800">@record.SchoolYear</h3>
                                <p class="text-sm text-gray-500">@record.GradeLevel - @record.Section</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-2">
                            @if (record.Status == "Enrolled")
                            {
                                <span class="rounded-full bg-green-100 px-3 py-1 text-xs font-semibold text-green-700">@record.Status</span>
                            }
                            else if (record.Status == "Pending")
                            {
                                <span class="rounded-full bg-yellow-100 px-3 py-1 text-xs font-semibold text-yellow-700">@record.Status</span>
                            }
                            else
                            {
                                <span class="rounded-full bg-gray-100 px-3 py-1 text-xs font-semibold text-gray-700">@record.Status</span>
                            }
                        </div>
                    </div>

                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
                        <div>
                            <p class="text-xs font-semibold text-gray-500">Enrollment Date</p>
                            <p class="text-sm font-medium text-gray-800">@FormatDate(record.EnrollmentDate)</p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-gray-500">Student Type</p>
                            <p class="text-sm font-medium text-gray-800">@record.StudentType</p>
                        </div>
                        <div>
                            <p class="text-xs font-semibold text-gray-500">Payment Status</p>
                            <p class="text-sm font-medium text-gray-800">@record.PaymentStatus</p>
                        </div>
                        @if (record.TotalFee > 0)
                        {
                            <div>
                                <p class="text-xs font-semibold text-gray-500">Total Fee</p>
                                <p class="text-sm font-medium text-gray-800">Php @record.TotalFee.ToString("N2")</p>
                            </div>
                            <div>
                                <p class="text-xs font-semibold text-gray-500">Amount Paid</p>
                                <p class="text-sm font-medium text-gray-800">Php @record.AmountPaid.ToString("N2")</p>
                            </div>
                            <div>
                                <p class="text-xs font-semibold text-gray-500">Balance</p>
                                @if (record.Balance > 0)
                                {
                                    <p class="text-sm font-medium text-red-600">Php @record.Balance.ToString("N2")</p>
                                }
                                else
                                {
                                    <p class="text-sm font-medium text-green-600">Php 0.00</p>
                                }
                            </div>
                        }
                    </div>

                    @if (!string.IsNullOrWhiteSpace(record.UpdatedAt))
                    {
                        <div class="mt-3 border-t border-gray-100 pt-2">
                            <p class="text-xs text-gray-500">Last Updated: @record.UpdatedAt</p>
                        </div>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="flex flex-col items-center justify-center py-12">
            <svg class="h-12 w-12 text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <p class="text-base font-medium text-gray-600">No Enrollment History</p>
            <p class="text-sm text-gray-500 mt-1">This student has no enrollment records.</p>
        </div>
    }
</div>

@code {
    [Parameter]
    public string StudentId { get; set; } = "";

    [Parameter]
    public List<EnrollmentHistoryRecord>? EnrollmentRecords { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    private bool IsLoading { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        await Task.CompletedTask;
        IsLoading = false;
    }

    protected override void OnParametersSet()
    {
        IsLoading = EnrollmentRecords == null;
        StateHasChanged();
    }

    private string FormatDate(DateTime? date)
    {
        if (date == null || !date.HasValue)
            return "N/A";
        return date.Value.ToString("MMM. d, yyyy");
    }
}

