@namespace BrightEnroll_DES.Components.Pages.Admin.Enrollment.EnrollmentComponents
@using BrightEnroll_DES.Components.Pages.Admin.Enrollment.EnrollmentCS
@using BrightEnroll_DES.Components.Pages.Admin
@using BrightEnroll_DES.Services.QuestPDF
@using BrightEnroll_DES.Services.Authentication
@using BrightEnroll_DES.Services.Seeders
@using Microsoft.JSInterop
@using Microsoft.Extensions.Logging
@inject EnrollmentPdfGenerator PdfGenerator
@inject IJSRuntime JSRuntime
@inject IAuthService AuthService
@inject StudentForEnrollmentSeeder StudentForEnrollmentSeeder
@inject ILogger<ForEnrollment> Logger
@* For Enrollment Component with Filters *@

<!-- Filters -->
<div class="border-b border-gray-200 px-3 py-4 sm:px-6">
    <label class="mb-2 block text-sm font-bold text-gray-700">Filter:</label>
    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
            <div class="relative flex w-full items-center sm:w-auto sm:min-w-[200px]">
                <span class="absolute left-4 flex items-center justify-center">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </span>
                <input type="text" placeholder="Search here..." @bind="SearchText"
                       class="w-full rounded-lg border border-gray-300 py-2 pl-11 pr-4 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400" />
            </div>
            <select @bind="StatusFilter" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto">
                <option value="">All Status</option>
                <option value="For Payment">For Payment</option>
                <option value="Partially Paid">Partially Paid</option>
                <option value="Fully Paid">Fully Paid</option>
            </select>
            <select @bind="GradeFilter" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto">
                <option value="">Grade</option>
                <option value="Kinder">Kinder</option>
                <option value="G1">G1</option>
                <option value="G2">G2</option>
                <option value="G3">G3</option>
                <option value="G4">G4</option>
                <option value="G5">G5</option>
                <option value="G6">G6</option>
            </select>
        </div>
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
            <div class="group relative">
                <button @onclick="ClearFilters" class="flex w-full items-center justify-center gap-2 rounded-lg bg-gray-500 px-4 py-2 font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg sm:w-auto" style="font-size: 13px;">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Clear
                </button>
                <span class="tooltip-delay">Clear all filters</span>
            </div>
            <div class="group relative">
                <button @onclick="ShowSeedModal" disabled="@isSeeding" class="flex w-full items-center justify-center gap-2 rounded-lg bg-green-600 px-4 py-2 font-semibold text-white shadow-md transition-all duration-300 hover:bg-green-700 hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed sm:w-auto" style="font-size: 13px;">
                    @if (isSeeding)
                    {
                        <svg class="h-4 w-4 animate-spin" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span>Seeding...</span>
                    }
                    else
                    {
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                        <span>Seed Data</span>
                    }
                </button>
                <span class="tooltip-delay">Seed 50 students for enrollment</span>
            </div>
            <div class="group relative">
                <button @onclick="ExportPDF" disabled="@isExporting" class="flex w-full items-center justify-center gap-2 rounded-lg bg-blue-600 px-4 py-2 font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed sm:w-auto" style="font-size: 13px;">
                    @if (isExporting)
                    {
                        <svg class="h-4 w-4 animate-spin" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span>Exporting...</span>
                    }
                    else
                    {
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <span>Export</span>
                    }
                </button>
                <span class="tooltip-delay">Export students for enrollment to file</span>
            </div>
        </div>
    </div>
</div>

<!-- Table -->
<div class="overflow-x-auto w-full">
<table class="w-full border-collapse">
    <thead>
        <tr class="border-b border-gray-200 bg-gray-50">
            <th class="py-3 pl-6 pr-4 text-left text-xs font-semibold text-gray-700">ID</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Name</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">LRN</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Type</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Grade Level</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Documents</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Status</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Registered By</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Date</th>
            <th class="py-3 pr-6 pl-4 text-center text-xs font-semibold text-gray-700">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (IsLoading)
        {
            <tr>
                <td colspan="10" class="px-4 py-12 text-center text-gray-500">
                    <div class="flex flex-col items-center justify-center">
                        <svg class="animate-spin h-8 w-8 text-gray-400 mb-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span>Loading students for enrollment...</span>
                    </div>
                </td>
            </tr>
        }
        else if (FilteredStudents != null && FilteredStudents.Any())
        {
            @foreach (var student in PaginatedStudents)
            {
            <tr class="border-b border-gray-100 transition hover:bg-gray-50">
                <td class="py-3 pl-6 pr-4 text-sm text-gray-700">@student.Id</td>
                <td class="py-3 px-4 text-sm text-gray-700">@student.Name</td>
                <td class="py-3 px-4 text-sm text-gray-700">
                    @if (student.LRN == "N/A")
                    {
                        <span class="text-xs font-semibold text-gray-400">@student.LRN</span>
                    }
                    else
                    {
                        <span class="text-gray-900">@student.LRN</span>
                    }
                </td>
                <td class="py-3 px-4 text-sm text-gray-700">
                    @if (student.Type == "New Student")
                    {
                        <span class="text-xs font-semibold text-blue-600">@student.Type</span>
                    }
                    else if (student.Type == "Returnee")
                    {
                        <span class="text-xs font-semibold text-purple-600">@student.Type</span>
                    }
                    else if (student.Type == "Transferee")
                    {
                        <span class="text-xs font-semibold text-orange-600">@student.Type</span>
                    }
                    else
                    {
                        <span class="text-xs font-semibold text-gray-600">@(student.Type ?? "N/A")</span>
                    }
                </td>
                <td class="py-3 px-4 text-sm text-gray-700">@student.GradeLevel</td>
                <td class="py-3 px-4 text-sm text-gray-700">
                    @if (student.DocumentsVerified)
                    {
                        <span class="text-xs font-semibold text-blue-600">Validated</span>
                    }
                    else
                    {
                        <span class="text-xs font-semibold text-gray-400">Not Validated</span>
                    }
                </td>
                <td class="py-3 px-4 text-sm text-gray-700">
                    @if (student.Status == "For Payment")
                    {
                        <span class="text-xs font-semibold text-blue-600">@student.Status</span>
                    }
                    else if (student.Status == "Partially Paid")
                    {
                        <span class="text-xs font-semibold text-orange-600">@student.Status</span>
                    }
                    else if (student.Status == "Fully Paid")
                    {
                        <span class="text-xs font-semibold text-green-600">@student.Status</span>
                    }
                    else
                    {
                        <span class="text-xs font-semibold text-blue-700">@student.Status</span>
                    }
                </td>
                <td class="py-3 px-4 text-sm text-gray-700">
                    <span class="text-gray-900">@(student.ChangedBy ?? "N/A")</span>
                </td>
                <td class="py-3 px-4 text-sm text-gray-700">
                    @if (student.ChangedOn.HasValue)
                    {
                        <span class="text-gray-900">@FormatRegistrationDate(student.ChangedOn.Value)</span>
                    }
                    else
                    {
                        <span class="text-gray-400">N/A</span>
                    }
                </td>
                <td class="py-3 pr-6 pl-4 text-center">
                    <!-- View Button -->
                    <button @onclick="() => HandleEditClick(student.Id)"
                            class="flex items-center gap-1.5 rounded-lg bg-blue-100 px-3 py-1.5 text-xs font-medium text-blue-700 transition-colors hover:bg-blue-200">
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                        <span class="hidden sm:inline">View</span>
                    </button>
                </td>
            </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="px-4 py-12 text-center text-gray-500">
                    <div class="flex flex-col items-center justify-center">
                        <svg class="h-12 w-12 text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <p class="text-base font-medium text-gray-600">No Data Available Currently</p>
                        <p class="text-sm text-gray-500 mt-1">There are no students for enrollment to display at this time.</p>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<!-- Footer with Pagination -->
<Pagination TotalItems="@(FilteredStudents?.Count ?? 0)" 
            CurrentPage="@CurrentPage" 
            RowsPerPage="@RowsPerPage"
            ItemName="students for enrollment"
            OnPageChanged="HandlePageChanged"
            OnRowsPerPageChanged="HandleRowsPerPageChanged" />

<!-- Seed Data Confirmation Modal -->
@if (ShowSeedConfirmationModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" @onclick="CloseSeedModal">
        <div class="w-full max-w-md rounded-xl bg-white shadow-2xl" @onclick:stopPropagation="true">
            <div class="border-b border-gray-200 bg-gradient-to-r from-green-500 to-green-600 px-6 py-4">
                <h3 class="text-lg font-semibold text-white">Seed Students for Enrollment</h3>
            </div>
            <div class="px-6 py-4">
                <p class="text-sm text-gray-600 mb-4">
                    This will create <strong>50 new students</strong> with "Pending" status for enrollment. 
                    The seeder will check for existing records and only create the difference needed to reach 50 total.
                </p>
                <div class="flex items-center gap-2 text-sm text-gray-500 mb-4">
                    <svg class="h-5 w-5 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <span>This action cannot be undone. Continue?</span>
                </div>
            </div>
            <div class="border-t border-gray-200 bg-gray-50 px-6 py-4 flex justify-end gap-3">
                <button @onclick="CloseSeedModal" 
                        class="rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                    Cancel
                </button>
                <button @onclick="ExecuteSeed" 
                        disabled="@isSeeding"
                        class="rounded-lg bg-green-600 px-4 py-2 text-sm font-medium text-white hover:bg-green-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                    @if (isSeeding)
                    {
                        <span class="flex items-center gap-2">
                            <svg class="h-4 w-4 animate-spin" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            Seeding...
                        </span>
                    }
                    else
                    {
                        <span>Yes, Seed Data</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public List<ForEnrollmentStudent> Students { get; set; } = new();

    [Parameter]
    public int RowsPerPage { get; set; } = 5;

    [Parameter]
    public bool IsLoading { get; set; } = false;

    [Parameter]
    public EventCallback<string> OnEditStudent { get; set; }

    [Parameter]
    public string? SchoolYear { get; set; }

    [Parameter]
    public bool IsViewOnly { get; set; } = false;

    [Parameter]
    public EventCallback OnRefresh { get; set; }

    // Filter properties
    private string SearchText { get; set; } = "";
    private string StatusFilter { get; set; } = "";
    private string GradeFilter { get; set; } = "";

    // Pagination state
    private int CurrentPage { get; set; } = 1;

    // Seeder state
    private bool ShowSeedConfirmationModal { get; set; } = false;
    private bool isSeeding { get; set; } = false;

    // Computed property for filtered students
    private List<ForEnrollmentStudent> FilteredStudents
    {
        get
        {
            if (Students == null || !Students.Any())
                return new List<ForEnrollmentStudent>();

            var filtered = Students.AsEnumerable();

            // Search filter
            if (!string.IsNullOrWhiteSpace(SearchText))
            {
                filtered = filtered.Where(s => 
                    s.Name.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    s.Id.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    s.LRN.Contains(SearchText, StringComparison.OrdinalIgnoreCase));
            }

            // Status filter
            if (!string.IsNullOrWhiteSpace(StatusFilter))
            {
                filtered = filtered.Where(s => s.Status == StatusFilter);
            }

            // Grade filter
            if (!string.IsNullOrWhiteSpace(GradeFilter))
            {
                filtered = filtered.Where(s => s.GradeLevel == GradeFilter);
            }

            return filtered.ToList();
        }
    }

    // Computed property for paginated students
    private List<ForEnrollmentStudent> PaginatedStudents
    {
        get
        {
            var filtered = FilteredStudents;
            return filtered
                .Skip((CurrentPage - 1) * RowsPerPage)
                .Take(RowsPerPage)
                .ToList();
        }
    }

    private void ClearFilters()
    {
        SearchText = "";
        StatusFilter = "";
        GradeFilter = "";
        CurrentPage = 1;
        StateHasChanged();
    }

    private void HandlePageChanged(int page)
    {
        CurrentPage = page;
        StateHasChanged();
    }

    private void HandleRowsPerPageChanged(int rowsPerPage)
    {
        RowsPerPage = rowsPerPage;
        CurrentPage = 1;
        StateHasChanged();
    }

    private bool isExporting = false;

    private async Task ExportPDF()
    {
        if (isExporting) return;
        
        isExporting = true;
        StateHasChanged();
        
        try
        {
            var userName = GetUserDisplayName();
            var pdfBytes = await PdfGenerator.GenerateEnrollmentReportAsync("ForEnrollment", userName, SchoolYear);
            var fileName = $"For_Enrollment_Report_{DateTime.Now:yyyyMMdd_HHmmss}.pdf";
            var base64Content = Convert.ToBase64String(pdfBytes);
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, "application/pdf", base64Content);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error generating PDF: {ex.Message}");
        }
        finally
        {
            isExporting = false;
            StateHasChanged();
        }
    }

    private async Task HandleEditClick(string studentId)
    {
        if (OnEditStudent.HasDelegate)
        {
            await OnEditStudent.InvokeAsync(studentId);
        }
    }

    private string FormatDate(string dateString)
    {
        if (string.IsNullOrWhiteSpace(dateString))
            return "N/A";

        // Try to parse the date string in various formats
        if (DateTime.TryParse(dateString, out DateTime date))
        {
            return date.ToString("MMM. d, yyyy");
        }

        // If parsing fails, try common formats
        string[] formats = { "dd MMM yyyy", "MMM dd, yyyy", "yyyy-MM-dd", "MM/dd/yyyy", "dd/MM/yyyy", "yyyy-MM-dd HH:mm:ss" };
        foreach (var format in formats)
        {
            if (DateTime.TryParseExact(dateString, format, System.Globalization.CultureInfo.InvariantCulture, System.Globalization.DateTimeStyles.None, out date))
            {
                return date.ToString("MMM. d, yyyy");
            }
        }

        // If all parsing fails, return original string
        return dateString;
    }

    private string FormatDateTime(DateTime dateTime)
    {
        return dateTime.ToString("MMM. d, yyyy HH:mm");
    }

    private string FormatRegistrationDate(DateTime dateTime)
    {
        // Format: "Nov. 15, 2024" (month abbreviation, day, year)
        return dateTime.ToString("MMM. d, yyyy");
    }

    private string GetUserDisplayName()
    {
        var user = AuthService.CurrentUser;
        if (user == null) return "System";
        
        var nameParts = new List<string> { user.first_name };
        if (!string.IsNullOrWhiteSpace(user.mid_name))
            nameParts.Add(user.mid_name);
        nameParts.Add(user.last_name);
        if (!string.IsNullOrWhiteSpace(user.suffix))
            nameParts.Add(user.suffix);
        
        return string.Join(" ", nameParts);
    }

    private void ShowSeedModal()
    {
        ShowSeedConfirmationModal = true;
        StateHasChanged();
    }

    private void CloseSeedModal()
    {
        if (!isSeeding)
        {
            ShowSeedConfirmationModal = false;
            StateHasChanged();
        }
    }

    private async Task ExecuteSeed()
    {
        if (isSeeding) return;

        isSeeding = true;
        ShowSeedConfirmationModal = true;
        StateHasChanged();

        try
        {
            Logger?.LogInformation("Starting to seed students for enrollment...");
            await StudentForEnrollmentSeeder.SeedAsync(50);
            Logger?.LogInformation("Successfully seeded students for enrollment.");

            // Show success message
            await JSRuntime.InvokeVoidAsync("alert", "Successfully seeded 50 students for enrollment! The page will refresh to show the new data.");

            // Close modal
            ShowSeedConfirmationModal = false;

            // Refresh the data by calling the parent's refresh callback
            if (OnRefresh.HasDelegate)
            {
                await OnRefresh.InvokeAsync();
            }
            else
            {
                // Fallback: reload the page
                await JSRuntime.InvokeVoidAsync("location.reload");
            }
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Error seeding students for enrollment: {Message}", ex.Message);
            await JSRuntime.InvokeVoidAsync("alert", $"Error seeding data: {ex.Message}");
        }
        finally
        {
            isSeeding = false;
            StateHasChanged();
        }
    }

    public class ForEnrollmentStudent
    {
        public string Id { get; set; } = "";
        public string Name { get; set; } = "";
        public string LRN { get; set; } = "";
        public string Date { get; set; } = "";
        public string Type { get; set; } = "";
        public string GradeLevel { get; set; } = "";
        public string Status { get; set; } = "";
        public string PaymentStatus { get; set; } = "";
        public bool DocumentsVerified { get; set; } = false;
        public string? ChangedBy { get; set; }
        public DateTime? ChangedOn { get; set; }
    }
}
