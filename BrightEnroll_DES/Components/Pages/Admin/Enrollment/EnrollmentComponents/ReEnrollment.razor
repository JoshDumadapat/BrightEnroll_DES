@namespace BrightEnroll_DES.Components.Pages.Admin.Enrollment.EnrollmentComponents
@using BrightEnroll_DES.Components.Pages.Admin.Enrollment.EnrollmentCS
@using BrightEnroll_DES.Components.Pages.Admin
@using BrightEnroll_DES.Services.QuestPDF
@using BrightEnroll_DES.Services.Business.Students
@using BrightEnroll_DES.Services.Business.Academic
@using BrightEnroll_DES.Services.Authentication
@using Microsoft.JSInterop
@using Microsoft.Extensions.Logging
@inject EnrollmentPdfGenerator PdfGenerator
@inject IJSRuntime JSRuntime
@inject ReEnrollmentService ReEnrollmentService
@inject SchoolYearService SchoolYearService
@inject ILogger<ReEnrollment> Logger
@inject IAuthService AuthService
@* Re-enrollment Component with Filters *@

<!-- Action Bar with Mark Eligible Button -->
<div class="border-b border-gray-200 bg-blue-50 px-3 py-3 sm:px-6">
    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div class="flex items-center gap-2">
            <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-sm font-medium text-blue-800">End of School Year Process</span>
        </div>
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center">
            <select @bind="selectedSchoolYear" class="rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400">
                <option value="">Select School Year</option>
                @foreach (var sy in availableSchoolYears)
                {
                    <option value="@sy">@sy</option>
                }
            </select>
            <button @onclick="HandleMarkEligible" 
                    disabled="@(isMarkingEligible || string.IsNullOrWhiteSpace(selectedSchoolYear))"
                    class="flex items-center gap-2 rounded-lg bg-green-600 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-green-700 hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed">
                @if (isMarkingEligible)
                {
                    <svg class="h-4 w-4 animate-spin" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <span>Processing...</span>
                }
                else
                {
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>Mark Students Eligible</span>
                }
            </button>
        </div>
    </div>
    @if (!string.IsNullOrWhiteSpace(markEligibleResult))
    {
        <div class="mt-2 rounded-lg bg-blue-100 px-3 py-2 text-sm text-blue-800">
            @markEligibleResult
        </div>
    }
</div>

<!-- Filters -->
<div class="border-b border-gray-200 px-3 py-4 sm:px-6">
    <label class="mb-2 block text-sm font-bold text-gray-700">Filter:</label>
    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
            <div class="relative flex w-full items-center sm:w-auto sm:min-w-[200px]">
                <span class="absolute left-4 flex items-center justify-center">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </span>
                <input type="text" placeholder="Search here..." @bind="SearchText"
                       class="w-full rounded-lg border border-gray-300 py-2 pl-11 pr-4 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400" />
            </div>
            <select @bind="TypeFilter" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto">
                <option value="">Type</option>
                <option value="Eligible">Eligible</option>
                <option value="New">New</option>
                <option value="Transferee">Transferee</option>
            </select>
            <select @bind="GradeFilter" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto">
                <option value="">Grade</option>
                <option value="Kinder">Kinder</option>
                <option value="G1">G1</option>
                <option value="G2">G2</option>
                <option value="G3">G3</option>
                <option value="G4">G4</option>
                <option value="G5">G5</option>
                <option value="G6">G6</option>
            </select>
            <select @bind="StatusFilter" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto">
                <option value="">Status</option>
                <option value="Pending">Pending</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
            </select>
        </div>
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
            <div class="group relative">
                <button @onclick="ClearFilters" class="flex w-full items-center justify-center gap-2 rounded-lg bg-gray-500 px-4 py-2 font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg sm:w-auto" style="font-size: 13px;">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Clear
                </button>
                <span class="tooltip-delay">Clear all filters</span>
            </div>
            <div class="group relative">
                <button @onclick="ExportPDF" disabled="@isExporting" class="flex w-full items-center justify-center gap-2 rounded-lg bg-blue-600 px-4 py-2 font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed sm:w-auto" style="font-size: 13px;">
                    @if (isExporting)
                    {
                        <svg class="h-4 w-4 animate-spin" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span>Exporting...</span>
                    }
                    else
                    {
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <span>Export</span>
                    }
                </button>
                <span class="tooltip-delay">Export re-enrollment students to file</span>
            </div>
        </div>
    </div>
</div>

<!-- Table -->
<div class="overflow-x-auto w-full">
<table class="w-full border-collapse">
    <thead>
        <tr class="border-b border-gray-200 bg-gray-50">
            <th class="py-3 pl-6 pr-4 text-left text-xs font-semibold text-gray-700">ID</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Name</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">LRN</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Date</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Type</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Previous SY</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Previous Grade</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Documents</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Payment Status</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Balance</th>
            <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Eligibility</th>
            <th class="py-3 pr-6 pl-4 text-center text-xs font-semibold text-gray-700">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (IsLoading)
        {
            <tr>
                <td colspan="12" class="px-4 py-12 text-center text-gray-500">
                    <div class="flex flex-col items-center justify-center">
                        <svg class="animate-spin h-8 w-8 text-gray-400 mb-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span>Loading re-enrollment students...</span>
                    </div>
                </td>
            </tr>
        }
        else if (Students != null && Students.Any())
        {
            @foreach (var student in PaginatedStudents)
            {
                <tr class="border-b border-gray-100 transition hover:bg-gray-50">
                    <td class="py-3 pl-6 pr-4 text-sm text-gray-700">@student.Id</td>
                    <td class="py-3 px-4 text-sm text-gray-700">@student.Name</td>
                    <td class="py-3 px-4 text-sm text-gray-700">
                        @if (student.LRN == "N/A")
                        {
                            <span class="text-xs font-semibold text-gray-400">@student.LRN</span>
                        }
                        else
                        {
                            <span class="text-gray-900">@student.LRN</span>
                        }
                    </td>
                    <td class="py-3 px-4 text-sm text-gray-700">@FormatDate(student.Date)</td>
                    <td class="py-3 px-4 text-sm text-gray-700">
                        <span class="text-green-600">@student.Type</span>
                    </td>
                    <td class="py-3 px-4 text-sm text-gray-700">
                        @if (!string.IsNullOrWhiteSpace(student.PreviousSchoolYear))
                        {
                            <span class="text-xs font-semibold text-blue-600">@student.PreviousSchoolYear</span>
                        }
                        else
                        {
                            <span class="text-xs font-semibold text-gray-400">N/A</span>
                        }
                    </td>
                    <td class="py-3 px-4 text-sm text-gray-700">@student.GradeLevel</td>
                    <td class="py-3 px-4 text-sm text-gray-700">
                        @if (student.Documents == "Validated")
                        {
                            <span class="text-xs font-semibold text-blue-600">@student.Documents</span>
                        }
                        else
                        {
                            <span class="text-xs font-semibold text-gray-400">@student.Documents</span>
                        }
                    </td>
                    <td class="py-3 px-4 text-sm text-gray-700">
                        @if (student.IsFullyPaid)
                        {
                            <span class="text-xs font-semibold text-green-600">Fully Paid</span>
                        }
                        else if (student.AmountPaid > 0)
                        {
                            <span class="text-xs font-semibold text-yellow-600">Partially Paid</span>
                        }
                        else
                        {
                            <span class="text-xs font-semibold text-red-600">Unpaid</span>
                        }
                    </td>
                    <td class="py-3 px-4 text-sm text-gray-700">
                        @if (student.Balance > 0)
                        {
                            <span class="text-xs font-semibold text-red-600">Php @student.Balance.ToString("N2")</span>
                        }
                        else
                        {
                            <span class="text-xs font-semibold text-green-600">Php 0.00</span>
                        }
                    </td>
                    <td class="py-3 px-4 text-sm text-gray-700">
                        @if (student.IsEligible)
                        {
                            <span class="text-xs font-semibold text-green-600">Eligible</span>
                        }
                        else
                        {
                            <span class="text-xs font-semibold text-red-600" title="@student.Status">Not Eligible</span>
                        }
                    </td>
                    <td class="py-3 pr-6 pl-4 text-center">
                        <div class="flex items-center justify-center gap-2">
                            <!-- Re-Enroll Button -->
                            <button @onclick="() => HandleReEnroll(student.Id)" 
                                    disabled="@(isReEnrolling.Contains(student.Id) || !student.IsEligible || !student.IsFullyPaid)"
                                    class="flex items-center gap-1.5 rounded-lg px-3 py-1.5 text-xs font-medium text-white transition-colors disabled:opacity-50 disabled:cursor-not-allowed @(student.IsEligible && student.IsFullyPaid ? "bg-green-600 hover:bg-green-700" : "bg-gray-400 cursor-not-allowed")"
                                    title="@(!student.IsEligible ? student.Status : (!student.IsFullyPaid ? $"Cannot re-enroll: Outstanding balance of Php {student.Balance:N2}" : "Re-enroll student to current school year"))">
                                @if (isReEnrolling.Contains(student.Id))
                                {
                                    <svg class="h-4 w-4 animate-spin" fill="none" viewBox="0 0 24 24">
                                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                    </svg>
                                    <span class="hidden sm:inline">Re-enrolling...</span>
                                }
                                else if (!student.IsEligible)
                                {
                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                    </svg>
                                    <span class="hidden sm:inline">Not Eligible</span>
                                }
                                else if (!student.IsFullyPaid)
                                {
                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                    </svg>
                                    <span class="hidden sm:inline">Outstanding Balance</span>
                                }
                                else
                                {
                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span class="hidden sm:inline">Re-Enroll</span>
                                }
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="12" class="px-4 py-12 text-center text-gray-500">
                    <div class="flex flex-col items-center justify-center">
                        <svg class="h-12 w-12 text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <p class="text-base font-medium text-gray-600">No Data Available Currently</p>
                        <p class="text-sm text-gray-500 mt-1">There are no re-enrollment students to display at this time.</p>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<!-- Footer with Pagination -->
<Pagination TotalItems="@FilteredStudents.Count" 
            CurrentPage="@CurrentPage" 
            RowsPerPage="@RowsPerPage"
            ItemName="re-enrollment students"
            OnPageChanged="HandlePageChanged"
            OnRowsPerPageChanged="HandleRowsPerPageChanged" />

@code {
    [Parameter]
    public List<ReEnrollmentStudent>? Students { get; set; }

    [Parameter]
    public int RowsPerPage { get; set; } = 5;

    [Parameter]
    public bool IsLoading { get; set; } = false;

    [Parameter]
    public EventCallback<string> OnReEnroll { get; set; }

    [Parameter]
    public EventCallback OnRefresh { get; set; }

    [Parameter]
    public string? SchoolYear { get; set; }

    // Re-enrollment state
    private HashSet<string> isReEnrolling = new();

    // Mark Eligible state
    private bool isMarkingEligible = false;
    private string selectedSchoolYear = string.Empty;
    private List<string> availableSchoolYears = new();
    private string markEligibleResult = string.Empty;

    // Filter properties
    private string SearchText { get; set; } = "";
    private string TypeFilter { get; set; } = "";
    private string GradeFilter { get; set; } = "";
    private string StatusFilter { get; set; } = "";

    // Pagination state
    private int CurrentPage { get; set; } = 1;

    // Computed property for filtered students
    private List<ReEnrollmentStudent> FilteredStudents
    {
        get
        {
            if (Students == null || !Students.Any())
                return new List<ReEnrollmentStudent>();

            var filtered = Students.AsEnumerable();

            // Search filter
            if (!string.IsNullOrWhiteSpace(SearchText))
            {
                filtered = filtered.Where(s => 
                    s.Name.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    s.Id.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    s.LRN.Contains(SearchText, StringComparison.OrdinalIgnoreCase));
            }

            // Type filter
            if (!string.IsNullOrWhiteSpace(TypeFilter))
            {
                filtered = filtered.Where(s => s.Type == TypeFilter);
            }

            // Grade filter
            if (!string.IsNullOrWhiteSpace(GradeFilter))
            {
                filtered = filtered.Where(s => s.GradeLevel == GradeFilter);
            }

            // Status filter
            if (!string.IsNullOrWhiteSpace(StatusFilter))
            {
                filtered = filtered.Where(s => s.Status == StatusFilter);
            }

            return filtered.ToList();
        }
    }

    // Computed property for paginated students
    private List<ReEnrollmentStudent> PaginatedStudents
    {
        get
        {
            var filtered = FilteredStudents;
            return filtered
                .Skip((CurrentPage - 1) * RowsPerPage)
                .Take(RowsPerPage)
                .ToList();
        }
    }

    private void ClearFilters()
    {
        SearchText = "";
        TypeFilter = "";
        GradeFilter = "";
        StatusFilter = "";
        CurrentPage = 1;
        StateHasChanged();
    }

    private void HandlePageChanged(int page)
    {
        CurrentPage = page;
        StateHasChanged();
    }

    private void HandleRowsPerPageChanged(int rowsPerPage)
    {
        RowsPerPage = rowsPerPage;
        CurrentPage = 1;
        StateHasChanged();
    }

    private bool isExporting = false;

    private async Task ExportPDF()
    {
        if (isExporting) return;
        
        isExporting = true;
        StateHasChanged();
        
        try
        {
            var userName = GetUserDisplayName();
            var pdfBytes = await PdfGenerator.GenerateEnrollmentReportAsync("ReEnrollment", userName, SchoolYear);
            var fileName = $"Re_Enrollment_Report_{DateTime.Now:yyyyMMdd_HHmmss}.pdf";
            var base64Content = Convert.ToBase64String(pdfBytes);
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, "application/pdf", base64Content);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error generating PDF: {ex.Message}");
        }
        finally
        {
            isExporting = false;
            StateHasChanged();
        }
    }

    private async Task HandleReEnroll(string studentId)
    {
        if (isReEnrolling.Contains(studentId))
            return;

        isReEnrolling.Add(studentId);
        StateHasChanged();

        try
        {
            var result = await ReEnrollmentService.ReEnrollStudentAsync(studentId);

            if (result.Success)
            {
                Logger?.LogInformation(
                    "Student {StudentId} successfully re-enrolled: {PreviousGrade} → {NewGrade}, {PreviousSY} → {NewSY}",
                    studentId, result.PreviousGradeLevel, result.NewGradeLevel, result.PreviousSchoolYear, result.NewSchoolYear);

                // Small delay to ensure database changes are committed
                await Task.Delay(100);
                
                // Notify parent component to refresh data
                await OnReEnroll.InvokeAsync(studentId);
            }
            else
            {
                Logger?.LogError("Failed to re-enroll student {StudentId}: {ErrorMessage}", studentId, result.ErrorMessage);
                // Show error message - could be payment-related or other issue
                await JSRuntime.InvokeVoidAsync("alert", $"Cannot re-enroll student {studentId}: {result.ErrorMessage}");
            }
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Error re-enrolling student {StudentId}: {Message}", studentId, ex.Message);
            await JSRuntime.InvokeVoidAsync("alert", $"Error re-enrolling student: {ex.Message}");
        }
        finally
        {
            isReEnrolling.Remove(studentId);
            StateHasChanged();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        // Load available school years
        availableSchoolYears = await SchoolYearService.GetAvailableSchoolYearsAsync();
        if (availableSchoolYears.Any())
        {
            // Default to the most recent school year
            selectedSchoolYear = availableSchoolYears.OrderByDescending(sy => sy).First();
        }
    }

    private async Task HandleMarkEligible()
    {
        if (string.IsNullOrWhiteSpace(selectedSchoolYear) || isMarkingEligible)
            return;

        isMarkingEligible = true;
        markEligibleResult = string.Empty;
        StateHasChanged();

        try
        {
            Logger?.LogInformation("Starting mark eligible process for school year: {SchoolYear}", selectedSchoolYear);
            
            var result = await ReEnrollmentService.MarkStudentsEligibleForReEnrollmentAsync(selectedSchoolYear);

            if (result.Success)
            {
                markEligibleResult = $"✓ Process completed! " +
                    $"Eligible: {result.MarkedEligible}, " +
                    $"Already Eligible: {result.AlreadyEligible}, " +
                    $"Failed: {result.FailedStudents}, " +
                    $"Incomplete Grades: {result.IncompleteGrades}, " +
                    $"Errors: {result.Errors}";

                Logger?.LogInformation(
                    "Mark eligible completed: Eligible={Eligible}, Failed={Failed}, Incomplete={Incomplete}",
                    result.MarkedEligible, result.FailedStudents, result.IncompleteGrades);

                // Refresh the student list
                await OnRefresh.InvokeAsync();
            }
            else
            {
                markEligibleResult = $"✗ Error: {result.ErrorMessage ?? "Unknown error occurred"}";
                Logger?.LogError("Mark eligible failed: {ErrorMessage}", result.ErrorMessage);
            }
        }
        catch (Exception ex)
        {
            markEligibleResult = $"✗ Error: {ex.Message}";
            Logger?.LogError(ex, "Error marking students eligible: {Message}", ex.Message);
        }
        finally
        {
            isMarkingEligible = false;
            StateHasChanged();
        }
    }

    private string FormatDate(string dateString)
    {
        if (string.IsNullOrWhiteSpace(dateString))
            return "N/A";

        // Try to parse the date string in various formats
        if (DateTime.TryParse(dateString, out DateTime date))
        {
            return date.ToString("MMM. d, yyyy");
        }

        // If parsing fails, try common formats
        string[] formats = { "dd MMM yyyy", "MMM dd, yyyy", "yyyy-MM-dd", "MM/dd/yyyy", "dd/MM/yyyy" };
        foreach (var format in formats)
        {
            if (DateTime.TryParseExact(dateString, format, System.Globalization.CultureInfo.InvariantCulture, System.Globalization.DateTimeStyles.None, out date))
            {
                return date.ToString("MMM. d, yyyy");
            }
        }

        // If all parsing fails, return original string
        return dateString;
    }

    private string GetUserDisplayName()
    {
        var user = AuthService.CurrentUser;
        if (user == null) return "System";
        
        var nameParts = new List<string> { user.first_name };
        if (!string.IsNullOrWhiteSpace(user.mid_name))
            nameParts.Add(user.mid_name);
        nameParts.Add(user.last_name);
        if (!string.IsNullOrWhiteSpace(user.suffix))
            nameParts.Add(user.suffix);
        
        return string.Join(" ", nameParts);
    }
