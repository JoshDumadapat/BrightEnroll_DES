    private enum TabType
    {
        NewApplicants,
        ForEnrollment,
        ReEnrollment,
        EnrolledStudent
    }

    private TabType SelectedTab { get; set; } = TabType.ForEnrollment; // Default to For Enrollment instead of New Applicants

    private async Task HandleTabChange(TabType tab, bool skipIfSame = true)
    {
        // Don't reload if clicking the same tab (unless explicitly requested)
        if (skipIfSame && SelectedTab == tab)
            return;

        SelectedTab = tab;
        isLoading = true;
        StateHasChanged();

        try
        {
            // Always show loading state, then load data if not already loaded
            switch (tab)
            {
                case TabType.ForEnrollment:
                    if (!_hasLoadedForEnrollment)
                    {
                        await LoadForEnrollmentStudentsAsync();
                        _hasLoadedForEnrollment = true;
                    }
                    break;
                case TabType.ReEnrollment:
                    if (!_hasLoadedReEnrollment)
                    {
                        await LoadReEnrollmentStudentsAsync();
                        _hasLoadedReEnrollment = true;
                    }
                    break;
                case TabType.EnrolledStudent:
                    if (!_hasLoadedEnrolled)
                    {
                        await LoadEnrolledStudentsAsync();
                        _hasLoadedEnrolled = true;
                    }
                    break;
                case TabType.NewApplicants:
                    if (!_hasLoadedNewApplicants)
                    {
                        await LoadNewApplicantsAsync();
                        _hasLoadedNewApplicants = true;
                    }
                    break;
            }
            
            // Small delay to ensure loading state is visible
            await Task.Delay(100);
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Error loading data for tab {Tab}: {Message}", tab, ex.Message);
            ShowToast($"Error loading data: {ex.Message}", ToastType.Error);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private string GetNewApplicantsStyle()
    {
        // New Applicants tab is always disabled, so return gray style
        return "color: #9CA3AF; cursor: not-allowed;";
