    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Check if user is cashier
            IsCashier = AuthorizationService.HasRole("Cashier");
            
            // If cashier, ensure only For Enrollment tab is selected
            if (IsCashier)
            {
                SelectedTab = TabType.ForEnrollment;
            }
            // Load current active school year
            CurrentSchoolYear = await SchoolYearService.GetActiveSchoolYearNameAsync() ?? "";
            
            // Hide loading screen immediately when page loads
            LoadingService.HideLoading();
            
            // Only proceed if we have a valid school year
            if (string.IsNullOrWhiteSpace(CurrentSchoolYear))
            {
                isLoading = false;
                _isInitialized = true;
                StateHasChanged();
                return;
            }
            
            // Load only the default tab (For Enrollment) on initialization
            await HandleTabChange(TabType.ForEnrollment, skipIfSame: false);
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Error in OnInitializedAsync: {Message}", ex.Message);
            ShowToast($"Error loading enrollment data: {ex.Message}", ToastType.Error);
            isLoading = false;
        }
        finally
        {
            _isInitialized = true;
            StateHasChanged();
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        // Handle query parameters for tab navigation (e.g., from Dashboard)
        var uri = new Uri(NavigationManager.Uri);
        var query = ParseQueryString(uri.Query);
        
        if (query.TryGetValue("tab", out var tabValue))
        {
            var validTabs = new[] { "NewApplicants", "ForEnrollment", "ReEnrollment", "EnrolledStudent" };
            if (validTabs.Contains(tabValue, StringComparer.OrdinalIgnoreCase))
            {
                var targetTab = tabValue switch
                {
                    "NewApplicants" => TabType.NewApplicants,
                    "ForEnrollment" => TabType.ForEnrollment,
                    "ReEnrollment" => TabType.ReEnrollment,
                    "EnrolledStudent" => TabType.EnrolledStudent,
                    _ => TabType.ForEnrollment
                };
                
                // Only change tab if it's different and user is not cashier (cashier can only see For Enrollment)
                if (!IsCashier && SelectedTab != targetTab)
                {
                    await HandleTabChange(targetTab, skipIfSame: false);
                }
                else if (IsCashier && targetTab != TabType.ForEnrollment)
                {
                    // Cashier trying to access restricted tab, ignore
                    return;
                }
            }
        }
        
        // Skip if not yet initialized (OnInitializedAsync handles first load)
        if (!_isInitialized || isLoading)
        {
            return;
        }

        try
        {
            // Check if school year has changed and reload it
            var activeSchoolYear = await SchoolYearService.GetActiveSchoolYearNameAsync() ?? "";
            bool schoolYearChanged = CurrentSchoolYear != activeSchoolYear;
            
            // Only refresh if school year actually changed
            if (schoolYearChanged && !string.IsNullOrWhiteSpace(activeSchoolYear))
            {
                CurrentSchoolYear = activeSchoolYear;
                
                // Clear EF Core change tracker to ensure fresh data
                _context.ChangeTracker.Clear();
                
                // Reset flags when school year changes to force reload
                _hasLoadedForEnrollment = false;
                _hasLoadedReEnrollment = false;
                _hasLoadedEnrolled = false;
                _hasLoadedNewApplicants = false;
                
                isLoading = true;
                try
                {
                    // Refresh all lists when school year changes
                    await LoadNewApplicantsAsync();
                    await LoadForEnrollmentStudentsAsync();
                    await LoadReEnrollmentStudentsAsync();
                    await LoadEnrolledStudentsAsync();
                    
                    // Mark as loaded after refresh
                    _hasLoadedForEnrollment = true;
                    _hasLoadedReEnrollment = true;
                    _hasLoadedEnrolled = true;
                    _hasLoadedNewApplicants = true;
                }
                finally
                {
                    isLoading = false;
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Error refreshing enrollment data in OnParametersSetAsync: {Message}", ex.Message);
            isLoading = false;
            // Don't throw - allow page to render with existing data
