                <polyline points="80,150 160,130 240,160 320,150 400,170 480,160 560,180" fill="none" stroke="#3b82f6" stroke-width="3" />
                
                <!-- Vertical dashed line -->
                <line x1="320" y1="90" x2="320" y2="220" stroke="#d1d5db" stroke-width="1" stroke-dasharray="5,5"/>
                
                <!-- X-axis labels -->
                <text x="80" y="245" class="fill-gray-400 text-xs">Jan</text>
                <text x="160" y="245" class="fill-gray-400 text-xs">Feb</text>
                <text x="240" y="245" class="fill-gray-400 text-xs">Mar</text>
                <text x="320" y="245" class="fill-gray-400 text-xs">Apr</text>
                <text x="400" y="245" class="fill-gray-400 text-xs">May</text>
                <text x="480" y="245" class="fill-gray-400 text-xs">Jun</text>
            </svg>
        </div>
    </div>

    <!-- Total Students by Type -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm">
        <div class="mb-6">
            <p class="mb-1 text-sm font-medium text-gray-500">Statistics</p>
            <h3 class="text-xl font-bold text-gray-800">Total student each type</h3>
        </div>

        <!-- Donut Chart -->
        <div class="mb-6 flex items-center justify-center">
            <div class="relative">
                <svg class="h-64 w-64" viewBox="0 0 200 200">
                    <!-- Background circle -->
                    <circle cx="100" cy="100" r="80" fill="none" stroke="#e5e7eb" stroke-width="25"/>
                    
                    <!-- Blue segment (New students) - 37% -->
                    <circle cx="100" cy="100" r="80" fill="none" stroke="#2563eb" stroke-width="25"
                        stroke-dasharray="186 502" stroke-dashoffset="0" transform="rotate(-90 100 100)"/>
                    
                    <!-- Gray segment (Transferee) - 54% -->
                    <circle cx="100" cy="100" r="80" fill="none" stroke="#9ca3af" stroke-width="25"
                        stroke-dasharray="270 502" stroke-dashoffset="-186" transform="rotate(-90 100 100)"/>
                    
                    <!-- Light blue segment (Returnee) - 9% -->
                    <circle cx="100" cy="100" r="80" fill="none" stroke="#60a5fa" stroke-width="25"
                        stroke-dasharray="45 502" stroke-dashoffset="-456" transform="rotate(-90 100 100)"/>
                    
                    <!-- Center text -->
                    <text x="100" y="90" text-anchor="middle" class="fill-gray-400 text-sm">Total Count</text>
                    <text x="100" y="115" text-anchor="middle" class="fill-gray-800 text-3xl font-bold">1,375</text>
                </svg>
            </div>
        </div>
        
        <!-- Legend -->
        <div class="flex justify-center gap-8">
            <div class="flex items-center gap-2">
                <div class="h-3 w-3 rounded-full bg-blue-600"></div>
                <span class="text-sm text-gray-600">New <span class="font-semibold">513</span></span>
            </div>
            <div class="flex items-center gap-2">
                <div class="h-3 w-3 rounded-full bg-gray-400"></div>
                <span class="text-sm text-gray-600">Transferee <span class="font-semibold">741</span></span>
            </div>
            <div class="flex items-center gap-2">
                <div class="h-3 w-3 rounded-full bg-blue-400"></div>
                <span class="text-sm text-gray-600">Returnee <span class="font-semibold">121</span></span>
            </div>
        </div>
    </div>
</div>

@code {
    // Filter properties
    private string? SelectedYear { get; set; }
    private DateTime? FromDate { get; set; }
    private DateTime? ToDate { get; set; }

    // Available years (current year and 5 years back)
    private List<int> AvailableYears { get; set; } = new();

    protected override void OnInitialized()
    {
        // Initialize filters
        InitializeFilters();
    }

    private void InitializeFilters()
    {
        // Generate years from current year going back 5 years
        var currentYear = DateTime.Now.Year;
        for (int i = 0; i <= 5; i++)
        {
            AvailableYears.Add(currentYear - i);
        }
    }

    private void OnYearChanged(ChangeEventArgs e)
    {
        SelectedYear = e.Value?.ToString();
    }

    private void OnFromDateChanged(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            FromDate = date;
        }
        else
        {
            FromDate = null;
        }
    }

    private void OnToDateChanged(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            ToDate = date;
        }
        else
        {
            ToDate = null;
        }
    }

    private void ClearFilters()
    {
        SelectedYear = null;
        FromDate = null;
        ToDate = null;
    }
}