    // Helper methods for doughnut chart calculations
    private double GetCircumference()
    {
        return 2 * Math.PI * 80;
    }

    private string GetNewStudentDashArray()
    {
        if (TotalStudentCount == 0) return "0 502";
        var circumference = GetCircumference();
        var dashLength = (NewStudentCount / (double)TotalStudentCount) * circumference;
        return $"{dashLength:F2} {circumference:F2}";
    }

    private string GetTransfereeDashArray()
    {
        if (TotalStudentCount == 0) return "0 502";
        var circumference = GetCircumference();
        var dashLength = (TransfereeCount / (double)TotalStudentCount) * circumference;
        return $"{dashLength:F2} {circumference:F2}";
    }

    private string GetReturneeDashArray()
    {
        if (TotalStudentCount == 0) return "0 502";
        var circumference = GetCircumference();
        var dashLength = (ReturneeCount / (double)TotalStudentCount) * circumference;
        return $"{dashLength:F2} {circumference:F2}";
    }

    private double GetTransfereeOffset()
    {
        if (TotalStudentCount == 0) return 0;
        var circumference = GetCircumference();
        var newLength = (NewStudentCount / (double)TotalStudentCount) * circumference;
        return -newLength;
    }

    private double GetReturneeOffset()
    {
        if (TotalStudentCount == 0) return 0;
        var circumference = GetCircumference();
        var newLength = (NewStudentCount / (double)TotalStudentCount) * circumference;
        var transfereeLength = (TransfereeCount / (double)TotalStudentCount) * circumference;
        return -(newLength + transfereeLength);
    }
