@code {
    // Filter properties
    private DateTime? FromDate { get; set; }
    private DateTime? ToDate { get; set; }
    private string? QuickSelect { get; set; }
    private string? SelectedMonth { get; set; }
    private string? SelectedYear { get; set; }

    // Dashboard statistics
    private int TotalEnrolled { get; set; } = 0;
    private int TotalEmployees { get; set; } = 0;
    private int PendingApplications { get; set; } = 0;
    private decimal TotalTuitionCollected { get; set; } = 0;

    // Student type statistics
    private int TotalStudentCount { get; set; } = 0;
    private int NewStudentCount { get; set; } = 0;
    private int TransfereeCount { get; set; } = 0;
    private int ReturneeCount { get; set; } = 0;

    protected override async Task OnInitializedAsync()
    {
        // Hide loading immediately - dashboard loads data inline (no full-screen loading)
        // This ensures smooth transition from login without showing "Loading dashboard..."
        LoadingService.HideLoading();
        
        try
        {
            // Load dashboard data inline (no loading screen)
            await LoadDashboardStatistics();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error initializing dashboard: {ex.Message}");
            // Error handled inline - no loading screen needed
        }
    }

    private async Task LoadDashboardStatistics()
    {
        try
        {
            // Get total employee count from vw_EmployeeData
            TotalEmployees = await Context.EmployeeDataViews
                .FromSqlRaw(@"SELECT UserId, SystemId, FirstName, MiddleName, LastName, Suffix, FullName, BirthDate, Age, Gender, ContactNumber, Role, Email, DateHired, Status, FormattedAddress FROM [dbo].[vw_EmployeeData]")
                .CountAsync();

            // Get pending applicants count from vw_StudentData (Status = 'Pending')
            var pendingStatus = "Pending";
            PendingApplications = await Context.StudentDataViews
                .FromSqlRaw(@"SELECT StudentId, FirstName, MiddleName, LastName, Suffix, FullName, BirthDate, Age, LRN, GradeLevel, SchoolYear, DateRegistered, Status, StudentType FROM [dbo].[vw_StudentData] WHERE Status = {0}", pendingStatus)
                .Where(s => s.Status == pendingStatus)
                .CountAsync();

            // Get student type statistics from vw_StudentData
            var allStudents = await Context.StudentDataViews
                .FromSqlRaw(@"SELECT StudentId, FirstName, MiddleName, LastName, Suffix, FullName, BirthDate, Age, LRN, GradeLevel, SchoolYear, DateRegistered, Status, StudentType FROM [dbo].[vw_StudentData]")
                .ToListAsync();

            TotalStudentCount = allStudents.Count;
            NewStudentCount = allStudents.Count(s => s.StudentType != null && s.StudentType.ToLower().Contains("new"));
            TransfereeCount = allStudents.Count(s => s.StudentType != null && s.StudentType.ToLower().Contains("transferee"));
            ReturneeCount = allStudents.Count(s => s.StudentType != null && s.StudentType.ToLower().Contains("returnee"));

            // Set other cards to 0 (not connected yet)
            TotalEnrolled = 0;
            TotalTuitionCollected = 0;

            StateHasChanged();
        }
        catch (Exception ex)
        {
            // Log error but don't crash the dashboard
            System.Diagnostics.Debug.WriteLine($"Error loading dashboard statistics: {ex.Message}");
        }
    }

    private string GetCurrentViewText()
    {
        if (!string.IsNullOrEmpty(QuickSelect))
        {
            return QuickSelect switch
            {
                "today" => "Today",
                "week" => "This Week",
                "month" => "This Month",
                "year" => "This Year",
                _ => "Custom Range"
            };
        }
        
        if (FromDate.HasValue && ToDate.HasValue)
        {
            if (FromDate.Value.Date == ToDate.Value.Date)
            {
                return "Single Day";
            }
            return "Custom Range";
        }
        
        return "All Time";
    }

    private void OnQuickSelectChanged(ChangeEventArgs e)
    {
        QuickSelect = e.Value?.ToString();
        var today = DateTime.Now;
        
        switch (QuickSelect)
        {
            case "today":
                FromDate = today;
                ToDate = today;
                break;
            case "week":
                var startOfWeek = today.AddDays(-(int)today.DayOfWeek);
                FromDate = startOfWeek;
                ToDate = today;
                break;
            case "month":
                FromDate = new DateTime(today.Year, today.Month, 1);
                ToDate = today;
                break;
            case "year":
                FromDate = new DateTime(today.Year, 1, 1);
                ToDate = today;
                break;
            default:
                break;
        }
        
        StateHasChanged();
    }

    private void OnFromDateChanged(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            FromDate = date;
        }
        else
        {
            FromDate = null;
        }
        // Clear quick select when manually changing dates
        QuickSelect = null;
    }

    private void OnToDateChanged(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            ToDate = date;
        }
        else
        {
            ToDate = null;
        }
        // Clear quick select when manually changing dates
        QuickSelect = null;
    }

    private async Task ApplyFilters()
    {
        LoadingService.ShowLoading("Applying filters...");
        try
        {
            // Apply date filters based on selected month/year
            var today = DateTime.Now;
            DateTime? filterFromDate = null;
            DateTime? filterToDate = null;

            // Handle month filter
            if (!string.IsNullOrEmpty(SelectedMonth))
            {
                if (SelectedMonth == "current")
                {
                    filterFromDate = new DateTime(today.Year, today.Month, 1);
                    filterToDate = today;
                }
                else if (SelectedMonth == "previous")
                {
                    var previousMonth = today.AddMonths(-1);
                    filterFromDate = new DateTime(previousMonth.Year, previousMonth.Month, 1);
                    filterToDate = new DateTime(previousMonth.Year, previousMonth.Month, DateTime.DaysInMonth(previousMonth.Year, previousMonth.Month));
                }
                else if (int.TryParse(SelectedMonth, out int month))
                {
                    var year = !string.IsNullOrEmpty(SelectedYear) && SelectedYear != "current" && SelectedYear != "previous" && int.TryParse(SelectedYear, out int y) ? y : today.Year;
                    filterFromDate = new DateTime(year, month, 1);
                    filterToDate = new DateTime(year, month, DateTime.DaysInMonth(year, month));
                }
            }

            // Handle year filter
            if (!string.IsNullOrEmpty(SelectedYear))
            {
                if (SelectedYear == "current")
                {
                    filterFromDate = new DateTime(today.Year, 1, 1);
                    filterToDate = today;
                }
                else if (SelectedYear == "previous")
                {
                    filterFromDate = new DateTime(today.Year - 1, 1, 1);
                    filterToDate = new DateTime(today.Year - 1, 12, 31);
                }
                else if (int.TryParse(SelectedYear, out int year))
                {
                    if (filterFromDate == null)
                    {
                        filterFromDate = new DateTime(year, 1, 1);
                        filterToDate = new DateTime(year, 12, 31);
                    }
                }
            }

            // Override with manual date selection if provided
            if (FromDate.HasValue && ToDate.HasValue)
            {
                filterFromDate = FromDate.Value;
                filterToDate = ToDate.Value;
            }

            // Apply filters to data loading
            await LoadFilteredStatistics(filterFromDate, filterToDate);
        }
        finally
        {
            LoadingService.HideLoading();
        }
    }

    private async Task LoadFilteredStatistics(DateTime? fromDate, DateTime? toDate)
    {
        try
        {
            // Build base query for employees
            var employeeQuery = Context.EmployeeDataViews
                .FromSqlRaw(@"SELECT UserId, SystemId, FirstName, MiddleName, LastName, Suffix, FullName, BirthDate, Age, Gender, ContactNumber, Role, Email, DateHired, Status, FormattedAddress FROM [dbo].[vw_EmployeeData]")
                .AsQueryable();

            // Apply date filter to employees if provided
            if (fromDate.HasValue && toDate.HasValue)
            {
                employeeQuery = employeeQuery.Where(e => e.DateHired.HasValue && 
                    e.DateHired.Value.Date >= fromDate.Value.Date && 
                    e.DateHired.Value.Date <= toDate.Value.Date);
            }

            TotalEmployees = await employeeQuery.CountAsync();

            // Build base query for students
            var pendingStatus = "Pending";
            var studentQuery = Context.StudentDataViews
                .FromSqlRaw(@"SELECT StudentId, FirstName, MiddleName, LastName, Suffix, FullName, BirthDate, Age, LRN, GradeLevel, SchoolYear, DateRegistered, Status, StudentType FROM [dbo].[vw_StudentData] WHERE Status = {0}", pendingStatus)
                .Where(s => s.Status == pendingStatus)
                .AsQueryable();

            // Apply date filter to students if provided
            if (fromDate.HasValue && toDate.HasValue)
            {
                studentQuery = studentQuery.Where(s => s.DateRegistered.HasValue && 
                    s.DateRegistered.Value.Date >= fromDate.Value.Date && 
                    s.DateRegistered.Value.Date <= toDate.Value.Date);
            }

            PendingApplications = await studentQuery.CountAsync();

            // Get student type statistics with filters
            var allStudentsQuery = Context.StudentDataViews
                .FromSqlRaw(@"SELECT StudentId, FirstName, MiddleName, LastName, Suffix, FullName, BirthDate, Age, LRN, GradeLevel, SchoolYear, DateRegistered, Status, StudentType FROM [dbo].[vw_StudentData]")
                .AsQueryable();

            // Apply date filter to all students if provided
            if (fromDate.HasValue && toDate.HasValue)
            {
                allStudentsQuery = allStudentsQuery.Where(s => s.DateRegistered.HasValue && 
                    s.DateRegistered.Value.Date >= fromDate.Value.Date && 
                    s.DateRegistered.Value.Date <= toDate.Value.Date);
            }

            var allStudents = await allStudentsQuery.ToListAsync();

            TotalStudentCount = allStudents.Count;
            NewStudentCount = allStudents.Count(s => s.StudentType != null && s.StudentType.ToLower().Contains("new"));
            TransfereeCount = allStudents.Count(s => s.StudentType != null && s.StudentType.ToLower().Contains("transferee"));
            ReturneeCount = allStudents.Count(s => s.StudentType != null && s.StudentType.ToLower().Contains("returnee"));

            StateHasChanged();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading filtered statistics: {ex.Message}");
        }
    }

