            <h3 class="mb-4 text-xl font-bold text-gray-800">Total income</h3>
            <div class="flex gap-6">
                <div class="flex items-center gap-2">
                    <div class="h-3 w-3 rounded-full bg-pink-500"></div>
                    <span class="text-sm text-gray-600">Product</span>
                </div>
                <div class="flex items-center gap-2">
                    <div class="h-3 w-3 rounded-full bg-blue-500"></div>
                    <span class="text-sm text-gray-600">Subscriptions</span>
                </div>
            </div>
        </div>
  
        <!-- Chart Placeholder -->
        <div class="relative h-64">
            <svg class="h-full w-full" viewBox="0 0 600 250">
                <!-- Y-axis labels -->
                <text x="30" y="30" class="fill-gray-400 text-xs">500k</text>
                <text x="30" y="100" class="fill-gray-400 text-xs">100k</text>
                <text x="40" y="150" class="fill-gray-400 text-xs">50k</text>
                <text x="50" y="230" class="fill-gray-400 text-xs">0</text>
                
