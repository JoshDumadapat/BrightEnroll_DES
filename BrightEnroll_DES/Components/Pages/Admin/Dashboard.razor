                    <!-- Background circle -->
                    <circle cx="100" cy="100" r="80" fill="none" stroke="#e5e7eb" stroke-width="25"/>
                    
                    @if (TotalStudentCount > 0)
                    {
                        <!-- Blue segment (New students) -->
                        <circle cx="100" cy="100" r="80" fill="none" stroke="#2563eb" stroke-width="25"
                            stroke-dasharray="@GetNewStudentDashArray()" 
                            stroke-dashoffset="0" transform="rotate(-90 100 100)"/>
                        
                        <!-- Gray segment (Transferee) -->
                        <circle cx="100" cy="100" r="80" fill="none" stroke="#9ca3af" stroke-width="25"
                            stroke-dasharray="@GetTransfereeDashArray()" 
                            stroke-dashoffset="@GetTransfereeOffset()" transform="rotate(-90 100 100)"/>
                        
                        <!-- Light blue segment (Returnee) -->
                        <circle cx="100" cy="100" r="80" fill="none" stroke="#60a5fa" stroke-width="25"
