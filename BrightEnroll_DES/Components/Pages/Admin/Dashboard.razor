@page "/dashboard"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Services
@using BrightEnroll_DES.Services.HR
@using BrightEnroll_DES.Data
@using Microsoft.EntityFrameworkCore
@inject ILoadingService LoadingService
@inject AppDbContext Context
@inject EmployeeService EmployeeService
@inject StudentService StudentService

<PageTitle>Dashboard</PageTitle>

<div class="text-gray-800">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Dashboard</h1>
</div>

<!-- Date Filters -->
<div class="mb-4 rounded-xl border border-gray-100 bg-white p-3 shadow-sm md:mb-6 md:p-4" style="overflow: visible;">
    <!-- Header -->
    <div class="mb-3">
        <h2 class="text-sm font-bold text-gray-800 md:text-base">Dashboard Filters</h2>
    </div>

    <!-- Filters and Buttons Row -->
    <div class="mb-3 flex flex-wrap items-end justify-start gap-2 sm:gap-3" style="overflow: visible;">
        <!-- From Date -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600">From Date:</label>
            <div class="group relative w-full">
                <input type="date" value="@(FromDate?.ToString("yyyy-MM-dd") ?? "")" @onchange="OnFromDateChanged"
                       class="w-full rounded border px-2 py-1.5 text-xs text-gray-600 outline-none focus:ring-2 focus:ring-blue-400 sm:w-auto md:px-3 md:py-2 md:text-sm" />
                <span class="tooltip-delay">Select the start date for filtering dashboard statistics</span>
            </div>
        </div>

        <!-- To Date -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600">To Date:</label>
            <div class="group relative w-full">
                <input type="date" value="@(ToDate?.ToString("yyyy-MM-dd") ?? "")" @onchange="OnToDateChanged"
                       class="w-full rounded border px-2 py-1.5 text-xs text-gray-600 outline-none focus:ring-2 focus:ring-blue-400 sm:w-auto md:px-3 md:py-2 md:text-sm" />
                <span class="tooltip-delay">Select the end date for filtering dashboard statistics</span>
            </div>
        </div>

        <!-- Month Filter -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600">Month:</label>
            <select value="@SelectedMonth" @onchange="OnMonthChanged"
                    class="w-full rounded border px-2 py-1.5 text-xs text-gray-600 outline-none focus:ring-2 focus:ring-blue-400 sm:w-auto md:px-3 md:py-2 md:text-sm">
                <option value="">All Months</option>
                <option value="current">This Month</option>
                <option value="previous">Previous Month</option>
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i">@((new DateTime(DateTime.Now.Year, i, 1)).ToString("MMMM"))</option>
                }
            </select>
        </div>

        <!-- Year Filter -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600">Year:</label>
            <select value="@SelectedYear" @onchange="OnYearChanged"
                    class="w-full rounded border px-2 py-1.5 text-xs text-gray-600 outline-none focus:ring-2 focus:ring-blue-400 sm:w-auto md:px-3 md:py-2 md:text-sm">
                <option value="">All Years</option>
                <option value="current">This Year</option>
                <option value="previous">Previous Year</option>
                @for (int year = DateTime.Now.Year; year >= DateTime.Now.Year - 5; year--)
                {
                    <option value="@year">@year</option>
                }
            </select>
        </div>

        <!-- Quick Select -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600">Quick Select:</label>
            <select value="@QuickSelect" @onchange="OnQuickSelectChanged"
                    class="w-full rounded border px-2 py-1.5 text-xs text-gray-600 outline-none focus:ring-2 focus:ring-blue-400 sm:w-auto md:px-3 md:py-2 md:text-sm">
                <option value="">Select Range</option>
                <option value="today">This Day</option>
                <option value="week">This Week</option>
                <option value="month">This Month</option>
                <option value="year">This Year</option>
            </select>
        </div>

        <!-- Clear Filter Button -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600 opacity-0">Placeholder</label>
            <button @onclick="ClearFilters"
                    class="flex w-full items-center justify-center gap-1.5 whitespace-nowrap rounded-lg border border-transparent bg-gray-500 px-3 py-1.5 font-semibold text-white text-xs shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg sm:w-auto md:px-4 md:py-2 md:text-sm">
                <svg class="h-3.5 w-3.5 md:h-4 md:w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Clear
            </button>
        </div>

        <!-- Apply Filter Button -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600 opacity-0">Placeholder</label>
            <button @onclick="ApplyFilters"
                    class="flex w-full items-center justify-center gap-1.5 whitespace-nowrap rounded-lg border border-transparent bg-blue-600 px-3 py-1.5 font-semibold text-white text-xs shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg sm:w-auto md:px-4 md:py-2 md:text-sm">
                <svg class="h-3.5 w-3.5 md:h-4 md:w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                          d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                </svg>
                Apply Filter
            </button>
        </div>
    </div>

    <!-- Current View Row -->
    <div class="flex justify-start">
        <div class="text-left">
            <span class="text-xs font-medium text-gray-600 md:text-sm">Current View: </span>
            <span class="ml-1 text-xs font-semibold text-gray-800 md:text-sm">@GetCurrentViewText()</span>
        </div>
    </div>
</div>


<!-- Stats Cards -->
<div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-2 md:mb-8 md:gap-6 lg:grid-cols-4">
    <!-- Total Enrolled -->
    <div class="group relative rounded-2xl border border-gray-100 bg-white p-4 shadow-sm transition-shadow hover:shadow-md md:p-6">
