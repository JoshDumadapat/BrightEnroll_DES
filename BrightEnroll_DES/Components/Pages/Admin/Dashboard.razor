            // Always hide loading screen after data loading is complete
            LoadingService.HideLoading();
        }
    }

    private string GetCurrentViewText()
    {
        if (!string.IsNullOrEmpty(QuickSelect))
        {
            return QuickSelect switch
            {
                "today" => "Today",
                "week" => "This Week",
                "month" => "This Month",
                "year" => "This Year",
                _ => "Custom Range"
            };
        }
        
        if (FromDate.HasValue && ToDate.HasValue)
        {
            if (FromDate.Value.Date == ToDate.Value.Date)
            {
                return "Single Day";
            }
            return "Custom Range";
        }
        
        return "All Time";
    }

    private void OnQuickSelectChanged(ChangeEventArgs e)
    {
        QuickSelect = e.Value?.ToString();
        var today = DateTime.Now;
        
        switch (QuickSelect)
        {
            case "today":
                FromDate = today;
                ToDate = today;
                break;
            case "week":
                var startOfWeek = today.AddDays(-(int)today.DayOfWeek);
                FromDate = startOfWeek;
                ToDate = today;
                break;
            case "month":
                FromDate = new DateTime(today.Year, today.Month, 1);
                ToDate = today;
                break;
            case "year":
                FromDate = new DateTime(today.Year, 1, 1);
                ToDate = today;
                break;
            default:
                break;
        }
        
        StateHasChanged();
    }

    private void OnFromDateChanged(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            FromDate = date;
        }
        else
        {
            FromDate = null;
        }
        // Clear quick select when manually changing dates
        QuickSelect = null;
    }

    private void OnToDateChanged(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            ToDate = date;
        }
        else
        {
            ToDate = null;
        }
        // Clear quick select when manually changing dates
        QuickSelect = null;
    }

    private void ApplyFilters()
    {
        // Apply filter logic will be implemented here
        // For now, this is a placeholder
        // You can add API calls or data filtering logic here
    }

    private void ClearFilters()
    {
        FromDate = null;
        ToDate = null;
        QuickSelect = null;
        StateHasChanged();
    }
