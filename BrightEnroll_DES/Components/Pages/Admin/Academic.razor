@page "/academics"
@layout Components.Layout.MainLayout

<PageTitle>Academics</PageTitle>

<div>

    <!-- Tabs -->
    <div class="mb-5 flex space-x-8 border-b border-gray-200">
        <button @onclick='() => SetActiveTab("sections")'
                class="@GetTabClass("sections", "bg-blue-600 text-white", "text-gray-600") rounded-md px-5 py-2 font-medium transition-all">
            Sections
        </button>
        <button @onclick='() => SetActiveTab("subjects")'
                class="@GetTabClass("subjects", "text-indigo-600 border-b-2 border-indigo-600", "text-gray-600") font-medium pb-2">
            Subjects
        </button>
        <button @onclick='() => SetActiveTab("teachers")'
                class="@GetTabClass("teachers", "text-green-600 border-b-2 border-green-600", "text-gray-600") font-medium pb-2">
            Teacher Assignment
        </button>
    </div>

    <!-- SECTIONS TAB -->
    @if (ActiveTab == "sections")
    {
        <div class="space-y-5">
            <!-- Filters -->
            <div>
                <label class="mb-2 block text-sm font-bold text-gray-700">Filter:</label>
                <div class="flex flex-wrap items-center gap-3">
                <div class="relative w-60">
                    <input type="text" placeholder="Search here..." class="w-full rounded-lg border border-gray-300 px-4 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-400" />
                    <svg xmlns="http://www.w3.org/2000/svg" class="absolute right-3 top-2.5 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </div>

                <select class="rounded-lg border border-gray-300 px-3 py-2 text-sm focus:ring-2 focus:ring-blue-400">
                    <option>Subjects</option>
                </select>

                <select class="rounded-lg border border-gray-300 px-3 py-2 text-sm focus:ring-2 focus:ring-blue-400">
                    <option>Grade</option>
                </select>

                <button class="ml-auto flex items-center space-x-2 rounded-lg bg-blue-600 px-4 py-2 text-sm text-white shadow-sm transition-all hover:bg-blue-700">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    <span>Add Section</span>
                </button>
                </div>
            </div>

            <!-- Table -->
            <div class="overflow-hidden rounded-xl bg-white shadow">
                <table class="min-w-full text-left text-sm text-gray-600">
                    <thead class="bg-gray-50 text-xs font-medium uppercase text-gray-700">
                        <tr>
                            <th class="px-6 py-3">Section I.D.</th>
                            <th class="px-6 py-3">Section Name</th>
                            <th class="px-6 py-3">Grade Level</th>
                            <th class="px-6 py-3">Homeroom Teacher</th>
                            <th class="px-6 py-3">Classroom</th>
                            <th class="px-6 py-3">Capacity</th>
                            <th class="px-6 py-3 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b transition hover:bg-gray-50">
                            <td class="px-6 py-3">SEC-01</td>
                            <td class="px-6 py-3">Saturn</td>
                            <td class="px-6 py-3">3</td>
                            <td class="px-6 py-3">Mr. John Doe</td>
                            <td class="px-6 py-3">Room A1</td>
                            <td class="px-6 py-3">40</td>
                            <td class="flex justify-end gap-2 px-6 py-3 text-right">
                                <!-- Edit Button -->
                                <button class="flex items-center justify-center rounded-lg bg-yellow-50 p-2 text-yellow-600 transition hover:bg-yellow-100">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                                    </svg>
                                </button>
                                <!-- Delete Button -->
                                <button class="flex items-center justify-center rounded-lg bg-red-50 p-2 text-red-600 transition hover:bg-red-100">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                    </svg>
                                </button>
                            </td>
                        </tr>
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-3">SEC-02</td>
                            <td class="px-6 py-3">Uranus</td>
                            <td class="px-6 py-3">3</td>
                            <td class="px-6 py-3">Mrs. Carmina Santos</td>
                            <td class="px-6 py-3">Room A2</td>
                            <td class="px-6 py-3">40</td>
                            <td class="flex justify-end gap-2 px-6 py-3 text-right">
                                <!-- Edit Button -->
                                <button class="flex items-center justify-center rounded-lg bg-yellow-50 p-2 text-yellow-600 transition hover:bg-yellow-100">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                                    </svg>
                                </button>
                                <!-- Delete Button -->
                                <button class="flex items-center justify-center rounded-lg bg-red-50 p-2 text-red-600 transition hover:bg-red-100">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="mt-4 flex items-center justify-between text-sm text-gray-500">
                <p>9 of 456 pre-registered students</p>
                <div class="flex items-center space-x-2">
                    <span class="rounded-lg bg-blue-600 px-3 py-1 text-white">1</span>
                    <button class="rounded px-2 py-1 hover:bg-gray-200">2</button>
                    <button class="rounded px-2 py-1 hover:bg-gray-200">3</button>
                    <span>...</span>
                    <button class="rounded px-2 py-1 hover:bg-gray-200">10</button>

                    <select class="ml-4 rounded-lg border border-gray-300 px-2 py-1 text-sm">
                        <option>9 rows</option>
                        <option>25 rows</option>
                    </select>
                </div>
            </div>
        </div>
    }

    <!-- SUBJECTS TAB -->
    @if (ActiveTab == "subjects")
    {
        <div class="rounded-xl bg-white p-6 text-gray-600 shadow-sm">
            <p class="text-center text-sm text-gray-400">Subjects tab content coming soon...</p>
        </div>
    }

    <!-- TEACHER TAB -->
    @if (ActiveTab == "teachers")
    {
        <div class="rounded-xl bg-white p-6 text-gray-600 shadow-sm">
            <p class="text-center text-sm text-gray-400">Teacher assignment tab content coming soon...</p>
        </div>
    }
</div>

@code {
    private string ActiveTab = "sections";

    private void SetActiveTab(string tab)
    {
        ActiveTab = tab;
    }

    private string GetTabClass(string tab, string activeClass, string inactiveClass)
    {
        return ActiveTab == tab ? activeClass : inactiveClass;
    }
}
