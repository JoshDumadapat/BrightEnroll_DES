                MaxAmount = d.MaxAmount,
                MinAmount = d.MinAmount,
                Description = d.Description,
                IsActive = d.IsActive
            }).ToList();

            // Filter out already-applied discounts
            if (appliedDiscountIds != null && appliedDiscountIds.Any())
            {
                availableDiscounts = allDiscounts
                    .Where(d => !appliedDiscountIds.Contains(d.DiscountId))
                    .ToList();
            }
            else
            {
                availableDiscounts = allDiscounts;
            }
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Error loading discounts: {Message}", ex.Message);
            availableDiscounts = new List<DiscountModel>();
        }
    }

    private void OnDiscountChanged()
    {
        if (selectedDiscountId.HasValue && selectedDiscountId.Value > 0 && availableDiscounts != null)
        {
            selectedDiscount = availableDiscounts.FirstOrDefault(d => d.DiscountId == selectedDiscountId.Value);
            CalculateDiscountAmount();
            
            // FIXED: When discount changes and "Full Payment" is selected, update payment amount
            // This ensures the payment amount reflects the discount
            if (paymentType == "Full Payment" && isPaymentTypeExplicitlySelected)
            {
                // Recalculate payment amount: Balance - Discount = Amount to Pay
                decimal amountToPay = PaymentData.Balance - calculatedDiscountAmount;
                if (amountToPay < 0) amountToPay = 0;
                
                PaymentData.NewPaymentAmount = amountToPay;
                paymentAmountRawInput = amountToPay == Math.Floor(amountToPay) 
                    ? ((int)amountToPay).ToString() 
                    : amountToPay.ToString("0.##");
            }
        }
        else
        {
            selectedDiscount = null;
            calculatedDiscountAmount = 0;
            selectedDiscountBaseAmount = 0;
            
            // FIXED: When discount is removed and "Full Payment" is selected, reset payment amount to full balance
            if (paymentType == "Full Payment" && isPaymentTypeExplicitlySelected)
            {
                PaymentData.NewPaymentAmount = PaymentData.Balance;
                paymentAmountRawInput = PaymentData.Balance == Math.Floor(PaymentData.Balance) 
                    ? ((int)PaymentData.Balance).ToString() 
                    : PaymentData.Balance.ToString("0.##");
            }
        }
        StateHasChanged();
    }

    private void CalculateDiscountAmount()
    {
        if (selectedDiscount == null || !selectedDiscount.IsActive)
        {
            calculatedDiscountAmount = 0;
            selectedDiscountBaseAmount = 0;
            return;
        }

        // Base amount for discount calculation should be the BALANCE, not the payment amount
        // This ensures discounts are calculated on what's owed, not what's being paid
        selectedDiscountBaseAmount = PaymentData.Balance;
        
        if (selectedDiscountBaseAmount <= 0)
        {
            calculatedDiscountAmount = 0;
            return;
        }

        decimal discountAmount = 0;

        if (selectedDiscount.IsPercentage)
        {
            discountAmount = selectedDiscountBaseAmount * (selectedDiscount.RateOrValue / 100m);
        }
        else
        {
            discountAmount = selectedDiscount.RateOrValue;
        }

        // Apply min/max constraints
        if (selectedDiscount.MinAmount.HasValue && discountAmount < selectedDiscount.MinAmount.Value)
        {
            discountAmount = selectedDiscount.MinAmount.Value;
        }

        if (selectedDiscount.MaxAmount.HasValue && discountAmount > selectedDiscount.MaxAmount.Value)
        {
            discountAmount = selectedDiscount.MaxAmount.Value;
        }

        // Ensure discount doesn't exceed the balance
        if (discountAmount > selectedDiscountBaseAmount)
        {
            discountAmount = selectedDiscountBaseAmount;
        }

        calculatedDiscountAmount = Math.Round(discountAmount, 2);
    }

