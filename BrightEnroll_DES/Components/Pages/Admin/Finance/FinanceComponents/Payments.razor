    private string GetPaymentStatusText()
    {
        // Derive status from latest values to ensure real-time accuracy
        if (PaymentData.Balance <= 0 && (PaymentData.AmountPaid > 0 || PaymentData.TotalFee > 0))
            return "Fully Paid";

        if (PaymentData.AmountPaid > 0 && PaymentData.Balance > 0)
            return "Partially Paid";

        return "Unpaid";
    }

    private string GetPaymentStatusCardClasses()
    {
        var status = GetPaymentStatusText();

        return status switch
        {
            "Fully Paid" => "rounded-lg border border-green-200 bg-green-50 p-3 sm:p-4",
            "Partially Paid" => "rounded-lg border border-orange-200 bg-orange-50 p-3 sm:p-4",
            _ => "rounded-lg border border-gray-200 bg-gray-50 p-3 sm:p-4"
        };
    }

    private string GetPaymentStatusLabelTextColor()
    {
        var status = GetPaymentStatusText();

        return status switch
        {
            "Fully Paid" => "text-green-600",
            "Partially Paid" => "text-orange-600",
            _ => "text-gray-600"
        };
    }

    private string GetPaymentStatusValueTextColor()
    {
        var status = GetPaymentStatusText();

        return status switch
        {
            "Fully Paid" => "text-green-800",
            "Partially Paid" => "text-orange-800",
            _ => "text-gray-700"
        };
    }

