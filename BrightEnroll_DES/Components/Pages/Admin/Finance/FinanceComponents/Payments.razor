@using BrightEnroll_DES.Components.Pages.Admin.Finance.FinanceComponents
@using BrightEnroll_DES.Components.Pages.Admin.Finance.FinanceCS
@using BrightEnroll_DES.Services.Business.Finance
@using BrightEnroll_DES.Services.QuestPDF
@using BrightEnroll_DES.Data.Models
@using BrightEnroll_DES.Services.Authentication
@using Microsoft.Extensions.Logging
@using System.Linq
@inject IJSRuntime JSRuntime
@inject PaymentService PaymentService
@inject FeeService FeeService
@inject StudentLedgerService LedgerService
@inject PaymentReceiptPdfGenerator PdfGenerator
@inject IAuthService AuthService
@inject ILogger<Payments> Logger

<div class="text-gray-800 p-4 sm:p-6">
    <!-- Header -->
    <div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="min-w-0 flex-1">
            <h1 class="text-xl sm:text-2xl font-bold text-gray-800">Process Payment</h1>
            <p class="mt-1 text-sm text-gray-600">Accept and record student payments</p>
        </div>
    </div>

    <!-- Student Search -->
    <div class="mb-6 rounded-xl border border-gray-100 bg-white p-6 shadow-sm">
        <h2 class="mb-4 text-lg font-bold text-gray-800">Search Student</h2>
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">Student ID</label>
                <div class="relative">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 flex items-center justify-center pointer-events-none z-10">
                        <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </span>
                    <input type="text"
                           @bind="searchStudentId"
                           @bind:event="oninput"
                           @onkeypress="HandleSearchKeyPress"
                           placeholder="Enter Student ID and press Enter or click Search"
                           class="w-full rounded-lg border border-gray-300 bg-white py-2 pl-10 pr-3 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                </div>
            </div>
            <div class="flex items-end">
                <button @onclick="SearchStudent"
                        disabled="@isSearching"
                        class="flex items-center justify-center gap-2 rounded-full bg-blue-600 px-4 sm:px-6 py-2 text-sm font-medium text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg w-full sm:w-auto disabled:bg-gray-400 disabled:cursor-not-allowed">
                    <svg class="h-4 w-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    @if (isSearching)
                    {
                        <span>Searching...</span>
                    }
                    else
                    {
                        <span>Search</span>
                    }
                </button>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(searchErrorMessage))
        {
            <div class="mt-4 rounded-xl border border-red-200 bg-red-50 px-4 py-3">
                <p class="text-sm font-medium text-red-800">@searchErrorMessage</p>
            </div>
        }
    </div>

    @if (hasSearched && studentFound)
    {
        <!-- A. Student Information Header (Top Section) -->
        <div class="mb-6 rounded-xl border-2 border-blue-200 bg-gradient-to-r from-blue-50 to-blue-100 shadow-lg overflow-hidden">
            <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
                <h2 class="text-2xl font-bold text-white">Student Information</h2>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
                    <div>
                        <p class="text-xs font-semibold text-gray-600 uppercase tracking-wide mb-2">Student Name</p>
                        <p class="text-xl font-bold text-gray-900">@PaymentData.StudentName</p>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-gray-600 uppercase tracking-wide mb-2">Student ID</p>
                        <p class="text-xl font-bold text-gray-900">@PaymentData.StudentId</p>
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-gray-600 uppercase tracking-wide mb-2">Grade Level</p>
                        <p class="text-xl font-bold text-gray-900">@PaymentData.GradeLevel</p>
                        @if (!string.IsNullOrWhiteSpace(PaymentData.SchoolYearForPayment) && PaymentData.HasPreviousBalance)
                        {
                            <p class="text-xs text-orange-600 font-semibold mt-1">Previous Balance: @PaymentData.SchoolYearForPayment</p>
                        }
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-gray-600 uppercase tracking-wide mb-2">Enrollment Status</p>
                        <p class="text-xl font-bold @GetEnrollmentStatusColor()">@enrollmentStatus</p>
                        @if (PaymentData.HasPreviousBalance)
                        {
                            <p class="text-xs text-orange-600 font-semibold mt-1">⚠️ Pay Previous Balance First</p>
                        }
                    </div>
                    <div>
                        <p class="text-xs font-semibold text-gray-600 uppercase tracking-wide mb-2">Balance Summary</p>
                        <p class="text-2xl font-bold @(PaymentData.Balance > 0 ? "text-red-600" : "text-green-600")">₱@PaymentData.Balance.ToString("N2")</p>
                        @if (PaymentData.HasPreviousBalance)
                        {
                            <p class="text-xs text-orange-600 font-semibold mt-1">From: @PaymentData.SchoolYearForPayment</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- B & C. Main Content: Two-Column Layout -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
            <!-- B. Tuition & Fees Breakdown (Left/Main Panel - 2 columns) -->
            <div class="lg:col-span-2 rounded-xl border border-gray-200 bg-white shadow-sm overflow-hidden">
                <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
                    <h2 class="text-xl font-bold text-gray-800">Tuition & Fees Breakdown</h2>
                </div>
                <div class="p-6">
                    @if (ledgerCharges != null && ledgerCharges.Any())
                    {
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead>
                                    <tr class="border-b-2 border-gray-300">
                                        <th class="text-left py-4 px-4 text-sm font-bold text-gray-800">Charge Type</th>
                                        <th class="text-left py-4 px-4 text-sm font-bold text-gray-800">Description</th>
                                        <th class="text-right py-4 px-4 text-sm font-bold text-gray-800">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var charge in ledgerCharges.OrderBy(c => c.ChargeType == "Discount" ? 1 : 0).ThenBy(c => c.ChargeType).ThenBy(c => c.CreatedAt))
                                        {
                                        <tr class="border-b border-gray-100 hover:bg-gray-50 @(charge.ChargeType == "Discount" ? "bg-green-50" : "")">
                                            <td class="py-3 px-4 text-sm text-gray-700 font-medium">@charge.ChargeType</td>
                                            <td class="py-3 px-4 text-sm text-gray-700">@(charge.Description ?? charge.ChargeType)</td>
                                            <td class="py-3 px-4 text-sm text-right font-medium @(charge.Amount < 0 ? "text-green-600" : "text-gray-900")">
                                                @(charge.Amount < 0 ? "-" : "")₱@Math.Abs(charge.Amount).ToString("N2")
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="border-t-4 border-gray-400 bg-blue-50">
                                        <td colspan="2" class="py-4 px-4 text-base font-bold text-gray-900">Total Charges</td>
                                        <td class="py-4 px-4 text-base font-bold text-blue-800 text-right">₱@PaymentData.TotalFee.ToString("N2")</td>
                                    </tr>
                                    <tr class="bg-green-50">
                                        <td colspan="2" class="py-3 px-4 text-base font-bold text-gray-900">Total Paid</td>
                                        <td class="py-3 px-4 text-base font-bold text-green-800 text-right">₱@PaymentData.AmountPaid.ToString("N2")</td>
                                    </tr>
                                    <tr class="bg-red-50">
                                        <td colspan="2" class="py-3 px-4 text-base font-bold text-gray-900">Remaining Balance</td>
                                        <td class="py-3 px-4 text-base font-bold text-red-800 text-right">₱@PaymentData.Balance.ToString("N2")</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-sm text-gray-500 text-center py-8">No charges available for this ledger.</p>
                    }
                </div>
            </div>

            <!-- C. Today's Payment Panel (Right Panel - 1 column) -->
            <div class="rounded-xl border-2 border-green-200 bg-white shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-green-600 to-green-700 px-6 py-4">
                    <h2 class="text-xl font-bold text-white">Today's Payment</h2>
                </div>
                <div class="p-6 space-y-6">
                    <!-- Payment Type Selector -->
                    <div>
                        <label class="mb-3 block text-sm font-bold text-gray-700 uppercase tracking-wide">Payment Type</label>
                        <div class="space-y-2">
                            <label class="flex items-center p-3 rounded-lg border-2 cursor-pointer transition-all @(paymentType == "Downpayment" ? "border-green-500 bg-green-50" : "border-gray-200 bg-white hover:border-gray-300")" @onclick="SetPaymentTypeDownpayment">
                                <input type="radio" name="paymentType" checked="@(paymentType == "Downpayment")" disabled="@(PaymentData.Balance <= 0)" class="sr-only" />
                                <div class="flex-1">
                                    <p class="text-sm font-semibold @(paymentType == "Downpayment" ? "text-green-700" : "text-gray-700")">Downpayment</p>
                                </div>
                            </label>
                            <label class="flex items-center p-3 rounded-lg border-2 cursor-pointer transition-all @(paymentType == "Other Fees" ? "border-green-500 bg-green-50" : "border-gray-200 bg-white hover:border-gray-300")" @onclick="SetPaymentTypeOtherFees">
                                <input type="radio" name="paymentType" checked="@(paymentType == "Other Fees")" disabled="@(PaymentData.Balance <= 0)" class="sr-only" />
                                <div class="flex-1">
                                    <p class="text-sm font-semibold @(paymentType == "Other Fees" ? "text-green-700" : "text-gray-700")">Other Fees</p>
                                </div>
                            </label>
                            <label class="flex items-center p-3 rounded-lg border-2 cursor-pointer transition-all @(paymentType == "Partial Payment" ? "border-green-500 bg-green-50" : "border-gray-200 bg-white hover:border-gray-300")" @onclick="SetPaymentTypePartial">
                                <input type="radio" name="paymentType" checked="@(paymentType == "Partial Payment")" disabled="@(PaymentData.Balance <= 0)" class="sr-only" />
                                <div class="flex-1">
                                    <p class="text-sm font-semibold @(paymentType == "Partial Payment" ? "text-green-700" : "text-gray-700")">Partial Payment</p>
                                </div>
                            </label>
                            <label class="flex items-center p-3 rounded-lg border-2 cursor-pointer transition-all @(paymentType == "Full Payment" ? "border-green-500 bg-green-50" : "border-gray-200 bg-white hover:border-gray-300")" @onclick="SetPaymentTypeFull">
                                <input type="radio" name="paymentType" checked="@(paymentType == "Full Payment")" disabled="@(PaymentData.Balance <= 0)" class="sr-only" />
                                <div class="flex-1">
                                    <p class="text-sm font-semibold @(paymentType == "Full Payment" ? "text-green-700" : "text-gray-700")">Full Payment</p>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- Divider -->
                    <div class="border-t border-gray-200"></div>

                    <!-- Payment Method -->
                    <div>
                        <label class="mb-2 block text-sm font-semibold text-gray-700">Payment Method</label>
                        <select @bind="PaymentData.PaymentMethod"
                                disabled="@(PaymentData.Balance <= 0)"
                                class="w-full rounded-lg border-2 border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 outline-none focus:border-green-500 focus:ring-2 focus:ring-green-400 disabled:bg-gray-100 disabled:cursor-not-allowed">
                            <option value="Cash">Cash</option>
                            <option value="Check">Check</option>
                            <option value="Bank Transfer">Bank Transfer</option>
                            <option value="Credit Card">Credit Card</option>
                        </select>
                    </div>

                    <!-- Amount Input -->
                    <div>
                        <label class="mb-2 block text-sm font-bold text-gray-700 uppercase tracking-wide">Payment Amount</label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-lg font-bold text-gray-600">₱</span>
                            <input type="text"
                                   value="@GetPaymentAmountDisplayValue()"
                                   @oninput="HandlePaymentAmountInput"
                                   @onfocus="HandlePaymentAmountFocus"
                                   @onblur="HandlePaymentAmountBlur"
                                   onkeypress="return (event.key === '.' && this.value.includes('.')) ? false : (/[0-9.]/i.test(event.key) || event.key === 'Backspace' || event.key === 'Delete' || event.key === 'ArrowLeft' || event.key === 'ArrowRight' || event.key === 'Tab' || event.key === 'Enter')"
                                   @onpaste="HandlePaymentAmountPaste"
                                   pattern="[0-9.]*"
                                   inputmode="decimal"
                                   placeholder="0.00"
                                   disabled="@(PaymentData.Balance <= 0)"
                                   class="w-full rounded-lg border-2 border-gray-300 bg-white pl-10 pr-4 py-3 text-xl text-right font-bold text-gray-900 outline-none focus:border-green-500 focus:ring-2 focus:ring-green-400 disabled:bg-gray-100 disabled:cursor-not-allowed" />
                        </div>
                        @if (PaymentData.Balance <= 0)
                        {
                            <p class="mt-2 text-xs text-gray-500">Student has fully paid.</p>
                        }
                        else
                        {
                            <p class="mt-2 text-xs text-gray-500">Minimum: <span class="font-semibold">₱1,700.00</span> | Balance: <span class="font-semibold text-red-600">₱@PaymentData.Balance.ToString("N2")</span></p>
                        }
                    </div>

                    <!-- Payment Summary Box -->
                    <div class="rounded-lg border-2 border-gray-300 bg-gray-50 p-5">
                        <h3 class="mb-3 text-sm font-bold text-gray-800 uppercase tracking-wide">Payment Summary</h3>
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <span class="text-sm font-medium text-gray-700">Payment Type:</span>
                                <span class="text-sm font-bold text-gray-900">@paymentType</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-sm font-medium text-gray-700">Amount Entered:</span>
                                <span class="text-base font-bold text-green-600">₱@PaymentData.NewPaymentAmount.ToString("N2")</span>
                            </div>
                            <div class="border-t border-gray-300 pt-3">
                                <div class="flex justify-between items-center">
                                    <span class="text-sm font-semibold text-gray-800">Updated Balance:</span>
                                    <span class="text-lg font-bold @((PaymentData.Balance - PaymentData.NewPaymentAmount) > 0 ? "text-red-600" : "text-green-600")">₱@((PaymentData.Balance - PaymentData.NewPaymentAmount).ToString("N2"))</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Pay / Submit Button -->
                    <div class="pt-2">
                        <button @onclick="OpenPaymentConfirmationModal"
                                disabled="@(PaymentData.Balance <= 0 || PaymentData.NewPaymentAmount <= 0 || isProcessingPayment)"
                                class="w-full flex items-center justify-center gap-2 rounded-lg bg-green-600 px-6 py-4 text-base font-bold text-white shadow-lg transition-all duration-300 hover:bg-green-700 hover:shadow-xl disabled:bg-gray-400 disabled:cursor-not-allowed">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            @if (isProcessingPayment)
                            {
                                <span>Processing...</span>
                            }
                            else
                            {
                                <span>Process Payment</span>
                            }
                        </button>
                        <button @onclick="ClearPaymentForm" class="mt-2 w-full rounded-lg border-2 border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 transition-all hover:bg-gray-50">
                            Clear
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- 2. Payment History Section (Bottom Panel) -->
        <div class="mb-6 rounded-xl border border-gray-200 bg-white shadow-sm overflow-hidden">
            <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-3 border-b border-gray-200 cursor-pointer" @onclick="TogglePaymentHistory">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-bold text-gray-800">Payment History</h2>
                    <svg class="h-5 w-5 text-gray-600 transition-transform @(showPaymentHistory ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </div>
            </div>
            @if (showPaymentHistory)
            {
                <div class="p-6">
                    @if (ledgerPayments != null && ledgerPayments.Any())
                    {
                        <div class="overflow-x-auto max-h-96 overflow-y-auto">
                            <table class="w-full text-sm">
                                <thead class="bg-gray-50 sticky top-0">
                                    <tr class="border-b-2 border-gray-300">
                                        <th class="text-left py-2 px-3 text-xs font-semibold text-gray-700 uppercase tracking-wide">Date</th>
                                        <th class="text-left py-2 px-3 text-xs font-semibold text-gray-700 uppercase tracking-wide">Type</th>
                                        <th class="text-left py-2 px-3 text-xs font-semibold text-gray-700 uppercase tracking-wide">OR Number</th>
                                        <th class="text-right py-2 px-3 text-xs font-semibold text-gray-700 uppercase tracking-wide">Amount</th>
                                        <th class="text-left py-2 px-3 text-xs font-semibold text-gray-700 uppercase tracking-wide">Cashier</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in ledgerPayments)
                                    {
                                        <tr class="border-b border-gray-100 hover:bg-gray-50">
                                            <td class="py-2 px-3 text-xs text-gray-700">@payment.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td class="py-2 px-3 text-xs text-gray-700">@payment.PaymentMethod</td>
                                            <td class="py-2 px-3 text-xs text-gray-700 font-mono">@payment.OrNumber</td>
                                            <td class="py-2 px-3 text-xs text-gray-900 text-right font-medium">₱@payment.Amount.ToString("N2")</td>
                                            <td class="py-2 px-3 text-xs text-gray-700">@(payment.ProcessedBy ?? "N/A")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-sm text-gray-500 text-center py-8">No payment history available.</p>
                    }
                </div>
            }
        </div>
    }
    else if (hasSearched && !studentFound)
    {
        <div class="rounded-xl border border-gray-100 bg-white p-12 text-center shadow-sm">
            <svg class="mx-auto mb-4 h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <p class="text-gray-500">No student found with that ID.</p>
        </div>
    }
    else
    {
        <div class="rounded-xl border border-gray-100 bg-white p-12 text-center shadow-sm">
            <svg class="mx-auto mb-4 h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <p class="text-gray-500">Search for a student to process payment.</p>
        </div>
    }
</div>

<!-- Payment Confirmation Modal (existing behavior preserved) -->
@if (ShowPaymentConfirmationModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" @onclick="HandleBackdropClick">
        <div id="payment-confirmation-modal" class="w-full max-w-md rounded-2xl bg-white shadow-xl overflow-hidden" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="flex items-center justify-between rounded-t-2xl bg-white px-6 py-2.5 border-b border-gray-200">
                <h3 class="text-base font-semibold text-blue-600">Confirm Payment</h3>
                <button @onclick="ClosePaymentConfirmationModal" class="text-gray-400 hover:text-gray-600" style="background: transparent; border: none; cursor: pointer; padding: 0; margin: 0;">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Modal Body -->
            <div class="rounded-b-2xl bg-white px-6 py-4">
                <p class="text-sm text-gray-700 mb-3">
                    Are you sure you want to process a payment of <span class="font-semibold">Php @PaymentData.NewPaymentAmount.ToString("N2")</span> for <span class="font-semibold">@PaymentData.StudentName</span> (ID: @PaymentData.StudentId)?
                </p>
                <div class="rounded-lg bg-gray-50 p-3 mb-4">
                    <div class="flex justify-between text-sm mb-2">
                        <span class="text-gray-600">Payment Method:</span>
                        <span class="font-medium text-gray-900">@PaymentData.PaymentMethod</span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600">New Balance:</span>
                        <span class="font-medium text-gray-900">@($"Php {(PaymentData.Balance - PaymentData.NewPaymentAmount):N2}")</span>
                    </div>
                </div>
                <div class="flex justify-end border-t border-gray-200 pt-3 mt-4">
                    <button type="button" @onclick="ProcessPayment" class="rounded-lg px-3 py-1.5 text-sm font-medium text-white bg-blue-600 transition-all hover:opacity-90">
                        Confirm
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Payment Receipt Modal -->
@if (ShowReceiptModal)
{
    <div class="fixed inset-0 z-[60] flex items-center justify-center bg-black bg-opacity-50" @onclick="HandleReceiptBackdropClick">
        <div id="payment-receipt-modal" class="w-full max-w-2xl mx-4 bg-white rounded-lg shadow-2xl overflow-hidden" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="flex items-center justify-center bg-blue-600 px-6 py-4">
                <h3 class="text-lg font-semibold text-white">Payment Receipt</h3>
            </div>

            <!-- Receipt Content (Printable) -->
            <div id="receipt-content" class="bg-white p-8">
                <!-- Receipt Header -->
                <div class="text-center mb-6 border-b-2 border-gray-300 pb-4">
                    <h1 class="text-2xl font-bold text-gray-800 mb-2">BRIGHTENROLL</h1>
                    <p class="text-sm text-gray-600">Enrollment Management System</p>
                    <p class="text-xs text-gray-500 mt-1">Official Receipt</p>
                </div>

                <!-- Receipt Details -->
                <div class="space-y-4 mb-6">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <p class="text-xs text-gray-500 mb-1">Official Receipt Number</p>
                            <p class="text-lg font-bold text-gray-800">@ReceiptData.OrNumber</p>
                        </div>
                        <div class="text-right">
                            <p class="text-xs text-gray-500 mb-1">Date</p>
