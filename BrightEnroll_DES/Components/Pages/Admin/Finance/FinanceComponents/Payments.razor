    private async Task ProcessPayment()
    {
        isProcessingPayment = true;
        StateHasChanged();

        try
        {
            // Store previous payment amount and ledger ID for receipt
            decimal previousPaid = PaymentData.AmountPaid;
            decimal paymentAmount = PaymentData.NewPaymentAmount;
            int? paidLedgerId = PaymentData.LedgerId; // Store the ledger ID that will be paid

            // Generate OR number before processing payment
            string orNumber = GenerateOrNumber();

            // Get current user name for audit trail
            string processedBy = GetCurrentUserName();

            // FIXED: POS-style payment processing
            // Calculate amount due after discount
            decimal amountDue = PaymentData.Balance;
            if (selectedDiscount != null && calculatedDiscountAmount > 0)
            {
                amountDue = PaymentData.Balance - calculatedDiscountAmount;
                if (amountDue < 0) amountDue = 0;
            }
            
            // Cash received (what student actually paid)
            decimal cashReceived = PaymentData.NewPaymentAmount;
            if (cashReceived < 0) cashReceived = 0;
            
            // Amount actually applied to ledger (cannot exceed amount due)
            // If student overpaid, we only apply what's needed
            decimal amountToApply = Math.Min(cashReceived, amountDue);
            if (amountToApply < 0) amountToApply = 0;
            
            // Calculate change if overpaid (for display/receipt)
            decimal changeDue = 0;
            if (cashReceived > amountDue)
            {
                changeDue = cashReceived - amountDue;
            }
            
            // Validate minimum payment (if no discount brings it below minimum)
            const decimal MINIMUM_PAYMENT = 1700m;
            if (amountToApply < MINIMUM_PAYMENT && calculatedDiscountAmount == 0 && amountDue >= MINIMUM_PAYMENT)
            {
                ClosePaymentConfirmationModal(); // Close modal
                searchErrorMessage = $"Minimum payment amount is Php {MINIMUM_PAYMENT:N2}. Please enter at least Php {MINIMUM_PAYMENT:N2}.";
                isProcessingPayment = false;
                StateHasChanged();
                return;
            }

            // Process payment through service (now includes OR number and processedBy)
            // FIXED: Apply only the amount needed (amountToApply), not the full cash received
            // This ensures ledger balance is correct even if student overpaid
            var updatedInfo = await PaymentService.ProcessPaymentAsync(
                PaymentData.StudentId,
                amountToApply, // Apply only what's needed, not the full cash received
                PaymentData.PaymentMethod,
                orNumber,
                processedBy
            );
            
            // FIXED: Apply discount AFTER payment is successfully processed
            // This ensures the discount is applied in the correct order and transaction
            if (selectedDiscount != null && calculatedDiscountAmount > 0 && PaymentData.LedgerId.HasValue)
            {
                // Apply discount to ledger if ledger exists
                // Discount is applied as a negative charge, reducing the total charges
                try
                {
                    await LedgerService.ApplyDiscountAsync(
                        PaymentData.LedgerId.Value,
                        selectedDiscount.DiscountType,
                        calculatedDiscountAmount,
                        selectedDiscount.DiscountId,
                        $"{selectedDiscount.DiscountName} - Applied during payment"
                    );
                    
                    // Reload payment info after discount is applied to get updated balance
                    var infoAfterDiscount = await PaymentService.GetStudentPaymentInfoAsync(PaymentData.StudentId);
                    if (infoAfterDiscount != null)
                    {
                        updatedInfo = infoAfterDiscount;
                    }
                }
                catch (Exception discountEx)
                {
                    Logger?.LogError(discountEx, "Error applying discount after payment: {Message}", discountEx.Message);
                    // Don't fail the payment if discount application fails, but log it
                    ShowErrorMessage($"Payment processed successfully, but discount could not be applied: {discountEx.Message}");
                }
            }

            // Update payment data with latest info
            PaymentData.AmountPaid = updatedInfo.AmountPaid;
            PaymentData.Balance = updatedInfo.Balance;
            PaymentData.PaymentStatus = updatedInfo.PaymentStatus;
            enrollmentStatus = updatedInfo.EnrollmentStatus;

            // Small delay to ensure database changes are committed
            await Task.Delay(150);

            // Reload ledger data after payment to show updated balance and payment history
            if (PaymentData.LedgerId.HasValue)
            {
                await LoadLedgerDataAsync(PaymentData.LedgerId.Value);
                // Reload discounts to exclude the one that was just applied
                await LoadDiscountsAsync();
            }
            
            // Refresh payment info to get the latest data (in case ledger changed)
            var refreshedInfo = await PaymentService.GetStudentPaymentInfoAsync(PaymentData.StudentId);
            if (refreshedInfo != null)
            {
                PaymentData.AmountPaid = refreshedInfo.AmountPaid;
                PaymentData.Balance = refreshedInfo.Balance;
                PaymentData.PaymentStatus = refreshedInfo.PaymentStatus;
                PaymentData.TotalFee = refreshedInfo.TotalFee;
                enrollmentStatus = refreshedInfo.EnrollmentStatus;
            }

            // Prepare receipt data using the ledger that was actually paid
            // This ensures receipt shows correct values even if GetStudentPaymentInfoAsync returns a different ledger
            decimal receiptTotalFee = PaymentData.TotalFee;
            decimal receiptTotalPaid = previousPaid + amountToApply; // Calculate from what we know we paid
            decimal receiptBalance = 0m;
            
            // Get the ledger that was paid to calculate accurate receipt values
            if (paidLedgerId.HasValue)
            {
                var paidLedger = await LedgerService.GetLedgerByIdAsync(paidLedgerId.Value);
                if (paidLedger != null)
                {
                    // Use values from the paid ledger (not from GetStudentPaymentInfoAsync which might return different ledger)
                    receiptTotalFee = paidLedger.TotalCharges;
                    // Calculate balance from the paid ledger: TotalCharges - TotalPayments
                    // TotalPayments should include the payment we just made + discount
                    receiptBalance = paidLedger.Balance;
                    // Use calculated TotalPaid (previousPaid + this payment) instead of ledger.TotalPayments
                    // to ensure accuracy, but verify it matches the ledger
                    if (Math.Abs(receiptTotalPaid - paidLedger.TotalPayments) > 0.01m)
                    {
                        // If they don't match, use ledger value (it should be correct after payment)
                        receiptTotalPaid = paidLedger.TotalPayments;
                    }
                }
            }
            
            // Calculate change for receipt display
            decimal receiptChangeDue = 0;
            if (cashReceived > amountDue)
            {
                receiptChangeDue = cashReceived - amountDue;
            }
            
            ReceiptData = new ReceiptDataModel
            {
                OrNumber = orNumber,
                PaymentDate = DateTime.Now,
                StudentId = PaymentData.StudentId,
                StudentName = PaymentData.StudentName,
                GradeLevel = PaymentData.GradeLevel,
                PaymentAmount = amountToApply, // Amount actually applied to ledger
                CashReceived = cashReceived, // Actual cash received (for reconciliation)
                ChangeDue = receiptChangeDue, // Change returned to student
                PaymentMethod = PaymentData.PaymentMethod,
                TotalFee = receiptTotalFee, // Use value from paid ledger
                PreviousPaid = previousPaid,
                TotalPaid = receiptTotalPaid, // Use value from paid ledger (previous + this payment)
                Balance = receiptBalance, // Use balance from paid ledger (should be 0 if fully paid)
                DiscountAmount = calculatedDiscountAmount, // Include discount in receipt
                ProcessedBy = processedBy
            };

            // Notify parent component
            await OnPaymentProcessed.InvokeAsync(PaymentData);

            ClosePaymentConfirmationModal();
            NewPaymentAmountString = "";
            paymentAmountRawInput = "";
            isEditingPaymentAmount = false;
            PaymentData.NewPaymentAmount = 0;
            searchErrorMessage = "";
            selectedDiscountId = null;
            selectedDiscount = null;
            calculatedDiscountAmount = 0;
            selectedDiscountBaseAmount = 0;

            // Show receipt modal
            ShowReceiptModal = true;
            StateHasChanged();

            Logger?.LogInformation("Payment processed successfully for student {StudentId} with OR {OrNumber}", PaymentData.StudentId, orNumber);
            
            // Auto-close receipt modal after a short delay (2 seconds) so user can see the receipt
            _ = AutoCloseReceiptModalAsync(2000);
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Error processing payment: {Message}", ex.Message);
            // FIXED: Close modal and show error in main view
            ClosePaymentConfirmationModal();
            searchErrorMessage = $"Error processing payment: {ex.Message}";
        }
        finally
        {
            isProcessingPayment = false;
            StateHasChanged();
        }
    }

