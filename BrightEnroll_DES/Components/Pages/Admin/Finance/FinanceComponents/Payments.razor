@using BrightEnroll_DES.Components.Pages.Admin.Finance.FinanceComponents
@using BrightEnroll_DES.Components.Pages.Admin.Finance.FinanceCS
@using BrightEnroll_DES.Services.Business.Finance
@using Microsoft.Extensions.Logging
@inject IJSRuntime JSRuntime
@inject PaymentService PaymentService
@inject ILogger<Payments> Logger

<div class="p-6">
    <!-- Student Search Section -->
    <div class="mb-6">
        <h2 class="mb-4 text-lg font-bold text-blue-600">Search Student</h2>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div class="sm:col-span-2">
                <label class="mb-2 block text-sm font-medium text-gray-700">Student ID:</label>
                <div class="relative">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 flex items-center justify-center">
                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </span>
                    <input type="text" @bind="searchStudentId" @bind:event="oninput"
                           @onkeypress="HandleSearchKeyPress"
                           placeholder="Enter Student ID and press Enter or click Search"
                           class="w-full rounded-lg border border-gray-300 py-2 pl-10 pr-3 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400" />
                </div>
            </div>
            <div class="flex items-end">
                <button @onclick="SearchStudent" 
                        disabled="@isSearching"
                        class="w-full rounded-lg bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg disabled:bg-gray-400 disabled:cursor-not-allowed">
                    @if (isSearching)
                    {
                        <span>Searching...</span>
                    }
                    else
                    {
                        <span>Search</span>
                    }
                </button>
            </div>
        </div>
        @if (!string.IsNullOrWhiteSpace(searchErrorMessage))
        {
            <div class="mt-2 rounded-lg bg-red-50 border border-red-200 px-3 py-2">
                <p class="text-sm text-red-600">@searchErrorMessage</p>
            </div>
        }
    </div>

    <!-- Student Info Section -->
    @if (hasSearched && studentFound)
    {
        <div class="mb-6">
            <h2 class="mb-4 text-lg font-bold text-blue-600">Student Info</h2>
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Student ID:</label>
                    <input type="text" value="@PaymentData.StudentId" 
                           class="w-full rounded-lg border border-gray-300 bg-gray-100 px-3 py-2 text-sm text-gray-700 outline-none"
                           readonly />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Student Name:</label>
                    <input type="text" value="@PaymentData.StudentName" 
                           class="w-full rounded-lg border border-gray-300 bg-gray-100 px-3 py-2 text-sm text-gray-700 outline-none"
                           readonly />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Grade Level:</label>
                    <input type="text" value="@PaymentData.GradeLevel" 
                           class="w-full rounded-lg border border-gray-300 bg-gray-100 px-3 py-2 text-sm text-gray-700 outline-none"
                           readonly />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Payment Status:</label>
                    <div class="mt-2">
                        @if (PaymentData.PaymentStatus == "Fully Paid")
                        {
                            <span class="inline-block rounded-md bg-green-100 px-2.5 py-1 text-[11px] font-medium text-green-700">Fully Paid</span>
                        }
                        else if (PaymentData.PaymentStatus == "Partially Paid")
                        {
                            <span class="inline-block rounded-md bg-orange-100 px-2.5 py-1 text-[11px] font-medium text-orange-700">Partially Paid</span>
                        }
                        else
                        {
                            <span class="inline-block rounded-md bg-red-100 px-2.5 py-1 text-[11px] font-medium text-red-700">Unpaid</span>
                        }
                    </div>
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Enrollment Status:</label>
                    <div class="mt-2">
                        @if (enrollmentStatus == "Fully Paid" || enrollmentStatus == "Partially Paid")
                        {
                            <span class="inline-block rounded-md bg-green-100 px-2.5 py-1 text-[11px] font-medium text-green-700">Eligible for Enrollment</span>
                        }
                        else
                        {
                            <span class="inline-block rounded-md bg-yellow-100 px-2.5 py-1 text-[11px] font-medium text-yellow-700">For Payment</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Payment Section -->
    @if (hasSearched && studentFound)
    {
        <div class="my-6 border-t border-gray-200"></div>
        <div>
            <h2 class="mb-4 text-lg font-bold text-blue-600">Payment</h2>
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Total Fee:</label>
                    <input type="text" value="@($"Php {PaymentData.TotalFee:N2}")" 
                           class="w-full rounded-lg border border-gray-300 bg-gray-100 px-3 py-2 text-sm text-gray-700 outline-none"
                           readonly />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Amount Paid:</label>
                    <input type="text" value="@($"Php {PaymentData.AmountPaid:N2}")" 
                           class="w-full rounded-lg border border-gray-300 bg-gray-100 px-3 py-2 text-sm text-gray-700 outline-none"
                           readonly />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Balance:</label>
                    <input type="text" value="@($"Php {PaymentData.Balance:N2}")" 
                           class="w-full rounded-lg border border-gray-300 bg-gray-100 px-3 py-2 text-sm text-gray-700 outline-none"
                           readonly />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">New Payment Amount:</label>
                    <input type="text" @bind="NewPaymentAmountString" @bind:after="UpdateNewPaymentAmount"
                           placeholder="Php 0.00"
                           disabled="@(PaymentData.Balance <= 0)"
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 disabled:bg-gray-100 disabled:cursor-not-allowed" />
                    @if (PaymentData.Balance <= 0)
                    {
                        <p class="mt-1 text-xs text-gray-500">Student has fully paid</p>
                    }
                    else
                    {
                        <p class="mt-1 text-xs text-gray-500">Minimum payment: Php 1,700.00</p>
                    }
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Payment Method:</label>
                    <select @bind="PaymentData.PaymentMethod" 
                            disabled="@(PaymentData.Balance <= 0)"
                            class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 disabled:bg-gray-100 disabled:cursor-not-allowed">
                        <option value="Cash">Cash</option>
                        <option value="Check">Check</option>
                        <option value="Bank Transfer">Bank Transfer</option>
                        <option value="Credit Card">Credit Card</option>
                    </select>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-6 flex justify-end gap-3">
                <button @onclick="ClearPaymentForm" class="rounded-lg bg-gray-500 px-6 py-2.5 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg">
                    Clear
                </button>
                <button @onclick="OpenPaymentConfirmationModal" 
                        disabled="@(PaymentData.Balance <= 0 || PaymentData.NewPaymentAmount <= 0 || isProcessingPayment)"
                        class="rounded-lg bg-green-600 px-6 py-2.5 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-green-700 hover:shadow-lg disabled:bg-gray-400 disabled:cursor-not-allowed">
                    @if (isProcessingPayment)
                    {
                        <span>Processing...</span>
                    }
                    else
                    {
                        <span>Pay</span>
                    }
                </button>
            </div>
        </div>
    }
</div>

<!-- Payment Confirmation Modal -->
@if (ShowPaymentConfirmationModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" @onclick="HandleBackdropClick">
        <div id="payment-confirmation-modal" class="w-full max-w-md rounded-2xl bg-white shadow-xl overflow-hidden" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="flex items-center justify-between rounded-t-2xl bg-white px-6 py-2.5 border-b border-gray-200">
                <h3 class="text-base font-semibold text-blue-600">Confirm Payment</h3>
                <button @onclick="ClosePaymentConfirmationModal" class="text-gray-400 hover:text-gray-600" style="background: transparent; border: none; cursor: pointer; padding: 0; margin: 0;">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Modal Body -->
            <div class="rounded-b-2xl bg-white px-6 py-4">
                <p class="text-sm text-gray-700 mb-3">
                    Are you sure you want to process a payment of <span class="font-semibold">Php @PaymentData.NewPaymentAmount.ToString("N2")</span> for <span class="font-semibold">@PaymentData.StudentName</span> (ID: @PaymentData.StudentId)?
                </p>
                <div class="rounded-lg bg-gray-50 p-3 mb-4">
                    <div class="flex justify-between text-sm mb-2">
                        <span class="text-gray-600">Payment Method:</span>
                        <span class="font-medium text-gray-900">@PaymentData.PaymentMethod</span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600">New Balance:</span>
                        <span class="font-medium text-gray-900">@($"Php {(PaymentData.Balance - PaymentData.NewPaymentAmount):N2}")</span>
                    </div>
                </div>
                <div class="flex justify-end border-t border-gray-200 pt-3 mt-4">
                    <button type="button" @onclick="ProcessPayment" class="rounded-lg px-3 py-1.5 text-sm font-medium text-white bg-blue-600 transition-all hover:opacity-90">
                        Confirm
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public PaymentDataModel PaymentData { get; set; } = new();
    [Parameter] public EventCallback<PaymentDataModel> OnPaymentProcessed { get; set; }

    private bool ShowPaymentConfirmationModal { get; set; } = false;
    private string NewPaymentAmountString { get; set; } = "";
    private string searchStudentId { get; set; } = "";
    private bool isSearching { get; set; } = false;
    private bool hasSearched { get; set; } = false;
    private bool studentFound { get; set; } = false;
    private string searchErrorMessage { get; set; } = "";
    private string enrollmentStatus { get; set; } = "";
    private bool isProcessingPayment { get; set; } = false;

    private async Task SearchStudent()
    {
        if (string.IsNullOrWhiteSpace(searchStudentId))
        {
            searchErrorMessage = "Please enter a Student ID";
            StateHasChanged();
            return;
        }

        isSearching = true;
        hasSearched = true;
        studentFound = false;
        searchErrorMessage = "";
        StateHasChanged();

        try
        {
            var paymentInfo = await PaymentService.GetStudentPaymentInfoAsync(searchStudentId.Trim());

            if (paymentInfo == null)
            {
                studentFound = false;
                searchErrorMessage = $"Student with ID '{searchStudentId}' not found.";
                PaymentData = new PaymentDataModel();
            }
            else
            {
                studentFound = true;
                PaymentData = new PaymentDataModel
                {
                    StudentId = paymentInfo.StudentId,
                    StudentName = paymentInfo.StudentName,
                    GradeLevel = paymentInfo.GradeLevel,
                    TotalFee = paymentInfo.TotalFee,
                    AmountPaid = paymentInfo.AmountPaid,
                    Balance = paymentInfo.Balance,
                    PaymentStatus = paymentInfo.PaymentStatus,
                    NewPaymentAmount = 0,
                    PaymentMethod = "Cash"
                };
                enrollmentStatus = paymentInfo.EnrollmentStatus;
            }
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Error searching for student: {Message}", ex.Message);
            studentFound = false;
            searchErrorMessage = $"Error searching for student: {ex.Message}";
            PaymentData = new PaymentDataModel();
        }
        finally
        {
            isSearching = false;
            StateHasChanged();
        }
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchStudent();
        }
    }

    private void UpdateNewPaymentAmount()
    {
        PaymentData.NewPaymentAmount = ParseCurrency(NewPaymentAmountString);
        
        // Validate payment amount doesn't exceed balance
        if (PaymentData.NewPaymentAmount > PaymentData.Balance)
        {
            PaymentData.NewPaymentAmount = PaymentData.Balance;
            NewPaymentAmountString = PaymentData.Balance.ToString("N2");
        }
        
        StateHasChanged();
    }

    private decimal ParseCurrency(string value)
    {
        if (string.IsNullOrWhiteSpace(value))
            return 0;

        // Remove "Php", spaces, and commas
        var cleaned = value.Replace("Php", "", StringComparison.OrdinalIgnoreCase)
                           .Replace(" ", "")
                           .Replace(",", "")
                           .Trim();
        if (decimal.TryParse(cleaned, out var result))
            return result;
        return 0;
    }

    private void ClearPaymentForm()
    {
        NewPaymentAmountString = "";
        PaymentData.NewPaymentAmount = 0;
        PaymentData.PaymentMethod = "Cash";
        StateHasChanged();
    }

    private void OpenPaymentConfirmationModal()
    {
        const decimal MINIMUM_PAYMENT = 1700m;

        if (PaymentData.NewPaymentAmount <= 0)
        {
            searchErrorMessage = "Please enter a valid payment amount";
            StateHasChanged();
            return;
        }

        if (PaymentData.NewPaymentAmount < MINIMUM_PAYMENT)
        {
            searchErrorMessage = $"Minimum payment amount is Php {MINIMUM_PAYMENT:N2}. Please enter at least Php {MINIMUM_PAYMENT:N2}.";
            StateHasChanged();
            return;
        }

        if (PaymentData.NewPaymentAmount > PaymentData.Balance)
        {
            searchErrorMessage = $"Payment amount cannot exceed balance of Php {PaymentData.Balance:N2}";
            StateHasChanged();
            return;
        }

        searchErrorMessage = "";
        ShowPaymentConfirmationModal = true;
        StateHasChanged();
    }

    private void HandleBackdropClick()
    {
        // Allow closing payment confirmation modal on backdrop click
        ClosePaymentConfirmationModal();
    }

    private void ClosePaymentConfirmationModal()
    {
        ShowPaymentConfirmationModal = false;
        StateHasChanged();
    }

    private async Task ProcessPayment()
    {
        isProcessingPayment = true;
        StateHasChanged();

        try
        {
            // Process payment through service
            var updatedInfo = await PaymentService.ProcessPaymentAsync(
                PaymentData.StudentId,
                PaymentData.NewPaymentAmount,
                PaymentData.PaymentMethod
            );

            // Update payment data with latest info
            PaymentData.AmountPaid = updatedInfo.AmountPaid;
            PaymentData.Balance = updatedInfo.Balance;
            PaymentData.PaymentStatus = updatedInfo.PaymentStatus;
            enrollmentStatus = updatedInfo.EnrollmentStatus;

            // Notify parent component
            await OnPaymentProcessed.InvokeAsync(PaymentData);

            ClosePaymentConfirmationModal();
            NewPaymentAmountString = "";
            PaymentData.NewPaymentAmount = 0;
            searchErrorMessage = "";

            Logger?.LogInformation("Payment processed successfully for student {StudentId}", PaymentData.StudentId);
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Error processing payment: {Message}", ex.Message);
            searchErrorMessage = $"Error processing payment: {ex.Message}";
        }
        finally
        {
            isProcessingPayment = false;
            StateHasChanged();
        }
    }
}

