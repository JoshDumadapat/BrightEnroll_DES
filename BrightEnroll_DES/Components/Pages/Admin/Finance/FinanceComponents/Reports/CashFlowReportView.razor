@namespace BrightEnroll_DES.Components.Pages.Admin.Finance.FinanceComponents.Reports
@using BrightEnroll_DES.Services.Business.Reports
@using CashFlowReportModel = BrightEnroll_DES.Services.Business.Reports.CashFlowReport
@using Microsoft.JSInterop
@inject AccountingReportService AccountingReportService
@inject IJSRuntime JSRuntime

<div class="p-6">
    <!-- Header and Filters -->
    <div class="mb-6 rounded-lg border border-gray-200 bg-gray-50 p-4">
        <div class="mb-4 flex items-center justify-between">
            <h2 class="text-lg font-bold text-gray-800">Cash Flow Report</h2>
            <button @onclick="ExportToPdf" 
                    disabled="@isLoading"
                    class="flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 disabled:bg-gray-400">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Export PDF
            </button>
        </div>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">From Date:</label>
                <input type="date" @bind="fromDate" @bind:format="yyyy-MM-dd"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">To Date:</label>
                <input type="date" @bind="toDate" @bind:format="yyyy-MM-dd"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div class="flex items-end gap-2">
                <button @onclick="GenerateReport" 
                        disabled="@isLoading"
                        class="flex-1 rounded-lg bg-green-600 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-green-700 hover:shadow-lg disabled:bg-gray-400 disabled:cursor-not-allowed">
                    @if (isLoading)
                    {
                        <span>Loading...</span>
                    }
                    else
                    {
                        <span>Generate</span>
                    }
                </button>
                <button @onclick="ClearFilters" 
                        class="rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    Clear
                </button>
            </div>
        </div>
    </div>

    @if (cashFlowReport != null)
    {
        <!-- Summary Cards -->
        <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-4">
            <div class="rounded-lg border border-green-200 bg-green-50 p-4 shadow">
                <p class="text-sm text-green-600">Total Cash In</p>
                <p class="text-2xl font-bold text-green-700">₱@cashFlowReport.TotalInflow.ToString("N2")</p>
            </div>
            <div class="rounded-lg border border-red-200 bg-red-50 p-4 shadow">
                <p class="text-sm text-red-600">Total Cash Out</p>
                <p class="text-2xl font-bold text-red-700">₱@cashFlowReport.TotalOutflow.ToString("N2")</p>
            </div>
            <div class="rounded-lg border border-blue-200 bg-blue-50 p-4 shadow">
                <p class="text-sm text-blue-600">Net Cash Flow</p>
                <p class="text-2xl font-bold @(cashFlowReport.NetCashFlow >= 0 ? "text-blue-700" : "text-red-700")">
                    ₱@cashFlowReport.NetCashFlow.ToString("N2")
                </p>
            </div>
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
                <p class="text-sm text-gray-600">Period</p>
                <p class="text-sm font-medium text-gray-800">
                    @cashFlowReport.PeriodFrom.ToString("MMM dd") - @cashFlowReport.PeriodTo.ToString("MMM dd, yyyy")
                </p>
            </div>
        </div>

        <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
            <!-- Cash Inflows -->
            <div class="rounded-lg border border-gray-200 bg-white shadow">
                <div class="border-b border-gray-200 bg-green-50 px-6 py-4">
                    <h3 class="text-base font-semibold text-green-800">Cash Inflows by Payment Method</h3>
                </div>
                <div class="overflow-x-auto p-6">
                    <table class="w-full border-collapse">
                        <thead>
                            <tr class="border-b border-gray-200 bg-gray-50">
                                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Payment Method</th>
                                <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var inflow in cashFlowReport.CashInflows)
                            {
                                <tr class="border-b border-gray-100 hover:bg-gray-50">
                                    <td class="px-4 py-3 text-sm text-gray-700">@inflow.Category</td>
                                    <td class="px-4 py-3 text-right text-sm font-medium text-green-600">₱@inflow.Amount.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="border-t-2 border-gray-300 bg-gray-50">
                                <td class="px-4 py-3 text-right text-sm font-bold text-gray-800">Total Inflow:</td>
                                <td class="px-4 py-3 text-right text-sm font-bold text-green-700">₱@cashFlowReport.TotalInflow.ToString("N2")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <!-- Cash Outflows -->
            <div class="rounded-lg border border-gray-200 bg-white shadow">
                <div class="border-b border-gray-200 bg-red-50 px-6 py-4">
                    <h3 class="text-base font-semibold text-red-800">Cash Outflows by Payment Method</h3>
                </div>
                <div class="overflow-x-auto p-6">
                    <table class="w-full border-collapse">
                        <thead>
                            <tr class="border-b border-gray-200 bg-gray-50">
                                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Payment Method</th>
                                <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var outflow in cashFlowReport.CashOutflows)
                            {
                                <tr class="border-b border-gray-100 hover:bg-gray-50">
                                    <td class="px-4 py-3 text-sm text-gray-700">@outflow.Category</td>
                                    <td class="px-4 py-3 text-right text-sm font-medium text-red-600">₱@outflow.Amount.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="border-t-2 border-gray-300 bg-gray-50">
                                <td class="px-4 py-3 text-right text-sm font-bold text-gray-800">Total Outflow:</td>
                                <td class="px-4 py-3 text-right text-sm font-bold text-red-700">₱@cashFlowReport.TotalOutflow.ToString("N2")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Monthly Breakdown -->
        <div class="mt-6 rounded-lg border border-gray-200 bg-white shadow">
            <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                <h3 class="text-base font-semibold text-gray-800">Monthly Cash Flow Breakdown</h3>
            </div>
            <div class="overflow-x-auto p-6">
                <table class="w-full border-collapse">
                    <thead>
                        <tr class="border-b border-gray-200 bg-gray-50">
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Month</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Cash In</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Cash Out</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Net Cash Flow</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var monthly in cashFlowReport.MonthlyBreakdown)
                        {
                            <tr class="border-b border-gray-100 hover:bg-gray-50">
                                <td class="px-4 py-3 text-sm text-gray-700">@monthly.MonthName</td>
                                <td class="px-4 py-3 text-right text-sm font-medium text-green-600">₱@monthly.CashIn.ToString("N2")</td>
                                <td class="px-4 py-3 text-right text-sm font-medium text-red-600">₱@monthly.CashOut.ToString("N2")</td>
                                <td class="px-4 py-3 text-right text-sm font-bold @(monthly.NetCashFlow >= 0 ? "text-blue-600" : "text-red-600")">
                                    ₱@monthly.NetCashFlow.ToString("N2")
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="border-t-2 border-gray-300 bg-gray-50">
                            <td class="px-4 py-3 text-right text-sm font-bold text-gray-800">Total:</td>
                            <td class="px-4 py-3 text-right text-sm font-bold text-green-700">₱@cashFlowReport.TotalInflow.ToString("N2")</td>
                            <td class="px-4 py-3 text-right text-sm font-bold text-red-700">₱@cashFlowReport.TotalOutflow.ToString("N2")</td>
                            <td class="px-4 py-3 text-right text-sm font-bold @(cashFlowReport.NetCashFlow >= 0 ? "text-blue-600" : "text-red-600")">
                                ₱@cashFlowReport.NetCashFlow.ToString("N2")
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    }
    else if (!isLoading)
    {
        <div class="rounded-lg border border-gray-200 bg-white p-12 text-center shadow">
            <p class="text-gray-500">Click "Generate" to view cash flow report.</p>
        </div>
    }
</div>

@code {
    private DateTime fromDate = DateTime.Now.AddMonths(-1);
    private DateTime toDate = DateTime.Now;
    private bool isLoading = false;
    private BrightEnroll_DES.Services.Business.Reports.CashFlowReport? cashFlowReport = null;

    private async Task GenerateReport()
    {
        if (fromDate > toDate)
        {
            await JSRuntime.InvokeVoidAsync("alert", "From date must be before or equal to To date.");
            return;
        }

        isLoading = true;
        try
        {
            cashFlowReport = await AccountingReportService.GetCashFlowReportAsync(fromDate, toDate);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error generating cash flow report: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ClearFilters()
    {
        fromDate = DateTime.Now.AddMonths(-1);
        toDate = DateTime.Now;
        cashFlowReport = null;
        StateHasChanged();
    }

    private async Task ExportToPdf()
    {
        // TODO: Implement PDF export
        await Task.CompletedTask;
    }
}

