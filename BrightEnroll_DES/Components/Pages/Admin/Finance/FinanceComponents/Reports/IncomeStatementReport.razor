@namespace BrightEnroll_DES.Components.Pages.Admin.Finance.FinanceComponents.Reports
@using BrightEnroll_DES.Services.Business.Reports
@using Microsoft.JSInterop
@inject AccountingReportService AccountingReportService
@inject IJSRuntime JSRuntime

<div class="p-6">
    <!-- Header and Filters -->
    <div class="mb-6 rounded-lg border border-gray-200 bg-gray-50 p-4">
        <div class="mb-4 flex items-center justify-between">
            <h2 class="text-lg font-bold text-gray-800">Income Statement (Profit & Loss)</h2>
            <button @onclick="ExportToPdf" 
                    disabled="@isLoading"
                    class="flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 disabled:bg-gray-400">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Export PDF
            </button>
        </div>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">From Date:</label>
                <input type="date" @bind="fromDate" @bind:format="yyyy-MM-dd"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">To Date:</label>
                <input type="date" @bind="toDate" @bind:format="yyyy-MM-dd"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div class="flex items-end gap-2">
                <button @onclick="GenerateReport" 
                        disabled="@isLoading"
                        class="flex-1 rounded-lg bg-green-600 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-green-700 hover:shadow-lg disabled:bg-gray-400 disabled:cursor-not-allowed">
                    @if (isLoading)
                    {
                        <span>Loading...</span>
                    }
                    else
                    {
                        <span>Generate</span>
                    }
                </button>
                <button @onclick="ClearFilters" 
                        class="rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    Clear
                </button>
            </div>
        </div>
    </div>

    @if (incomeStatement != null)
    {
        <!-- Summary Cards -->
        <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div class="rounded-lg border border-green-200 bg-green-50 p-4 shadow">
                <p class="text-sm text-green-600">Total Revenue</p>
                <p class="text-2xl font-bold text-green-700">₱@incomeStatement.Revenue.ToString("N2")</p>
            </div>
            <div class="rounded-lg border border-red-200 bg-red-50 p-4 shadow">
                <p class="text-sm text-red-600">Total Expenses</p>
                <p class="text-2xl font-bold text-red-700">₱@incomeStatement.TotalExpenses.ToString("N2")</p>
            </div>
            <div class="rounded-lg border border-blue-200 bg-blue-50 p-4 shadow">
                <p class="text-sm text-blue-600">Net Income</p>
                <p class="text-2xl font-bold @(incomeStatement.NetIncome >= 0 ? "text-blue-700" : "text-red-700")">
                    ₱@incomeStatement.NetIncome.ToString("N2")
                </p>
            </div>
        </div>

        <!-- Income Statement Details -->
        <div class="mb-6 rounded-lg border border-gray-200 bg-white shadow">
            <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                <h3 class="text-base font-semibold text-gray-800">
                    Income Statement for @incomeStatement.PeriodFrom.ToString("MMM dd, yyyy") - @incomeStatement.PeriodTo.ToString("MMM dd, yyyy")
                </h3>
            </div>
            <div class="p-6">
                <!-- Revenue Section -->
                <div class="mb-6">
                    <h4 class="mb-3 text-sm font-semibold text-green-700">REVENUE</h4>
                    <div class="space-y-2">
                        <div class="flex justify-between border-b border-gray-100 pb-2">
                            <span class="text-sm text-gray-700">Student Payments</span>
                            <span class="text-sm font-medium text-gray-800">₱@incomeStatement.Revenue.ToString("N2")</span>
                        </div>
                        <div class="flex justify-between border-t-2 border-green-300 pt-2">
                            <span class="text-sm font-bold text-green-700">Total Revenue</span>
                            <span class="text-sm font-bold text-green-700">₱@incomeStatement.Revenue.ToString("N2")</span>
                        </div>
                    </div>
                </div>

                <!-- Expenses Section -->
                <div class="mb-6">
                    <h4 class="mb-3 text-sm font-semibold text-red-700">EXPENSES</h4>
                    <div class="space-y-2">
                        @foreach (var category in incomeStatement.ExpensesByCategory)
                        {
                            <div class="flex justify-between border-b border-gray-100 pb-2">
                                <span class="text-sm text-gray-700">@category.Category</span>
                                <span class="text-sm font-medium text-gray-800">₱@category.Amount.ToString("N2")</span>
                            </div>
                        }
                        <div class="flex justify-between border-t-2 border-red-300 pt-2">
                            <span class="text-sm font-bold text-red-700">Total Expenses</span>
                            <span class="text-sm font-bold text-red-700">₱@incomeStatement.TotalExpenses.ToString("N2")</span>
                        </div>
                    </div>
                </div>

                <!-- Net Income -->
                <div class="border-t-2 border-gray-300 pt-4">
                    <div class="flex justify-between">
                        <span class="text-base font-bold @(incomeStatement.NetIncome >= 0 ? "text-blue-700" : "text-red-700")">
                            NET INCOME
                        </span>
                        <span class="text-base font-bold @(incomeStatement.NetIncome >= 0 ? "text-blue-700" : "text-red-700")">
                            ₱@incomeStatement.NetIncome.ToString("N2")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (!isLoading)
    {
        <div class="rounded-lg border border-gray-200 bg-white p-12 text-center shadow">
            <p class="text-gray-500">Click "Generate" to view income statement.</p>
        </div>
    }
</div>

@code {
    private DateTime fromDate = DateTime.Now.AddMonths(-1);
    private DateTime toDate = DateTime.Now;
    private bool isLoading = false;
    private IncomeStatement? incomeStatement = null;

    private async Task GenerateReport()
    {
        if (fromDate > toDate)
        {
            await JSRuntime.InvokeVoidAsync("alert", "From date must be before or equal to To date.");
            return;
        }

        isLoading = true;
        try
        {
            incomeStatement = await AccountingReportService.GetIncomeStatementAsync(fromDate, toDate);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error generating income statement: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ClearFilters()
    {
        fromDate = DateTime.Now.AddMonths(-1);
        toDate = DateTime.Now;
        incomeStatement = null;
        StateHasChanged();
    }

    private async Task ExportToPdf()
    {
        // TODO: Implement PDF export
        await Task.CompletedTask;
    }
}

