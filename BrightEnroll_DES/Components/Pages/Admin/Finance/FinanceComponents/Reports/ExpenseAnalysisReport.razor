@namespace BrightEnroll_DES.Components.Pages.Admin.Finance.FinanceComponents.Reports
@using BrightEnroll_DES.Services.Business.Reports
@using ExpenseAnalysisReportModel = BrightEnroll_DES.Services.Business.Reports.ExpenseAnalysisReport
@using Microsoft.JSInterop
@inject AccountingReportService AccountingReportService
@inject IJSRuntime JSRuntime

<div class="p-6">
    <!-- Header and Filters -->
    <div class="mb-6 rounded-lg border border-gray-200 bg-gray-50 p-4">
        <div class="mb-4 flex items-center justify-between">
            <h2 class="text-lg font-bold text-gray-800">Expense Analysis Report</h2>
            <button @onclick="ExportToPdf" 
                    disabled="@isLoading"
                    class="flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 disabled:bg-gray-400">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Export PDF
            </button>
        </div>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">From Date:</label>
                <input type="date" @bind="fromDate" @bind:format="yyyy-MM-dd"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">To Date:</label>
                <input type="date" @bind="toDate" @bind:format="yyyy-MM-dd"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div class="flex items-end gap-2">
                <button @onclick="GenerateReport" 
                        disabled="@isLoading"
                        class="flex-1 rounded-lg bg-green-600 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-green-700 hover:shadow-lg disabled:bg-gray-400 disabled:cursor-not-allowed">
                    @if (isLoading)
                    {
                        <span>Loading...</span>
                    }
                    else
                    {
                        <span>Generate</span>
                    }
                </button>
                <button @onclick="ClearFilters" 
                        class="rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    Clear
                </button>
            </div>
        </div>
    </div>

    @if (expenseAnalysis != null)
    {
        <!-- Summary Cards -->
        <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-4">
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
                <p class="text-sm text-gray-600">Total Expenses</p>
                <p class="text-2xl font-bold text-red-600">₱@expenseAnalysis.TotalExpenses.ToString("N2")</p>
            </div>
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
                <p class="text-sm text-gray-600">Total Count</p>
                <p class="text-2xl font-bold text-blue-600">@expenseAnalysis.TotalCount</p>
            </div>
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
                <p class="text-sm text-gray-600">Categories</p>
                <p class="text-2xl font-bold text-purple-600">@expenseAnalysis.ByCategory.Count</p>
            </div>
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
                <p class="text-sm text-gray-600">Approved</p>
                <p class="text-2xl font-bold text-green-600">₱@expenseAnalysis.ByStatus.Where(s => s.Status == "Approved").Sum(s => s.Amount).ToString("N2")</p>
            </div>
        </div>

        <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
            <!-- Expenses by Category -->
            <div class="rounded-lg border border-gray-200 bg-white shadow">
                <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                    <h3 class="text-base font-semibold text-gray-800">Expenses by Category</h3>
                </div>
                <div class="overflow-x-auto p-6">
                    <table class="w-full border-collapse">
                        <thead>
                            <tr class="border-b border-gray-200 bg-gray-50">
                                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Category</th>
                                <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Count</th>
                                <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in expenseAnalysis.ByCategory)
                            {
                                <tr class="border-b border-gray-100 hover:bg-gray-50">
                                    <td class="px-4 py-3 text-sm text-gray-700">@category.Category</td>
                                    <td class="px-4 py-3 text-right text-sm text-gray-700">@category.Count</td>
                                    <td class="px-4 py-3 text-right text-sm font-medium text-gray-800">₱@category.Amount.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Expenses by Status -->
            <div class="rounded-lg border border-gray-200 bg-white shadow">
                <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                    <h3 class="text-base font-semibold text-gray-800">Expenses by Status</h3>
                </div>
                <div class="overflow-x-auto p-6">
                    <table class="w-full border-collapse">
                        <thead>
                            <tr class="border-b border-gray-200 bg-gray-50">
                                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Status</th>
                                <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Count</th>
                                <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var status in expenseAnalysis.ByStatus)
                            {
                                <tr class="border-b border-gray-100 hover:bg-gray-50">
                                    <td class="px-4 py-3">
                                        <span class="rounded-full px-2 py-1 text-xs font-medium @GetStatusBadgeClass(status.Status)">
                                            @status.Status
                                        </span>
                                    </td>
                                    <td class="px-4 py-3 text-right text-sm text-gray-700">@status.Count</td>
                                    <td class="px-4 py-3 text-right text-sm font-medium text-gray-800">₱@status.Amount.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Expenses by Payment Method -->
            <div class="rounded-lg border border-gray-200 bg-white shadow">
                <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                    <h3 class="text-base font-semibold text-gray-800">Expenses by Payment Method</h3>
                </div>
                <div class="overflow-x-auto p-6">
                    <table class="w-full border-collapse">
                        <thead>
                            <tr class="border-b border-gray-200 bg-gray-50">
                                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Payment Method</th>
                                <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Count</th>
                                <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var method in expenseAnalysis.ByPaymentMethod)
                            {
                                <tr class="border-b border-gray-100 hover:bg-gray-50">
                                    <td class="px-4 py-3 text-sm text-gray-700">@method.PaymentMethod</td>
                                    <td class="px-4 py-3 text-right text-sm text-gray-700">@method.Count</td>
                                    <td class="px-4 py-3 text-right text-sm font-medium text-gray-800">₱@method.Amount.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Monthly Trends -->
            <div class="rounded-lg border border-gray-200 bg-white shadow">
                <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                    <h3 class="text-base font-semibold text-gray-800">Monthly Expense Trends</h3>
                </div>
                <div class="overflow-x-auto p-6">
                    <table class="w-full border-collapse">
                        <thead>
                            <tr class="border-b border-gray-200 bg-gray-50">
                                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Month</th>
                                <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Count</th>
                                <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trend in expenseAnalysis.MonthlyTrends)
                            {
                                <tr class="border-b border-gray-100 hover:bg-gray-50">
                                    <td class="px-4 py-3 text-sm text-gray-700">@trend.MonthName</td>
                                    <td class="px-4 py-3 text-right text-sm text-gray-700">@trend.Count</td>
                                    <td class="px-4 py-3 text-right text-sm font-medium text-gray-800">₱@trend.Amount.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (!isLoading)
    {
        <div class="rounded-lg border border-gray-200 bg-white p-12 text-center shadow">
            <p class="text-gray-500">Click "Generate" to view expense analysis.</p>
        </div>
    }
</div>

@code {
    private DateTime? fromDate = DateTime.Now.AddMonths(-1);
    private DateTime? toDate = DateTime.Now;
    private bool isLoading = false;
    private BrightEnroll_DES.Services.Business.Reports.ExpenseAnalysisReport? expenseAnalysis = null;

    private async Task GenerateReport()
    {
        if (fromDate.HasValue && toDate.HasValue && fromDate > toDate)
        {
            await JSRuntime.InvokeVoidAsync("alert", "From date must be before or equal to To date.");
            return;
        }

        isLoading = true;
        try
        {
            expenseAnalysis = await AccountingReportService.GetExpenseAnalysisAsync(fromDate, toDate);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error generating expense analysis: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ClearFilters()
    {
        fromDate = DateTime.Now.AddMonths(-1);
        toDate = DateTime.Now;
        expenseAnalysis = null;
        StateHasChanged();
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-green-100 text-green-800",
            "Pending" => "bg-yellow-100 text-yellow-800",
            "Rejected" => "bg-red-100 text-red-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }

    private async Task ExportToPdf()
    {
        // TODO: Implement PDF export
        await Task.CompletedTask;
    }
}

