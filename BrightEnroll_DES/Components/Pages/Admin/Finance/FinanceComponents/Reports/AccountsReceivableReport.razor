@namespace BrightEnroll_DES.Components.Pages.Admin.Finance.FinanceComponents.Reports
@using BrightEnroll_DES.Services.Business.Reports
@using Microsoft.JSInterop
@inject AccountingReportService AccountingReportService
@inject IJSRuntime JSRuntime

<div class="p-6">
    <!-- Header and Filters -->
    <div class="mb-6 rounded-lg border border-gray-200 bg-gray-50 p-4">
        <div class="mb-4 flex items-center justify-between">
            <h2 class="text-lg font-bold text-gray-800">Accounts Receivable Report</h2>
            <button @onclick="ExportToPdf" 
                    disabled="@isLoading"
                    class="flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 disabled:bg-gray-400">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Export PDF
            </button>
        </div>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">As Of Date:</label>
                <input type="date" @bind="asOfDate" @bind:format="yyyy-MM-dd"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div class="flex items-end">
                <button @onclick="GenerateReport" 
                        disabled="@isLoading"
                        class="w-full rounded-lg bg-green-600 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-green-700 hover:shadow-lg disabled:bg-gray-400 disabled:cursor-not-allowed">
                    @if (isLoading)
                    {
                        <span>Loading...</span>
                    }
                    else
                    {
                        <span>Generate Report</span>
                    }
                </button>
            </div>
            <div class="flex items-end">
                <button @onclick="ClearFilters" 
                        class="w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    Clear
                </button>
            </div>
        </div>
    </div>

    @if (arRecords != null && arRecords.Any())
    {
        <!-- Summary Cards -->
        <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-4">
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
                <p class="text-sm text-gray-600">Total Outstanding</p>
                <p class="text-2xl font-bold text-red-600">₱@arRecords.Sum(r => r.OutstandingBalance).ToString("N2")</p>
            </div>
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
                <p class="text-sm text-gray-600">Total Students</p>
                <p class="text-2xl font-bold text-blue-600">@arRecords.Count</p>
            </div>
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
                <p class="text-sm text-gray-600">Current (0-30 days)</p>
                <p class="text-2xl font-bold text-green-600">₱@arRecords.Where(r => r.AgingBucket == "Current").Sum(r => r.OutstandingBalance).ToString("N2")</p>
            </div>
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
                <p class="text-sm text-gray-600">Over 90 Days</p>
                <p class="text-2xl font-bold text-orange-600">₱@arRecords.Where(r => r.AgingBucket == "Over 90 Days").Sum(r => r.OutstandingBalance).ToString("N2")</p>
            </div>
        </div>

        <!-- Aging Summary -->
        <div class="mb-6 rounded-lg border border-gray-200 bg-white p-4 shadow">
            <h3 class="mb-4 text-base font-semibold text-gray-800">Aging Summary</h3>
            <div class="overflow-x-auto">
                <table class="w-full border-collapse">
                    <thead>
                        <tr class="border-b border-gray-200 bg-gray-50">
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Aging Bucket</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Count</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (agingSummary != null)
                        {
                            @foreach (var aging in agingSummary)
                            {
                                <tr class="border-b border-gray-100 hover:bg-gray-50">
                                    <td class="px-4 py-3 text-sm text-gray-700">@aging.Bucket</td>
                                    <td class="px-4 py-3 text-right text-sm text-gray-700">@aging.Count</td>
                                    <td class="px-4 py-3 text-right text-sm font-medium text-gray-800">₱@aging.Amount.ToString("N2")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Detailed Report Table -->
        <div class="rounded-lg border border-gray-200 bg-white shadow">
            <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                <h3 class="text-base font-semibold text-gray-800">Accounts Receivable Details</h3>
            </div>
            <div class="overflow-x-auto p-6">
                <table class="w-full border-collapse">
                    <thead>
                        <tr class="border-b border-gray-200 bg-gray-50">
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Student ID</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Student Name</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Grade Level</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Total Fee</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Amount Paid</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Outstanding</th>
                            <th class="px-4 py-3 text-center text-sm font-semibold text-gray-700">Last Payment</th>
                            <th class="px-4 py-3 text-center text-sm font-semibold text-gray-700">Aging</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in arRecords)
                        {
                            <tr class="border-b border-gray-100 hover:bg-gray-50">
                                <td class="px-4 py-3 text-sm text-gray-700">@record.StudentId</td>
                                <td class="px-4 py-3 text-sm font-medium text-gray-800">@record.StudentName</td>
                                <td class="px-4 py-3 text-sm text-gray-700">@record.GradeLevel</td>
                                <td class="px-4 py-3 text-right text-sm text-gray-700">₱@record.TotalFee.ToString("N2")</td>
                                <td class="px-4 py-3 text-right text-sm text-gray-700">₱@record.AmountPaid.ToString("N2")</td>
                                <td class="px-4 py-3 text-right text-sm font-bold text-red-600">₱@record.OutstandingBalance.ToString("N2")</td>
                                <td class="px-4 py-3 text-center text-sm text-gray-700">
                                    @if (record.LastPaymentDate.HasValue)
                                    {
                                        <span>@record.LastPaymentDate.Value.ToString("MMM dd, yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">Never</span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-center">
                                    <span class="rounded-full px-2 py-1 text-xs font-medium @GetAgingBadgeClass(record.AgingBucket)">
                                        @record.AgingBucket
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="border-t-2 border-gray-300 bg-gray-50">
                            <td colspan="5" class="px-4 py-3 text-right text-sm font-bold text-gray-800">Total Outstanding:</td>
                            <td class="px-4 py-3 text-right text-sm font-bold text-red-600">₱@arRecords.Sum(r => r.OutstandingBalance).ToString("N2")</td>
                            <td colspan="2"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    }
    else if (!isLoading && arRecords != null)
    {
        <div class="rounded-lg border border-gray-200 bg-white p-12 text-center shadow">
            <p class="text-gray-500">No outstanding accounts receivable found.</p>
        </div>
    }
    else if (!isLoading)
    {
        <div class="rounded-lg border border-gray-200 bg-white p-12 text-center shadow">
            <p class="text-gray-500">Click "Generate Report" to view accounts receivable.</p>
        </div>
    }
</div>

@code {
    private DateTime asOfDate = DateTime.Now;
    private bool isLoading = false;
    private List<AccountsReceivableRecord>? arRecords = null;
    private List<AgingSummary>? agingSummary = null;

    private async Task GenerateReport()
    {
        isLoading = true;
        try
        {
            arRecords = await AccountingReportService.GetAccountsReceivableAsync(asOfDate);
            
            // Calculate aging summary
            agingSummary = arRecords
                .GroupBy(r => r.AgingBucket)
                .Select(g => new AgingSummary
                {
                    Bucket = g.Key,
                    Count = g.Count(),
                    Amount = g.Sum(r => r.OutstandingBalance)
                })
                .OrderBy(a => a.Bucket == "Current" ? 0 : a.Bucket == "31-60 Days" ? 1 : a.Bucket == "61-90 Days" ? 2 : 3)
                .ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error generating AR report: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ClearFilters()
    {
        asOfDate = DateTime.Now;
        arRecords = null;
        agingSummary = null;
        StateHasChanged();
    }

    private string GetAgingBadgeClass(string agingBucket)
    {
        return agingBucket switch
        {
            "Current" => "bg-green-100 text-green-800",
            "31-60 Days" => "bg-yellow-100 text-yellow-800",
            "61-90 Days" => "bg-orange-100 text-orange-800",
            "Over 90 Days" => "bg-red-100 text-red-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }

    private async Task ExportToPdf()
    {
        // TODO: Implement PDF export
        await Task.CompletedTask;
    }

    private class AgingSummary
    {
        public string Bucket { get; set; } = string.Empty;
        public int Count { get; set; }
        public decimal Amount { get; set; }
    }
}

