@namespace BrightEnroll_DES.Components.Pages.Admin.Finance.FinanceComponents.Reports
@using BrightEnroll_DES.Services.Business.Reports
@using Microsoft.JSInterop
@inject AccountingReportService AccountingReportService
@inject IJSRuntime JSRuntime

<div class="p-6">
    <!-- Header and Filters -->
    <div class="mb-6 rounded-lg border border-gray-200 bg-gray-50 p-4">
        <div class="mb-4 flex items-center justify-between">
            <h2 class="text-lg font-bold text-gray-800">Payment History Report</h2>
            <button @onclick="ExportToPdf" 
                    disabled="@isLoading"
                    class="flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 disabled:bg-gray-400">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Export PDF
            </button>
        </div>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-4">
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">From Date:</label>
                <input type="date" @bind="fromDate" @bind:format="yyyy-MM-dd"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">To Date:</label>
                <input type="date" @bind="toDate" @bind:format="yyyy-MM-dd"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">Student ID (Optional):</label>
                <input type="text" @bind="studentIdFilter" 
                       placeholder="Filter by Student ID"
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div class="flex items-end gap-2">
                <button @onclick="GenerateReport" 
                        disabled="@isLoading"
                        class="flex-1 rounded-lg bg-green-600 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-green-700 hover:shadow-lg disabled:bg-gray-400 disabled:cursor-not-allowed">
                    @if (isLoading)
                    {
                        <span>Loading...</span>
                    }
                    else
                    {
                        <span>Generate</span>
                    }
                </button>
                <button @onclick="ClearFilters" 
                        class="rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    Clear
                </button>
            </div>
        </div>
    </div>

    @if (paymentRecords != null && paymentRecords.Any())
    {
        <!-- Summary Cards -->
        <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-4">
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
                <p class="text-sm text-gray-600">Total Payments</p>
                <p class="text-2xl font-bold text-green-600">@paymentRecords.Count</p>
            </div>
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
                <p class="text-sm text-gray-600">Total Amount</p>
                <p class="text-2xl font-bold text-green-700">₱@paymentRecords.Sum(p => p.Amount).ToString("N2")</p>
            </div>
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
                <p class="text-sm text-gray-600">By Cash</p>
                <p class="text-2xl font-bold text-blue-600">₱@paymentRecords.Where(p => p.PaymentMethod == "Cash").Sum(p => p.Amount).ToString("N2")</p>
            </div>
            <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
                <p class="text-sm text-gray-600">By Other Methods</p>
                <p class="text-2xl font-bold text-purple-600">₱@paymentRecords.Where(p => p.PaymentMethod != "Cash").Sum(p => p.Amount).ToString("N2")</p>
            </div>
        </div>

        <!-- Payment History Table -->
        <div class="rounded-lg border border-gray-200 bg-white shadow">
            <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                <h3 class="text-base font-semibold text-gray-800">Payment Transactions</h3>
            </div>
            <div class="overflow-x-auto p-6">
                <table class="w-full border-collapse">
                    <thead>
                        <tr class="border-b border-gray-200 bg-gray-50">
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Date</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Student ID</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Student Name</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Grade Level</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Amount</th>
                            <th class="px-4 py-3 text-center text-sm font-semibold text-gray-700">Payment Method</th>
                            <th class="px-4 py-3 text-center text-sm font-semibold text-gray-700">OR Number</th>
                            <th class="px-4 py-3 text-center text-sm font-semibold text-gray-700">Processed By</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in paymentRecords)
                        {
                            <tr class="border-b border-gray-100 hover:bg-gray-50">
                                <td class="px-4 py-3 text-sm text-gray-700">@record.PaymentDate.ToString("MMM dd, yyyy")</td>
                                <td class="px-4 py-3 text-sm text-gray-700">@record.StudentId</td>
                                <td class="px-4 py-3 text-sm font-medium text-gray-800">@record.StudentName</td>
                                <td class="px-4 py-3 text-sm text-gray-700">@record.GradeLevel</td>
                                <td class="px-4 py-3 text-right text-sm font-medium text-green-600">₱@record.Amount.ToString("N2")</td>
                                <td class="px-4 py-3 text-center text-sm text-gray-700">@record.PaymentMethod</td>
                                <td class="px-4 py-3 text-center text-sm text-gray-700">@record.OrNumber</td>
                                <td class="px-4 py-3 text-center text-sm text-gray-700">@record.ProcessedBy</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="border-t-2 border-gray-300 bg-gray-50">
                            <td colspan="4" class="px-4 py-3 text-right text-sm font-bold text-gray-800">Total:</td>
                            <td class="px-4 py-3 text-right text-sm font-bold text-green-700">₱@paymentRecords.Sum(p => p.Amount).ToString("N2")</td>
                            <td colspan="3"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    }
    else if (!isLoading && paymentRecords != null)
    {
        <div class="rounded-lg border border-gray-200 bg-white p-12 text-center shadow">
            <p class="text-gray-500">No payment records found for the selected criteria.</p>
        </div>
    }
    else if (!isLoading)
    {
        <div class="rounded-lg border border-gray-200 bg-white p-12 text-center shadow">
            <p class="text-gray-500">Click "Generate" to view payment history.</p>
        </div>
    }
</div>

@code {
    private DateTime? fromDate = DateTime.Now.AddMonths(-1);
    private DateTime? toDate = DateTime.Now;
    private string? studentIdFilter = null;
    private bool isLoading = false;
    private List<PaymentHistoryRecord>? paymentRecords = null;

    private async Task GenerateReport()
    {
        if (fromDate.HasValue && toDate.HasValue && fromDate > toDate)
        {
            await JSRuntime.InvokeVoidAsync("alert", "From date must be before or equal to To date.");
            return;
        }

        isLoading = true;
        try
        {
            paymentRecords = await AccountingReportService.GetPaymentHistoryAsync(fromDate, toDate, studentIdFilter);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error generating payment history: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ClearFilters()
    {
        fromDate = DateTime.Now.AddMonths(-1);
        toDate = DateTime.Now;
        studentIdFilter = null;
        paymentRecords = null;
        StateHasChanged();
    }

    private async Task ExportToPdf()
    {
        // TODO: Implement PDF export
        await Task.CompletedTask;
    }
}

