@page "/my-classes/class-details/{SectionId:int}"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Services
@using BrightEnroll_DES.Services.Business.Academic
@using BrightEnroll_DES.Services.Authentication
@using BrightEnroll_DES.Services.RoleBase
@using BrightEnroll_DES.Data
@using Microsoft.AspNetCore.Components.Web
@inject ILoadingService LoadingService
@inject IAuthService AuthService
@inject IAuthorizationService AuthorizationService
@inject TeacherService TeacherService
@inject NavigationManager NavigationManager

<PageTitle>Class Details - @(SectionDetails?.SectionName ?? "Loading...")</PageTitle>

<RoleAuthorizeView RequiredPermission="@Permissions.ViewDashboard">
    @if (IsTeacher)
    {
        <div class="text-gray-800">
            <!-- Back Button -->
            <div class="mb-4">
                <button @onclick="NavigateBack" 
                        class="flex items-center gap-2 rounded-lg bg-gray-600 px-4 py-2 text-sm font-medium text-white shadow-md transition-all duration-300 hover:bg-gray-700 hover:shadow-lg">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Back to My Classes
                </button>
            </div>

            @if (IsLoading)
            {
                <div class="flex items-center justify-center py-12">
                    <div class="text-center">
                        <div class="inline-block h-8 w-8 animate-spin rounded-full border-4 border-solid border-blue-600 border-r-transparent"></div>
                        <p class="mt-2 text-sm text-gray-600">Loading class details...</p>
                    </div>
                </div>
            }
            else if (SectionDetails != null)
            {
                <!-- Class Header -->
                <div class="mb-6 overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm">
                    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-5">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <h1 class="text-2xl font-bold text-gray-800 mb-2">@SectionDetails.SectionName</h1>
                                <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600">
                                    <div class="flex items-center gap-2">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                        </svg>
                                        <span class="font-medium">@SectionDetails.GradeLevel</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                        <span>@SectionDetails.SchoolYear</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                                        </svg>
                                        <span><span class="font-semibold">@SectionDetails.StudentCount</span> of @SectionDetails.Capacity students</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="px-6 py-4 border-t border-gray-200">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <!-- Adviser -->
                            @if (!string.IsNullOrEmpty(SectionDetails.AdviserName))
                            {
                                <div>
                                    <label class="text-xs font-medium text-gray-500 uppercase tracking-wide">Adviser</label>
                                    <p class="text-sm font-medium text-gray-800 mt-1">@SectionDetails.AdviserName</p>
                                </div>
                            }

                            <!-- Co-teachers -->
                            @if (SectionDetails.CoTeachers.Any())
                            {
                                <div>
                                    <label class="text-xs font-medium text-gray-500 uppercase tracking-wide">Co-teachers</label>
                                    <p class="text-sm font-medium text-gray-800 mt-1">@string.Join(", ", SectionDetails.CoTeachers)</p>
                                </div>
                            }

                            <!-- Subjects -->
                            @if (SectionDetails.Subjects.Any())
                            {
                                <div>
                                    <label class="text-xs font-medium text-gray-500 uppercase tracking-wide">Subjects</label>
                                    <p class="text-sm font-medium text-gray-800 mt-1">@string.Join(", ", SectionDetails.Subjects)</p>
                                </div>
                            }

                            <!-- Classroom -->
                            <div>
                                <label class="text-xs font-medium text-gray-500 uppercase tracking-wide">Classroom</label>
                                <p class="text-sm font-medium text-gray-800 mt-1">
                                    @SectionDetails.ClassroomName
                                    @if (!string.IsNullOrEmpty(SectionDetails.BuildingName))
                                    {
                                        <span class="text-gray-500">(@SectionDetails.BuildingName)</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Student List -->
                <div class="overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm">
                    <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <h2 class="text-lg font-bold text-gray-800">Enrolled Students</h2>
                                <p class="text-sm text-gray-600 mt-1">Total: <span class="font-semibold">@FilteredEnrolledStudents.Count</span> students</p>
                            </div>
                        </div>
                        <!-- Search Bar -->
                        <div class="mt-4">
                            <div class="flex items-center gap-2">
                                <div class="relative flex-1 flex items-center">
                                    <span class="absolute left-4 flex items-center justify-center">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                        </svg>
                                    </span>
                                    <input type="text" 
                                           placeholder="Search students by name or ID..." 
                                           @bind="StudentSearchText" 
                                           @bind:after="OnStudentSearchChanged"
                                           @onkeypress="OnSearchKeyPress"
                                           class="w-full rounded-lg border border-gray-300 py-2 pl-11 pr-4 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400" />
                                </div>
                                <button @onclick="OnStudentSearchChanged" 
                                        class="flex items-center justify-center gap-2 rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg whitespace-nowrap">
                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                    </svg>
                                    <span>Search</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="overflow-x-auto">
                        @if (EnrolledStudents.Any())
                        {
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">#</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Student ID</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Student Name</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Status</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Action</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200 bg-white">
                                    @for (int i = 0; i < FilteredEnrolledStudents.Count; i++)
                                    {
                                        var student = FilteredEnrolledStudents[i];
                                        <tr class="@(i % 2 == 0 ? "bg-white" : "bg-gray-50") hover:bg-blue-50 transition-colors">
                                            <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-900">@(i + 1)</td>
                                            <td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-gray-900">@student.StudentSystemId</td>
                                            <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-900">@student.StudentName</td>
                                            <td class="whitespace-nowrap px-6 py-4">
                                                <span class="inline-flex rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                                                    @student.Status
                                                </span>
                                            </td>
                                            <td class="whitespace-nowrap px-6 py-4 text-sm">
                                                <button @onclick="() => ViewStudentRecord(student.StudentId)" 
                                                        class="flex items-center gap-1.5 rounded-lg bg-blue-50 px-3 py-1.5 text-xs font-medium text-blue-400 transition-colors hover:bg-blue-100">
                                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                                    </svg>
                                                    <span>View</span>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else if (EnrolledStudents.Any() && !FilteredEnrolledStudents.Any())
                        {
                            <div class="px-6 py-12 text-center">
                                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                                <p class="mt-2 text-sm text-gray-500">No students found matching your search.</p>
                            </div>
                        }
                        else
                        {
                            <div class="px-6 py-12 text-center">
                                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                                </svg>
                                <p class="mt-2 text-sm text-gray-500">No students enrolled in this section.</p>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="rounded-xl border border-gray-200 bg-white p-12 text-center shadow-sm">
                    <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <h3 class="mt-4 text-lg font-semibold text-gray-900">Class Not Found</h3>
                    <p class="mt-2 text-sm text-gray-500">The requested class section could not be found.</p>
                    <button @onclick="NavigateBack" 
                            class="mt-4 rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700">
                        Back to My Classes
                    </button>
                </div>
            }
        </div>

        <!-- Student Record View Modal -->
        @if (ShowStudentRecordModal && !string.IsNullOrEmpty(SelectedStudentId) && SectionDetails != null)
        {
            <StudentRecordViewModal @key="@($"student-modal-{SelectedStudentId}-{SectionId}")"
                                    StudentId="@SelectedStudentId" 
                                    SectionId="@SectionId" 
                                    SchoolYear="@(SectionDetails.SchoolYear ?? CurrentSchoolYear)"
                                    OnClose="CloseStudentRecordModal" />
        }
    }
    else
    {
        <div class="text-center py-12">
            <p class="text-gray-600">This page is only accessible to teachers.</p>
        </div>
    }
</RoleAuthorizeView>

@code {
    [Parameter] public int SectionId { get; set; }

    private bool IsTeacher { get; set; }
    private bool IsLoading { get; set; } = true;
    private SectionDetailsItem? SectionDetails { get; set; }
    private List<EnrolledStudentItem> EnrolledStudents { get; set; } = new();
    private string CurrentSchoolYear { get; set; } = "";

    // Student Record Modal
    private bool ShowStudentRecordModal { get; set; } = false;
    private string SelectedStudentId { get; set; } = "";

    // Student Search
    private string StudentSearchText { get; set; } = "";

    private List<EnrolledStudentItem> FilteredEnrolledStudents
    {
        get
        {
            if (string.IsNullOrWhiteSpace(StudentSearchText))
                return EnrolledStudents;

            var searchLower = StudentSearchText.ToLowerInvariant();
            return EnrolledStudents
                .Where(s => s.StudentName.ToLowerInvariant().Contains(searchLower) ||
                           s.StudentSystemId.ToLowerInvariant().Contains(searchLower) ||
                           s.StudentId.ToLowerInvariant().Contains(searchLower))
                .ToList();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        LoadingService.HideLoading();
        
        if (AuthService.IsAuthenticated && AuthService.CurrentUser != null)
        {
            IsTeacher = AuthorizationService.HasRole("Teacher");
            if (IsTeacher)
            {
                await LoadData();
            }
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        if (SectionId > 0 && IsTeacher)
        {
            await LoadData();
        }
    }

    private async Task LoadData()
    {
        IsLoading = true;
        try
        {
            // Get current school year
            var currentYear = DateTime.Now.Year;
            var nextYear = currentYear + 1;
            CurrentSchoolYear = $"{currentYear}-{nextYear}";

            // Load section details
            SectionDetails = await TeacherService.GetSectionDetailsAsync(SectionId, CurrentSchoolYear);
            
            if (SectionDetails != null)
            {
                // Load enrolled students
                EnrolledStudents = await TeacherService.GetEnrolledStudentsAsync(SectionId, SectionDetails.SchoolYear);
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading class details: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void NavigateBack()
    {
        NavigationManager.NavigateTo("/my-classes");
    }

    private void ViewStudentRecord(string studentId)
    {
        SelectedStudentId = studentId;
        ShowStudentRecordModal = true;
    }

    private void CloseStudentRecordModal()
    {
        ShowStudentRecordModal = false;
        SelectedStudentId = "";
    }

    private void OnStudentSearchChanged()
    {
        // Trigger re-render when search text changes
        StateHasChanged();
    }

    private void OnSearchKeyPress(KeyboardEventArgs e)
    {
        // Trigger search on Enter key press
        if (e.Key == "Enter")
        {
            OnStudentSearchChanged();
        }
    }
}

