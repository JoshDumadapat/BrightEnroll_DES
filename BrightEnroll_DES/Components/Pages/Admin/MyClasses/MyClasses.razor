@page "/my-classes"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Services
@using BrightEnroll_DES.Services.Business.Academic
@using BrightEnroll_DES.Services.Authentication
@using BrightEnroll_DES.Services.RoleBase
@using BrightEnroll_DES.Data
@using BrightEnroll_DES.Data.Models
@inject ILoadingService LoadingService
@inject IAuthService AuthService
@inject IAuthorizationService AuthorizationService
@inject TeacherService TeacherService
@inject SchoolYearService SchoolYearService
@inject AppDbContext Context
@inject NavigationManager NavigationManager

<PageTitle>My Classes</PageTitle>

<RoleAuthorizeView RequiredPermission="@Permissions.ViewDashboard">
    @if (IsTeacher)
    {
        <div class="text-gray-800">
            <!-- Header -->
            <div class="mb-6 flex items-center justify-between">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">My Classes</h1>
                    <p class="mt-1 text-sm text-gray-500">Manage and view your assigned classes</p>
                </div>
                @if (!string.IsNullOrEmpty(SelectedSchoolYear))
                {
                    <div class="flex items-center gap-2 rounded-lg border @(IsSelectedSchoolYearOpen ? "border-blue-200 bg-blue-50" : "border-amber-200 bg-amber-50") px-4 py-2">
                        <svg class="h-5 w-5 @(IsSelectedSchoolYearOpen ? "text-blue-600" : "text-amber-600")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span class="text-sm font-semibold @(IsSelectedSchoolYearOpen ? "text-blue-800" : "text-amber-800")">
                            School Year: <span class="font-bold">@SelectedSchoolYear</span>
                            @if (!IsSelectedSchoolYearOpen)
                            {
                                <span class="ml-2 rounded-full bg-amber-200 px-2 py-0.5 text-xs font-medium text-amber-800">Closed</span>
                            }
                        </span>
                    </div>
                }
            </div>

            <!-- Warning for Closed School Year -->
            @if (!IsSelectedSchoolYearOpen && !string.IsNullOrEmpty(SelectedSchoolYear))
            {
                <div class="mb-4 rounded-lg border border-amber-300 bg-amber-50 p-3">
                    <div class="flex items-center gap-2">
                        <svg class="h-5 w-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                        <p class="text-sm font-medium text-amber-800">
                            <strong>Read-Only Mode:</strong> The school year <strong>@SelectedSchoolYear</strong> is closed. You can view data but cannot make changes to grades or attendance. Contact an administrator to reopen it if needed.
                        </p>
                    </div>
                </div>
            }

            <!-- Filters -->
            <div class="mb-6 overflow-hidden rounded-xl bg-white p-4 shadow">
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700">School Year:</label>
                        <select @bind="SelectedSchoolYear" @bind:after="OnFilterChanged" 
                                class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                            @foreach (var year in AvailableSchoolYears)
                            {
                                <option value="@year">@year</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700">Grade Level:</label>
                        <select @bind="SelectedGradeLevel" @bind:after="OnFilterChanged" 
                                class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                            <option value="">All Grades</option>
                            @foreach (var grade in AvailableGradeLevels)
                            {
                                <option value="@grade">@grade</option>
                            }
                        </select>
                    </div>
                    <div class="flex items-end">
                        <button @onclick="ClearFilters" 
                                class="w-full rounded-lg bg-gray-500 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-gray-600 sm:w-auto">
                            Clear Filters
                        </button>
                    </div>
                </div>
            </div>

            <!-- Classes List - Card Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                @if (AssignedSections != null && AssignedSections.Any())
                {
                    @foreach (var classSection in FilteredSections)
                    {
                        var gradeColors = GetGradeColors(classSection.GradeLevel);
                        <div @onclick="() => NavigateToClassDetails(classSection.SectionId)" 
                             class="group cursor-pointer overflow-hidden rounded-2xl border border-gray-200 bg-white shadow transition-all duration-300 hover:border-blue-300 hover:shadow-lg hover:scale-[1.02]">
                            <!-- Card Header -->
                            <div class="rounded-t-2xl border-b border-gray-100 px-5 py-4 transition-colors group-hover:border-blue-200" style="background: linear-gradient(to right, @gradeColors.HeaderFrom, @gradeColors.HeaderTo);">
                                <div class="flex items-start justify-between gap-3">
                                    <div class="flex items-center gap-3 flex-1 min-w-0">
                                        <div class="flex h-10 w-10 items-center justify-center rounded-lg shadow-md transition-transform group-hover:scale-110 flex-shrink-0" style="background: linear-gradient(to bottom right, @gradeColors.IconFrom, @gradeColors.IconTo);">
                                            @GetGradeIcon(classSection.GradeLevel)
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <h2 class="text-lg font-bold text-gray-900 group-hover:text-blue-600 transition-colors truncate">@classSection.SectionName</h2>
                                            <p class="text-sm font-medium text-gray-700 mt-0.5">@classSection.GradeLevel</p>
                                        </div>
                                    </div>
                                    @if (classSection.IsAdviser)
                                    {
                                        <span class="rounded-full bg-blue-600 px-2.5 py-1 text-xs font-medium text-white flex-shrink-0">Adviser</span>
                                    }
                                </div>
                            </div>

                            <!-- Card Body -->
                            <div class="px-5 py-4">
                                <div class="space-y-3">
                                    <!-- School Year -->
                                    <div class="flex items-center gap-2 text-sm">
                                        <svg class="h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                        <span class="text-gray-600"><span class="font-semibold text-gray-800">@SelectedSchoolYear</span></span>
                                        @if (!IsSelectedSchoolYearOpen)
                                        {
                                            <span class="ml-1 rounded-full bg-amber-100 px-2 py-0.5 text-xs font-semibold text-amber-800">Closed</span>
                                        }
                                    </div>

                                    <!-- Students Count -->
                                    <div class="flex items-center gap-2 text-sm">
                                        <svg class="h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                                        </svg>
                                        <span class="text-gray-600"><span class="font-bold text-gray-900">@classSection.StudentCount</span> of <span class="font-medium text-gray-700">@classSection.Capacity</span> students</span>
                                    </div>

                                    <!-- Subjects -->
                                    @if (classSection.Subjects.Any())
                                    {
                                        <div class="pt-2 border-t border-gray-100">
                                            <p class="text-xs font-bold text-gray-600 mb-1.5 uppercase tracking-wide">Subjects</p>
                                            <p class="text-sm font-medium text-gray-800 line-clamp-2">@string.Join(", ", classSection.Subjects)</p>
                                        </div>
                                    }

                                    <!-- Classroom -->
                                    @if (!string.IsNullOrEmpty(classSection.ClassroomName))
                                    {
                                        <div class="flex items-center gap-2 text-sm">
                                            <svg class="h-4 w-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                            </svg>
                                            <span class="text-gray-600"><span class="font-semibold text-gray-800">@classSection.ClassroomName</span>@if (!string.IsNullOrEmpty(classSection.BuildingName)){<span class="text-gray-500"> (@classSection.BuildingName)</span>}</span>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Card Footer -->
                            <div class="rounded-b-2xl border-t border-gray-100 bg-gray-50/50 px-5 py-3 transition-colors group-hover:bg-blue-50/50">
                                <div class="flex items-center justify-between text-sm font-semibold text-blue-600">
                                    <span>View Details</span>
                                    <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-span-full rounded-2xl border-2 border-gray-200 bg-gradient-to-br from-white to-gray-50 p-16 text-center shadow-lg">
                        <div class="mx-auto w-20 h-20 rounded-full bg-gray-100 flex items-center justify-center mb-6">
                            <svg class="h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-900">No Classes Assigned</h3>
                        <p class="mt-2 text-base font-medium text-gray-600">You don't have any assigned classes at this time.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Class Roster Modal -->
        @if (ShowClassRosterModal && SelectedSectionId > 0)
        {
            <ClassRosterModal SectionId="SelectedSectionId" 
                            SectionName="SelectedSectionName"
                            SchoolYear="SelectedSchoolYear"
                            OnClose="CloseClassRosterModal" />
        }

        <!-- Schedule Modal -->
        @if (ShowScheduleModal && SelectedSectionId > 0)
        {
            <ScheduleModal SectionId="SelectedSectionId" 
                         SectionName="SelectedSectionName"
                         OnClose="CloseScheduleModal" />
        }
    }
    else
    {
        <div class="text-center py-12">
            <p class="text-gray-600">This page is only accessible to teachers.</p>
        </div>
    }
</RoleAuthorizeView>

@code {
    private bool IsTeacher { get; set; }
    private int TeacherId { get; set; }
    private List<AssignedSectionItem>? AssignedSections { get; set; }
    private string SelectedSchoolYear { get; set; } = "";
    private string SelectedGradeLevel { get; set; } = "";
    private List<string> AvailableSchoolYears { get; set; } = new();
    private List<string> AvailableGradeLevels { get; set; } = new();
    private bool IsSelectedSchoolYearOpen { get; set; } = true;
    
    // Modal states
    private bool ShowClassRosterModal { get; set; } = false;
    private bool ShowScheduleModal { get; set; } = false;
    private int SelectedSectionId { get; set; }
    private string SelectedSectionName { get; set; } = "";

    private List<AssignedSectionItem> FilteredSections
    {
        get
        {
            if (AssignedSections == null || !AssignedSections.Any())
                return new List<AssignedSectionItem>();

            var filtered = AssignedSections.AsEnumerable();

            if (!string.IsNullOrEmpty(SelectedGradeLevel))
            {
                filtered = filtered.Where(s => s.GradeLevel == SelectedGradeLevel);
            }

            return filtered.ToList();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        LoadingService.HideLoading();
        
        if (AuthService.IsAuthenticated && AuthService.CurrentUser != null)
        {
            IsTeacher = AuthorizationService.HasRole("Teacher");
            if (IsTeacher)
            {
                TeacherId = AuthService.CurrentUser.user_ID;
                await LoadData();
            }
        }
    }

    private async Task LoadData()
    {
        try
        {
            // Get active school year from database
            var activeSchoolYear = await SchoolYearService.GetActiveSchoolYearNameAsync();
            if (!string.IsNullOrEmpty(activeSchoolYear))
            {
                SelectedSchoolYear = activeSchoolYear;
            }
            else
            {
                // Fallback to calculated school year
                var currentYear = DateTime.Now.Year;
                var nextYear = currentYear + 1;
                SelectedSchoolYear = $"{currentYear}-{nextYear}";
            }
            
            // Get all available school years from database
            AvailableSchoolYears = await SchoolYearService.GetAvailableSchoolYearsAsync();
            
            // If no school years in database, generate current and past 2 years as fallback
            if (!AvailableSchoolYears.Any())
            {
                var currentYear = DateTime.Now.Year;
                for (int i = 0; i < 3; i++)
                {
                    var year = currentYear - i;
                    AvailableSchoolYears.Add($"{year}-{year + 1}");
                }
            }

            // Check if selected school year is open
            if (!string.IsNullOrEmpty(SelectedSchoolYear))
            {
                IsSelectedSchoolYearOpen = await SchoolYearService.IsSchoolYearOpenAsync(SelectedSchoolYear);
            }
            else
            {
                IsSelectedSchoolYearOpen = true;
            }

            // Load assigned sections
            await LoadAssignedSections();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading data: {ex.Message}");
        }
    }

    private async Task LoadAssignedSections()
    {
        try
        {
            AssignedSections = await TeacherService.GetAssignedSectionsAsync(TeacherId, SelectedSchoolYear, SelectedGradeLevel);
            
            // Extract unique grade levels
            AvailableGradeLevels = AssignedSections?
                .Select(s => s.GradeLevel)
                .Where(g => !string.IsNullOrEmpty(g))
                .Distinct()
                .OrderBy(g => g)
                .ToList() ?? new List<string>();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading assigned sections: {ex.Message}");
        }
    }

    private async Task OnFilterChanged()
    {
        // Check if selected school year is open
        if (!string.IsNullOrEmpty(SelectedSchoolYear))
        {
            IsSelectedSchoolYearOpen = await SchoolYearService.IsSchoolYearOpenAsync(SelectedSchoolYear);
        }
        else
        {
            IsSelectedSchoolYearOpen = true;
        }
        
        await LoadAssignedSections();
    }

    private async Task ClearFilters()
    {
        SelectedGradeLevel = "";
        await LoadAssignedSections();
    }

    private void NavigateToClassDetails(int sectionId)
    {
        NavigationManager.NavigateTo($"/my-classes/class-details/{sectionId}");
    }

    private void ViewClassRoster(int sectionId)
    {
        SelectedSectionId = sectionId;
        SelectedSectionName = AssignedSections?.FirstOrDefault(s => s.SectionId == sectionId)?.SectionName ?? "";
        ShowClassRosterModal = true;
    }

    private void EnterGrades(int sectionId)
    {
        NavigationManager.NavigateTo($"/gradebook?sectionId={sectionId}");
    }

    private void ViewSchedule(int sectionId)
    {
        SelectedSectionId = sectionId;
        SelectedSectionName = AssignedSections?.FirstOrDefault(s => s.SectionId == sectionId)?.SectionName ?? "";
        ShowScheduleModal = true;
    }

    private void CloseClassRosterModal()
    {
        ShowClassRosterModal = false;
        SelectedSectionId = 0;
    }

    private void CloseScheduleModal()
    {
        ShowScheduleModal = false;
        SelectedSectionId = 0;
    }

    private (string HeaderFrom, string HeaderTo, string IconFrom, string IconTo) GetGradeColors(string gradeLevel)
    {
        var grade = gradeLevel?.ToLower() ?? "";
        
        return grade switch
        {
            var g when g.Contains("kinder") || g.Contains("pre-k") || g.Contains("prek") => 
                ("#fef3c7", "#fde68a", "#f59e0b", "#d97706"), // Amber/Yellow
            var g when g.Contains("grade 1") || g == "1" => 
                ("#dbeafe", "#bfdbfe", "#3b82f6", "#2563eb"), // Blue
            var g when g.Contains("grade 2") || g == "2" => 
                ("#d1fae5", "#a7f3d0", "#10b981", "#059669"), // Green
            var g when g.Contains("grade 3") || g == "3" => 
                ("#e9d5ff", "#ddd6fe", "#8b5cf6", "#7c3aed"), // Purple
            var g when g.Contains("grade 4") || g == "4" => 
                ("#fee2e2", "#fecaca", "#ef4444", "#dc2626"), // Red
            var g when g.Contains("grade 5") || g == "5" => 
                ("#e0e7ff", "#c7d2fe", "#6366f1", "#4f46e5"), // Indigo
            var g when g.Contains("grade 6") || g == "6" => 
                ("#ccfbf1", "#99f6e4", "#14b8a6", "#0d9488"), // Teal
            var g when g.Contains("grade 7") || g == "7" => 
                ("#fce7f3", "#fbcfe8", "#ec4899", "#db2777"), // Pink
            var g when g.Contains("grade 8") || g == "8" => 
                ("#fed7aa", "#fdba74", "#f97316", "#ea580c"), // Orange
            var g when g.Contains("grade 9") || g == "9" => 
                ("#f3e8ff", "#e9d5ff", "#a855f7", "#9333ea"), // Violet
            var g when g.Contains("grade 10") || g == "10" => 
                ("#dbeafe", "#bfdbfe", "#0ea5e9", "#0284c7"), // Sky Blue
            var g when g.Contains("grade 11") || g == "11" => 
                ("#fef3c7", "#fde68a", "#eab308", "#ca8a04"), // Yellow
            var g when g.Contains("grade 12") || g == "12" => 
                ("#e0e7ff", "#c7d2fe", "#6366f1", "#4f46e5"), // Indigo
            _ => ("#f3f4f6", "#e5e7eb", "#6b7280", "#4b5563") // Default Gray
        };
    }

