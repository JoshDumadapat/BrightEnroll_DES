                System.Diagnostics.Debug.WriteLine($"Dashboard: Error loading TotalEmployees: {ex.Message}");
                System.Diagnostics.Debug.WriteLine($"Dashboard: Stack trace: {ex.StackTrace}");
                if (ex.InnerException != null)
