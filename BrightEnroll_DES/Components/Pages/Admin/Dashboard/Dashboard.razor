    // Load current school year from SchoolYear table
    // Sets CurrentSchoolYear for display only
    private async Task LoadCurrentSchoolYear()
    {
        try
        {
            // If a school year is selected, use it and load the entity
            if (!string.IsNullOrEmpty(SelectedSchoolYear))
            {
                CurrentSchoolYear = SelectedSchoolYear;
                // Load the school year entity to get StartDate/EndDate
                var allSchoolYears = await SchoolYearService.GetAllSchoolYearsAsync();
                CurrentSchoolYearEntity = allSchoolYears.FirstOrDefault(sy => sy.SchoolYearName == SelectedSchoolYear);
                StateHasChanged(); // Trigger UI update
                return;
            }

            // Otherwise, get the active school year from SchoolYear table for display purposes only
            // DO NOT auto-set SelectedSchoolYear - let user control the filter
            CurrentSchoolYearEntity = await SchoolYearService.GetActiveSchoolYearAsync();
            
            if (CurrentSchoolYearEntity != null)
            {
                CurrentSchoolYear = CurrentSchoolYearEntity.SchoolYearName;
                // Don't auto-set SelectedSchoolYear - user controls the filter
            }
            else
            {
                // Fallback: get the most recent school year from AvailableSchoolYears
                if (AvailableSchoolYears != null && AvailableSchoolYears.Any())
                {
                    var mostRecentSchoolYear = AvailableSchoolYears.OrderByDescending(sy => sy).FirstOrDefault() ?? string.Empty;
                    CurrentSchoolYear = mostRecentSchoolYear;
                    
                    // Load the entity
                    var allSchoolYears = await SchoolYearService.GetAllSchoolYearsAsync();
                    CurrentSchoolYearEntity = allSchoolYears.FirstOrDefault(sy => sy.SchoolYearName == mostRecentSchoolYear);
                }
                else
                {
                    CurrentSchoolYear = string.Empty;
                    CurrentSchoolYearEntity = null;
                }
            }

            System.Diagnostics.Debug.WriteLine($"Dashboard: Current School Year = {CurrentSchoolYear}, Selected School Year = {SelectedSchoolYear ?? "null"}");

            // Trigger UI update to show school year
            StateHasChanged();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Dashboard: Error loading current school year: {ex.Message}");
            CurrentSchoolYear = string.Empty;
            CurrentSchoolYearEntity = null;
            StateHasChanged();
        }
    }

