    {
        if (IsClearingFilters) return; // Prevent multiple simultaneous calls

        IsClearingFilters = true;
        StateHasChanged();

        try
        {
            FromDate = null;
            ToDate = null;
            QuickSelect = null;
            SelectedMonth = null;
            SelectedYear = null;
            
            // When clearing filters, default to current school year instead of null
            // Load current school year first to ensure it's available
            await LoadCurrentSchoolYear();
            SelectedSchoolYear = !string.IsNullOrEmpty(CurrentSchoolYear) ? CurrentSchoolYear : null;

            // Reload all data without filters - updates immediately without loading screen
            await LoadDashboardStatistics();

            // Ensure DOM is ready before loading charts
            await Task.Delay(200);
            StateHasChanged();
            await Task.Delay(200);
            await LoadChartData();
        }
        finally
        {
            IsClearingFilters = false;
            StateHasChanged();
        }
    }


