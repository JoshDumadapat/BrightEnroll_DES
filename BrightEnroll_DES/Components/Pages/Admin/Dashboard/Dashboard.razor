@page "/dashboard"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Services
@using BrightEnroll_DES.Services.Business.HR
@using BrightEnroll_DES.Services.Business.Finance
@using BrightEnroll_DES.Services.Business.Reports
@using BrightEnroll_DES.Services.Business.Academic
@using BrightEnroll_DES.Data
@using BrightEnroll_DES.Data.Models
@using Microsoft.EntityFrameworkCore
@using Microsoft.JSInterop
@implements IAsyncDisposable
@inject ILoadingService LoadingService
@inject AppDbContext Context
@inject EmployeeService EmployeeService
@inject StudentService StudentService
@inject FeeService FeeService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject FinancialReportService FinancialReportService
@inject EnrollmentReportService EnrollmentReportService
@inject SchoolYearService SchoolYearService
@inject BrightEnroll_DES.Services.Authentication.IAuthService AuthService

<PageTitle>Dashboard</PageTitle>

<div class="text-gray-800">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Dashboard</h1>
</div>

<!-- Date Filters -->
<div class="mb-4 rounded-xl border border-gray-100 bg-white p-3 shadow-sm md:mb-6 md:p-4" style="overflow: visible;">
    <!-- Header -->
    <div class="mb-3">
        <h2 class="text-sm font-bold text-gray-800 md:text-base">Dashboard Filters</h2>
    </div>

    <!-- Filters and Buttons Row -->
    <div class="mb-3 flex flex-wrap items-end justify-start gap-2 sm:gap-3" style="overflow: visible;">
        <!-- From Date -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600">From Date:</label>
            <div class="relative w-full">
                <input type="date" value="@(FromDate?.ToString("yyyy-MM-dd") ?? "")" @onchange="OnFromDateChanged"
                       title="Select the start date for filtering dashboard statistics"
                       class="w-full rounded border px-2 py-1.5 text-xs text-gray-600 outline-none focus:ring-2 focus:ring-blue-400 sm:w-auto md:px-3 md:py-2 md:text-sm" />
            </div>
        </div>

        <!-- To Date -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600">To Date:</label>
            <div class="relative w-full">
                <input type="date" value="@(ToDate?.ToString("yyyy-MM-dd") ?? "")" @onchange="OnToDateChanged"
                       title="Select the end date for filtering dashboard statistics"
                       class="w-full rounded border px-2 py-1.5 text-xs text-gray-600 outline-none focus:ring-2 focus:ring-blue-400 sm:w-auto md:px-3 md:py-2 md:text-sm" />
            </div>
        </div>

        <!-- Month Filter -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600">Month:</label>
            <div class="relative w-full">
                <select value="@SelectedMonth" @onchange="OnMonthChanged"
                        title="Filter dashboard statistics by specific month"
                        class="w-full rounded border px-2 py-1.5 text-xs text-gray-600 outline-none focus:ring-2 focus:ring-blue-400 sm:w-auto md:px-3 md:py-2 md:text-sm">
                    <option value="">All Months</option>
                    <option value="current">This Month</option>
                    <option value="previous">Previous Month</option>
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i">@((new DateTime(DateTime.Now.Year, i, 1)).ToString("MMMM"))</option>
                    }
                </select>
            </div>
        </div>

        <!-- Year Filter -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600">Year:</label>
            <div class="relative w-full">
                <select value="@SelectedYear" @onchange="OnYearChanged"
                        title="Filter dashboard statistics by specific year"
                        class="w-full rounded border px-2 py-1.5 text-xs text-gray-600 outline-none focus:ring-2 focus:ring-blue-400 sm:w-auto md:px-3 md:py-2 md:text-sm">
                    <option value="">All Years</option>
                    <option value="current">This Year</option>
                    <option value="previous">Previous Year</option>
                    @for (int year = DateTime.Now.Year; year >= DateTime.Now.Year - 5; year--)
                    {
                        <option value="@year">@year</option>
                    }
                </select>
            </div>
        </div>

        <!-- School Year Filter -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600">School Year:</label>
            <div class="relative w-full">
                <select value="@SelectedSchoolYear" @onchange="OnSchoolYearChanged"
                        title="Filter dashboard statistics by school year"
                        class="w-full rounded border px-2 py-1.5 text-xs text-gray-600 outline-none focus:ring-2 focus:ring-blue-400 sm:w-auto md:px-3 md:py-2 md:text-sm">
                    <option value="">All School Years</option>
                    @foreach (var sy in AvailableSchoolYears)
                    {
                        <option value="@sy">@sy</option>
                    }
                </select>
            </div>
        </div>

        <!-- Quick Select -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600">Quick Select:</label>
            <div class="relative w-full">
                <select value="@QuickSelect" @onchange="OnQuickSelectChanged"
                        title="Quickly select common date ranges for filtering"
                        class="w-full rounded border px-2 py-1.5 text-xs text-gray-600 outline-none focus:ring-2 focus:ring-blue-400 sm:w-auto md:px-3 md:py-2 md:text-sm">
                    <option value="">Select Range</option>
                    <option value="today">This Day</option>
                    <option value="week">This Week</option>
                    <option value="month">This Month</option>
                    <option value="year">This Year</option>
                </select>
            </div>
        </div>

        <!-- Clear Filter Button -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600 opacity-0">Placeholder</label>
            <div class="relative w-full">
                <button @onclick="ClearFilters" disabled="@IsClearingFilters"
                        title="Clear all filters and reset dashboard to default view"
                        class="flex w-full items-center justify-center gap-1.5 rounded-lg border border-transparent bg-gray-500 px-3 py-1.5 text-xs font-semibold whitespace-nowrap text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg disabled:cursor-not-allowed disabled:opacity-70 sm:w-auto md:px-4 md:py-2 md:text-sm">
                    @if (IsClearingFilters)
                    {
                        <svg class="h-3.5 w-3.5 animate-spin md:h-4 md:w-4" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                    }
                    else
                    {
                        <svg class="h-3.5 w-3.5 md:h-4 md:w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    }
                    Clear
                </button>
            </div>
        </div>

        <!-- Apply Filter Button -->
        <div class="flex w-full flex-col gap-1 sm:w-auto">
            <label class="text-xs font-medium text-gray-600 opacity-0">Placeholder</label>
            <div class="relative w-full">
                <button @onclick="ApplyFilters" disabled="@IsApplyingFilters"
                        title="Apply selected filters to update dashboard statistics"
                        class="flex w-full items-center justify-center gap-1.5 rounded-lg border border-transparent bg-blue-600 px-3 py-1.5 text-xs font-semibold whitespace-nowrap text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg disabled:cursor-not-allowed disabled:opacity-70 sm:w-auto md:px-4 md:py-2 md:text-sm">
                    @if (IsApplyingFilters)
                    {
                        <svg class="h-3.5 w-3.5 animate-spin md:h-4 md:w-4" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                    }
                    else
                    {
                        <svg class="h-3.5 w-3.5 md:h-4 md:w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                  d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                        </svg>
                    }
                    Apply Filter
                </button>
            </div>
        </div>
    </div>

    <!-- Current View Row -->
    <div class="flex justify-start">
        <div class="text-left">
            <span class="text-xs font-medium text-gray-600 md:text-sm">Current View: </span>
            <span class="ml-1 text-xs font-semibold text-gray-800 md:text-sm">@GetCurrentViewText()</span>
        </div>
    </div>
</div>


<!-- Stats Cards -->
<div class="mb-6 grid grid-cols-1 gap-3 sm:grid-cols-2 md:mb-6 md:gap-4 lg:grid-cols-4">
    <!-- Total Enrolled -->
    <div @onclick="NavigateToEnrollment" title="Total number of students currently enrolled in the school" class="relative cursor-pointer rounded-xl border border-gray-100 bg-white p-3 shadow-sm transition-all duration-200 hover:scale-[1.02] hover:border-blue-300 hover:shadow-md md:p-4">
        <div class="mb-2 flex items-start gap-2 md:mb-3">
            <div class="rounded-lg bg-blue-100 p-1.5 transition-colors duration-200 hover:bg-blue-200 md:p-2">
                <svg class="h-4 w-4 text-blue-600 md:h-5 md:w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
            </div>
            <div class="flex flex-1 flex-col">
                <p class="mb-0.5 text-left text-xs font-semibold text-gray-600 md:text-sm">Total Enrolled</p>
                @{
                    var enrolledSchoolYear = !string.IsNullOrEmpty(SelectedSchoolYear) ? SelectedSchoolYear : CurrentSchoolYear;
                }
                @if (!string.IsNullOrEmpty(enrolledSchoolYear))
                {
                    <p class="text-[10px] text-gray-500 md:text-xs">S.Y. @enrolledSchoolYear</p>
                }
                else
                {
                    <p class="text-[10px] text-gray-500 md:text-xs">All School Years</p>
                }
                @if (TotalEnrolled > 0)
                {
                    <h3 class="mt-1 text-right text-xl font-bold text-gray-800 md:text-2xl">@TotalEnrolled.ToString("N0")</h3>
                }
                else
                {
                    <h3 class="mt-1 text-right text-xs font-medium text-gray-400">NO DATA TO SHOW</h3>
                }
            </div>
        </div>
        <!-- Mini Chart -->
        @if (TotalEnrolled > 0)
        {
            <svg class="h-8 w-full md:h-10" viewBox="0 0 200 50" preserveAspectRatio="none">
                <polyline points="0,40 40,35 80,30 120,25 160,30 200,35" fill="none" stroke="#3b82f6" stroke-width="2" />
            </svg>
        }
        else
        {
            <div class="h-8 w-full md:h-10 flex items-center justify-center">
                <div class="h-px w-full bg-gray-200"></div>
            </div>
        }
    </div>

    <!-- Total Employees -->
    <div @onclick="NavigateToHumanResource" title="Total number of active employees in the system" class="relative cursor-pointer rounded-xl border border-gray-100 bg-white p-3 shadow-sm transition-all duration-200 hover:scale-[1.02] hover:border-purple-300 hover:shadow-md md:p-4">
        <div class="mb-2 flex items-start gap-2 md:mb-3">
            <div class="rounded-lg bg-purple-100 p-1.5 transition-colors duration-200 hover:bg-purple-200 md:p-2">
                <svg class="h-4 w-4 text-purple-600 md:h-5 md:w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
            </div>
            <div class="flex flex-1 flex-col">
                <p class="mb-0.5 text-left text-xs font-semibold text-gray-600 md:text-sm">Total Employees</p>
                <h3 class="mt-1 text-right text-xl font-bold text-gray-800 md:text-2xl">@TotalEmployees.ToString("N0")</h3>
            </div>
        </div>
        <!-- Mini Chart -->
        <svg class="h-8 w-full md:h-10" viewBox="0 0 200 50" preserveAspectRatio="none">
            <polyline points="0,35 40,30 80,28 120,32 160,29 200,33" fill="none" stroke="#9333ea" stroke-width="2" />
        </svg>
    </div>

    <!-- Pending Applications -->
    <div @onclick="NavigateToPendingApplications" title="Number of student applications awaiting review and approval" class="relative cursor-pointer rounded-xl border border-gray-100 bg-white p-3 shadow-sm transition-all duration-200 hover:scale-[1.02] hover:border-yellow-300 hover:shadow-md md:p-4">
        <div class="mb-2 flex items-start gap-2 md:mb-3">
            <div class="rounded-lg bg-yellow-100 p-1.5 transition-colors duration-200 hover:bg-yellow-200 md:p-2">
                <svg class="h-4 w-4 text-yellow-600 md:h-5 md:w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div class="flex flex-1 flex-col">
                <p class="mb-0.5 text-left text-xs font-semibold text-gray-600 md:text-sm">Pending Applications</p>
                @{
                    var pendingSchoolYear = !string.IsNullOrEmpty(SelectedSchoolYear) ? SelectedSchoolYear : CurrentSchoolYear;
                }
                @if (!string.IsNullOrEmpty(pendingSchoolYear))
                {
                    <p class="text-[10px] text-gray-500 md:text-xs">S.Y. @pendingSchoolYear</p>
                }
                else
                {
                    <p class="text-[10px] text-gray-500 md:text-xs">All School Years</p>
                }
                @if (PendingApplications > 0)
                {
                    <h3 class="mt-1 text-right text-xl font-bold text-gray-800 md:text-2xl">@PendingApplications.ToString("N0")</h3>
                }
                else
                {
                    <h3 class="mt-1 text-right text-xs font-medium text-gray-400">NO DATA TO SHOW</h3>
                }
            </div>
        </div>
        <!-- Mini Chart -->
        @if (PendingApplications > 0)
        {
            <svg class="h-8 w-full md:h-10" viewBox="0 0 200 50" preserveAspectRatio="none">
                <polyline points="0,30 40,25 80,35 120,28 160,32 200,30" fill="none" stroke="#ca8a04" stroke-width="2" />
            </svg>
        }
        else
        {
            <div class="h-8 w-full md:h-10 flex items-center justify-center">
                <div class="h-px w-full bg-gray-200"></div>
            </div>
        }
    </div>

    <!-- Revenue -->
    <div @onclick="NavigateToFinance" title="Total revenue collected from all students" class="relative cursor-pointer rounded-xl border border-gray-100 bg-white p-3 shadow-sm transition-all duration-200 hover:scale-[1.02] hover:border-green-300 hover:shadow-md md:p-4">
        <div class="mb-2 flex items-start gap-2 md:mb-3">
            <div class="rounded-lg bg-green-100 p-1.5 transition-colors duration-200 hover:bg-green-200 md:p-2">
                <svg class="h-4 w-4 text-green-600 md:h-5 md:w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
            </div>
            <div class="flex flex-1 flex-col">
                <p class="mb-0.5 text-left text-xs font-semibold text-gray-600 md:text-sm">Revenue</p>
                @{
                    var revenueSchoolYear = !string.IsNullOrEmpty(SelectedSchoolYear) ? SelectedSchoolYear : CurrentSchoolYear;
                }
                @if (!string.IsNullOrEmpty(revenueSchoolYear))
                {
                    <p class="text-[10px] text-gray-500 md:text-xs">S.Y. @revenueSchoolYear</p>
                }
                else
                {
                    <p class="text-[10px] text-gray-500 md:text-xs">All School Years</p>
                }
                @if (TotalTuitionCollected > 0)
                {
                    <h3 class="mt-1 text-right text-xl font-bold text-gray-800 md:text-2xl">₱@TotalTuitionCollected.ToString("N0")</h3>
                }
                else
                {
                    <h3 class="mt-1 text-right text-xs font-medium text-gray-400">NO DATA TO SHOW</h3>
                }
            </div>
        </div>
        <!-- Mini Chart -->
        @if (TotalTuitionCollected > 0)
        {
            <svg class="h-8 w-full md:h-10" viewBox="0 0 200 50" preserveAspectRatio="none">
                <polyline points="0,45 40,40 80,35 120,30 160,32 200,28" fill="none" stroke="#16a34a" stroke-width="2" />
            </svg>
        }
        else
        {
            <div class="h-8 w-full md:h-10 flex items-center justify-center">
                <div class="h-px w-full bg-gray-200"></div>
            </div>
        }
    </div>
</div>

<!-- Charts Section -->
<div class="grid grid-cols-1 gap-3 md:gap-4 lg:grid-cols-3">
    <!-- Total Income Chart -->
    <div title="Visual representation of total income showing profit and expenses over time" class="relative rounded-xl border border-gray-100 bg-white p-3 shadow-sm md:p-4">
        <div class="mb-3 md:mb-4">
            <p class="mb-0.5 text-left text-xs font-semibold text-gray-600 md:text-sm">Statistics</p>
            <h3 class="mb-1 text-base font-bold text-gray-800 md:mb-1.5 md:text-lg">Total income</h3>
            <div class="mb-2 md:mb-3">
                @{
                    var incomeSchoolYear = !string.IsNullOrEmpty(SelectedSchoolYear) ? SelectedSchoolYear : CurrentSchoolYear;
                }
                @if (!string.IsNullOrEmpty(incomeSchoolYear))
                {
                    <p class="text-xs font-medium text-gray-600 md:text-sm">S.Y.: @incomeSchoolYear</p>
                }
                else
                {
                    <p class="text-xs font-medium text-gray-600 md:text-sm">S.Y.: All School Years</p>
                }
            </div>
            <div class="flex flex-wrap gap-3 md:gap-4">
                <div class="flex items-center gap-1.5">
                    <div class="h-2 w-2 rounded-full bg-green-500 md:h-2.5 md:w-2.5"></div>
                    <span class="text-xs text-gray-600 md:text-sm">Collections</span>
                </div>
                <div class="flex items-center gap-1.5">
                    <div class="h-2 w-2 rounded-full bg-orange-500 md:h-2.5 md:w-2.5"></div>
                    <span class="text-xs text-gray-600 md:text-sm">Expenses</span>
                </div>
            </div>
        </div>

        <!-- Dynamic Chart.js Line Chart -->
        <div class="relative h-40 md:h-52">
            <canvas id="incomeChart"></canvas>
        </div>
    </div>

    <!-- Total Students by Type -->
    <div title="Breakdown of students by type: New, Transferee, and Returnee" class="relative rounded-xl border border-gray-100 bg-white p-3 shadow-sm md:p-4">
        <div class="mb-3 md:mb-4">
            <p class="mb-0.5 text-left text-xs font-semibold text-gray-600 md:text-sm">Statistics</p>
            <h3 class="text-base font-bold text-gray-800 md:text-lg">Total student each type</h3>
            <div class="mt-1">
                @{
                    var studentTypeSchoolYear = !string.IsNullOrEmpty(SelectedSchoolYear) ? SelectedSchoolYear : CurrentSchoolYear;
                }
                @if (!string.IsNullOrEmpty(studentTypeSchoolYear))
                {
                    <p class="text-xs font-medium text-gray-600 md:text-sm">S.Y.: @studentTypeSchoolYear</p>
                }
                else
                {
                    <p class="text-xs font-medium text-gray-600 md:text-sm">S.Y.: All School Years</p>
                }
            </div>
        </div>

        @{
            var hasStudentTypeData = NewStudentCount > 0 || TransfereeCount > 0 || ReturneeCount > 0;
        }
        
        @if (hasStudentTypeData)
        {
            <!-- Dynamic Chart.js Doughnut Chart -->
            <div class="mb-3 flex items-center justify-center md:mb-4">
                <div class="relative h-40 w-40 md:h-52 md:w-52">
                    <canvas id="studentTypeChart"></canvas>
                </div>
            </div>

            <!-- Legend -->
            <div class="flex flex-wrap justify-center gap-3 md:gap-6">
                <div class="flex items-center gap-1.5">
                    <div class="h-2 w-2 rounded-full bg-blue-600 md:h-2.5 md:w-2.5"></div>
                    <span class="text-xs text-gray-600 md:text-sm">New <span class="font-semibold">@NewStudentCount.ToString("N0")</span></span>
                </div>
                <div class="flex items-center gap-1.5">
                    <div class="h-2 w-2 rounded-full bg-gray-400 md:h-2.5 md:w-2.5"></div>
                    <span class="text-xs text-gray-600 md:text-sm">Transferee <span class="font-semibold">@TransfereeCount.ToString("N0")</span></span>
                </div>
                <div class="flex items-center gap-1.5">
                    <div class="h-2 w-2 rounded-full bg-blue-400 md:h-2.5 md:w-2.5"></div>
                    <span class="text-xs text-gray-600 md:text-sm">Returnee <span class="font-semibold">@ReturneeCount.ToString("N0")</span></span>
                </div>
            </div>
        }
        else
        {
            <!-- No Data Placeholder -->
            <div class="mb-3 flex items-center justify-center md:mb-4" style="height: 160px;">
                <div class="text-center">
                    <svg class="mx-auto h-8 w-8 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                    </svg>
                    <p class="mt-1.5 text-xs font-medium text-gray-400">NO DATA TO SHOW</p>
                </div>
            </div>
        }
    </div>

    <!-- Tuition Fees List -->
    <div @onclick="NavigateToFinance" title="List of tuition fees by grade level" class="relative cursor-pointer rounded-xl border border-gray-100 bg-white p-3 shadow-sm transition-all duration-200 hover:scale-[1.02] hover:border-indigo-300 hover:shadow-md md:p-4">
        <div class="mb-2 flex items-start justify-between md:mb-3">
            <div>
                <p class="mb-0.5 text-left text-xs font-semibold text-gray-600 md:text-sm">Tuition Fees</p>
                <h3 class="text-base font-bold text-gray-800 md:text-lg">@(TuitionFeesList?.Count ?? 0) Grades</h3>
                <div class="mt-1">
                    @{
                        var tuitionFeeSchoolYear = !string.IsNullOrEmpty(SelectedSchoolYear) ? SelectedSchoolYear : CurrentSchoolYear;
                    }
