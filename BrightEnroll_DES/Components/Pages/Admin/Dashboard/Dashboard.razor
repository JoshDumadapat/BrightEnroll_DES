            catch
            {
                // If connection fails, wait and retry once
                await Task.Delay(500);
                try
                {
                    await Context.Database.ExecuteSqlRawAsync("SELECT 1");
                }
                catch
                {
                    System.Diagnostics.Debug.WriteLine("Database connection not available after retry");
                    StateHasChanged();
                    return;
                }
            }

            // Ensure CurrentSchoolYear is loaded - if still empty, try loading again
            if (string.IsNullOrEmpty(CurrentSchoolYear))
            {
                await LoadCurrentSchoolYear();
            }

            // Load current school year entity if not already loaded
            if (CurrentSchoolYearEntity == null && !string.IsNullOrEmpty(CurrentSchoolYear))
            {
                var allSchoolYears = await SchoolYearService.GetAllSchoolYearsAsync();
                CurrentSchoolYearEntity = allSchoolYears.FirstOrDefault(sy => sy.SchoolYearName == CurrentSchoolYear);
            }

            // Determine effective school year and its entity
            // When filters are not applied (SelectedSchoolYear is null or empty), default to current school year
            // When user explicitly selects "All School Years" from dropdown, SelectedSchoolYear becomes "", which we treat as "show all" (null)
            // When a specific school year is selected, use that school year
            string? effectiveSchoolYear;
            if (string.IsNullOrEmpty(SelectedSchoolYear))
            {
                // No filter applied - default to current school year
                effectiveSchoolYear = !string.IsNullOrEmpty(CurrentSchoolYear) ? CurrentSchoolYear : null;
            }
            else
            {
                // User selected a specific school year or "All School Years" (empty string)
                effectiveSchoolYear = SelectedSchoolYear == "" ? null : SelectedSchoolYear;
            }
            
            // Debug logging
            System.Diagnostics.Debug.WriteLine($"LoadDashboardStatistics: SelectedSchoolYear = {SelectedSchoolYear ?? "null"}, CurrentSchoolYear = {CurrentSchoolYear ?? "null"}, effectiveSchoolYear = {effectiveSchoolYear ?? "null"}");
            SchoolYear? effectiveSchoolYearEntity = CurrentSchoolYearEntity;
            if (!string.IsNullOrEmpty(SelectedSchoolYear) && SelectedSchoolYear != CurrentSchoolYear)
            {
                var allSchoolYears = await SchoolYearService.GetAllSchoolYearsAsync();
                effectiveSchoolYearEntity = allSchoolYears.FirstOrDefault(sy => sy.SchoolYearName == SelectedSchoolYear);
            }

            // If no date filters are set and we have a school year entity, use school year dates for payment filtering
            DateTime? paymentFilterFromDate = FromDate;
            DateTime? paymentFilterToDate = ToDate;
            if (!paymentFilterFromDate.HasValue && !paymentFilterToDate.HasValue && 
                effectiveSchoolYearEntity != null)
            {
                paymentFilterFromDate = effectiveSchoolYearEntity.StartDate;
                paymentFilterToDate = effectiveSchoolYearEntity.EndDate;
            }

            // Get total employee count from vw_EmployeeData
            // Always show total employees regardless of filters (school year or date)
            // Load this early and with proper error handling
            // This should load immediately on page load, not wait for filters
            try
            {
                TotalEmployees = await Context.EmployeeDataViews
                    .FromSqlRaw(@"SELECT UserId, SystemId, FirstName, MiddleName, LastName, Suffix, FullName, BirthDate, Age, Gender, ContactNumber, Role, Email, DateHired, Status, FormattedAddress FROM [dbo].[vw_EmployeeData]")
                    .CountAsync();
                
                System.Diagnostics.Debug.WriteLine($"Dashboard: TotalEmployees loaded = {TotalEmployees}");
                
                // Immediately update UI to show employee count
                await InvokeAsync(StateHasChanged);
            }
