            PendingApplications = 0;
            TotalStudentCount = 0;
            NewStudentCount = 0;
            TransfereeCount = 0;
            ReturneeCount = 0;
            TotalEnrolled = 0;
            TotalTuitionCollected = 0.00m;

            // Ensure UI updates even if data loading fails
            // This prevents the dashboard from appearing empty
            StateHasChanged();
        }
    }

