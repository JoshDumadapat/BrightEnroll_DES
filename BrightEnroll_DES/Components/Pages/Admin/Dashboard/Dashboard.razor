            // Get distinct school years from StudentSectionEnrollments
            var schoolYears = await Context.StudentSectionEnrollments
                .Where(e => !string.IsNullOrEmpty(e.SchoolYear))
                .Select(e => e.SchoolYear)
                .Distinct()
                .OrderByDescending(sy => sy)
                .ToListAsync();
            
            AvailableSchoolYears = schoolYears;
        }
        catch (Exception)
        {
            AvailableSchoolYears = new List<string>();
        }
    }

    private async Task ClearFilters()
    {
        if (IsClearingFilters) return; // Prevent multiple simultaneous calls
        
        IsClearingFilters = true;
        StateHasChanged();
        
        try
        {
            FromDate = null;
            ToDate = null;
            QuickSelect = null;
            SelectedMonth = null;
            SelectedYear = null;
            SelectedSchoolYear = null;
            
            // Reload all data without filters - updates immediately without loading screen
            await LoadDashboardStatistics();
            
            // Ensure DOM is ready before loading charts
            await Task.Delay(200);
            StateHasChanged();
            await Task.Delay(200);
            await LoadChartData();
        }
        finally
        {
            IsClearingFilters = false;
            StateHasChanged();
        }
    }


