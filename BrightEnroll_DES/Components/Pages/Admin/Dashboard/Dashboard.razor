    // Load current school year from database
    private async Task LoadCurrentSchoolYear()
    {
        try
        {
            // If a school year is selected, use it
            if (!string.IsNullOrEmpty(SelectedSchoolYear))
            {
                CurrentSchoolYear = SelectedSchoolYear;
                return;
            }

            // Otherwise, get the most common school year from StudentSectionEnrollment
            var mostCommonSchoolYear = await Context.StudentSectionEnrollments
                .Where(e => !string.IsNullOrEmpty(e.SchoolYear))
                .GroupBy(e => e.SchoolYear)
                .OrderByDescending(g => g.Count())
                .Select(g => g.Key)
                .FirstOrDefaultAsync();

            CurrentSchoolYear = mostCommonSchoolYear ?? string.Empty;
        }
        catch (Exception)
        {
            CurrentSchoolYear = string.Empty;
        }
    }

