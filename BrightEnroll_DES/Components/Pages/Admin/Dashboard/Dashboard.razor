    private async Task ApplyFilters()
    {
        if (IsApplyingFilters) return; // Prevent multiple simultaneous calls

        IsApplyingFilters = true;
        FilterWarningMessage = null; // Clear previous warnings
        StateHasChanged();

        try
        {
            // Validate filter conflicts
            if (!string.IsNullOrEmpty(SelectedSchoolYear) && !string.IsNullOrEmpty(SelectedYear))
            {
                // Check if Year filter conflicts with School Year filter
                if (SelectedYear != "current" && SelectedYear != "previous" && int.TryParse(SelectedYear, out int selectedYear))
                {
                    // Parse school year (format: "2025-2026")
                    var schoolYearParts = SelectedSchoolYear.Split('-');
                    if (schoolYearParts.Length == 2 && 
                        int.TryParse(schoolYearParts[0], out int schoolYearStart) && 
                        int.TryParse(schoolYearParts[1], out int schoolYearEnd))
                    {
                        // Check if selected year falls within school year range
                        // School year typically spans two calendar years (e.g., 2025-2026 covers 2025 and 2026)
                        if (selectedYear < schoolYearStart || selectedYear > schoolYearEnd)
                        {
                            FilterWarningMessage = $"The selected Year ({selectedYear}) does not fall within the selected School Year ({SelectedSchoolYear}). Please adjust your filters.";
                            IsApplyingFilters = false;
                            StateHasChanged();
                            return; // Don't apply filters if there's a conflict
                        }
                    }
                }
            }

            // Get school year entity only if a specific school year is selected (not "All School Years")
            SchoolYear? schoolYearEntity = null;
            if (!string.IsNullOrEmpty(SelectedSchoolYear))
            {
                var allSchoolYears = await SchoolYearService.GetAllSchoolYearsAsync();
                schoolYearEntity = allSchoolYears.FirstOrDefault(sy => sy.SchoolYearName == SelectedSchoolYear);
            }

            // Apply date filters based on selected month/year
            var today = DateTime.Now;
            DateTime? filterFromDate = null;
            DateTime? filterToDate = null;
            
            // If no date filters and school year is selected, use school year dates
            if (schoolYearEntity != null && !FromDate.HasValue && !ToDate.HasValue && 
                string.IsNullOrEmpty(SelectedMonth) && string.IsNullOrEmpty(SelectedYear))
            {
                filterFromDate = schoolYearEntity.StartDate;
                filterToDate = schoolYearEntity.EndDate;
            }

            // Handle month filter
            if (!string.IsNullOrEmpty(SelectedMonth))
            {
                if (SelectedMonth == "current")
                {
                    filterFromDate = new DateTime(today.Year, today.Month, 1);
                    filterToDate = today;
                }
                else if (SelectedMonth == "previous")
                {
                    var previousMonth = today.AddMonths(-1);
                    filterFromDate = new DateTime(previousMonth.Year, previousMonth.Month, 1);
                    filterToDate = new DateTime(previousMonth.Year, previousMonth.Month, DateTime.DaysInMonth(previousMonth.Year, previousMonth.Month));
                }
                else if (int.TryParse(SelectedMonth, out int month))
                {
                    var year = !string.IsNullOrEmpty(SelectedYear) && SelectedYear != "current" && SelectedYear != "previous" && int.TryParse(SelectedYear, out int y) ? y : today.Year;
                    filterFromDate = new DateTime(year, month, 1);
                    filterToDate = new DateTime(year, month, DateTime.DaysInMonth(year, month));
                }
            }

            // Handle year filter
            if (!string.IsNullOrEmpty(SelectedYear))
            {
                if (SelectedYear == "current")
                {
                    filterFromDate = new DateTime(today.Year, 1, 1);
                    filterToDate = today;
                }
                else if (SelectedYear == "previous")
                {
                    filterFromDate = new DateTime(today.Year - 1, 1, 1);
                    filterToDate = new DateTime(today.Year - 1, 12, 31);
                }
                else if (int.TryParse(SelectedYear, out int year))
                {
                    if (filterFromDate == null)
                    {
                        filterFromDate = new DateTime(year, 1, 1);
                        filterToDate = new DateTime(year, 12, 31);
                    }
                }
            }

            // Override with manual date selection if provided
            if (FromDate.HasValue && ToDate.HasValue)
            {
                filterFromDate = FromDate.Value;
                filterToDate = ToDate.Value;
            }

            // Apply filters to data loading
            // When filters are not applied (SelectedSchoolYear is null), default to current school year
            // When user explicitly selects "All School Years" from dropdown, SelectedSchoolYear becomes "", which we treat as "show all" (null)
            string? schoolYearFilter;
            if (string.IsNullOrEmpty(SelectedSchoolYear))
            {
                // No filter applied - default to current school year
                schoolYearFilter = !string.IsNullOrEmpty(CurrentSchoolYear) ? CurrentSchoolYear : null;
            }
            else
            {
                // User selected a specific school year or "All School Years" (empty string)
                schoolYearFilter = SelectedSchoolYear == "" ? null : SelectedSchoolYear;
            }
            await LoadFilteredStatistics(filterFromDate, filterToDate, schoolYearFilter);
            await LoadCurrentSchoolYear(); // Reload school year (but don't auto-set SelectedSchoolYear)

            // Ensure DOM is ready before loading charts
            await Task.Delay(200);
            StateHasChanged();
            await Task.Delay(200);
            await LoadChartData();
        }
        finally
        {
            IsApplyingFilters = false;
            StateHasChanged();
        }
    }

    private async Task LoadFilteredStatistics(DateTime? fromDate, DateTime? toDate, string? schoolYear = null)
    {
        try
        {
            // Get total employee count from vw_EmployeeData
            // Always show total employees regardless of filters (school year or date)
            TotalEmployees = await Context.EmployeeDataViews
                .FromSqlRaw(@"SELECT UserId, SystemId, FirstName, MiddleName, LastName, Suffix, FullName, BirthDate, Age, Gender, ContactNumber, Role, Email, DateHired, Status, FormattedAddress FROM [dbo].[vw_EmployeeData]")
                .CountAsync();

            // Get pending applications count - students with "For Payment" status from for enrollment
            // This should count students who are ready for enrollment but haven't paid yet
            var forPaymentStatus = "For Payment";
            
            // Query students with "For Payment" status from StudentSectionEnrollments for the school year
            if (!string.IsNullOrEmpty(schoolYear))
            {
                // Count students with "For Payment" status in enrollments for the school year
                var enrollmentStudentIds = await Context.StudentSectionEnrollments
                    .Where(e => e.SchoolYear == schoolYear && 
                                (e.Status == "For Payment" || e.Status == "Unpaid"))
                    .Select(e => e.StudentId)
                    .Distinct()
                    .ToListAsync();
                
                // Also count students without enrollment records but with "For Payment" status
                var studentsQuery = Context.StudentDataViews
                    .FromSqlRaw(@"SELECT StudentId, FirstName, MiddleName, LastName, Suffix, FullName, BirthDate, Age, LRN, GradeLevel, SchoolYear, DateRegistered, Status, StudentType FROM [dbo].[vw_StudentData]")
                    .Where(s => s.SchoolYear == schoolYear && 
                                (s.Status == forPaymentStatus || s.Status == "Unpaid"))
                    .AsQueryable();
                
                // Apply date filter to students if provided
                if (fromDate.HasValue && toDate.HasValue)
                {
                    studentsQuery = studentsQuery.Where(s => s.DateRegistered.HasValue &&
                        s.DateRegistered.Value.Date >= fromDate.Value.Date &&
                        s.DateRegistered.Value.Date <= toDate.Value.Date);
                }
                
                var studentsWithoutEnrollments = await studentsQuery
                    .Where(s => !enrollmentStudentIds.Contains(s.StudentId))
                    .Select(s => s.StudentId)
                    .Distinct()
                    .ToListAsync();
                
                PendingApplications = enrollmentStudentIds.Count + studentsWithoutEnrollments.Count;
            }
            else
            {
                // When no school year filter, count all "For Payment" students
                var enrollmentStudentIds = await Context.StudentSectionEnrollments
                    .Where(e => e.Status == "For Payment" || e.Status == "Unpaid")
                    .Select(e => e.StudentId)
                    .Distinct()
                    .ToListAsync();
                
                var studentsQuery = Context.StudentDataViews
                    .FromSqlRaw(@"SELECT StudentId, FirstName, MiddleName, LastName, Suffix, FullName, BirthDate, Age, LRN, GradeLevel, SchoolYear, DateRegistered, Status, StudentType FROM [dbo].[vw_StudentData]")
                    .Where(s => s.Status == forPaymentStatus || s.Status == "Unpaid")
                    .AsQueryable();
                
                // Apply date filter to students if provided
                if (fromDate.HasValue && toDate.HasValue)
                {
                    studentsQuery = studentsQuery.Where(s => s.DateRegistered.HasValue &&
                        s.DateRegistered.Value.Date >= fromDate.Value.Date &&
                        s.DateRegistered.Value.Date <= toDate.Value.Date);
                }
                
                var studentsWithoutEnrollments = await studentsQuery
                    .Where(s => !enrollmentStudentIds.Contains(s.StudentId))
                    .Select(s => s.StudentId)
                    .Distinct()
                    .ToListAsync();
                
                PendingApplications = enrollmentStudentIds.Count + studentsWithoutEnrollments.Count;
            }

            // Get student type statistics with filters
            var allStudentsQuery = Context.StudentDataViews
                .FromSqlRaw(@"SELECT StudentId, FirstName, MiddleName, LastName, Suffix, FullName, BirthDate, Age, LRN, GradeLevel, SchoolYear, DateRegistered, Status, StudentType FROM [dbo].[vw_StudentData]")
                .AsQueryable();

            // Apply date filter to all students if provided
            if (fromDate.HasValue && toDate.HasValue)
            {
                allStudentsQuery = allStudentsQuery.Where(s => s.DateRegistered.HasValue &&
                    s.DateRegistered.Value.Date >= fromDate.Value.Date &&
                    s.DateRegistered.Value.Date <= toDate.Value.Date);
            }

            // Apply school year filter only if provided (null means "All School Years")
            if (!string.IsNullOrEmpty(schoolYear))
            {
                allStudentsQuery = allStudentsQuery.Where(s => s.SchoolYear == schoolYear);
            }

            var allStudents = await allStudentsQuery.ToListAsync();

            TotalStudentCount = allStudents.Count;
            NewStudentCount = allStudents.Count(s => s.StudentType != null && s.StudentType.ToLower().Contains("new"));
            TransfereeCount = allStudents.Count(s => s.StudentType != null && s.StudentType.ToLower().Contains("transferee"));
            ReturneeCount = allStudents.Count(s => s.StudentType != null && s.StudentType.ToLower().Contains("returnee"));

            // Calculate TotalEnrolled - students with status "Enrolled"
            TotalEnrolled = allStudents.Count(s =>
                s.Status != null &&
                (s.Status.Equals("Enrolled", StringComparison.OrdinalIgnoreCase) ||
                 s.Status.Equals("Fully Paid", StringComparison.OrdinalIgnoreCase) ||
                 s.Status.Equals("Partially Paid", StringComparison.OrdinalIgnoreCase)));

            // Calculate TotalTuitionCollected - sum of all student payments from StudentPayments table
            // Fetch payment records (read-only query)
            // Filter by school year - when no filter is applied, show current school year data
            var paymentsQuery = Context.StudentPayments.AsQueryable();
            
            // Apply school year filter to payments
            // When schoolYear is null (All School Years), show all payments
            // When schoolYear is provided, filter by that school year only (exclude null SchoolYear)
            if (!string.IsNullOrEmpty(schoolYear))
            {
                // Only include payments that match the school year (exclude null SchoolYear when filtering)
                paymentsQuery = paymentsQuery.Where(p => p.SchoolYear == schoolYear);
            }
            else
            {
                // When "All School Years" is selected, show all payments (no filter)
                // This allows viewing revenue across all school years
            }
            
            // Apply date filters only if explicitly provided by user
            // This allows school year filtering to work independently
            if (fromDate.HasValue && toDate.HasValue)
            {
                var fromDateOnly = fromDate.Value.Date;
                var toDateOnly = toDate.Value.Date.AddDays(1).AddTicks(-1); // End of day
                paymentsQuery = paymentsQuery.Where(p =>
                    p.CreatedAt >= fromDateOnly &&
                    p.CreatedAt <= toDateOnly);
            }

            // Sum all payments (read-only aggregation, no data modification)
            TotalTuitionCollected = await paymentsQuery
                .SumAsync(p => (decimal?)p.Amount) ?? 0.00m;

            StateHasChanged();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Dashboard: Error in LoadFilteredStatistics: {ex.Message}");
            System.Diagnostics.Debug.WriteLine($"Dashboard: Stack trace: {ex.StackTrace}");
            // Set defaults to prevent UI errors
            TotalEmployees = 0;
            PendingApplications = 0;
            TotalStudentCount = 0;
            NewStudentCount = 0;
            TransfereeCount = 0;
            ReturneeCount = 0;
            TotalEnrolled = 0;
            TotalTuitionCollected = 0.00m;
            StateHasChanged();
        }
    }

