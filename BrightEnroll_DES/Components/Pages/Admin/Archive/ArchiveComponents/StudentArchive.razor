@code {
    [Parameter]
    public List<BrightEnroll_DES.Components.Pages.Admin.Archive.ArchivedStudent>? Students { get; set; }

    [Parameter]
    public int RowsPerPage { get; set; } = 5;

    [Parameter]
    public EventCallback<string> OnRestoreStudent { get; set; }

    // Filter properties
    private string SearchText { get; set; } = "";
    private string StatusFilter { get; set; } = "";

    // Pagination state
    private int CurrentPage { get; set; } = 1;

    // View modal state
    private bool ShowViewModal { get; set; } = false;
    private ArchivedStudent? SelectedStudent { get; set; }

    // Restore modal state
    private bool ShowRestoreModal { get; set; } = false;
    private ArchivedStudent? StudentToRestore { get; set; }

    // Computed property for filtered students
    private List<BrightEnroll_DES.Components.Pages.Admin.Archive.ArchivedStudent> FilteredStudents
    {
        get
        {
            if (Students == null || !Students.Any())
                return new List<BrightEnroll_DES.Components.Pages.Admin.Archive.ArchivedStudent>();

            var filtered = Students.AsEnumerable();

            // Search filter
            if (!string.IsNullOrWhiteSpace(SearchText))
            {
                filtered = filtered.Where(s => 
                    s.Name.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    s.Id.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    s.LRN.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    (s.Reason != null && s.Reason.Contains(SearchText, StringComparison.OrdinalIgnoreCase)));
            }

            // Status filter
            if (!string.IsNullOrWhiteSpace(StatusFilter))
            {
                filtered = filtered.Where(s => s.Status == StatusFilter);
            }

            return filtered.ToList();
        }
    }

    // Computed property for paginated students
    private List<BrightEnroll_DES.Components.Pages.Admin.Archive.ArchivedStudent> PaginatedStudents
    {
        get
        {
            var filtered = FilteredStudents;
            return filtered
                .Skip((CurrentPage - 1) * RowsPerPage)
                .Take(RowsPerPage)
                .ToList();
        }
    }

    private void ClearFilters()
    {
        SearchText = "";
        StatusFilter = "";
        CurrentPage = 1;
        StateHasChanged();
    }

    private void HandlePageChanged(int page)
    {
        CurrentPage = page;
        StateHasChanged();
    }

    private void HandleRowsPerPageChanged(int rowsPerPage)
    {
        RowsPerPage = rowsPerPage;
        CurrentPage = 1;
        StateHasChanged();
    }

    private void ExportPDF()
    {
        // Export PDF logic will be implemented here
    }

    private void ViewStudent(ArchivedStudent student)
    {
        SelectedStudent = student;
        ShowViewModal = true;
        StateHasChanged();
    }

    private void CloseViewModal()
    {
        ShowViewModal = false;
        SelectedStudent = null;
        StateHasChanged();
    }

    private void HandleViewBackdropClick()
    {
        CloseViewModal();
    }

    private void HandleRestoreClick(ArchivedStudent student)
    {
        StudentToRestore = student;
        ShowRestoreModal = true;
        StateHasChanged();
    }

    private void CloseRestoreModal()
    {
        ShowRestoreModal = false;
        StudentToRestore = null;
        StateHasChanged();
    }

    private void HandleRestoreBackdropClick()
    {
        CloseRestoreModal();
    }

    private async Task ConfirmRestoreStudent()
    {
        if (StudentToRestore == null)
        {
            CloseRestoreModal();
            return;
        }

        try
        {
            // Call the OnRestoreStudent event callback to notify the parent component
            if (OnRestoreStudent.HasDelegate)
            {
                await OnRestoreStudent.InvokeAsync(StudentToRestore.Id);
            }

            CloseRestoreModal();
        }
        catch (Exception ex)
        {
            // Log error (in a real app, you might want to show an error message to the user)
            System.Diagnostics.Debug.WriteLine($"Error restoring student: {ex.Message}");
            CloseRestoreModal();
        }
