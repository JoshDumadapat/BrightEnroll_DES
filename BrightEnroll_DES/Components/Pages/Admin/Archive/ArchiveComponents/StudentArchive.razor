                <h3 class="text-lg font-semibold text-white">Student Information</h3>
                <button @onclick="CloseViewModal" class="text-white hover:text-gray-200 transition-colors">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Modal Body -->
            <div class="px-6 py-6">
                <!-- Personal Information Section -->
                <div class="mb-6">
                    <h4 class="mb-4 text-base font-semibold text-gray-800 border-b border-gray-200 pb-2">Personal Information</h4>
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                        <div>
                            <label class="block text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">Student ID</label>
                            <p class="text-sm text-gray-900">@SelectedStudent.Id</p>
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">Full Name</label>
                            <p class="text-sm text-gray-900">@SelectedStudent.Name</p>
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">LRN (Learner Reference Number)</label>
                            <p class="text-sm text-gray-900">@(SelectedStudent.LRN == "N/A" ? "-" : SelectedStudent.LRN)</p>
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">Date Registered</label>
                            <p class="text-sm text-gray-900">@SelectedStudent.Date</p>
                        </div>
                    </div>
                </div>

                <!-- Archive Information Section -->
                <div class="mb-6">
                    <h4 class="mb-4 text-base font-semibold text-gray-800 border-b border-gray-200 pb-2">Archive Information</h4>
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                        <div>
                            <label class="block text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">Status</label>
                            <div>
                                @if (SelectedStudent.Status == "Graduated")
                                {
                                    <span class="inline-flex items-center rounded-md bg-green-100 px-2.5 py-1 text-xs font-medium text-green-700">@SelectedStudent.Status</span>
                                }
                                else if (SelectedStudent.Status == "Transferred")
                                {
                                    <span class="inline-flex items-center rounded-md bg-blue-100 px-2.5 py-1 text-xs font-medium text-blue-700">@SelectedStudent.Status</span>
                                }
                                else if (SelectedStudent.Status == "Withdrawn" || SelectedStudent.Status == "Application Withdrawn")
                                {
                                    <span class="inline-flex items-center rounded-md bg-orange-100 px-2.5 py-1 text-xs font-medium text-orange-700">@SelectedStudent.Status</span>
                                }
                                else if (SelectedStudent.Status == "Drop")
                                {
                                    <span class="inline-flex items-center rounded-md bg-red-100 px-2.5 py-1 text-xs font-medium text-red-700">@SelectedStudent.Status</span>
                                }
                                else if (SelectedStudent.Status == "Rejected by School")
                                {
                                    <span class="inline-flex items-center rounded-md bg-red-100 px-2.5 py-1 text-xs font-medium text-red-700">@SelectedStudent.Status</span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center rounded-md bg-gray-100 px-2.5 py-1 text-xs font-medium text-gray-700">@SelectedStudent.Status</span>
                                }
                            </div>
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-gray-600 uppercase tracking-wide mb-1">Archived Date</label>
                            <p class="text-sm text-gray-900">@SelectedStudent.ArchivedDate</p>
                        </div>
                    </div>
                </div>

                <!-- Archive Reason Section -->
                <div class="mb-6">
                    <h4 class="mb-4 text-base font-semibold text-gray-800 border-b border-gray-200 pb-2">Archive Reason</h4>
                    <div class="rounded-lg border border-gray-200 bg-gray-50 p-4">
                        @if (!string.IsNullOrWhiteSpace(SelectedStudent.Reason))
                        {
                            <p class="text-sm text-gray-700 whitespace-pre-wrap">@SelectedStudent.Reason</p>
                        }
                        else
                        {
                            <p class="text-sm text-gray-400 italic">No reason provided</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="sticky bottom-0 flex justify-end gap-3 border-t border-gray-200 bg-gray-50 px-6 py-4 rounded-b-2xl">
                <button @onclick="CloseViewModal" 
