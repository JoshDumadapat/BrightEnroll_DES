@page "/human-resource"
@layout Components.Layout.MainLayout
@inject NavigationManager NavigationManager
@inject BrightEnroll_DES.Services.IEmployeeService EmployeeService
@using BrightEnroll_DES.Models
@implements IDisposable

<PageTitle>Human Resource</PageTitle>

<div class="text-gray-800">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Human Resource</h1>
    <!-- Filter, Table, and Pagination Card -->
    <div class="overflow-hidden rounded-xl bg-white shadow">
        <!-- Filters -->
        <div class="border-b border-gray-200 px-6 py-4">
            <label class="mb-2 block text-sm font-bold text-gray-700">Filter:</label>
            <div class="flex items-center justify-between gap-3">
                <div class="flex items-center gap-3">
                    <div class="relative flex items-center">
                        <span class="absolute left-3 flex items-center justify-center">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </span>
                        <input type="text" placeholder="Search here..." @bind="EmployeeSearchText" @bind:event="oninput" @bind:after="OnSearchChanged"
                               class="w-60 rounded-lg border border-gray-300 py-2 pl-10 pr-3 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400" />
                    </div>

                    <select @bind="EmployeeRoleFilter" @bind:after="OnFilterChanged" class="rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                        <option value="">All Roles</option>
                        @foreach (var role in AvailableRoles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>

                    <select @bind="EmployeeStatusFilter" @bind:after="OnFilterChanged" class="rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                        <option value="">All Status</option>
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                </div>

                <div class="flex items-center gap-3">
                    <button @onclick="ClearEmployeeFilters" class="flex items-center gap-2 rounded-full bg-gray-500 px-4 py-2 font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg" style="font-size: 13px;">
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                        Clear
                    </button>
                    <button @onclick="NavigateToAddEmployee" class="rounded-full bg-blue-600 px-4 py-2 text-sm font-medium text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg">
                        + Add Employee
                    </button>
                </div>
            </div>
        </div>

        <!-- Table -->
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm">
                <thead class="bg-gray-100 font-semibold text-gray-600">
                    <tr>
                        <th class="px-4 py-3 text-left">ID</th>
                        <th class="px-4 py-3 text-left">Name</th>
                        <th class="px-4 py-3 text-left">Address</th>
                        <th class="px-4 py-3 text-left">Contact No.</th>
                        <th class="px-4 py-3 text-left">Email</th>
                        <th class="px-4 py-3 text-left">Role</th>
                        <th class="px-4 py-3 text-left">Status</th>
                        <th class="px-4 py-3 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y">
                    @if (IsLoading)
                    {
                        <tr>
                            <td colspan="8" class="px-4 py-8 text-center text-gray-500">Loading employees...</td>
                        </tr>
                    }
                    else if (!FilteredEmployees.Any())
                    {
                        <tr>
                            <td colspan="8" class="px-4 py-8 text-center text-gray-500">No employees found.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var emp in FilteredEmployees)
                        {
                            <tr class="transition hover:bg-gray-50">
                                <td class="px-4 py-3">@emp.system_ID</td>
                                <td class="px-4 py-3">@emp.FullName</td>
                                <td class="px-4 py-3">-</td>
                                <td class="px-4 py-3">@emp.contact_num</td>
                                <td class="px-4 py-3">@emp.email</td>
                                <td class="px-4 py-3">@emp.role</td>
                                <td class="px-4 py-3">
                                    @if (emp.status == "Active")
                                    {
                                        <button @onclick="() => OpenInactiveModal(emp)" class="cursor-pointer rounded-md bg-green-100 px-3 py-1 text-xs font-medium text-green-700 transition-colors hover:bg-green-200">
                                            Active
                                        </button>
                                    }
                                    else
                                    {
                                        <button @onclick="() => SetEmployeeActive(emp)" class="cursor-pointer rounded-md bg-red-100 px-3 py-1 text-xs font-medium text-red-700 transition-colors hover:bg-red-200">
                                            Inactive
                                        </button>
                                    }
                                </td>
                            <td class="flex items-center justify-center px-4 py-3">
                                <!-- View Button -->
                                <button class="flex items-center justify-center rounded-lg bg-blue-50 p-2 text-blue-400 transition hover:bg-blue-100">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                </button>
                            </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- Footer with Pagination -->
        <div class="flex items-center justify-between border-t border-gray-200 bg-gray-50 px-4 py-3 text-sm text-gray-600">
            <span>@($"{FilteredEmployees.Count()} of {AllEmployees.Count()} employees")</span>
            <div class="flex items-center gap-2">
                <button class="rounded-md px-3 py-1 text-xs text-white" style="background-color: #0E335D;">1</button>
                <button class="rounded-md px-3 py-1 text-xs text-gray-600 hover:bg-gray-200">2</button>
                <button class="rounded-md px-3 py-1 text-xs text-gray-600 hover:bg-gray-200">3</button>
                <span>...</span>
                <button class="rounded-md px-3 py-1 text-xs text-gray-600 hover:bg-gray-200">10</button>
                <span class="ml-4">Show</span>
                <select class="rounded-lg border border-gray-300 bg-white px-2 py-1 text-xs text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                    <option>9 rows</option>
                    <option>20 rows</option>
                </select>
            </div>
        </div>
    </div>
</div>

<!-- Inactive Reason Modal -->
@if (ShowInactiveModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" @onclick="CloseInactiveModal">
        <div class="w-full max-w-md rounded-2xl bg-white shadow-xl overflow-hidden" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="flex items-center justify-between rounded-t-2xl" style="background-color: #e65353; padding: 12px 24px;">
                <h3 class="text-lg font-semibold text-white" style="margin: 0;">Make Employee Inactive</h3>
                <button @onclick="CloseInactiveModal" class="text-white hover:text-gray-200" style="background: transparent; border: none; cursor: pointer; padding: 0; margin: 0;">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Modal Body -->
            <div class="rounded-b-2xl bg-white" style="padding: 24px;">
                <div style="margin: 0 0 20px 0;">
                    <p class="text-sm text-gray-700" style="margin: 0 0 8px 0; line-height: 1.5;">
                        You are about to make <span class="font-semibold">@SelectedEmployee?.FullName</span> inactive.
                    </p>
                    <p class="text-sm text-gray-600" style="margin: 0 0 16px 0;">Please provide a reason for this action:</p>
                    <label class="block text-sm font-medium text-gray-700" style="margin: 0 0 8px 0;">
                        Reason <span style="color: #e65353;">*</span>
                    </label>
                    <textarea @bind="InactiveReason" 
                             rows="4"
                             placeholder="Enter the reason for making this employee inactive..."
                             class="w-full rounded-lg border border-gray-300 text-sm text-gray-700 outline-none"
                             style="padding: 8px 12px; margin: 0;"
                             onfocus="this.style.borderColor='#e65353'; this.style.boxShadow='0 0 0 2px rgba(230, 83, 83, 0.2)';"
                             onblur="this.style.borderColor='#d1d5db'; this.style.boxShadow='none';"
                             required></textarea>
                </div>
                <div class="flex justify-end" style="border-top: 1px solid #e5e7eb; padding-top: 16px; margin-top: 20px;">
                    <button type="button" @onclick="ConfirmInactive" 
                            disabled="@(string.IsNullOrWhiteSpace(InactiveReason))"
                            class="rounded-full text-white hover:opacity-90 disabled:bg-gray-200 disabled:text-gray-500 disabled:cursor-not-allowed text-sm font-medium transition-all"
                            style="background-color: #e65353; padding: 10px 24px; margin: 0; border: none; cursor: pointer;">
                        Confirm
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Employee> AllEmployees { get; set; } = new();
    private IEnumerable<Employee> FilteredEmployees { get; set; } = new List<Employee>();
    private List<string> AvailableRoles { get; set; } = new();
    private bool IsLoading { get; set; } = true;

    private bool ShowInactiveModal { get; set; } = false;
    private Employee? SelectedEmployee { get; set; }
    private string InactiveReason { get; set; } = string.Empty;
    
    // Filter variables
    private string EmployeeSearchText { get; set; } = "";
    private string EmployeeRoleFilter { get; set; } = "";
    private string EmployeeStatusFilter { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        NavigationManager.LocationChanged += OnLocationChanged;
        await LoadEmployeesAsync();
        await LoadRolesAsync();
    }

    private async void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        // Reload employees when navigating to this page (but not when going to add-employee)
        if (e.Location.Contains("/human-resource") && !e.Location.Contains("/add-employee"))
        {
            await InvokeAsync(async () =>
            {
                await LoadEmployeesAsync();
                StateHasChanged();
            });
        }
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    private async Task LoadEmployeesAsync()
    {
        try
        {
            IsLoading = true;
            StateHasChanged();
            
            var employees = await EmployeeService.GetAllEmployeesAsync();
            AllEmployees = employees.ToList();
            ApplyFilters();
            
            System.Diagnostics.Debug.WriteLine($"Loaded {AllEmployees.Count} employees from database");
        }
        catch (Exception ex)
        {
            // Log error - in production, use proper logging
            System.Diagnostics.Debug.WriteLine($"Error loading employees: {ex.Message}");
            System.Diagnostics.Debug.WriteLine($"Stack trace: {ex.StackTrace}");
            AllEmployees = new List<Employee>();
            FilteredEmployees = new List<Employee>();
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadRolesAsync()
    {
        try
        {
            AvailableRoles = (await EmployeeService.GetDistinctRolesAsync()).ToList();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading roles: {ex.Message}");
            AvailableRoles = new List<string>();
        }
    }

    private void ApplyFilters()
    {
        var filtered = AllEmployees.AsEnumerable();

        // Apply search filter
        if (!string.IsNullOrWhiteSpace(EmployeeSearchText))
        {
            var searchLower = EmployeeSearchText.ToLowerInvariant();
            filtered = filtered.Where(e => 
                e.FullName.ToLowerInvariant().Contains(searchLower) ||
                e.email.ToLowerInvariant().Contains(searchLower) ||
                e.system_ID.ToLowerInvariant().Contains(searchLower) ||
                e.contact_num.Contains(searchLower)
            );
        }

        // Apply role filter
        if (!string.IsNullOrWhiteSpace(EmployeeRoleFilter))
        {
            filtered = filtered.Where(e => e.role == EmployeeRoleFilter);
        }

        // Apply status filter
        if (!string.IsNullOrWhiteSpace(EmployeeStatusFilter))
        {
            filtered = filtered.Where(e => e.status == EmployeeStatusFilter);
        }

        FilteredEmployees = filtered.ToList();
    }

    private void OnSearchChanged()
    {
        ApplyFilters();
        StateHasChanged();
    }

    private void OnFilterChanged()
    {
        ApplyFilters();
        StateHasChanged();
    }

    private void NavigateToAddEmployee()
    {
        NavigationManager.NavigateTo("/human-resource/add-employee");
    }

    private void OpenInactiveModal(Employee employee)
    {
        SelectedEmployee = employee;
        InactiveReason = string.Empty;
        ShowInactiveModal = true;
    }

    private void CloseInactiveModal()
    {
        ShowInactiveModal = false;
        SelectedEmployee = null;
        InactiveReason = string.Empty;
    }

    private async Task ConfirmInactive()
    {
        if (SelectedEmployee != null && !string.IsNullOrWhiteSpace(InactiveReason))
        {
            try
            {
                var success = await EmployeeService.UpdateEmployeeStatusAsync(
                    SelectedEmployee.employee_ID, 
                    "Inactive", 
                    InactiveReason
                );

                if (success)
                {
                    // Reload employees to get updated data
                    await LoadEmployeesAsync();
                    CloseInactiveModal();
                }
                else
                {
                    // Handle error - in production, show user-friendly message
                    System.Diagnostics.Debug.WriteLine("Failed to update employee status");
                }
            }
            catch (Exception ex)
            {
                System.Diagnostics.Debug.WriteLine($"Error updating employee status: {ex.Message}");
            }
        }
    }

    private async Task SetEmployeeActive(Employee employee)
    {
        try
        {
            var success = await EmployeeService.UpdateEmployeeStatusAsync(
                employee.employee_ID, 
                "Active", 
                null
            );

            if (success)
            {
                // Reload employees to get updated data
                await LoadEmployeesAsync();
            }
            else
            {
                // Handle error - in production, show user-friendly message
                System.Diagnostics.Debug.WriteLine("Failed to update employee status");
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error updating employee status: {ex.Message}");
        }
    }

    private void ClearEmployeeFilters()
    {
        EmployeeSearchText = "";
        EmployeeRoleFilter = "";
        EmployeeStatusFilter = "";
        ApplyFilters();
        StateHasChanged();
    }
}
