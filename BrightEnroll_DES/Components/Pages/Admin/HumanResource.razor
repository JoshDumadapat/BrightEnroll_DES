    private void NavigateToAddEmployee()
    {
        NavigationManager.NavigateTo("/human-resource/add-employee");
    }

    private void OpenInactiveModal(Employee employee)
    {
        SelectedEmployee = employee;
        InactiveReason = string.Empty;
        ShowInactiveModal = true;
    }

    private void CloseInactiveModal()
    {
        ShowInactiveModal = false;
        SelectedEmployee = null;
        InactiveReason = string.Empty;
    }

    private void ConfirmInactive()
    {
        if (SelectedEmployee != null && !string.IsNullOrWhiteSpace(InactiveReason))
        {
            // TODO: Save the inactive reason to the database
            SelectedEmployee.Status = "Inactive";
            // TODO: Log the reason: SelectedEmployee.InactiveReason = InactiveReason;
            CloseInactiveModal();
            StateHasChanged();
        }
    }

    private void SetEmployeeActive(Employee employee)
    {
        // Directly set to active without modal
        employee.Status = "Active";
        // TODO: Clear inactive reason if stored
        StateHasChanged();
    }

    public class Employee
