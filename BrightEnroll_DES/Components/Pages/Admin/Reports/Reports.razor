@page "/reports"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Components.Pages.Admin.Reports.ReportsComponents
@using BrightEnroll_DES.Services.RoleBase
@inject IAuthorizationService AuthorizationService

<PageTitle>Reports</PageTitle>

<RoleAuthorizeView RequiredPermission="@Permissions.ViewReports">

<div class="text-gray-800">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Reports & Analytics</h1>
    
    <!-- Report Categories -->
    <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
        <div class="cursor-pointer rounded-lg border border-gray-200 bg-white p-6 shadow transition-all hover:shadow-lg" @onclick='() => SetActiveReport("enrollment")'>
            <div class="flex items-center gap-3">
                <div class="rounded-full bg-blue-100 p-3">
                    <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800">Enrollment</h3>
                    <p class="text-xs text-gray-600">Student enrollment reports</p>
                </div>
            </div>
        </div>
        
        <div class="cursor-pointer rounded-lg border border-gray-200 bg-white p-6 shadow transition-all hover:shadow-lg" @onclick='() => SetActiveReport("academic")'>
            <div class="flex items-center gap-3">
                <div class="rounded-full bg-green-100 p-3">
                    <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800">Academic</h3>
                    <p class="text-xs text-gray-600">Grades and performance</p>
                </div>
            </div>
        </div>
        
        <div class="cursor-pointer rounded-lg border border-gray-200 bg-white p-6 shadow transition-all hover:shadow-lg" @onclick='() => SetActiveReport("attendance")'>
            <div class="flex items-center gap-3">
                <div class="rounded-full bg-orange-100 p-3">
                    <svg class="h-6 w-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800">Attendance</h3>
                    <p class="text-xs text-gray-600">Attendance statistics</p>
                </div>
            </div>
        </div>
        
        <div class="cursor-pointer rounded-lg border border-gray-200 bg-white p-6 shadow transition-all hover:shadow-lg" @onclick='() => SetActiveReport("financial")'>
            <div class="flex items-center gap-3">
                <div class="rounded-full bg-yellow-100 p-3">
                    <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800">Financial</h3>
                    <p class="text-xs text-gray-600">Payment and fees</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Report Content -->
    <div class="overflow-hidden rounded-xl bg-white shadow">
        @if (activeReport == "enrollment")
        {
            <EnrollmentReports />
        }
        else if (activeReport == "academic")
        {
            <AcademicReports />
        }
        else if (activeReport == "attendance")
        {
            <AttendanceReports />
        }
        else if (activeReport == "financial")
        {
            <FinancialReports />
        }
        else
        {
            <div class="p-12 text-center">
                <p class="text-gray-500">Select a report category above to view reports.</p>
            </div>
        }
    </div>
</div>

@code {
    private string activeReport = "";

    private void SetActiveReport(string report)
    {
        activeReport = report;
    }
}

</RoleAuthorizeView>

