@namespace BrightEnroll_DES.Components.Pages.Admin.Reports.ReportsComponents

<div class="p-6">
    <div class="mb-6 rounded-lg border border-gray-200 bg-gray-50 p-4">
        <h2 class="mb-4 text-lg font-bold text-gray-800">Attendance Reports</h2>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">From Date:</label>
                <input type="date" class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">To Date:</label>
                <input type="date" class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div class="flex items-end">
                <button class="w-full rounded-lg bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg">
                    Generate
                </button>
            </div>
        </div>
    </div>

    <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-4">
        <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
            <p class="text-sm text-gray-600">Overall Attendance</p>
            <p class="text-2xl font-bold text-green-600">92%</p>
        </div>
        <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
            <p class="text-sm text-gray-600">Total Present</p>
            <p class="text-2xl font-bold text-blue-600">1,245</p>
        </div>
        <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
            <p class="text-sm text-gray-600">Total Absent</p>
            <p class="text-2xl font-bold text-red-600">105</p>
        </div>
        <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
            <p class="text-sm text-gray-600">Total Late</p>
            <p class="text-2xl font-bold text-orange-600">48</p>
        </div>
    </div>
</div>

