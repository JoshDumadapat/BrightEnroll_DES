@namespace BrightEnroll_DES.Components.Pages.Admin.Reports.ReportsComponents

<div class="p-6">
    <div class="mb-6 rounded-lg border border-gray-200 bg-gray-50 p-4">
        <h2 class="mb-4 text-lg font-bold text-gray-800">Academic Performance Reports</h2>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">School Year:</label>
                <select class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                    <option value="2024-2025">2024-2025</option>
                </select>
            </div>
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">Section:</label>
                <select class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                    <option value="">All Sections</option>
                </select>
            </div>
            <div class="flex items-end">
                <button class="w-full rounded-lg bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg">
                    Generate
                </button>
            </div>
        </div>
    </div>

    <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-3">
        <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
            <p class="text-sm text-gray-600">Average Grade</p>
            <p class="text-2xl font-bold text-blue-600">87.5</p>
        </div>
        <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
            <p class="text-sm text-gray-600">Passing Rate</p>
            <p class="text-2xl font-bold text-green-600">94%</p>
        </div>
        <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
            <p class="text-sm text-gray-600">Honor Students</p>
            <p class="text-2xl font-bold text-yellow-600">45</p>
        </div>
    </div>
</div>

