@page "/human-resource"
@layout Components.Layout.MainLayout
@inject NavigationManager NavigationManager
@inject BrightEnroll_DES.Services.Business.HR.EmployeeService EmployeeService
@inject BrightEnroll_DES.Services.Authentication.IAuthService AuthService
@inject ILoadingService LoadingService
@inject IJSRuntime JSRuntime
@using BrightEnroll_DES.Components
@using BrightEnroll_DES.Services.Business.HR
@using BrightEnroll_DES.Services
@using BrightEnroll_DES.Components.Pages.Admin.HumanResource.HRComponents
@using BrightEnroll_DES.Components.Pages.Admin.HumanResource.HRCS
@using BrightEnroll_DES.Components.Pages.Admin

<PageTitle>Human Resource</PageTitle>

<!-- Toast Notification -->
<ToastNotification Show="@showToast" Message="@toastMessage" Type="@toastType" OnClose="CloseToast" Duration="4000" />

<div class="text-gray-800 px-2 sm:px-4 lg:px-6">
    <h1 class="mb-4 sm:mb-6 text-xl sm:text-2xl font-bold text-gray-800">Human Resource</h1>
    <!-- Filter, Table, and Pagination Card -->
    <div class="overflow-hidden rounded-xl bg-white shadow-lg">
        <!-- Filters -->
        <div class="border-b border-gray-200 px-4 py-4 sm:px-6">
            <label class="mb-3 block text-sm font-bold text-gray-700">Filter:</label>
            <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
                    <div class="group relative flex items-center w-full sm:w-auto">
                        <span class="absolute left-3 flex items-center justify-center z-10">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </span>
                        <input type="text" placeholder="Search here..." @bind="EmployeeSearchText" @bind:after="OnSearchChanged"
                               class="w-full sm:w-60 rounded-lg border border-gray-300 py-2 pl-10 pr-3 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400" />
                        <span class="tooltip-delay">Search employees by name, ID, email, or contact number</span>
                    </div>

                    <div class="group relative">
                        <select @bind="EmployeeRoleFilter" @bind:after="OnFilterChanged" class="w-full sm:w-auto rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                            <option value="">Role</option>
                            @foreach (var role in AvailableRoles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <span class="tooltip-delay">Filter employees by their role</span>
                    </div>

                    <div class="group relative">
                        <select @bind="EmployeeStatusFilter" @bind:after="OnFilterChanged" class="w-full sm:w-auto rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                            <option value="">Status</option>
                            @foreach (var status in AvailableStatuses)
                            {
                                <option value="@status">@status</option>
                            }
                        </select>
                        <span class="tooltip-delay">Filter employees by their employment status</span>
                    </div>
                </div>

                <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
                    <button @onclick="ClearEmployeeFilters" class="flex w-full items-center justify-center gap-2 rounded-lg bg-gray-500 px-4 py-2 text-xs sm:text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg whitespace-nowrap sm:w-auto">
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                        Clear
                    </button>
                    <button @onclick="NavigateToAddEmployee" class="w-full rounded-lg bg-blue-600 px-4 py-2 text-xs sm:text-sm font-medium text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg whitespace-nowrap sm:w-auto">
                        + Add Employee
                    </button>
                </div>
            </div>
        </div>

        <!-- Table -->
        <div class="overflow-x-auto -mx-1 sm:mx-0">
            <div class="inline-block min-w-full align-middle">
                <div class="overflow-hidden">
                    <table class="min-w-full divide-y divide-gray-200 text-sm">
                        <thead class="bg-gray-100">
                            <tr>
                                <th scope="col" class="px-4 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider whitespace-nowrap min-w-[100px] sm:min-w-[120px]">
                                    ID
                                </th>
                                <th scope="col" class="px-4 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider whitespace-nowrap min-w-[120px] sm:min-w-[150px]">
                                    Name
                                </th>
                                <th scope="col" class="px-4 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider min-w-[150px] sm:min-w-[200px]">
                                    Address
                                </th>
                                <th scope="col" class="px-4 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider whitespace-nowrap min-w-[110px] sm:min-w-[130px]">
                                    Contact No.
                                </th>
                                <th scope="col" class="px-4 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider min-w-[150px] sm:min-w-[180px]">
                                    Email
                                </th>
                                <th scope="col" class="px-4 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider whitespace-nowrap min-w-[80px] sm:min-w-[100px]">
                                    Role
                                </th>
                                <th scope="col" class="px-4 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider whitespace-nowrap min-w-[80px] sm:min-w-[90px]">
                                    Status
                                </th>
                                <th scope="col" class="px-4 py-4 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider whitespace-nowrap min-w-[80px] sm:min-w-[100px]">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @if (isLoading)
                            {
                                <tr>
                                    <td colspan="8" class="px-4 py-12 text-center text-gray-500">
                                        <div class="flex flex-col items-center justify-center">
                                            <svg class="animate-spin h-8 w-8 text-gray-400 mb-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                            </svg>
                                            <span>Loading employees...</span>
                                        </div>
                                    </td>
                                </tr>
                            }
                            else if (!Employees.Any())
                            {
                                <tr>
                                    <td colspan="8" class="px-4 py-12 text-center text-gray-500">No employees found.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var emp in PaginatedEmployees)
                                {
                                    <tr class="transition-colors duration-150 hover:bg-gray-50">
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900 break-words max-w-[120px] sm:max-w-none">@emp.Id</div>
                                        </td>
                                        <td class="px-4 py-4">
                                            <div class="text-sm text-gray-900 break-words max-w-[150px] sm:max-w-none">@emp.Name</div>
                                        </td>
                                        <td class="px-4 py-4">
                                            <div class="text-sm text-gray-900 break-words line-clamp-2 max-w-[200px] sm:max-w-none">@emp.Address</div>
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-900 break-words">@emp.Contact</div>
                                        </td>
                                        <td class="px-4 py-4">
                                            <div class="text-sm text-gray-900 break-words line-clamp-2 max-w-[180px] sm:max-w-none">@emp.Email</div>
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-900 break-words">@emp.Role</div>
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap">
                                            @if (emp.Status == "Active")
                                            {
                                                <button @onclick="() => OpenInactiveModal(emp)" class="inline-flex items-center px-2.5 py-1 rounded-md text-[11px] font-medium text-green-700 bg-green-100 hover:bg-green-200 transition-colors duration-150 whitespace-nowrap">
                                                    Active
                                                </button>
                                            }
                                            else
                                            {
                                                <button @onclick="async () => await SetEmployeeActive(emp)" class="inline-flex items-center px-2.5 py-1 rounded-md text-[11px] font-medium text-red-700 bg-red-100 hover:bg-red-200 transition-colors duration-150 whitespace-nowrap">
                                                    Inactive
                                                </button>
                                            }
                                        </td>
                                        <td class="px-4 py-4 whitespace-nowrap text-center">
                                            <div class="flex items-center justify-center">
                                                <!-- View Button -->
                                                <div class="group relative">
                                                    <button @onclick="() => ViewEmployee(emp)" class="flex items-center gap-1.5 rounded-lg bg-blue-50 px-3 py-1.5 text-xs font-medium text-blue-400 transition-colors hover:bg-blue-100">
                                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                                        </svg>
                                                        <span class="hidden sm:inline">View</span>
                                                    </button>
                                                    <span class="tooltip-delay">View employee details</span>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Footer with Pagination -->
        <Pagination TotalItems="@FilteredEmployees.Count" 
                    CurrentPage="@CurrentPage" 
                    RowsPerPage="@RowsPerPage"
                    ItemName="employees"
                    OnPageChanged="HandlePageChanged"
                    OnRowsPerPageChanged="HandleRowsPerPageChanged" />
    </div>
</div>

<!-- Inactive Reason Modal -->
@if (ShowInactiveModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" @onclick="HandleBackdropClick">
        <div id="inactive-employee-modal" class="w-full max-w-md overflow-hidden rounded-2xl bg-white shadow-xl" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="flex items-center justify-between rounded-t-2xl" style="background-color: #f87171; padding: 12px 24px;">
                <h3 class="text-lg font-semibold text-white" style="margin: 0;">Make Employee Inactive</h3>
                <button @onclick="CloseInactiveModal" class="text-white hover:text-gray-200" style="background: transparent; border: none; cursor: pointer; padding: 0; margin: 0;">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Modal Body -->
            <div class="rounded-b-2xl bg-white" style="padding: 24px;">
                <div style="margin: 0 0 20px 0;">
                    <p class="text-sm text-gray-700" style="margin: 0 0 8px 0; line-height: 1.5;">
                        You are about to make <span class="font-semibold">@SelectedEmployee?.Name</span> inactive.
                    </p>
                    <p class="text-sm text-gray-600" style="margin: 0 0 12px 0;">Please provide a reason for this action:</p>
                    
                    <!-- Show who is making the change -->
                    <div class="mb-4 p-3 rounded-lg bg-gray-50 border border-gray-200">
                        <p class="text-xs text-gray-600 mb-1">Inactivating user:</p>
                        <p class="text-sm font-semibold text-gray-800">@GetCurrentUserDisplayName()</p>
                        <p class="text-xs text-gray-500 mt-1">ID: @GetCurrentUserId()</p>
                    </div>

                    <label class="block text-sm font-medium text-gray-700" style="margin: 0 0 8px 0;">
                        Reason <span style="color: #f87171;">*</span>
                    </label>
                    <textarea @bind="InactiveReason" 
                             rows="4"
                             placeholder="Enter the reason for making this employee inactive..."
                             class="w-full rounded-lg border border-gray-300 text-sm text-gray-700 outline-none"
                             style="padding: 8px 12px; margin: 0;"
                             onfocus="this.style.borderColor='#f87171'; this.style.boxShadow='0 0 0 2px rgba(248, 113, 113, 0.2)';"
                             onblur="this.style.borderColor='#d1d5db'; this.style.boxShadow='none';"
                             required></textarea>
                </div>
                <div class="flex justify-end" style="border-top: 1px solid #e5e7eb; padding-top: 16px; margin-top: 20px;">
                    <button type="button" @onclick="ConfirmInactive" 
                            disabled="@(string.IsNullOrWhiteSpace(InactiveReason) || isUpdatingStatus)"
                            class="rounded-lg text-sm font-medium text-white transition-all hover:opacity-90 disabled:cursor-not-allowed disabled:bg-gray-200 disabled:text-gray-500"
                            style="background-color: #f87171; padding: 10px 24px; margin: 0; border: none; cursor: pointer;">
                        @if (isUpdatingStatus)
                        {
                            <span class="inline-flex items-center">
                                <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                Updating...
                            </span>
                        }
                        else
                        {
                            <span>Confirm</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<EmployeeDisplayDto> Employees = new();
    private bool isLoading = true;
    
    private bool ShowInactiveModal { get; set; } = false;
    private EmployeeDisplayDto? SelectedEmployee { get; set; }
    private string InactiveReason { get; set; } = string.Empty;
    private bool isUpdatingStatus = false;
    
    // Filter variables
    private string EmployeeSearchText { get; set; } = "";
    private string EmployeeRoleFilter { get; set; } = "";
    private string EmployeeStatusFilter { get; set; } = "";
    
    // Pagination state
    private int CurrentPage { get; set; } = 1;
    private int RowsPerPage { get; set; } = 10;
    
    // Toast notification
    private bool showToast = false;
    private string toastMessage = "";
    private ToastType toastType = ToastType.Success;

    // Computed property for filtered employees
    private List<EmployeeDisplayDto> FilteredEmployees
    {
        get
        {
            var filtered = Employees.AsEnumerable();

            // Search filter
            if (!string.IsNullOrWhiteSpace(EmployeeSearchText))
            {
                var searchLower = EmployeeSearchText.ToLower();
                filtered = filtered.Where(e => 
                    e.Name.ToLower().Contains(searchLower) ||
                    e.Email.ToLower().Contains(searchLower) ||
                    e.Id.Contains(searchLower) ||
                    e.Contact.Contains(searchLower) ||
                    e.Role.ToLower().Contains(searchLower)
                );
            }

            // Role filter
            if (!string.IsNullOrWhiteSpace(EmployeeRoleFilter))
            {
                filtered = filtered.Where(e => e.Role.Equals(EmployeeRoleFilter, StringComparison.OrdinalIgnoreCase));
            }

            // Status filter
            if (!string.IsNullOrWhiteSpace(EmployeeStatusFilter))
            {
                filtered = filtered.Where(e => e.Status.Equals(EmployeeStatusFilter, StringComparison.OrdinalIgnoreCase));
            }

            return filtered.ToList();
        }
    }

    // Computed property for paginated employees
    private List<EmployeeDisplayDto> PaginatedEmployees
    {
        get
        {
            var filtered = FilteredEmployees;
            return filtered
                .Skip((CurrentPage - 1) * RowsPerPage)
                .Take(RowsPerPage)
                .ToList();
        }
    }

    // Computed properties for filter dropdowns
    private List<string> AvailableRoles
    {
        get
        {
            return Employees
                .Select(e => e.Role)
                .Where(r => !string.IsNullOrWhiteSpace(r))
                .Distinct()
                .OrderBy(r => r)
                .ToList();
        }
    }

    private List<string> AvailableStatuses
    {
        get
        {
            return Employees
                .Select(e => e.Status)
                .Where(s => !string.IsNullOrWhiteSpace(s))
                .Distinct()
                .OrderBy(s => s)
                .ToList();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        // Add a small delay to ensure any pending DbContext operations from previous page complete
        // This prevents concurrency errors when navigating back from employee profile
        await Task.Delay(100);
        
        // Check for toast parameter in query string
        var uri = new Uri(NavigationManager.Uri);
        var query = ParseQueryString(uri.Query);
        
        bool hasSuccessToast = false;
        if (query.TryGetValue("toast", out var toastValue))
        {
            // Explicitly ignore cancel transactions - no toast should be shown
            if (toastValue == "employee_cancelled")
            {
                // Clean up URL immediately and do nothing - cancel transactions don't show toasts
                NavigationManager.NavigateTo("/human-resource", forceLoad: false);
                hasSuccessToast = false;
            }
            else if (toastValue == "employee_added")
            {
                toastMessage = "Employee has been added successfully!";
                toastType = ToastType.Success;
                showToast = true;
                hasSuccessToast = true;
                StateHasChanged();
            }
        }

        // Load employees inline (no full-screen loading - uses table loading indicator)
        await LoadEmployeesAsync(hasSuccessToast);
    }

    protected override Task OnParametersSetAsync()
    {
        // Check for toast parameter when parameters change (e.g., query string changes)
        var uri = new Uri(NavigationManager.Uri);
        var query = ParseQueryString(uri.Query);
        
        if (query.TryGetValue("toast", out var toastValue))
        {
            if (toastValue == "employee_added" && !showToast)
            {
                toastMessage = "Employee has been added successfully!";
                toastType = ToastType.Success;
                showToast = true;
                StateHasChanged();
            }
        }
        
        return Task.CompletedTask;
    }

    private async Task LoadEmployeesAsync(bool preserveSuccessToast = false, int retryCount = 0)
    {
        const int maxRetries = 3;
        const int retryDelayMs = 200;

        try
        {
            isLoading = true;
            StateHasChanged();
            
            // Add a small delay on retry to allow DbContext to be available
            if (retryCount > 0)
            {
                await Task.Delay(retryDelayMs * retryCount);
            }
            
            Employees = await EmployeeService.GetAllEmployeesAsync();
        }
        catch (Exception ex)
        {
            // Check if this is a DbContext concurrency error
            bool isConcurrencyError = ex.Message.Contains("DbContext", StringComparison.OrdinalIgnoreCase) ||
                                     ex.Message.Contains("second operation", StringComparison.OrdinalIgnoreCase) ||
                                     ex.Message.Contains("threading", StringComparison.OrdinalIgnoreCase) ||
                                     ex.Message.Contains("concurrently", StringComparison.OrdinalIgnoreCase);

            // Retry on concurrency errors
            if (isConcurrencyError && retryCount < maxRetries)
            {
                await LoadEmployeesAsync(preserveSuccessToast, retryCount + 1);
                return;
            }

            if (!preserveSuccessToast)
            {
                toastMessage = ErrorMessageHelper.ToHumanReadable($"Error loading employees: {ex.Message}");
                toastType = ToastType.Error;
                showToast = true;
            }
            Employees = new List<EmployeeDisplayDto>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Check for toast parameter on first render
            var uri = new Uri(NavigationManager.Uri);
            var query = ParseQueryString(uri.Query);
            
            if (query.TryGetValue("toast", out var toastValue))
            {
                if (toastValue == "employee_added")
                {
                    // Only set if not already set (avoid duplicate)
                    if (!showToast)
                    {
                        toastMessage = "Employee has been added successfully!";
                        toastType = ToastType.Success;
                        showToast = true;
                        StateHasChanged();
                    }
                    
                    // Clean up query parameter from URL after a delay to ensure toast is shown
                    await Task.Delay(3000);
                    if (NavigationManager.Uri.Contains("toast=employee_added"))
                    {
                        NavigationManager.NavigateTo("/human-resource", forceLoad: false);
                    }
                }
            }
        }
    }

    private Dictionary<string, string> ParseQueryString(string queryString)
    {
        var query = new Dictionary<string, string>();
        
        if (string.IsNullOrWhiteSpace(queryString))
            return query;
        
        // Remove the leading '?'
        if (queryString.StartsWith("?"))
            queryString = queryString.Substring(1);
        
        var pairs = queryString.Split('&');
        foreach (var pair in pairs)
        {
            var parts = pair.Split('=');
            if (parts.Length == 2)
            {
                var key = Uri.UnescapeDataString(parts[0]);
                var value = Uri.UnescapeDataString(parts[1]);
                query[key] = value;
            }
        }
        
        return query;
    }

    private void CloseToast()
    {
        showToast = false;
        toastMessage = "";
        StateHasChanged();
    }

    private void NavigateToAddEmployee()
    {
        NavigationManager.NavigateTo("/human-resource/add-employee");
    }

    private void OpenInactiveModal(EmployeeDisplayDto employee)
    {
        SelectedEmployee = employee;
        InactiveReason = string.Empty;
        ShowInactiveModal = true;
    }

    private async Task HandleBackdropClick()
    {
        // If no reason entered, allow closing
        if (string.IsNullOrWhiteSpace(InactiveReason))
        {
            CloseInactiveModal();
        }
        else
        {
            // If reason exists, play sound and shake modal
            try
            {
                await JSRuntime.InvokeVoidAsync("handleModalBackdropClick", "inactive-employee-modal");
            }
            catch (Exception)
            {
            }
        }
    }

    private void CloseInactiveModal()
    {
        ShowInactiveModal = false;
        SelectedEmployee = null;
        InactiveReason = string.Empty;
    }

    private async Task ConfirmInactive()
    {
        if (SelectedEmployee == null || string.IsNullOrWhiteSpace(InactiveReason))
            return;

        var currentUser = AuthService.CurrentUser;
        if (currentUser == null)
        {
            toastMessage = "You must be logged in to perform this action.";
            toastType = ToastType.Error;
            showToast = true;
            StateHasChanged();
            return;
        }

        try
        {
            isUpdatingStatus = true;
            StateHasChanged();

            // Update status in database and log the change
            var success = await EmployeeService.UpdateUserStatusAsync(
                SelectedEmployee.UserId,
                "Inactive",
                currentUser.user_ID,
                InactiveReason
            );

            if (success)
            {
                // Update local state
                SelectedEmployee.Status = "Inactive";
                
                // Reload employees to get fresh data
                await LoadEmployeesAsync();
                
                toastMessage = $"Employee {SelectedEmployee.Name} has been set to Inactive.";
                toastType = ToastType.Success;
                showToast = true;
                
                CloseInactiveModal();
            }
            else
            {
                toastMessage = "Failed to update employee status. Please try again.";
                toastType = ToastType.Error;
                showToast = true;
            }
        }
        catch (Exception ex)
        {
            toastMessage = ErrorMessageHelper.ToHumanReadable($"Error updating employee status: {ex.Message}");
            toastType = ToastType.Error;
            showToast = true;
        }
        finally
        {
            isUpdatingStatus = false;
            StateHasChanged();
        }
    }

    private async Task SetEmployeeActive(EmployeeDisplayDto employee)
    {
        var currentUser = AuthService.CurrentUser;
        if (currentUser == null)
        {
            toastMessage = "You must be logged in to perform this action.";
            toastType = ToastType.Error;
            showToast = true;
            StateHasChanged();
            return;
        }

        try
        {
            // Update status in database and log the change (no reason needed for activation)
            var success = await EmployeeService.UpdateUserStatusAsync(
                employee.UserId,
                "Active",
                currentUser.user_ID,
                null
            );

            if (success)
            {
                // Reload employees to get fresh data
                await LoadEmployeesAsync();
                
                toastMessage = $"Employee {employee.Name} has been set to Active.";
                toastType = ToastType.Success;
                showToast = true;
            }
            else
            {
                toastMessage = "Failed to update employee status. Please try again.";
                toastType = ToastType.Error;
                showToast = true;
            }
        }
        catch (Exception ex)
        {
            toastMessage = ErrorMessageHelper.ToHumanReadable($"Error updating employee status: {ex.Message}");
            toastType = ToastType.Error;
            showToast = true;
        }
        
        StateHasChanged();
    }

    private string GetCurrentUserDisplayName()
    {
        var user = AuthService.CurrentUser;
        if (user == null) return "Unknown User";
        
        var nameParts = new List<string> { user.first_name };
        if (!string.IsNullOrWhiteSpace(user.mid_name))
            nameParts.Add(user.mid_name);
        nameParts.Add(user.last_name);
        if (!string.IsNullOrWhiteSpace(user.suffix))
            nameParts.Add(user.suffix);
        
        return string.Join(" ", nameParts);
    }

    private string GetCurrentUserId()
    {
        var user = AuthService.CurrentUser;
        return user?.system_ID ?? "N/A";
    }

