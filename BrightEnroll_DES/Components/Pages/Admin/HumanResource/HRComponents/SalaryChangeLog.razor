            StateHasChanged();
        }
    }

    private async Task ViewLogDetails(SalaryChangeLogDto entry)
    {
        try
        {
            // Load all history for this employee
            employeeHistoryList = await SalaryChangeRequestService.GetSalaryChangeLogAsync(entry.UserId);
            
            // Get initial salary from SalaryInfo if available (for employees registered before salary change requests)
            var initialSalaryInfo = await DbContext.SalaryInfos
                .Where(s => s.UserId == entry.UserId)
                .OrderBy(s => s.DateEffective)
                .ThenBy(s => s.SalaryId)
                .FirstOrDefaultAsync();
            
            // If we have an initial salary that's earlier than the first change log entry, add it
            if (initialSalaryInfo != null && employeeHistoryList.Any())
            {
                var firstChange = employeeHistoryList.OrderBy(h => h.EffectiveDate).ThenBy(h => h.RequestedAt).First();
                
                // Check if initial salary is different from the first change's previous salary
                // This means there was an initial salary set before any change requests
                if (initialSalaryInfo.DateEffective < firstChange.EffectiveDate && 
                    (initialSalaryInfo.BaseSalary != firstChange.PreviousBaseSalary || 
                     initialSalaryInfo.Allowance != firstChange.PreviousAllowance))
                {
                    // Create a synthetic entry for the initial salary
                    var initialTotal = initialSalaryInfo.BaseSalary + initialSalaryInfo.Allowance;
                    var initialEntry = new SalaryChangeLogDto
                    {
                        RecordId = 0, // No request ID for initial salary
                        UserId = entry.UserId,
                        EmployeeId = entry.EmployeeId,
                        EmployeeName = entry.EmployeeName,
                        Role = entry.Role,
                        PreviousBaseSalary = 0,
                        PreviousAllowance = 0,
                        PreviousTotalSalary = 0,
                        NewBaseSalary = initialSalaryInfo.BaseSalary,
                        NewAllowance = initialSalaryInfo.Allowance,
                        NewTotalSalary = initialTotal,
                        ChangeAmount = initialTotal,
                        ChangePercentage = 0, // Initial salary has no percentage change
                        CumulativeIncreasePercentage = 0,
                        EffectiveDate = initialSalaryInfo.DateEffective,
                        SchoolYear = initialSalaryInfo.SchoolYear,
                        Status = "Approved", // Initial salary is considered approved
                        ApproverName = null,
                        ApproverRole = null,
                        ApprovalDate = initialSalaryInfo.DateEffective,
                        Reason = "Initial Salary Assignment",
                        RejectionReason = null,
                        RequestedAt = initialSalaryInfo.DateEffective,
                        RequestedByName = "System",
                        IsInitialRegistration = true,
                        OriginalBaseSalary = initialSalaryInfo.BaseSalary
                    };
                    
                    employeeHistoryList.Add(initialEntry);
                }
            }
            
            selectedEmployeeHistory = entry;
            showEmployeeHistoryModal = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading employee history: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading employee history: {ex.Message}");
        }
    }

