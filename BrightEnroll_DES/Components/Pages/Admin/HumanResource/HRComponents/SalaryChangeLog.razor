                                        }
                                        else if (entry.Status == "Approved")
                                        {
                                            <span class="inline-flex items-center px-2.5 py-1 rounded-md text-[11px] font-medium text-green-700 bg-green-100">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center px-2.5 py-1 rounded-md text-[11px] font-medium text-red-700 bg-red-100">Rejected</span>
                                        }
                                    </td>
                                    <td class="px-4 py-3">
                                        <div class="text-sm text-gray-900">@entry.RequestedByName</div>
                                        <div class="text-xs text-gray-500">@entry.RequestedAt.ToString("MMM dd, yyyy")</div>
                                    </td>
                                    <td class="px-4 py-3">
                                        @if (!string.IsNullOrWhiteSpace(entry.ApproverName))
                                        {
                                            <div class="text-sm text-gray-900">@entry.ApproverName</div>
                                            @if (entry.ApprovalDate.HasValue)
                                            {
                                                <div class="text-xs text-gray-500">@entry.ApprovalDate.Value.ToString("MMM dd, yyyy")</div>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-sm text-gray-400">—</span>
                                        }
                                    </td>
                                    <td class="px-4 py-3">
                                        <div class="max-w-xs truncate text-sm text-gray-900" title="@(entry.Reason ?? entry.RejectionReason ?? "N/A")">
                                            @(string.IsNullOrWhiteSpace(entry.Reason) ? (string.IsNullOrWhiteSpace(entry.RejectionReason) ? "N/A" : $"Rejected: {entry.RejectionReason}") : entry.Reason)
                                        </div>
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="flex items-center justify-end gap-3 border-t border-gray-200 bg-gray-50 px-6 py-4">
                <button @onclick="ExportEmployeeHistory" disabled="@isExporting" class="rounded-lg bg-green-600 px-4 py-2 text-sm font-medium text-white hover:bg-green-700 disabled:opacity-50 flex items-center gap-2">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    @if (isExporting)
                    {
                        <span>Generating PDF...</span>
                    }
                    else
                    {
                        <span>Export as PDF</span>
                    }
                </button>
                <button @onclick="CloseEmployeeHistoryModal" class="rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    Close
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<SalaryChangeLogDto> allLogEntries = new();
    private bool isLoading = true;
    
    // Filter variables
    private string SearchText { get; set; } = "";
    private string StatusFilter { get; set; } = "";
    private string SchoolYearFilter { get; set; } = "";
    
    // Pagination state
    private int CurrentPage { get; set; } = 1;
    private int RowsPerPage { get; set; } = 10;
    
    // Available school years
    private List<string> AvailableSchoolYears { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadLog();
        await LoadSchoolYears();
    }

    private async Task LoadLog()
    {
        isLoading = true;
        try
        {
            allLogEntries = await SalaryChangeRequestService.GetSalaryChangeLogAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading salary change log: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadSchoolYears()
    {
        try
        {
            var schoolYearsList = await DbContext.SalaryChangeRequests
                .Select(r => r.SchoolYear)
                .Distinct()
                .ToListAsync();
            
            AvailableSchoolYears = schoolYearsList.OrderByDescending(sy => sy).ToList();
        }
        catch
        {
            AvailableSchoolYears = new List<string>();
        }
    }

    private List<SalaryChangeLogDto> FilteredLogEntries
    {
        get
        {
            var filtered = allLogEntries.AsEnumerable();

            // Search filter
            if (!string.IsNullOrWhiteSpace(SearchText))
            {
                var searchLower = SearchText.ToLower();
                filtered = filtered.Where(e => 
                    e.EmployeeName.ToLower().Contains(searchLower) ||
                    e.EmployeeId.ToLower().Contains(searchLower) ||
                    e.Role.ToLower().Contains(searchLower)
                );
            }

            // Status filter
            if (!string.IsNullOrWhiteSpace(StatusFilter))
            {
                filtered = filtered.Where(e => e.Status == StatusFilter);
            }

            // School year filter
            if (!string.IsNullOrWhiteSpace(SchoolYearFilter))
            {
                filtered = filtered.Where(e => e.SchoolYear == SchoolYearFilter);
            }

            return filtered.ToList();
        }
    }

    private List<SalaryChangeLogDto> PaginatedLogEntries
    {
        get
        {
            var filtered = FilteredLogEntries;
            return filtered
                .Skip((CurrentPage - 1) * RowsPerPage)
                .Take(RowsPerPage)
                .ToList();
        }
    }

    private void OnSearchChanged()
    {
        CurrentPage = 1;
        StateHasChanged();
    }

    private void OnFilterChanged()
    {
        CurrentPage = 1;
        StateHasChanged();
    }

    private void ClearFilters()
    {
        SearchText = "";
        StatusFilter = "";
        SchoolYearFilter = "";
        CurrentPage = 1;
        StateHasChanged();
    }

    private void HandlePageChanged(int page)
    {
        CurrentPage = page;
        StateHasChanged();
    }

    private void HandleRowsPerPageChanged(int rowsPerPage)
    {
        RowsPerPage = rowsPerPage;
        CurrentPage = 1;
        StateHasChanged();
    }

    // Export Modal State
