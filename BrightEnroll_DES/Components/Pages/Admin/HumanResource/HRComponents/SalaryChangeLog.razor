@using BrightEnroll_DES.Data
@using BrightEnroll_DES.Services.Business.HR
@using BrightEnroll_DES.Services.QuestPDF
@using BrightEnroll_DES.Services.Authentication
@using BrightEnroll_DES.Components
@using Microsoft.EntityFrameworkCore
@using Microsoft.JSInterop
@inject SalaryChangeRequestService SalaryChangeRequestService
@inject AppDbContext DbContext
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject IAuthService AuthService
@inject SalaryChangeLogPdfGenerator PdfGenerator

<div class="overflow-hidden rounded-xl bg-white shadow-lg">
    <!-- Filters -->
    <div class="border-b border-gray-200 px-4 py-4 sm:px-6">
        <label class="mb-3 block text-sm font-bold text-gray-700">Filter:</label>
        <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
            <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
                <div class="group relative flex items-center w-full sm:w-auto">
                    <span class="absolute left-3 flex items-center justify-center z-10">
                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </span>
                    <input type="text" placeholder="Search here..." @bind="SearchText" @bind:after="OnSearchChanged"
                           class="w-full sm:w-60 rounded-lg border border-gray-300 py-2 pl-10 pr-3 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400" />
                    <span class="tooltip-delay">Search by employee name, ID, or role</span>
                </div>

                <div class="group relative">
                    <select @bind="StatusFilter" @bind:after="OnFilterChanged" class="w-full sm:w-auto rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                        <option value="">Status</option>
                        <option value="Pending">Pending</option>
                        <option value="Approved">Approved</option>
                        <option value="Rejected">Rejected</option>
                    </select>
                    <span class="tooltip-delay">Filter by request status</span>
                </div>

                <div class="group relative">
                    <select @bind="SchoolYearFilter" @bind:after="OnFilterChanged" class="w-full sm:w-auto rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                        <option value="">School Year</option>
                        @foreach (var sy in AvailableSchoolYears)
                        {
                            <option value="@sy">@sy</option>
                        }
                    </select>
                    <span class="tooltip-delay">Filter by school year</span>
                </div>
            </div>

            <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
                <button @onclick="ClearFilters" class="flex w-full items-center justify-center gap-2 rounded-lg bg-gray-500 px-4 py-2 text-xs sm:text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg whitespace-nowrap sm:w-auto">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Clear
                </button>
                <button @onclick="OpenExportModal" class="w-full rounded-lg bg-blue-600 px-4 py-2 text-xs sm:text-sm font-medium text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg whitespace-nowrap sm:w-auto flex items-center justify-center gap-2">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Export
                </button>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto -mx-1 sm:mx-0">
        <div class="inline-block min-w-full align-middle">
            <div class="overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200 text-sm">
                    <thead class="bg-gray-100">
                        <tr>
                            <th scope="col" class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider w-[12%]">
                                Employee Name
                            </th>
                            <th scope="col" class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider w-[8%]">
                                Role
                            </th>
                            <th scope="col" class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider w-[10%]">
                                Effective Date
                            </th>
                            <th scope="col" class="px-3 py-4 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider w-[10%]">
                                Previous Salary
                            </th>
                            <th scope="col" class="px-3 py-4 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider w-[10%]">
                                New / Proposed Salary
                            </th>
                            <th scope="col" class="px-3 py-4 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider w-[8%]">
                                Change %
                            </th>
                            <th scope="col" class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider w-[8%]">
                                Status
                            </th>
                            <th scope="col" class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider w-[10%]">
                                Requested By
                            </th>
                            <th scope="col" class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider w-[10%]">
                                Approver
                            </th>
                            <th scope="col" class="px-3 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider w-[12%]">
                                Notes / Reason
                            </th>
                            <th scope="col" class="px-3 py-4 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider w-[2%]">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @if (isLoading)
                        {
                            <tr>
                                <td colspan="11" class="px-4 py-12 text-center text-gray-500">
                                    <div class="flex flex-col items-center justify-center">
                                        <svg class="animate-spin h-8 w-8 text-gray-400 mb-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                        </svg>
                                        <span>Loading salary change log...</span>
                                    </div>
                                </td>
                            </tr>
                        }
                        else if (!FilteredLogEntries.Any())
                        {
                            <tr>
                                <td colspan="11" class="px-4 py-12 text-center text-gray-500">
                                    <div class="flex flex-col items-center justify-center">
                                        <svg class="h-12 w-12 text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                        </svg>
                                        <p class="text-base font-medium text-gray-600">No Records Available</p>
                                        <p class="text-sm text-gray-500 mt-1">There are no salary change records to display at this time.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var entry in PaginatedLogEntries)
                            {
                                <tr class="transition-colors duration-150 hover:bg-gray-50">
                                    <td class="px-3 py-4 max-w-0">
                                        <div class="text-sm text-gray-900">
                                            <div class="font-medium truncate max-w-full" title="@entry.EmployeeName">@entry.EmployeeName</div>
                                            <div class="text-xs text-gray-500 truncate max-w-full" title="@entry.EmployeeId">@entry.EmployeeId</div>
                                        </div>
                                    </td>
                                    <td class="px-3 py-4 max-w-0">
                                        <div class="text-sm text-gray-900 truncate max-w-full" title="@entry.Role">@entry.Role</div>
                                    </td>
                                    <td class="px-3 py-4 max-w-0">
                                        <div class="text-sm text-gray-900">@entry.EffectiveDate.ToString("MMM dd, yyyy")</div>
                                        <div class="text-xs text-gray-500 truncate max-w-full" title="@entry.SchoolYear">@entry.SchoolYear</div>
                                    </td>
                                    <td class="px-3 py-4 text-right">
                                        <div class="text-sm font-medium text-gray-900">₱@entry.PreviousTotalSalary.ToString("N2")</div>
                                        <div class="text-xs text-gray-500">Monthly: ₱@entry.PreviousBaseSalary.ToString("N2")</div>
                                    </td>
                                    <td class="px-3 py-4 text-right">
                                        <div class="text-sm font-semibold text-blue-600">₱@entry.NewTotalSalary.ToString("N2")</div>
                                        <div class="text-xs text-gray-500">Monthly: ₱@entry.NewBaseSalary.ToString("N2")</div>
                                    </td>
                                    <td class="px-3 py-4 text-right">
                                        <div class="flex flex-col items-end">
                                            @if (entry.ChangePercentage > 0)
                                            {
                                                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium text-green-700 bg-green-100">
                                                    +@entry.ChangePercentage.ToString("F2")%
                                                </span>
                                            }
                                            else if (entry.ChangePercentage < 0)
                                            {
                                                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium text-red-700 bg-red-100">
                                                    @entry.ChangePercentage.ToString("F2")%
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-xs text-gray-500">0%</span>
                                            }
                                            @if (entry.CumulativeIncreasePercentage != entry.ChangePercentage)
                                            {
                                                <div class="text-xs text-gray-500 mt-1">Cum: @entry.CumulativeIncreasePercentage.ToString("F2")%</div>
                                            }
                                        </div>
                                    </td>
                                    <td class="px-3 py-4">
                                        @if (entry.Status == "Pending")
                                        {
                                            <span class="inline-flex items-center px-2.5 py-1 rounded-md text-[11px] font-medium text-yellow-700 bg-yellow-100">
                                                Pending
                                            </span>
                                        }
                                        else if (entry.Status == "Approved")
                                        {
                                            <span class="inline-flex items-center px-2.5 py-1 rounded-md text-[11px] font-medium text-green-700 bg-green-100">
                                                Approved
                                            </span>
                                        }
                                        else if (entry.Status == "Rejected")
                                        {
                                            <span class="inline-flex items-center px-2.5 py-1 rounded-md text-[11px] font-medium text-red-700 bg-red-100">
                                                Rejected
                                            </span>
                                        }
                                    </td>
                                    <td class="px-3 py-4 max-w-0">
                                        @if (!string.IsNullOrWhiteSpace(entry.RequestedByName))
                                        {
                                            <div class="text-sm text-gray-900 truncate max-w-full" title="@entry.RequestedByName">@entry.RequestedByName</div>
                                            <div class="text-xs text-gray-500">@entry.RequestedAt.ToString("MMM dd, yyyy")</div>
                                        }
                                        else
                                        {
                                            <span class="text-sm text-gray-400">—</span>
                                        }
                                    </td>
                                    <td class="px-3 py-4 max-w-0">
                                        @if (!string.IsNullOrWhiteSpace(entry.ApproverName))
                                        {
                                            <div class="text-sm text-gray-900 truncate max-w-full" title="@entry.ApproverName">@entry.ApproverName</div>
                                            @if (!string.IsNullOrWhiteSpace(entry.ApproverRole))
                                            {
                                                <div class="text-xs text-gray-500 truncate max-w-full" title="@entry.ApproverRole">@entry.ApproverRole</div>
                                            }
                                            @if (entry.ApprovalDate.HasValue)
                                            {
                                                <div class="text-xs text-gray-500">@entry.ApprovalDate.Value.ToString("MMM dd, yyyy")</div>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-sm text-gray-400">—</span>
                                        }
                                    </td>
                                    <td class="px-3 py-4 max-w-0">
                                        <div class="text-sm text-gray-900">
                                            @if (!string.IsNullOrWhiteSpace(entry.Reason))
                                            {
                                                <div class="truncate max-w-full" title="@entry.Reason">@entry.Reason</div>
                                            }
                                            else if (!string.IsNullOrWhiteSpace(entry.RejectionReason))
                                            {
                                                <div class="truncate max-w-full text-red-600" title="@entry.RejectionReason">Rejected: @entry.RejectionReason</div>
                                            }
                                            else
                                            {
                                                <span class="text-gray-400">N/A</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="px-3 py-4 text-center">
                                        <div class="flex items-center justify-center">
                                            <div class="group relative">
                                                <button @onclick="() => ViewLogDetails(entry)" class="flex items-center gap-1.5 rounded-lg bg-blue-50 px-3 py-1.5 text-xs font-medium text-blue-400 transition-colors hover:bg-blue-100">
                                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                                    </svg>
                                                    <span class="hidden sm:inline">View</span>
                                                </button>
                                                <span class="tooltip-delay">View details</span>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Footer with Pagination -->
    <Pagination TotalItems="@FilteredLogEntries.Count" 
                CurrentPage="@CurrentPage" 
                RowsPerPage="@RowsPerPage"
                ItemName="salary change records"
                OnPageChanged="HandlePageChanged"
                OnRowsPerPageChanged="HandleRowsPerPageChanged" />
</div>

<!-- Export Report Modal -->
@if (showExportModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" @onclick="CloseExportModal">
        <div class="w-full max-w-2xl overflow-hidden rounded-2xl bg-white shadow-xl" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="flex items-center justify-between border-b border-gray-200 bg-blue-600 px-6 py-4">
                <h3 class="text-lg font-semibold text-white">Export Salary Change Log Report</h3>
                <button @onclick="CloseExportModal" class="text-white hover:text-gray-200">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
