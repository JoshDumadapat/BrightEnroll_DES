                                        <div class="text-sm font-medium text-gray-900">@entry.EffectiveDate.ToString("MMM dd, yyyy")</div>
                                        <div class="text-xs text-gray-500">@entry.SchoolYear</div>
                                    </td>
                                    <td class="px-4 py-3 whitespace-nowrap text-right">
                                        <div class="text-sm font-medium text-gray-900">₱@entry.PreviousTotalSalary.ToString("N2")</div>
                                        <div class="text-xs text-gray-500">Monthly: ₱@entry.PreviousBaseSalary.ToString("N2")</div>
                                    </td>
                                    <td class="px-4 py-3 whitespace-nowrap text-right">
                                        <div class="text-sm font-semibold @(index == chronologicalHistory.Count ? "text-blue-700" : "text-blue-600")">₱@entry.NewTotalSalary.ToString("N2")</div>
                                        <div class="text-xs text-gray-500">Monthly: ₱@entry.NewBaseSalary.ToString("N2")</div>
                                    </td>
