                            <div class="flex-1">
                                <div class="font-semibold text-gray-900">All Statuses</div>
                                <div class="mt-1 text-xs text-gray-600">Include all records</div>
                            </div>
                        </label>
                        <label class="flex cursor-pointer items-center rounded-lg border-2 p-3 transition-colors @(exportStatusFilter == "Approved" ? "border-green-500 bg-green-50" : "border-gray-200 hover:border-gray-300")">
                            <input type="radio" name="exportStatus" checked="@(exportStatusFilter == "Approved")" @onchange="@(() => exportStatusFilter = "Approved")" class="mr-3" />
                            <div class="flex-1">
                                <div class="font-semibold text-gray-900">Approved</div>
                                <div class="mt-1 text-xs text-gray-600">Only approved changes</div>
                            </div>
                        </label>
                        <label class="flex cursor-pointer items-center rounded-lg border-2 p-3 transition-colors @(exportStatusFilter == "Rejected" ? "border-red-500 bg-red-50" : "border-gray-200 hover:border-gray-300")">
