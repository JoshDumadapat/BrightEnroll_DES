                                <div class="font-semibold text-gray-900">Pending</div>
                                <div class="mt-1 text-xs text-gray-600">Only pending approvals</div>
                            </div>
                        </label>
                    </div>
                </div>

                <div class="mb-6 rounded-lg border border-gray-200 bg-gray-50 p-4">
                    <div class="text-sm font-semibold text-gray-700 mb-2">Report Summary:</div>
                    <div class="space-y-1 text-sm text-gray-600">
                        <div>• Total Records (Filtered): <span class="font-semibold">@GetFilteredExportData().Count</span></div>
                        <div>• Status Filter: <span class="font-semibold">@exportStatusFilter</span></div>
                        <div>• School Year: <span class="font-semibold">@(string.IsNullOrWhiteSpace(SchoolYearFilter) ? "All" : SchoolYearFilter)</span></div>
                        <div>• Report Type: <span class="font-semibold">@(selectedReportType == "Audit" ? "Comprehensive Audit" : "Statistical Analysis")</span></div>
                        <div>• Format: <span class="font-semibold">PDF</span></div>
                    </div>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="flex items-center justify-end gap-3 border-t border-gray-200 bg-gray-50 px-6 py-4">
                <button @onclick="CloseExportModal" class="rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    Cancel
                </button>
                <button @onclick="ExportReport" disabled="@isExporting" class="rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 disabled:opacity-50">
                    @if (isExporting)
                    {
                        <span class="flex items-center gap-2">
                            <svg class="h-4 w-4 animate-spin" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            Generating...
                        </span>
                    }
                    else
                    {
                        <span>Generate & Download PDF</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

<!-- Employee Salary History Modal -->
@if (showEmployeeHistoryModal && selectedEmployeeHistory != null)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" @onclick="CloseEmployeeHistoryModal">
        <div class="w-full max-w-5xl max-h-[90vh] overflow-hidden rounded-2xl bg-white shadow-xl" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="flex items-center justify-between border-b border-gray-200 bg-blue-600 px-6 py-4">
                <h3 class="text-lg font-semibold text-white">Salary History - @selectedEmployeeHistory.EmployeeName</h3>
                <button @onclick="CloseEmployeeHistoryModal" class="text-white hover:text-gray-200">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Modal Body -->
            <div class="max-h-[calc(90vh-140px)] overflow-y-auto p-6">
                <!-- Employee Info -->
                <div class="mb-6 rounded-lg border border-blue-200 bg-blue-50 p-4">
                    <div class="grid grid-cols-2 gap-4 text-sm">
                        <div>
                            <span class="font-semibold text-gray-700">Employee ID:</span>
                            <span class="ml-2 text-gray-900">@selectedEmployeeHistory.EmployeeId</span>
                        </div>
                        <div>
                            <span class="font-semibold text-gray-700">Position:</span>
                            <span class="ml-2 text-gray-900">@selectedEmployeeHistory.Role</span>
                        </div>
                    </div>
                </div>

                <!-- Salary Progression Summary -->
                @if (employeeHistoryList.Any())
                {
                    var orderedHistory = employeeHistoryList.OrderBy(h => h.EffectiveDate).ThenBy(h => h.RequestedAt).ToList();
                    var firstSalary = orderedHistory.First();
                    var latestSalary = orderedHistory.Last();
                    var totalIncrease = latestSalary.NewTotalSalary - firstSalary.PreviousTotalSalary;
                    var totalIncreasePercent = firstSalary.PreviousTotalSalary > 0 
                        ? ((latestSalary.NewTotalSalary - firstSalary.PreviousTotalSalary) / firstSalary.PreviousTotalSalary) * 100 
                        : 0;
                    
                    <div class="mb-6 rounded-lg border border-green-200 bg-green-50 p-4">
