@namespace BrightEnroll_DES.Components.Pages.Admin.Attendance.AttendanceComponents

<div class="p-6">
    <!-- Report Filters -->
    <div class="mb-6 rounded-lg border border-gray-200 bg-gray-50 p-4">
        <h2 class="mb-4 text-lg font-bold text-gray-800">Report Filters</h2>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">From Date:</label>
                <input type="date" 
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">To Date:</label>
                <input type="date" 
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400" />
            </div>
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">Section:</label>
                <select class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                    <option value="">All Sections</option>
                    <option value="Saturn">Saturn</option>
                    <option value="Rizal">Rizal</option>
                    <option value="Sun">Sun</option>
                </select>
            </div>
        </div>
        <div class="mt-4 flex gap-3">
            <button class="rounded-lg bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg">
                Generate Report
            </button>
            <button class="rounded-lg bg-gray-500 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg">
                Export to PDF
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-4">
        <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
            <p class="text-sm text-gray-600">Total Present</p>
            <p class="text-2xl font-bold text-green-600">@totalPresent</p>
        </div>
        <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
            <p class="text-sm text-gray-600">Total Absent</p>
            <p class="text-2xl font-bold text-red-600">@totalAbsent</p>
        </div>
        <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
            <p class="text-sm text-gray-600">Total Late</p>
            <p class="text-2xl font-bold text-orange-600">@totalLate</p>
        </div>
        <div class="rounded-lg border border-gray-200 bg-white p-4 shadow">
            <p class="text-sm text-gray-600">Attendance Rate</p>
            <p class="text-2xl font-bold text-blue-600">@attendanceRate%</p>
        </div>
    </div>

    <!-- Report Table -->
    <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
            <thead class="bg-gray-100 font-semibold text-gray-600">
                <tr>
                    <th class="px-4 py-3 text-left">Student ID</th>
                    <th class="px-4 py-3 text-left">Name</th>
                    <th class="px-4 py-3 text-center">Present</th>
                    <th class="px-4 py-3 text-center">Absent</th>
                    <th class="px-4 py-3 text-center">Late</th>
                    <th class="px-4 py-3 text-center">Attendance Rate</th>
                </tr>
            </thead>
            <tbody class="divide-y">
                @foreach (var summary in attendanceSummary)
                {
                    <tr class="transition hover:bg-gray-50">
                        <td class="px-4 py-3">@summary.StudentId</td>
                        <td class="px-4 py-3">@summary.Name</td>
                        <td class="px-4 py-3 text-center text-green-600 font-semibold">@summary.Present</td>
                        <td class="px-4 py-3 text-center text-red-600 font-semibold">@summary.Absent</td>
                        <td class="px-4 py-3 text-center text-orange-600 font-semibold">@summary.Late</td>
                        <td class="px-4 py-3 text-center font-semibold">@summary.Rate%</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private int totalPresent = 45;
    private int totalAbsent = 5;
    private int totalLate = 3;
    private int attendanceRate = 85;

    private List<AttendanceSummary> attendanceSummary = new();

    private class AttendanceSummary
    {
        public string StudentId { get; set; } = "";
        public string Name { get; set; } = "";
        public int Present { get; set; }
        public int Absent { get; set; }
        public int Late { get; set; }
        public int Rate { get; set; }
    }

    protected override void OnInitialized()
    {
        // TODO: Load attendance summary from database
        attendanceSummary = new List<AttendanceSummary>
        {
            new() { StudentId = "ST001", Name = "Juan Dela Cruz", Present = 20, Absent = 1, Late = 2, Rate = 87 },
