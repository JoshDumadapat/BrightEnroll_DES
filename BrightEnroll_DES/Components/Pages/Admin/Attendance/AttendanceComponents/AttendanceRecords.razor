@namespace BrightEnroll_DES.Components.Pages.Admin.Attendance.AttendanceComponents

<div class="p-6">
    <!-- Filters -->
    <div class="mb-6 border-b border-gray-200 px-3 py-4 sm:px-6">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
                <div class="relative flex w-full items-center sm:w-auto sm:min-w-[200px]">
                    <span class="absolute left-4 flex items-center justify-center">
                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </span>
                    <input type="text" placeholder="Search student..."
                           class="w-full rounded-lg border border-gray-300 py-2 pl-11 pr-4 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400" />
                </div>
                <select class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto">
                    <option value="">All Sections</option>
                    <option value="Saturn">Saturn</option>
                    <option value="Rizal">Rizal</option>
                    <option value="Sun">Sun</option>
                </select>
                <input type="date" 
                       class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto" />
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
            <thead class="bg-gray-100 font-semibold text-gray-600">
                <tr>
                    <th class="px-4 py-3 text-left">Date</th>
                    <th class="px-4 py-3 text-left">Student ID</th>
                    <th class="px-4 py-3 text-left">Name</th>
                    <th class="px-4 py-3 text-left">Section</th>
                    <th class="px-4 py-3 text-center">Status</th>
                    <th class="px-4 py-3 text-center">Time In</th>
                    <th class="px-4 py-3 text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y">
                @foreach (var record in attendanceRecords)
                {
                    <tr class="transition hover:bg-gray-50">
                        <td class="px-4 py-3">@record.Date.ToString("MMM dd, yyyy")</td>
                        <td class="px-4 py-3">@record.StudentId</td>
                        <td class="px-4 py-3">@record.Name</td>
                        <td class="px-4 py-3">@record.Section</td>
                        <td class="px-4 py-3 text-center">
                            @if (record.Status == "Present")
                            {
                                <span class="rounded-full bg-green-100 px-2.5 py-1 text-[11px] font-medium text-green-700">Present</span>
                            }
                            else if (record.Status == "Absent")
                            {
                                <span class="rounded-full bg-red-100 px-2.5 py-1 text-[11px] font-medium text-red-700">Absent</span>
                            }
                            else if (record.Status == "Late")
                            {
                                <span class="rounded-full bg-orange-100 px-2.5 py-1 text-[11px] font-medium text-orange-700">Late</span>
                            }
                            else
                            {
                                <span class="rounded-full bg-blue-100 px-2.5 py-1 text-[11px] font-medium text-blue-700">Excused</span>
                            }
                        </td>
                        <td class="px-4 py-3 text-center">@(record.TimeIn ?? "-")</td>
                        <td class="flex items-center justify-center gap-2 px-4 py-3">
                            <button class="flex items-center gap-1.5 rounded-lg bg-blue-50 px-3 py-1.5 text-xs font-medium text-blue-400 transition-colors hover:bg-blue-100">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                                Edit
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Footer -->
    <div class="flex items-center justify-between bg-gray-50 px-4 py-3 text-sm text-gray-600">
        <span>Showing @attendanceRecords.Count records</span>
        <div class="flex items-center gap-2">
            <button class="rounded-md bg-blue-900 px-3 py-1 text-xs text-white">1</button>
            <button class="rounded-md px-3 py-1 text-xs text-gray-600 hover:bg-gray-200">2</button>
        </div>
    </div>
</div>

@code {
    private List<AttendanceRecord> attendanceRecords = new();

    private class AttendanceRecord
    {
        public DateTime Date { get; set; }
        public string StudentId { get; set; } = "";
        public string Name { get; set; } = "";
        public string Section { get; set; } = "";
        public string Status { get; set; } = "";
        public string? TimeIn { get; set; }
    }

    protected override void OnInitialized()
    {
        // TODO: Load attendance records from database
        attendanceRecords = new List<AttendanceRecord>
        {
            new() { Date = DateTime.Now.AddDays(-1), StudentId = "ST001", Name = "Juan Dela Cruz", Section = "Saturn", Status = "Present", TimeIn = "07:30" },
            new() { Date = DateTime.Now.AddDays(-1), StudentId = "ST002", Name = "Maria Santos", Section = "Saturn", Status = "Present", TimeIn = "07:25" },
            new() { Date = DateTime.Now.AddDays(-1), StudentId = "ST003", Name = "Pedro Garcia", Section = "Saturn", Status = "Late", TimeIn = "08:15" },
        };
    }
}

