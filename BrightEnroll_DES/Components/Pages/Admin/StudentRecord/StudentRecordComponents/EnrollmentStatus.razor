                                <p class="mt-1 text-sm font-medium text-gray-800">@SelectedRecord.Section</p>
                            </div>
                            <div>
                                <label class="text-xs font-medium text-gray-600">Status</label>
                                <p class="mt-1">
                                    @if (SelectedRecord.Status == "Enrolled")
                                    {
                                        <span class="text-xs font-semibold text-green-600">@SelectedRecord.Status</span>
                                    }
                                    else
                                    {
                                        <span class="text-xs font-semibold text-gray-600">@SelectedRecord.Status</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Documents & Payment -->
                    <div class="rounded-lg border border-gray-200 bg-white p-4">
                        <h4 class="mb-3 text-lg font-semibold text-gray-800">Documents & Payment</h4>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="text-xs font-medium text-gray-600">Documents Status</label>
                                <p class="mt-1">
                                    @if (SelectedRecord.Documents == "Validated" || SelectedRecord.Documents == "Verified")
                                    {
                                        <span class="text-xs font-semibold text-blue-600">Validated</span>
                                    }
                                    else
                                    {
                                        <span class="text-xs font-semibold text-gray-400">Not Validated</span>
                                    }
                                </p>
                            </div>
                            <div>
                                <label class="text-xs font-medium text-gray-600">Payment Status</label>
                                <p class="mt-1">
                                    @if (SelectedRecord.PaymentStatus == "Paid" || SelectedRecord.PaymentStatus == "Fully Paid")
                                    {
                                        <span class="text-xs font-semibold text-green-600">@SelectedRecord.PaymentStatus</span>
                                    }
                                    else if (SelectedRecord.PaymentStatus == "Partially Paid")
                                    {
                                        <span class="text-xs font-semibold text-orange-600">@SelectedRecord.PaymentStatus</span>
                                    }
                                    else
                                    {
                                        <span class="text-xs font-semibold text-red-600">@SelectedRecord.PaymentStatus</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public List<EnrollmentStatusData>? EnrollmentRecords { get; set; }

    [Parameter]
    public StudentDetailData? StudentData { get; set; }

    [Parameter]
    public int RowsPerPage { get; set; } = 5;

    // Modal state
    private bool ShowViewModal { get; set; } = false;
    private EnrollmentStatusData? SelectedRecord { get; set; }

    // Filter properties
    private string SearchText { get; set; } = "";
    private string SchoolYearFilter { get; set; } = "";
    private string SectionFilter { get; set; } = "";
    private string GradeLevelFilter { get; set; } = "";

    // Pagination
    private int CurrentPage { get; set; } = 1;

    // Filtered records based on current filters
    private IEnumerable<EnrollmentStatusData> FilteredRecords
    {
        get
        {
            if (EnrollmentRecords == null || !EnrollmentRecords.Any())
                return Enumerable.Empty<EnrollmentStatusData>();

            var filtered = EnrollmentRecords.AsEnumerable();

            // Apply search filter
            if (!string.IsNullOrWhiteSpace(SearchText))
            {
                filtered = filtered.Where(r =>
                    r.SchoolYear.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    r.Grade.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    r.Section.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    r.Type.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    r.Status.Contains(SearchText, StringComparison.OrdinalIgnoreCase) ||
                    r.PaymentStatus.Contains(SearchText, StringComparison.OrdinalIgnoreCase));
            }

            // Apply school year filter
            if (!string.IsNullOrWhiteSpace(SchoolYearFilter))
            {
                filtered = filtered.Where(r => r.SchoolYear == SchoolYearFilter);
            }

            // Apply section filter
            if (!string.IsNullOrWhiteSpace(SectionFilter))
            {
                filtered = filtered.Where(r => r.Section == SectionFilter);
            }

            // Apply grade level filter
            if (!string.IsNullOrWhiteSpace(GradeLevelFilter))
            {
                filtered = filtered.Where(r => r.Grade == GradeLevelFilter);
            }

            return filtered
                .OrderByDescending(r => r.SchoolYear)
                .ThenBy(r => r.Grade)
                .ThenBy(r => r.Section);
        }
    }

    // Paginated records
    private IEnumerable<EnrollmentStatusData> PaginatedRecords =>
        FilteredRecords.Skip((CurrentPage - 1) * RowsPerPage).Take(RowsPerPage);

    private void ClearFilters()
    {
        SearchText = "";
        SchoolYearFilter = "";
        SectionFilter = "";
        GradeLevelFilter = "";
        CurrentPage = 1;
        StateHasChanged();
    }

    private void HandlePageChanged(int page)
    {
        CurrentPage = page;
        StateHasChanged();
    }

    private void HandleRowsPerPageChanged(int rowsPerPage)
    {
        RowsPerPage = rowsPerPage;
        CurrentPage = 1;
        StateHasChanged();
    }

    private void OnFilterChanged()
    {
        CurrentPage = 1; // Reset to first page when filters change
        StateHasChanged();
    }

    private void HandleViewClick(EnrollmentStatusData record)
    {
        SelectedRecord = record;
        ShowViewModal = true;
        StateHasChanged();
    }

    private void CloseModal()
    {
        ShowViewModal = false;
        SelectedRecord = null;
        StateHasChanged();
    }

    private async Task ExportPDF()
    {
        if (EnrollmentRecords == null || !EnrollmentRecords.Any())
        {
            await JSRuntime.InvokeVoidAsync("alert", "No enrollment records to export.");
            return;
        }

        try
        {
            // Export all enrollment records
            var pdfBytes = await GenerateEnrollmentStatusPDF();
            var fileName = $"Enrollment_Status_{StudentData?.FullName?.Replace(" ", "_") ?? "Student"}_{DateTime.Now:yyyyMMdd_HHmmss}.pdf";
            
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, "application/pdf", Convert.ToBase64String(pdfBytes));
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error exporting PDF: {ex.Message}");
        }
    }

    private async Task ExportEnrollmentPDF()
    {
        if (SelectedRecord == null || StudentData == null)
        {
            return;
        }

        try
        {
            var pdfBytes = await GenerateSingleEnrollmentPDF(SelectedRecord);
            var fileName = $"Enrollment_Status_{StudentData.FullName.Replace(" ", "_")}_{SelectedRecord.SchoolYear}_{DateTime.Now:yyyyMMdd_HHmmss}.pdf";
            
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, "application/pdf", Convert.ToBase64String(pdfBytes));
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error exporting PDF: {ex.Message}");
        }
    }

    private async Task<byte[]> GenerateEnrollmentStatusPDF()
    {
        if (StudentData == null || EnrollmentRecords == null)
        {
            throw new Exception("Student data or enrollment records are missing.");
        }

        return await EnrollmentPdfGenerator.GenerateEnrollmentStatusReportAsync(
            StudentData.Id,
            StudentData.FullName,
            EnrollmentRecords
        );
    }

    private async Task<byte[]> GenerateSingleEnrollmentPDF(EnrollmentStatusData record)
    {
        if (StudentData == null)
        {
            throw new Exception("Student data is missing.");
        }

        var singleRecordList = new List<EnrollmentStatusData> { record };
        return await EnrollmentPdfGenerator.GenerateEnrollmentStatusReportAsync(
            StudentData.Id,
            StudentData.FullName,
            singleRecordList
        );
    }
}

