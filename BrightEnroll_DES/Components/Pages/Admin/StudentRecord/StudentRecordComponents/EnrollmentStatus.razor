                    </div>

                    <!-- Enrollment Details -->
                    <div class="rounded-lg border border-gray-200 bg-white p-4">
                        <h4 class="mb-3 text-lg font-semibold text-gray-800">Enrollment Details</h4>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="text-xs font-medium text-gray-600">School Year</label>
                                <p class="mt-1 text-sm font-medium text-gray-800">@SelectedRecord.SchoolYear</p>
                            </div>
