@page "/human-resource/add-employee"
@layout Components.Layout.MainLayout
@inject NavigationManager NavigationManager

<PageTitle>Add Employee</PageTitle>

<div class="text-gray-800">
    <div class="mb-6">
        <button @onclick="GoBack" class="flex items-center gap-2 rounded-full bg-gray-600 px-4 py-2 text-sm font-medium text-white shadow-md transition-all duration-300 hover:bg-gray-700 hover:shadow-lg">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back
        </button>
    </div>

    <div class="overflow-hidden rounded-xl bg-white shadow">
        <div class="px-6 py-6">
            <h2 class="mb-6 text-2xl font-bold text-gray-800">Add Employee</h2>

            <form @onsubmit="HandleSubmit" @onsubmit:preventDefault="true">
                <!-- Personal Information Section -->
                <div class="mb-6">
                    <h3 class="mb-4 text-lg font-bold text-gray-800">Personal Information</h3>
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">First Name</label>
                            <input type="text" @bind="EmployeeData.FirstName" required
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">Middle Name</label>
                            <input type="text" @bind="EmployeeData.MiddleName"
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">Last Name</label>
                            <input type="text" @bind="EmployeeData.LastName" required
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">Birth Date</label>
                            <input type="text" @bind="EmployeeData.BirthDate"
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">Gender</label>
                            <input type="text" @bind="EmployeeData.Gender"
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">Age</label>
                            <input type="text" @bind="EmployeeData.Age"
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">Contact Number</label>
                            <input type="tel" @bind="EmployeeData.ContactNumber"
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">Email</label>
                            <input type="email" @bind="EmployeeData.Email" required
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                    </div>
                </div>

                <!-- Address Section -->
                <div class="mb-6">
                    <h3 class="mb-4 text-lg font-bold text-gray-800">Address</h3>
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">House No./Street</label>
                            <input type="text" @bind="EmployeeData.HouseNo"
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">Street Name</label>
                            <input type="text" @bind="EmployeeData.StreetName"
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">Barangay</label>
                            <input type="text" @bind="EmployeeData.Barangay"
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">Municipality/City</label>
                            <input type="text" @bind="EmployeeData.City"
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">Province</label>
                            <input type="text" @bind="EmployeeData.Province"
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">Country</label>
                            <input type="text" @bind="EmployeeData.Country"
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">ZIP Code</label>
                            <input type="text" @bind="EmployeeData.ZipCode"
                                   class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400" />
                        </div>
                    </div>
                </div>

                <!-- Role and Account Information Section -->
                <div class="mb-6">
                    <h3 class="mb-4 text-lg font-bold text-gray-800">Role and Account Information</h3>
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
                        <div>
                            <label class="mb-2 block text-sm font-medium text-gray-700">Role <span class="text-red-500">*</span></label>
                            <select @bind="EmployeeData.Role" @bind:after="OnRoleChanged" required
                                    class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400">
                                <option value="">Select Role</option>
                                <option value="Registrar">Registrar</option>
                                <option value="Cashier">Cashier</option>
                                <option value="Teacher">Teacher</option>
                                <option value="HR">HR</option>
                                <option value="System Admin">System Admin</option>
                                <option value="Janitor">Janitor</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        @if (ShowPasswordFields)
                        {
                            <div>
                                <label class="mb-2 block text-sm font-medium text-gray-700">Default Password</label>
                                <input type="text" @bind="EmployeeData.DefaultPassword" readonly
                                       class="w-full rounded-lg border border-gray-300 bg-gray-100 px-3 py-2 text-sm text-gray-600" />
                                <p class="mt-1 text-xs text-gray-500">Default password is automatically generated</p>
                            </div>
                            <div>
                                <label class="mb-2 block text-sm font-medium text-gray-700">System ID</label>
                                <input type="text" @bind="EmployeeData.SystemId" readonly
                                       class="w-full rounded-lg border border-gray-300 bg-gray-100 px-3 py-2 text-sm text-gray-600" />
                                <p class="mt-1 text-xs text-gray-500">System ID is automatically assigned</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex justify-end gap-4">
                    <button type="button" @onclick="GoBack" class="rounded-lg border border-gray-300 bg-white px-6 py-2.5 text-sm font-semibold text-gray-700 shadow-md transition-all duration-300 hover:bg-gray-50 hover:shadow-lg">
                        Cancel
                    </button>
                    <button type="submit" class="rounded-lg bg-blue-600 px-6 py-2.5 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg">
                        Add Employee
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@code {
    private EmployeeFormData EmployeeData { get; set; } = new();
    private bool ShowPasswordFields { get; set; } = false;

    private void OnRoleChanged()
    {
        // Roles that need password and system ID: Registrar, Cashier, Teacher, HR, System Admin
        var rolesWithAccess = new[] { "Registrar", "Cashier", "Teacher", "HR", "System Admin" };
        ShowPasswordFields = rolesWithAccess.Contains(EmployeeData.Role);

        if (ShowPasswordFields)
        {
            // Generate default password (you can customize this logic)
            EmployeeData.DefaultPassword = GenerateDefaultPassword();
            // Generate system ID (you can customize this logic)
            EmployeeData.SystemId = GenerateSystemId();
        }
        else
        {
            EmployeeData.DefaultPassword = "";
            EmployeeData.SystemId = "";
        }
    }

    private string GenerateDefaultPassword()
    {
        // Generate a default password (e.g., "Password123!" or based on employee name)
        // For now, using a simple default
        return "Password123!";
    }

    private string GenerateSystemId()
    {
        // Generate system ID in format BDES-XXXX
        // For now, using a simple incrementing pattern
        var random = new Random();
        var number = random.Next(1000, 9999);
        return $"BDES-{number}";
    }

    private void HandleSubmit()
    {
        // TODO: Implement save employee logic
        // Save employee data to database/API
        // Then navigate back to HR page
        NavigationManager.NavigateTo("/human-resource");
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/human-resource");
    }

    public class EmployeeFormData
    {
        public string FirstName { get; set; } = string.Empty;
        public string MiddleName { get; set; } = string.Empty;
        public string LastName { get; set; } = string.Empty;
        public string BirthDate { get; set; } = string.Empty;
        public string Gender { get; set; } = string.Empty;
        public string Age { get; set; } = string.Empty;
        public string ContactNumber { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Role { get; set; } = string.Empty;
        public string DefaultPassword { get; set; } = string.Empty;
        public string SystemId { get; set; } = string.Empty;
        public string HouseNo { get; set; } = string.Empty;
        public string StreetName { get; set; } = string.Empty;
        public string Barangay { get; set; } = string.Empty;
        public string City { get; set; } = string.Empty;
        public string Province { get; set; } = string.Empty;
        public string Country { get; set; } = string.Empty;
        public string ZipCode { get; set; } = string.Empty;
    }
}

