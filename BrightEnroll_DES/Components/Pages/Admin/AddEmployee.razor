            return "First Name is required.";
        
        if (string.IsNullOrWhiteSpace(EmployeeData.LastName))
            return "Last Name is required.";
        
        if (!birthDate.HasValue)
            return "Birth Date is required.";
        
        if (string.IsNullOrWhiteSpace(EmployeeData.Gender))
            return "Gender is required.";
        
        if (age == null || age <= 0)
            return "Valid Age is required.";
        
        if (string.IsNullOrWhiteSpace(EmployeeData.ContactNumber))
            return "Contact Number is required.";
        
        if (string.IsNullOrWhiteSpace(EmployeeData.Email))
            return "Email is required.";
        
        if (!EmployeeData.Email.Contains("@") || !EmployeeData.Email.Contains("."))
            return "Please enter a valid email address.";
        
        if (string.IsNullOrWhiteSpace(EmployeeData.Province))
            return "Province is required.";
        
        if (string.IsNullOrWhiteSpace(EmployeeData.City))
            return "City/Municipality is required.";
        
        if (string.IsNullOrWhiteSpace(EmployeeData.Barangay))
            return "Barangay is required.";
        
        if (string.IsNullOrWhiteSpace(EmployeeData.EmergencyContactFirstName))
            return "Emergency Contact First Name is required.";
        
        if (string.IsNullOrWhiteSpace(EmployeeData.EmergencyContactLastName))
            return "Emergency Contact Last Name is required.";
        
        if (string.IsNullOrWhiteSpace(EmployeeData.EmergencyContactRelationship))
            return "Emergency Contact Relationship is required.";
        
        if (string.IsNullOrWhiteSpace(EmployeeData.EmergencyContactNumber))
            return "Emergency Contact Number is required.";
        
        if (string.IsNullOrWhiteSpace(EmployeeData.Role))
            return "Role is required.";
        
        if (EmployeeData.BaseSalary <= 0)
            return "Base Salary must be greater than 0.";

        return string.Empty;
    }

