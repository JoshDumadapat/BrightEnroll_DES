@page "/documentation"
@layout Components.Layout.MainLayout
@inject NavigationManager NavigationManager

<PageTitle>Documentation</PageTitle>

<div class="text-gray-800">
    <div class="mb-6 flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-800">Documentation</h1>
        <button @onclick="GoBack" class="flex items-center gap-2 rounded-lg bg-gray-600 px-4 py-2 text-sm font-medium text-white shadow-md transition-all duration-300 hover:bg-gray-700 hover:shadow-lg">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back
        </button>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-4">
        <!-- Sidebar Navigation -->
        <div class="lg:col-span-1">
            <div class="sticky top-6 rounded-xl bg-white p-4 shadow-md">
                <h3 class="mb-4 text-lg font-bold text-gray-800">Quick Navigation</h3>
                <nav class="space-y-1">
                    <button @onclick='() => ScrollToSection("getting-started")' 
                            class="w-full text-left px-3 py-2 rounded-lg text-sm font-medium transition-colors @(activeSection == "getting-started" ? "bg-blue-100 text-blue-700" : "text-gray-700 hover:bg-gray-100")">
                        Getting Started
                    </button>
                    <button @onclick='() => ScrollToSection("enrollment")' 
                            class="w-full text-left px-3 py-2 rounded-lg text-sm font-medium transition-colors @(activeSection == "enrollment" ? "bg-blue-100 text-blue-700" : "text-gray-700 hover:bg-gray-100")">
                        Enrollment Management
                    </button>
                    <button @onclick='() => ScrollToSection("student-records")' 
                            class="w-full text-left px-3 py-2 rounded-lg text-sm font-medium transition-colors @(activeSection == "student-records" ? "bg-blue-100 text-blue-700" : "text-gray-700 hover:bg-gray-100")">
                        Student Records
                    </button>
                    <button @onclick='() => ScrollToSection("academics")' 
                            class="w-full text-left px-3 py-2 rounded-lg text-sm font-medium transition-colors @(activeSection == "academics" ? "bg-blue-100 text-blue-700" : "text-gray-700 hover:bg-gray-100")">
                        Academics
                    </button>
                    <button @onclick='() => ScrollToSection("finance")' 
                            class="w-full text-left px-3 py-2 rounded-lg text-sm font-medium transition-colors @(activeSection == "finance" ? "bg-blue-100 text-blue-700" : "text-gray-700 hover:bg-gray-100")">
                        Finance
                    </button>
                    <button @onclick='() => ScrollToSection("hr")' 
                            class="w-full text-left px-3 py-2 rounded-lg text-sm font-medium transition-colors @(activeSection == "hr" ? "bg-blue-100 text-blue-700" : "text-gray-700 hover:bg-gray-100")">
                        Human Resources
                    </button>
                    <button @onclick='() => ScrollToSection("reports")' 
                            class="w-full text-left px-3 py-2 rounded-lg text-sm font-medium transition-colors @(activeSection == "reports" ? "bg-blue-100 text-blue-700" : "text-gray-700 hover:bg-gray-100")">
                        Reports & Analytics
                    </button>
                    <button @onclick='() => ScrollToSection("troubleshooting")' 
                            class="w-full text-left px-3 py-2 rounded-lg text-sm font-medium transition-colors @(activeSection == "troubleshooting" ? "bg-blue-100 text-blue-700" : "text-gray-700 hover:bg-gray-100")">
                        Troubleshooting
                    </button>
                </nav>

                <div class="mt-6 border-t border-gray-200 pt-6">
                    <h4 class="mb-3 text-sm font-semibold text-gray-800">Resources</h4>
                    <div class="space-y-2">
                        <a href="#" class="flex items-center gap-2 text-sm text-blue-600 hover:text-blue-700">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            Download PDF Guide
                        </a>
                        <a href="#" class="flex items-center gap-2 text-sm text-blue-600 hover:text-blue-700">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                            </svg>
                            Video Tutorials
                        </a>
                        <button @onclick="GoToContactSupport" class="flex items-center gap-2 text-sm text-blue-600 hover:text-blue-700">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                            </svg>
                            Contact Support
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="space-y-6 lg:col-span-3">
            <!-- Welcome Banner -->
            <div class="rounded-xl bg-gradient-to-r from-blue-600 to-blue-800 p-8 text-white shadow-lg">
                <h2 class="mb-3 text-3xl font-bold">Welcome to BrightEnroll Documentation</h2>
                <p class="mb-4 text-blue-100">
                    Your comprehensive guide to using the BrightEnroll Elementary School Management System. 
                    Learn how to manage enrollment, track student records, handle finances, and more.
                </p>
                <div class="flex gap-3">
                    <input type="text" 
                           @bind="searchQuery"
                           @bind:event="oninput"
                           placeholder="Search documentation..."
                           class="flex-1 rounded-lg border-0 px-4 py-2 text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white" />
                    <button class="rounded-lg bg-white px-6 py-2 font-semibold text-blue-600 transition-all hover:bg-blue-50">
                        Search
                    </button>
                </div>
            </div>

            <!-- Getting Started Section -->
            <div id="getting-started" class="rounded-xl bg-white p-6 shadow-md">
                <div class="mb-4 flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-100">
                        <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-800">Getting Started</h2>
                </div>
                
                <div class="space-y-4 text-gray-600">
                    <p>
                        BrightEnroll is designed to streamline school administration tasks. This section will help you get familiar with the system's main features and navigation.
                    </p>
                    
                    <div class="rounded-lg border-l-4 border-blue-600 bg-blue-50 p-4">
                        <h4 class="mb-2 font-semibold text-blue-900">Quick Start Guide</h4>
                        <ol class="list-inside list-decimal space-y-2 text-sm">
                            <li>Log in with your administrator credentials</li>
                            <li>Familiarize yourself with the dashboard overview</li>
                            <li>Navigate through the sidebar menu to explore different modules</li>
                            <li>Check notification bell for important updates</li>
                            <li>Access your profile settings from the top-right corner</li>
                        </ol>
                    </div>

                    <h4 class="mt-4 font-semibold text-gray-800">System Requirements</h4>
                    <ul class="list-inside list-disc space-y-1 text-sm">
                        <li>Modern web browser (Chrome, Firefox, Safari, or Edge)</li>
                        <li>Stable internet connection</li>
                        <li>Screen resolution of at least 1280x720</li>
                        <li>JavaScript enabled</li>
                    </ul>
                </div>
            </div>

            <!-- Enrollment Management Section -->
            <div id="enrollment" class="rounded-xl bg-white p-6 shadow-md">
                <div class="mb-4 flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-green-100">
                        <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-800">Enrollment Management</h2>
                </div>
                
                <div class="space-y-4 text-gray-600">
                    <h4 class="font-semibold text-gray-800">Managing Student Enrollment</h4>
                    <p>The enrollment module helps you manage new student registrations, transfers, and returnees.</p>

                    <div class="mt-4 grid grid-cols-1 gap-4 md:grid-cols-2">
                        <div class="rounded-lg border border-gray-200 p-4">
                            <h5 class="mb-2 font-semibold text-gray-800">Pre-registered Students</h5>
                            <p class="mb-3 text-sm">View and process students who have submitted online registration forms.</p>
                            <ol class="list-inside list-decimal space-y-1 text-sm">
                                <li>Navigate to Enrollment ? Pre-registered</li>
                                <li>Review student information and documents</li>
                                <li>Verify all required documents are submitted</li>
                                <li>Click "Enroll" to approve and move to enrolled status</li>
                            </ol>
                        </div>

                        <div class="rounded-lg border border-gray-200 p-4">
                            <h5 class="mb-2 font-semibold text-gray-800">Enrolled Students</h5>
                            <p class="mb-3 text-sm">Manage students who have been officially enrolled in the school.</p>
                            <ol class="list-inside list-decimal space-y-1 text-sm">
                                <li>Access via Enrollment ? Enrolled</li>
                                <li>View complete student profiles</li>
                                <li>Edit student information as needed</li>
                                <li>Generate enrollment certificates</li>
                            </ol>
                        </div>
                    </div>

                    <div class="mt-4 rounded-lg border-l-4 border-yellow-600 bg-yellow-50 p-4">
                        <p class="text-sm">
                            <strong>Important:</strong> Always verify PSA Birth Certificates and other required documents before approving enrollment.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Student Records Section -->
            <div id="student-records" class="rounded-xl bg-white p-6 shadow-md">
                <div class="mb-4 flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-purple-100">
                        <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-800">Student Records</h2>
                </div>
                
                <div class="space-y-4 text-gray-600">
                    <h4 class="font-semibold text-gray-800">Accessing Student Information</h4>
                    <p>View and manage comprehensive student records including personal information, academic history, and documents.</p>

                    <h5 class="mt-4 font-semibold text-gray-800">Key Features:</h5>
                    <ul class="list-inside list-disc space-y-2 text-sm">
                        <li><strong>Search & Filter:</strong> Quickly find students by name, ID, grade level, or section</li>
                        <li><strong>Student Profile:</strong> View complete student information, contact details, and emergency contacts</li>
                        <li><strong>Academic History:</strong> Access grades, attendance records, and academic performance</li>
                        <li><strong>Document Management:</strong> Store and retrieve important student documents</li>
                        <li><strong>Export Data:</strong> Generate reports and export student information in various formats</li>
                    </ul>

                    <div class="mt-4 rounded-lg bg-gray-50 p-4">
                        <h5 class="mb-2 font-semibold text-gray-800">How to Update Student Records</h5>
                        <ol class="list-inside list-decimal space-y-1 text-sm">
                            <li>Go to Student Record module from the sidebar</li>
                            <li>Search for the student using the search bar or filters</li>
                            <li>Click on the student's name to open their profile</li>
                            <li>Click the "Edit" button to modify information</li>
                            <li>Make necessary changes and click "Save"</li>
                        </ol>
                    </div>
                </div>
            </div>

            <!-- Academics Section -->
            <div id="academics" class="rounded-xl bg-white p-6 shadow-md">
                <div class="mb-4 flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-indigo-100">
                        <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-800">Academics</h2>
                </div>
                
                <div class="space-y-4 text-gray-600">
                    <p>Manage sections, subjects, and teacher assignments for your school's academic structure.</p>

                    <div class="mt-4 grid grid-cols-1 gap-4 md:grid-cols-3">
                        <div class="rounded-lg border border-gray-200 p-4">
                            <h5 class="mb-2 font-semibold text-gray-800">Sections</h5>
                            <p class="mb-3 text-sm">Create and manage class sections.</p>
                            <ul class="list-inside list-disc space-y-1 text-xs">
                                <li>Add new sections</li>
                                <li>Assign homeroom teachers</li>
                                <li>Set classroom locations</li>
                                <li>Define capacity limits</li>
                            </ul>
                        </div>

                        <div class="rounded-lg border border-gray-200 p-4">
                            <h5 class="mb-2 font-semibold text-gray-800">Subjects</h5>
                            <p class="mb-3 text-sm">Configure subjects for each grade level.</p>
                            <ul class="list-inside list-disc space-y-1 text-xs">
                                <li>Create subject listings</li>
                                <li>Link subjects to sections</li>
                                <li>Set subject descriptions</li>
                                <li>Manage subject codes</li>
                            </ul>
                        </div>

                        <div class="rounded-lg border border-gray-200 p-4">
                            <h5 class="mb-2 font-semibold text-gray-800">Teacher Assignment</h5>
                            <p class="mb-3 text-sm">Assign teachers to subjects and sections.</p>
                            <ul class="list-inside list-disc space-y-1 text-xs">
                                <li>Create teaching assignments</li>
                                <li>Set class schedules</li>
                                <li>Define time slots</li>
                                <li>Manage teacher loads</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Finance Section -->
            <div id="finance" class="rounded-xl bg-white p-6 shadow-md">
                <div class="mb-4 flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-orange-100">
                        <svg class="h-6 w-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-800">Finance</h2>
                </div>
                
                <div class="space-y-4 text-gray-600">
                    <h4 class="font-semibold text-gray-800">Financial Management</h4>
                    <p>Handle school fees, payments, expenses, and financial records efficiently.</p>

                    <div class="mt-4 space-y-3">
                        <div class="rounded-lg bg-blue-50 p-4">
                            <h5 class="mb-2 font-semibold text-blue-900">Fee Setup</h5>
                            <p class="mb-2 text-sm">Configure tuition and miscellaneous fees for different grade levels.</p>
                            <ul class="list-inside list-disc space-y-1 text-sm">
                                <li>Set tuition fees per grade level</li>
                                <li>Add miscellaneous fees (books, uniforms, etc.)</li>
                                <li>Define other fees as needed</li>
                                <li>Update fee structures annually</li>
                            </ul>
                        </div>

                        <div class="rounded-lg bg-green-50 p-4">
                            <h5 class="mb-2 font-semibold text-green-900">Payments</h5>
                            <p class="mb-2 text-sm">Process student fee payments and track balances.</p>
                            <ul class="list-inside list-disc space-y-1 text-sm">
                                <li>Search students by ID or name</li>
                                <li>View payment status (Fully Paid, Partially Paid, Unpaid)</li>
                                <li>Record new payments with different payment methods</li>
                                <li>Generate payment receipts</li>
                            </ul>
                        </div>

                        <div class="rounded-lg bg-orange-50 p-4">
                            <h5 class="mb-2 font-semibold text-orange-900">Expenses</h5>
                            <p class="mb-2 text-sm">Track school expenses and maintain financial records.</p>
                            <ul class="list-inside list-disc space-y-1 text-sm">
                                <li>Record expenses by category</li>
                                <li>Attach receipts and invoices</li>
                                <li>Track approval workflow</li>
                                <li>Monitor expense budgets</li>
                            </ul>
                        </div>

                        <div class="rounded-lg bg-purple-50 p-4">
                            <h5 class="mb-2 font-semibold text-purple-900">Records</h5>
                            <p class="mb-2 text-sm">View comprehensive payment history and financial records.</p>
                            <ul class="list-inside list-disc space-y-1 text-sm">
                                <li>Access student payment history</li>
                                <li>Filter records by grade or status</li>
                                <li>Export financial reports</li>
                                <li>Generate billing statements</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Human Resources Section -->
            <div id="hr" class="rounded-xl bg-white p-6 shadow-md">
                <div class="mb-4 flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-pink-100">
                        <svg class="h-6 w-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-800">Human Resources</h2>
                </div>
                
                <div class="space-y-4 text-gray-600">
                    <p>Manage faculty and staff information, including personal details, employment records, and performance tracking.</p>

                    <h5 class="mt-4 font-semibold text-gray-800">Features:</h5>
                    <ul class="list-inside list-disc space-y-2 text-sm">
                        <li><strong>Employee Directory:</strong> Maintain complete records of all faculty and staff</li>
                        <li><strong>Employment Details:</strong> Track position, department, and employment dates</li>
                        <li><strong>Leave Management:</strong> Record and approve leave applications</li>
                        <li><strong>Performance Reviews:</strong> Document performance evaluations and feedback</li>
                        <li><strong>Document Storage:</strong> Store employment contracts, certifications, and credentials</li>
                    </ul>

                    <div class="mt-4 rounded-lg bg-gray-50 p-4">
                        <h5 class="mb-2 font-semibold text-gray-800">Adding a New Employee</h5>
                        <ol class="list-inside list-decimal space-y-1 text-sm">
                            <li>Navigate to Human Resource from the sidebar</li>
                            <li>Click "Add Employee" button</li>
                            <li>Fill in personal information, contact details, and employment data</li>
                            <li>Upload required documents (Resume, Credentials, etc.)</li>
                            <li>Assign role and department</li>
                            <li>Click "Save" to create the employee record</li>
                        </ol>
                    </div>
                </div>
            </div>

            <!-- Reports Section -->
            <div id="reports" class="rounded-xl bg-white p-6 shadow-md">
                <div class="mb-4 flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-teal-100">
                        <svg class="h-6 w-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-800">Reports & Analytics</h2>
                </div>
                
                <div class="space-y-4 text-gray-600">
                    <p>Generate comprehensive reports and analyze school data for informed decision-making.</p>

                    <h5 class="mt-4 font-semibold text-gray-800">Available Reports:</h5>
                    <div class="mt-3 grid grid-cols-1 gap-3 md:grid-cols-2">
                        <div class="rounded-lg border border-gray-200 p-3">
                            <h6 class="mb-1 text-sm font-semibold text-gray-800">Enrollment Reports</h6>
                            <ul class="list-inside list-disc space-y-1 text-xs">
                                <li>Student enrollment summary</li>
                                <li>Grade level distribution</li>
                                <li>New vs. returning students</li>
                            </ul>
                        </div>
                        <div class="rounded-lg border border-gray-200 p-3">
                            <h6 class="mb-1 text-sm font-semibold text-gray-800">Financial Reports</h6>
                            <ul class="list-inside list-disc space-y-1 text-xs">
                                <li>Payment collection summary</li>
                                <li>Outstanding balances</li>
                                <li>Expense reports by category</li>
                            </ul>
                        </div>
                        <div class="rounded-lg border border-gray-200 p-3">
                            <h6 class="mb-1 text-sm font-semibold text-gray-800">Academic Reports</h6>
                            <ul class="list-inside list-disc space-y-1 text-xs">
                                <li>Class lists and rosters</li>
                                <li>Teacher load reports</li>
                                <li>Subject enrollment</li>
                            </ul>
                        </div>
                        <div class="rounded-lg border border-gray-200 p-3">
                            <h6 class="mb-1 text-sm font-semibold text-gray-800">HR Reports</h6>
                            <ul class="list-inside list-disc space-y-1 text-xs">
                                <li>Employee directory</li>
                                <li>Leave summary</li>
                                <li>Staff attendance</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Troubleshooting Section -->
            <div id="troubleshooting" class="rounded-xl bg-white p-6 shadow-md">
                <div class="mb-4 flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-red-100">
