@page "/contact-support"
@layout Components.Layout.MainLayout
@inject NavigationManager NavigationManager
@inject BrightEnroll_DES.Services.Business.SuperAdmin.SuperAdminService SuperAdminService
@inject BrightEnroll_DES.Data.SuperAdminDbContext SuperAdminDbContext
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@inject BrightEnroll_DES.Services.Authentication.IAuthService AuthService
@inject BrightEnroll_DES.Services.Infrastructure.ILoadingService LoadingService
@using System.ComponentModel.DataAnnotations
@using BrightEnroll_DES.Data.Models
@using Microsoft.EntityFrameworkCore

<PageTitle>Contact Support</PageTitle>

<div class="text-gray-800">
    <div class="mb-6 flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-800">Contact Support</h1>
        <button @onclick="GoBack" class="flex items-center gap-2 rounded-lg bg-gray-600 px-4 py-2 text-sm font-medium text-white shadow-md transition-all duration-300 hover:bg-gray-700 hover:shadow-lg">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back
        </button>
    </div>

    <div class="mx-auto max-w-4xl">
        <!-- Contact Information Cards -->
        <div class="mb-6 grid grid-cols-1 gap-4 md:grid-cols-3">
            <!-- Email Support -->
            <div class="rounded-xl bg-white p-6 shadow-md">
                <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-blue-100">
                    <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>
                <h3 class="mb-2 text-lg font-semibold text-gray-800">Email Support</h3>
                <p class="mb-3 text-sm text-gray-600">Send us an email and we'll respond within 24 hours</p>
                <a href="mailto:support@brightenroll.edu" class="text-sm font-medium text-blue-600 hover:text-blue-700">
                    support@brightenroll.edu
                </a>
            </div>

            <!-- Phone Support -->
            <div class="rounded-xl bg-white p-6 shadow-md">
                <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-green-100">
                    <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                </div>
                <h3 class="mb-2 text-lg font-semibold text-gray-800">Phone Support</h3>
                <p class="mb-3 text-sm text-gray-600">Available Mon-Fri, 8:00 AM - 5:00 PM</p>
                <a href="tel:+1234567890" class="text-sm font-medium text-green-600 hover:text-green-700">
                    +1 (234) 567-890
                </a>
            </div>

            <!-- Live Chat -->
            <div class="rounded-xl bg-white p-6 shadow-md">
                <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-purple-100">
                    <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                </div>
                <h3 class="mb-2 text-lg font-semibold text-gray-800">Live Chat</h3>
                <p class="mb-3 text-sm text-gray-600">Chat with our support team in real-time</p>
                <button @onclick="StartLiveChat" class="text-sm font-medium text-purple-600 hover:text-purple-700">
                    Start Chat
                </button>
            </div>
        </div>

        <!-- Support Ticket Form -->
        <div class="mb-6 rounded-xl bg-white p-6 shadow-md">
            <h2 class="mb-6 text-xl font-bold text-gray-800">Submit a Support Ticket</h2>
            
            <EditForm Model="@supportTicket" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                
                <div class="mb-4 grid grid-cols-1 gap-4 md:grid-cols-2">
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700">
                            Full Name <span class="text-red-500">*</span>
                        </label>
                        <InputText @bind-Value="supportTicket.FullName" 
                                   class="w-full rounded-lg border border-gray-300 px-4 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200"
                                   placeholder="Enter your full name" />
                        <ValidationMessage For="@(() => supportTicket.FullName)" class="text-red-500 text-xs mt-1" />
                    </div>
                    
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700">
                            Email Address <span class="text-red-500">*</span>
                        </label>
                        <InputText @bind-Value="supportTicket.Email" 
                                   type="email"
                                   class="w-full rounded-lg border border-gray-300 px-4 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200"
                                   placeholder="your.email@example.com" />
                        <ValidationMessage For="@(() => supportTicket.Email)" class="text-red-500 text-xs mt-1" />
                    </div>
                </div>

                <div class="mb-4 grid grid-cols-1 gap-4 md:grid-cols-2">
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700">
                            Category <span class="text-red-500">*</span>
                        </label>
                        <InputSelect @bind-Value="supportTicket.Category" 
                                     class="w-full rounded-lg border border-gray-300 px-4 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200">
                            <option value="">Select a category</option>
                            <option value="Technical Issue">Technical Issue</option>
                            <option value="Account Problem">Account Problem</option>
                            <option value="Billing Question">Billing Question</option>
                            <option value="Feature Request">Feature Request</option>
                            <option value="General Inquiry">General Inquiry</option>
                            <option value="Bug Report">Bug Report</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => supportTicket.Category)" class="text-red-500 text-xs mt-1" />
                    </div>
                    
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700">
                            Priority <span class="text-red-500">*</span>
                        </label>
                        <InputSelect @bind-Value="supportTicket.Priority" 
                                     class="w-full rounded-lg border border-gray-300 px-4 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200">
                            <option value="">Select priority</option>
                            <option value="Low">Low</option>
                            <option value="Medium">Medium</option>
                            <option value="High">High</option>
                            <option value="Critical">Critical</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => supportTicket.Priority)" class="text-red-500 text-xs mt-1" />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="mb-2 block text-sm font-medium text-gray-700">
                        Subject <span class="text-red-500">*</span>
                    </label>
                    <InputText @bind-Value="supportTicket.Subject" 
                               class="w-full rounded-lg border border-gray-300 px-4 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200"
                               placeholder="Brief description of your issue" />
                    <ValidationMessage For="@(() => supportTicket.Subject)" class="text-red-500 text-xs mt-1" />
                </div>

                <div class="mb-4">
                    <label class="mb-2 block text-sm font-medium text-gray-700">
                        Description <span class="text-red-500">*</span>
                    </label>
                    <InputTextArea @bind-Value="supportTicket.Description" 
                                   rows="6"
                                   class="w-full rounded-lg border border-gray-300 px-4 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200"
                                   placeholder="Please provide detailed information about your issue..." />
                    <ValidationMessage For="@(() => supportTicket.Description)" class="text-red-500 text-xs mt-1" />
                </div>

                <div class="mb-6">
                    <label class="mb-2 block text-sm font-medium text-gray-700">
                        Attachments (Optional)
                    </label>
                    <div class="flex w-full items-center justify-center">
                        <label class="flex h-32 w-full cursor-pointer flex-col items-center justify-center rounded-lg border-2 border-dashed border-gray-300 bg-gray-50 hover:bg-gray-100">
                            <div class="flex flex-col items-center justify-center pb-6 pt-5">
                                <svg class="mb-3 h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                                </svg>
                                <p class="mb-2 text-sm text-gray-500"><span class="font-semibold">Click to upload</span> or drag and drop</p>
                                <p class="text-xs text-gray-500">PNG, JPG, PDF up to 10MB</p>
                            </div>
                            <InputFile class="hidden" />
                        </label>
                    </div>
                </div>

                @if (showSuccessMessage)
                {
                    <div class="mb-4 rounded-lg border border-green-200 bg-green-50 p-4">
                        <div class="flex items-center">
                            <svg class="mr-2 h-5 w-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span class="text-sm font-medium text-green-800">Your support ticket has been submitted successfully! We'll get back to you soon.</span>
                        </div>
                    </div>
                }

                <div class="flex gap-3">
                    <button type="submit" 
                            disabled="@isSubmitting"
                            class="flex-1 rounded-lg bg-blue-600 px-6 py-3 text-sm font-semibold text-white transition-all hover:bg-blue-700 disabled:cursor-not-allowed disabled:opacity-50">
                        @if (isSubmitting)
                        {
                            <span class="flex items-center justify-center">
                                <svg class="-ml-1 mr-3 h-5 w-5 animate-spin text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                Submitting...
                            </span>
                        }
                        else
                        {
                            <span>Submit Ticket</span>
                        }
                    </button>
                    <button type="button" 
                            @onclick="ResetForm"
                            class="rounded-lg border border-gray-300 bg-white px-6 py-3 text-sm font-semibold text-gray-700 transition-all hover:bg-gray-50">
                        Reset
                    </button>
                </div>
            </EditForm>
        </div>

        <!-- FAQ Section -->
        <div class="rounded-xl bg-white p-6 shadow-md">
            <h2 class="mb-6 text-xl font-bold text-gray-800">Frequently Asked Questions</h2>
            
            <div class="space-y-4">
                <div class="border-b border-gray-200 pb-4">
                    <button @onclick='() => ToggleFaq(0)' class="flex w-full items-center justify-between text-left">
                        <h3 class="font-semibold text-gray-800">How do I reset my password?</h3>
                        <svg class="h-5 w-5 text-gray-500 transition-transform @(openFaqIndex == 0 ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    @if (openFaqIndex == 0)
                    {
                        <p class="mt-3 text-sm text-gray-600">
                            To reset your password, go to Settings > Privacy & Security and click on "Change Password". You'll need to enter your current password and then your new password twice for confirmation.
                        </p>
                    }
                </div>

                <div class="border-b border-gray-200 pb-4">
                    <button @onclick='() => ToggleFaq(1)' class="flex w-full items-center justify-between text-left">
                        <h3 class="font-semibold text-gray-800">How long does it take to get a response?</h3>
                        <svg class="h-5 w-5 text-gray-500 transition-transform @(openFaqIndex == 1 ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    @if (openFaqIndex == 1)
                    {
                        <p class="mt-3 text-sm text-gray-600">
                            Our support team typically responds to tickets within 24 hours during business days. For urgent issues, we recommend using live chat or calling our phone support line.
                        </p>
                    }
                </div>

                <div class="border-b border-gray-200 pb-4">
                    <button @onclick='() => ToggleFaq(2)' class="flex w-full items-center justify-between text-left">
                        <h3 class="font-semibold text-gray-800">Can I track my support ticket?</h3>
                        <svg class="h-5 w-5 text-gray-500 transition-transform @(openFaqIndex == 2 ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    @if (openFaqIndex == 2)
                    {
                        <p class="mt-3 text-sm text-gray-600">
                            Yes! Once you submit a ticket, you'll receive a confirmation email with a ticket number. You can use this number to track the status of your ticket or reply to update it with additional information.
                        </p>
                    }
                </div>

                <div class="pb-4">
                    <button @onclick='() => ToggleFaq(3)' class="flex w-full items-center justify-between text-left">
                        <h3 class="font-semibold text-gray-800">What information should I include in my ticket?</h3>
                        <svg class="h-5 w-5 text-gray-500 transition-transform @(openFaqIndex == 3 ? "rotate-180" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    @if (openFaqIndex == 3)
                    {
                        <p class="mt-3 text-sm text-gray-600">
                            Please provide as much detail as possible: describe the issue, steps to reproduce it, what you expected to happen, and any error messages. Screenshots or screen recordings are also very helpful!
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    // Form model for support ticket submission
    private class SupportTicketForm
    {
        [Required(ErrorMessage = "Full name is required")]
        public string FullName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Category is required")]
        public string Category { get; set; } = string.Empty;

        [Required(ErrorMessage = "Priority is required")]
        public string Priority { get; set; } = "Medium";

        [Required(ErrorMessage = "Subject is required")]
        public string Subject { get; set; } = string.Empty;

        [Required(ErrorMessage = "Description is required")]
        public string Description { get; set; } = string.Empty;
    }

    private SupportTicketForm supportTicket = new();
    private bool isSubmitting = false;
    private bool showSuccessMessage = false;
    private int openFaqIndex = -1;

    private void GoBack()
    {
        NavigationManager.NavigateTo("/settings");
    }

    private void StartLiveChat()
    {
        // TODO: Implement live chat functionality
        // This could open a chat widget or navigate to a chat page
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        LoadingService.ShowLoading("Submitting support ticket...");
        
        try
        {
            // Get current school's connection string from configuration
            var currentConnectionString = Configuration["ConnectionStrings:DefaultConnection"];
            
            // Find CustomerId by matching connection string
            int? customerId = null;
            if (!string.IsNullOrWhiteSpace(currentConnectionString))
            {
                try
                {
                    var customer = await SuperAdminDbContext.Customers
                        .Where(c => c.DatabaseConnectionString == currentConnectionString)
                        .FirstOrDefaultAsync();
                    
                    if (customer != null)
                    {
                        customerId = customer.CustomerId;
                    }
                }
                catch (Exception ex)
                {
                    System.Diagnostics.Debug.WriteLine($"Error finding customer by connection string: {ex.Message}");
                }
            }

            // Create SupportTicket entity model from form data
            var ticket = new BrightEnroll_DES.Data.Models.SupportTicket
            {
                CustomerId = customerId,
                Subject = supportTicket.Subject,
                Description = $@"Submitted by: {supportTicket.FullName}
Email: {supportTicket.Email}
Category: {supportTicket.Category}
Priority: {supportTicket.Priority}

Description:
{supportTicket.Description}",
                Priority = supportTicket.Priority,
                Status = "Open",
                Category = supportTicket.Category,
                CreatedAt = DateTime.Now
            };

            // Submit to SuperAdmin
            var createdTicket = await SuperAdminService.CreateSupportTicketAsync(ticket);
            
            showSuccessMessage = true;
            isSubmitting = false;
            LoadingService.HideLoading();
            
            // Reset form after 3 seconds
            await Task.Delay(3000);
            ResetForm();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error submitting support ticket: {ex.Message}");
            showSuccessMessage = false;
            isSubmitting = false;
            LoadingService.HideLoading();
            
            // Show error message (you can enhance this with a proper error display)
            await Task.Delay(1000);
        }
    }

    private void ResetForm()
    {
        supportTicket = new SupportTicketForm();
        showSuccessMessage = false;
        StateHasChanged();
    }

    private void ToggleFaq(int index)
    {
        openFaqIndex = openFaqIndex == index ? -1 : index;
    }
}

