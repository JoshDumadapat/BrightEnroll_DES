    private async Task SaveSyncHistory(string syncType, SyncResult result, int durationSeconds)
    {
        try
        {
            // Get the existing sync history record (should only be one)
            var existingHistory = await DbContext.SyncHistories
                .OrderByDescending(s => s.SyncTime)
                .FirstOrDefaultAsync();
            
            if (existingHistory != null)
            {
                // Update existing record instead of creating new one
                existingHistory.SyncType = syncType;
                existingHistory.SyncTime = result.SyncTime;
                existingHistory.Status = result.Success ? "Success" : "Error";
                existingHistory.RecordsPushed = result.RecordsPushed;
                existingHistory.RecordsPulled = result.RecordsPulled;
                existingHistory.Message = result.Message;
                existingHistory.ErrorDetails = result.Errors.Any() ? string.Join("; ", result.Errors) : null;
                existingHistory.DurationSeconds = durationSeconds;
                existingHistory.CreatedAt = DateTime.Now;
                
                DbContext.SyncHistories.Update(existingHistory);
            }
            else
            {
                // Create first record if none exists
                var syncHistory = new SyncHistory
                {
                    SyncType = syncType,
                    SyncTime = result.SyncTime,
                    Status = result.Success ? "Success" : "Error",
                    RecordsPushed = result.RecordsPushed,
                    RecordsPulled = result.RecordsPulled,
                    Message = result.Message,
                    ErrorDetails = result.Errors.Any() ? string.Join("; ", result.Errors) : null,
                    DurationSeconds = durationSeconds,
                    CreatedAt = DateTime.Now
                };
                
                DbContext.SyncHistories.Add(syncHistory);
            }
            
            await DbContext.SaveChangesAsync();
            
            // Update last sync time in status service
            if (result.Success)
            {
                SyncStatusService.UpdateLastSyncTime(result.SyncTime);
            }
        }
        catch
        {
            // Silently fail if database is not available
        }
    }

