@page "/cloud-management"
@layout Components.Layout.MainLayout
@inject IConnectivityService ConnectivityService
@inject ILoadingService LoadingService
@inject IDatabaseSyncService SyncService
@inject ISyncStatusService SyncStatusService
@inject IConfiguration Configuration
@using Microsoft.Extensions.Configuration
@using BrightEnroll_DES.Components
@using BrightEnroll_DES.Services
@using BrightEnroll_DES.Services.Database.Sync
@implements IDisposable

<PageTitle>Cloud Management</PageTitle>

<!-- Toast Notification -->
<ToastNotification Show="@showToast" Message="@toastMessage" Type="@toastType" OnClose="CloseToast" Duration="@(toastType == ToastType.Loading ? 0 : 4000)" />

<div class="text-gray-800">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Cloud Management</h1>
    
    <!-- Connection Status Card -->
    <div class="mb-6 overflow-hidden rounded-xl bg-white shadow">
        <div class="px-6 py-6">
            <div class="mb-4 flex items-center justify-between border-b border-gray-200 pb-4">
                <h5 class="text-lg font-bold text-gray-800">Connection Status</h5>
                <button @onclick="TestConnection" 
                        disabled="@isTestingConnection"
                        class="rounded-lg bg-blue-100 px-3 py-1 text-sm text-blue-700 transition-colors hover:bg-blue-200">
                    @if (isTestingConnection)
                    {
                        <span>Testing...</span>
                    }
                    else
                    {
                        <span>Test Connection</span>
                    }
                </button>
            </div>
            
            <div class="space-y-3">
                <div class="flex items-center gap-4">
                    <div class="flex items-center gap-2">
                        @if (isConnected)
                        {
                            <div class="h-3 w-3 animate-pulse rounded-full bg-green-500"></div>
                            <span class="font-medium text-gray-700">Connected to Cloud</span>
                        }
                        else
                        {
                            <div class="h-3 w-3 rounded-full bg-red-500"></div>
                            <span class="font-medium text-gray-700">Disconnected - Using Local Database</span>
                        }
                    </div>
                </div>
                
                <div class="grid grid-cols-2 gap-4 text-sm">
                    <div>
                        <span class="text-gray-500">Last Sync:</span>
                        <span class="ml-2 font-medium text-gray-700">@(string.IsNullOrEmpty(lastSyncTime) ? "Never" : lastSyncTime)</span>
                    </div>
                    <div>
                        <span class="text-gray-500">Auto-Sync:</span>
                        <span class="ml-2 @(autoSyncEnabled ? "text-green-600" : "text-gray-500") font-medium">
                            @(autoSyncEnabled ? $"Every {autoSyncInterval} minutes" : "Disabled")
                        </span>
                    </div>
                    @if (SyncStatusService.IsSyncing)
                    {
                        <div class="col-span-2">
                            <span class="text-gray-500">Status:</span>
                            <span class="ml-2 font-medium text-blue-600">Syncing in progress...</span>
                        </div>
                    }
                </div>
                
                @if (!string.IsNullOrEmpty(connectionTestResult))
                {
                    <div class="mt-2 rounded p-2 @(connectionTestResult.Contains("successful", StringComparison.OrdinalIgnoreCase) ? "bg-green-50 text-green-700" : "bg-red-50 text-red-700") text-sm">
                        @connectionTestResult
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sync Actions Card -->
    <div class="mb-6 overflow-hidden rounded-xl bg-white shadow">
        <div class="px-6 py-6">
            <div class="mb-4 flex items-center justify-between border-b border-gray-200 pb-4">
                <h5 class="text-lg font-bold text-gray-800">Sync Actions</h5>
            </div>
            
            <div class="space-y-4">
                <!-- Sync Now Button (Full Sync) -->
                <div class="rounded-lg border border-gray-200 bg-gray-50 p-4">
                    <div class="mb-3">
                        <h6 class="mb-1 text-sm font-semibold text-gray-700">Full Synchronization</h6>
                        <p class="text-xs text-gray-500">Syncs all data bidirectionally between local and cloud databases</p>
                    </div>
                    <button @onclick="SyncNow" 
                            disabled="@(isSyncing || !isConnected)"
                            class="flex w-full @(isSyncing || !isConnected ? "bg-gray-400 cursor-not-allowed" : "bg-blue-600 hover:bg-blue-700") items-center justify-center gap-2 rounded-lg px-4 py-2 text-sm font-medium text-white transition-all">
                        @if (isSyncing)
                        {
                            <svg class="h-5 w-5 animate-spin text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            <span>Syncing...</span>
                        }
                        else
                        {
                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                            </svg>
                            <span>Sync Now</span>
                        }
                    </button>
                </div>

                <!-- Sync To Cloud Button -->
                <div class="rounded-lg border border-gray-200 bg-gray-50 p-4">
                    <div class="mb-3">
                        <h6 class="mb-1 text-sm font-semibold text-gray-700">Push to Cloud</h6>
                        <p class="text-xs text-gray-500">Uploads all local changes to the cloud database</p>
                    </div>
                    <button @onclick="SyncToCloud" 
                            disabled="@(isSyncing || !isConnected)"
                            class="flex w-full @(isSyncing || !isConnected ? "bg-gray-400 cursor-not-allowed" : "bg-green-600 hover:bg-green-700") items-center justify-center gap-2 rounded-lg px-4 py-2 text-sm font-medium text-white transition-all">
                        @if (isSyncing && syncType == "toCloud")
                        {
                            <svg class="h-5 w-5 animate-spin text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            <span>Uploading...</span>
                        }
                        else
                        {
                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                            </svg>
                            <span>Push to Cloud</span>
                        }
                    </button>
                </div>

                <!-- Sync From Cloud Button -->
                <div class="rounded-lg border border-gray-200 bg-gray-50 p-4">
                    <div class="mb-3">
                        <h6 class="mb-1 text-sm font-semibold text-gray-700">Pull from Cloud</h6>
                        <p class="text-xs text-gray-500">Downloads all cloud data to the local database</p>
                    </div>
                    <button @onclick="SyncFromCloud" 
                            disabled="@(isSyncing || !isConnected)"
                            class="flex w-full @(isSyncing || !isConnected ? "bg-gray-400 cursor-not-allowed" : "bg-purple-600 hover:bg-purple-700") items-center justify-center gap-2 rounded-lg px-4 py-2 text-sm font-medium text-white transition-all">
                        @if (isSyncing && syncType == "fromCloud")
                        {
                            <svg class="h-5 w-5 animate-spin text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            <span>Downloading...</span>
                        }
                        else
                        {
                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
                            </svg>
                            <span>Pull from Cloud</span>
                        }
                    </button>
                </div>

                <!-- Sync Reference Data Button -->
                <div class="rounded-lg border border-gray-200 bg-gray-50 p-4">
                    <div class="mb-3">
                        <h6 class="mb-1 text-sm font-semibold text-gray-700">Sync Reference Data</h6>
                        <p class="text-xs text-gray-500">Syncs reference data (grade levels, fees, etc.) from cloud to local</p>
                    </div>
                    <button @onclick="SyncReferenceData" 
                            disabled="@(isSyncing || !isConnected)"
                            class="flex w-full @(isSyncing || !isConnected ? "bg-gray-400 cursor-not-allowed" : "bg-orange-600 hover:bg-orange-700") items-center justify-center gap-2 rounded-lg px-4 py-2 text-sm font-medium text-white transition-all">
                        @if (isSyncing && syncType == "reference")
                        {
                            <svg class="h-5 w-5 animate-spin text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            <span>Syncing...</span>
                        }
                        else
                        {
                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                            </svg>
                            <span>Sync Reference Data</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Sync Status Card -->
    @if (!string.IsNullOrEmpty(syncStatusMessage) || syncLogs.Any())
    {
        <div class="mb-6 overflow-hidden rounded-xl bg-white shadow">
            <div class="px-6 py-6">
                <div class="mb-4 flex items-center justify-between border-b border-gray-200 pb-4">
                    <h5 class="text-lg font-bold text-gray-800">Sync Status & Logs</h5>
                    @if (syncLogs.Count > 0)
                    {
                        <button @onclick="ClearLogs" class="text-sm text-gray-500 hover:text-gray-700">
                            Clear Logs
                        </button>
                    }
                </div>
                
                @if (!string.IsNullOrEmpty(syncStatusMessage))
                {
                    <div class="@(syncStatusType == "error" ? "bg-red-50 border border-red-200" : "bg-green-50 border border-green-200") mb-4 rounded-lg p-4">
                        <p class="text-sm @(syncStatusType == "error" ? "text-red-700" : "text-green-700")">@syncStatusMessage</p>
                        @if (resultDetails != null)
                        {
                            <div class="mt-2 text-xs @(syncStatusType == "error" ? "text-red-600" : "text-green-600")">
                                <div>Records Pushed: @resultDetails.RecordsPushed</div>
                                <div>Records Pulled: @resultDetails.RecordsPulled</div>
                                @if (resultDetails.Errors.Any())
                                {
                                    <div class="mt-2">
                                        <strong>Errors:</strong>
                                        <ul class="list-inside list-disc">
                                            @foreach (var error in resultDetails.Errors)
                                            {
                                                <li>@error</li>
                                            }
                                        </ul>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                
                @if (syncLogs.Any())
                {
                    <div class="max-h-64 space-y-2 overflow-y-auto">
                        @foreach (var log in syncLogs.OrderByDescending(l => l.Timestamp).Take(20))
                        {
                            <div class="rounded border border-gray-200 bg-gray-50 p-2 text-xs">
                                <div class="mb-1 flex items-center justify-between">
                                    <span class="font-medium text-gray-700">@log.Type</span>
                                    <span class="text-gray-500">@log.Timestamp.ToString("HH:mm:ss")</span>
                                </div>
                                <div class="text-gray-600">@log.Message</div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private bool isConnected = false;
    private bool isSyncing = false;
    private bool isTestingConnection = false;
    private string syncType = "";
    private string lastSyncTime = "";
    private string syncStatusMessage = "";
    private string syncStatusType = "success"; // "success" or "error"
    private string connectionTestResult = "";
    private SyncResult? resultDetails = null;
    private bool autoSyncEnabled = true;
    private int autoSyncInterval = 5;
    
    // Sync logs
    private List<SyncLogEntry> syncLogs = new();
    
    // Toast notification
    private bool showToast = false;
    private string toastMessage = "";
    private ToastType toastType = ToastType.Success;
    
    private class SyncLogEntry
    {
        public DateTime Timestamp { get; set; } = DateTime.Now;
        public string Type { get; set; } = "";
        public string Message { get; set; } = "";
    }

    protected override async Task OnInitializedAsync()
    {
        // Check initial connectivity - actively test cloud connection
        isConnected = await ConnectivityService.CheckCloudConnectivityAsync();
        
        // Get auto-sync settings
        autoSyncInterval = Configuration.GetValue<int>("Sync:AutoSyncIntervalMinutes", 5);
        autoSyncEnabled = Configuration.GetValue<bool>("Sync:PrioritizeCloud", true);
        
        // Get last sync time from sync status service
        if (SyncStatusService.LastSyncTime.HasValue)
        {
            lastSyncTime = SyncStatusService.LastSyncTime.Value.ToString("yyyy-MM-dd HH:mm:ss");
        }
        
        // Subscribe to connectivity changes
        ConnectivityService.ConnectivityChanged += OnConnectivityChanged;
        SyncStatusService.StatusChanged += OnSyncStatusChanged;
        
        AddLog("System", "Cloud Management page initialized");
        
        await base.OnInitializedAsync();
    }
    
    private void OnSyncStatusChanged(object? sender, SyncStatusChangedEventArgs e)
    {
        if (e.LastSyncTime.HasValue)
        {
            lastSyncTime = e.LastSyncTime.Value.ToString("yyyy-MM-dd HH:mm:ss");
        }
        InvokeAsync(StateHasChanged);
    }
    
    private async Task TestConnection()
    {
        isTestingConnection = true;
        connectionTestResult = "";
        StateHasChanged();
        
        try
        {
            var connected = await SyncService.TestCloudConnectionAsync();
            isConnected = connected;
            connectionTestResult = connected 
                ? "✓ Connection test successful! Cloud database is accessible." 
                : "✗ Connection test failed! Please check your connection settings.";
            
            AddLog("Connection Test", connectionTestResult);
        }
        catch (Exception ex)
        {
            connectionTestResult = $"✗ Connection test error: {ex.Message}";
            AddLog("Connection Test", $"Error: {ex.Message}");
        }
        finally
        {
            isTestingConnection = false;
            StateHasChanged();
        }
    }
    
    private void AddLog(string type, string message)
    {
        syncLogs.Add(new SyncLogEntry
        {
            Type = type,
            Message = message,
            Timestamp = DateTime.Now
        });
        
        // Keep only last 50 logs
        if (syncLogs.Count > 50)
        {
            syncLogs.RemoveAt(0);
        }
    }
    
    private void ClearLogs()
    {
        syncLogs.Clear();
        StateHasChanged();
    }

    private void OnConnectivityChanged(object? sender, bool connected)
    {
        isConnected = connected;
        InvokeAsync(StateHasChanged);
    }

    private async Task SyncNow()
    {
        if (isSyncing || !isConnected) return;
        
        isSyncing = true;
        syncType = "full";
        syncStatusMessage = "";
        resultDetails = null;
        
        AddLog("Full Sync", "Starting full synchronization...");
        
        // Show loading toast instead of full screen loading
        toastMessage = "Synchronizing data with cloud...";
        toastType = ToastType.Loading;
        showToast = true;
        StateHasChanged();
        
        try
        {
            var result = await SyncService.FullSyncAsync();
            resultDetails = result;
            
            if (result.Success)
            {
                syncStatusMessage = result.Message;
                syncStatusType = "success";
                toastMessage = $"Sync completed: {result.RecordsPushed} pushed, {result.RecordsPulled} pulled.";
                toastType = ToastType.Success;
                lastSyncTime = result.SyncTime.ToString("yyyy-MM-dd HH:mm:ss");
                AddLog("Full Sync", $"Success: {result.RecordsPushed} pushed, {result.RecordsPulled} pulled");
            }
            else
            {
                syncStatusMessage = result.Message;
                syncStatusType = "error";
                toastMessage = $"Sync failed: {result.Message}";
                toastType = ToastType.Error;
                AddLog("Full Sync", $"Failed: {result.Message}");
                foreach (var error in result.Errors)
                {
                    AddLog("Error", error);
                }
            }
        }
        catch (Exception ex)
        {
            syncStatusMessage = $"Error: {ex.Message}";
            syncStatusType = "error";
            toastMessage = $"Sync error: {ex.Message}";
            toastType = ToastType.Error;
            AddLog("Full Sync", $"Exception: {ex.Message}");
        }
        finally
        {
            isSyncing = false;
            syncType = "";
            StateHasChanged();
        }
    }

    private async Task SyncToCloud()
    {
        if (isSyncing || !isConnected) return;
        
        isSyncing = true;
        syncType = "toCloud";
        syncStatusMessage = "";
        resultDetails = null;
        
        AddLog("Push to Cloud", "Starting upload to cloud...");
        
        // Show loading toast instead of full screen loading
        toastMessage = "Uploading data to cloud...";
        toastType = ToastType.Loading;
        showToast = true;
        StateHasChanged();
        
        try
        {
            var result = await SyncService.SyncToCloudAsync();
            resultDetails = result;
            
            if (result.Success)
            {
                syncStatusMessage = result.Message;
                syncStatusType = "success";
                toastMessage = $"Successfully uploaded {result.RecordsPushed} records to cloud.";
                toastType = ToastType.Success;
                lastSyncTime = result.SyncTime.ToString("yyyy-MM-dd HH:mm:ss");
                AddLog("Push to Cloud", $"Success: {result.RecordsPushed} records uploaded");
            }
            else
            {
                syncStatusMessage = result.Message;
                syncStatusType = "error";
                toastMessage = $"Upload failed: {result.Message}";
                toastType = ToastType.Error;
                AddLog("Push to Cloud", $"Failed: {result.Message}");
            }
        }
        catch (Exception ex)
        {
            syncStatusMessage = $"Error: {ex.Message}";
            syncStatusType = "error";
            toastMessage = $"Upload error: {ex.Message}";
            toastType = ToastType.Error;
            AddLog("Push to Cloud", $"Exception: {ex.Message}");
        }
        finally
        {
            isSyncing = false;
            syncType = "";
            StateHasChanged();
        }
    }

    private async Task SyncFromCloud()
    {
        if (isSyncing || !isConnected) return;
        
        isSyncing = true;
        syncType = "fromCloud";
        syncStatusMessage = "";
        resultDetails = null;
        
        AddLog("Pull from Cloud", "Starting download from cloud...");
        
        // Show loading toast instead of full screen loading
        toastMessage = "Downloading data from cloud...";
        toastType = ToastType.Loading;
        showToast = true;
        StateHasChanged();
        
        try
        {
            var result = await SyncService.SyncFromCloudAsync();
            resultDetails = result;
            
            if (result.Success)
            {
                syncStatusMessage = result.Message;
                syncStatusType = "success";
                toastMessage = $"Successfully downloaded {result.RecordsPulled} records from cloud.";
                toastType = ToastType.Success;
                lastSyncTime = result.SyncTime.ToString("yyyy-MM-dd HH:mm:ss");
                AddLog("Pull from Cloud", $"Success: {result.RecordsPulled} records downloaded");
            }
            else
            {
                syncStatusMessage = result.Message;
                syncStatusType = "error";
                toastMessage = $"Download failed: {result.Message}";
                toastType = ToastType.Error;
                AddLog("Pull from Cloud", $"Failed: {result.Message}");
            }
        }
        catch (Exception ex)
        {
            syncStatusMessage = $"Error: {ex.Message}";
            syncStatusType = "error";
            toastMessage = $"Download error: {ex.Message}";
            toastType = ToastType.Error;
            AddLog("Pull from Cloud", $"Exception: {ex.Message}");
        }
        finally
        {
            isSyncing = false;
            syncType = "";
            StateHasChanged();
        }
    }

    private async Task SyncReferenceData()
    {
        if (isSyncing || !isConnected) return;
        
        isSyncing = true;
        syncType = "reference";
        syncStatusMessage = "";
        
        // Show loading toast instead of full screen loading
        toastMessage = "Syncing reference data from cloud...";
        toastType = ToastType.Loading;
        showToast = true;
        StateHasChanged();
        
        try
        {
            // Sync only reference tables (GradeLevel, Fees, etc.)
            var result = await SyncService.SyncFromCloudAsync();
            
            if (result.Success)
            {
                syncStatusMessage = $"Reference data synced: {result.RecordsPulled} records updated.";
                syncStatusType = "success";
                toastMessage = $"Reference data synced successfully. {result.RecordsPulled} records updated.";
                toastType = ToastType.Success;
                lastSyncTime = result.SyncTime.ToString("yyyy-MM-dd HH:mm:ss");
            }
            else
            {
                syncStatusMessage = result.Message;
                syncStatusType = "error";
                toastMessage = $"Sync failed: {result.Message}";
                toastType = ToastType.Error;
            }
        }
        catch (Exception ex)
        {
            syncStatusMessage = $"Error: {ex.Message}";
            syncStatusType = "error";
            toastMessage = $"Sync error: {ex.Message}";
            toastType = ToastType.Error;
        }
        finally
        {
            isSyncing = false;
            syncType = "";
            StateHasChanged();
        }
    }

    private void CloseToast()
    {
        showToast = false;
        toastMessage = "";
        StateHasChanged();
    }

    public void Dispose()
    {
        ConnectivityService.ConnectivityChanged -= OnConnectivityChanged;
        SyncStatusService.StatusChanged -= OnSyncStatusChanged;
    }
}

