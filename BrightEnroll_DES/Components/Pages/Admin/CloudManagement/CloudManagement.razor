    private async Task LoadSyncLogsFromDatabase()
    {
        try
        {
            // Load only the last 25 logs from database
            var dbLogs = await DbContext.SyncLogs
                .OrderByDescending(l => l.Timestamp)
                .Take(25)
                .ToListAsync();
            
            syncLogs = dbLogs.Select(l => new SyncLogEntry
            {
                Type = l.LogType,
                Message = l.LogMessage,
                Timestamp = l.Timestamp
            }).ToList();
            
            // Cleanup: Ensure only one sync history record exists (keep the latest)
            await CleanupSyncHistory();
        }
        catch
        {
            // If table doesn't exist yet, start with empty list
            syncLogs = new List<SyncLogEntry>();
        }
    }

    private async Task CleanupSyncHistory()
    {
        try
        {
            var allHistories = await DbContext.SyncHistories
                .OrderByDescending(s => s.SyncTime)
                .ToListAsync();
            
            // If more than one record exists, keep only the latest and delete the rest
            if (allHistories.Count > 1)
            {
                var recordsToDelete = allHistories.Skip(1).ToList();
                DbContext.SyncHistories.RemoveRange(recordsToDelete);
                await DbContext.SaveChangesAsync();
            }
        }
        catch
        {
            // Silently fail if database is not available
        }
    }
    
