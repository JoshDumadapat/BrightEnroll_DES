    private async void AddLog(string type, string message, bool persistToDb = true)
    {
        var logEntry = new SyncLogEntry
        {
            Type = type,
            Message = message,
            Timestamp = DateTime.Now
        };
        
        syncLogs.Add(logEntry);
        
        // Keep only last 25 logs in memory
        if (syncLogs.Count > 25)
        {
            syncLogs.RemoveAt(0);
        }
        
        // Persist to database
        if (persistToDb)
        {
            try
            {
                var dbLog = new SyncLog
                {
                    LogType = type,
                    LogMessage = message,
                    Timestamp = DateTime.Now,
                    Severity = type.Contains("Error", StringComparison.OrdinalIgnoreCase) ? "Error" : 
                               type.Contains("Warning", StringComparison.OrdinalIgnoreCase) ? "Warning" : "Info"
                };
                
                DbContext.SyncLogs.Add(dbLog);
                await DbContext.SaveChangesAsync();
                
                // Keep only last 25 logs in database - delete oldest if exceeds
                var totalLogs = await DbContext.SyncLogs.CountAsync();
                if (totalLogs > 25)
                {
                    var logsToDelete = await DbContext.SyncLogs
                        .OrderBy(l => l.Timestamp) // Order by oldest first
                        .Take(totalLogs - 25) // Take the oldest ones that exceed 25
                        .ToListAsync();
                    
                    if (logsToDelete.Any())
                    {
                        DbContext.SyncLogs.RemoveRange(logsToDelete);
                        await DbContext.SaveChangesAsync();
                    }
                }
            }
            catch
            {
                // Silently fail if database is not available
            }
        }
    }
    
    private async Task ClearLogs()
    {
        syncLogs.Clear();
        
