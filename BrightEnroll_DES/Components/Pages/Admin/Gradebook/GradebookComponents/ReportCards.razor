@namespace BrightEnroll_DES.Components.Pages.Admin.Gradebook.GradebookComponents
@using BrightEnroll_DES.Services.Business.Academic
@using BrightEnroll_DES.Services.Authentication
@using BrightEnroll_DES.Data.Models
@using BrightEnroll_DES.Components
@using BrightEnroll_DES.Services.QuestPDF
@using Microsoft.JSInterop
@inject GradeService GradeService
@inject TeacherService TeacherService
@inject IAuthService AuthService
@inject ReportCardPdfGenerator PdfGenerator
@inject IJSRuntime JSRuntime

<!-- Toast Notification -->
<ToastNotification Show="@showToast" Message="@toastMessage" Type="@toastType" OnClose="@CloseToast" Duration="4000" />

<div class="p-6">

    <!-- Report Card Generation -->
    <div class="mb-6 rounded-lg border border-gray-200 bg-gray-50 p-4">
        <h2 class="mb-4 text-lg font-bold text-gray-800">Generate Report Card</h2>
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">School Year:</label>
                <select @bind="selectedSchoolYear" @bind:after="OnFilterChanged"
                        class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                    @foreach (var year in availableSchoolYears)
                    {
                        <option value="@year">@year</option>
                    }
                </select>
            </div>
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700">Section:</label>
                <select @bind="selectedSectionId" @bind:after="OnFilterChanged"
                        class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                    <option value="0">Select Section</option>
                    @foreach (var sec in availableSections)
                    {
                        <option value="@sec.SectionId">@sec.SectionName</option>
                    }
                </select>
            </div>
            <div class="flex items-end">
                <button @onclick="GenerateReportCards" 
                        disabled="@(selectedSectionId == 0 || isLoading)"
                        class="w-full rounded-lg bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed">
                    @if (isLoading)
                    {
                        <span>Generating...</span>
                    }
                    else
                    {
                        <span>Generate Report Cards</span>
                    }
                </button>
            </div>
        </div>
    </div>

    <!-- Report Cards List -->
    <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
            <thead class="bg-gray-100 font-semibold text-gray-600">
                <tr>
                    <th class="px-4 py-3 text-left">Student ID</th>
                    <th class="px-4 py-3 text-left">Name</th>
                    <th class="px-4 py-3 text-left">Section</th>
                    <th class="px-4 py-3 text-center">School Year</th>
                    <th class="px-4 py-3 text-center">Final Grade</th>
                    <th class="px-4 py-3 text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y">
                @if (isLoading)
                {
                    <tr>
                        <td colspan="6" class="px-4 py-8 text-center text-gray-500">Loading report cards...</td>
                    </tr>
                }
                else if (!reportCards.Any())
                {
                    <tr>
                        <td colspan="6" class="px-4 py-8 text-center text-gray-500">No report cards available. Please generate report cards for a section.</td>
                    </tr>
                }
                else
                {
                    @foreach (var card in reportCards)
                    {
                        <tr class="transition hover:bg-gray-50">
                            <td class="px-4 py-3">@card.StudentId</td>
                            <td class="px-4 py-3">@card.Name</td>
                            <td class="px-4 py-3">@card.Section</td>
                            <td class="px-4 py-3 text-center">@card.SchoolYear</td>
                            <td class="px-4 py-3 text-center">
                                @if (card.GeneralAverage > 0)
                                {
                                    <div class="font-bold text-blue-600">@card.TransmutedGrade.ToString("F2")</div>
                                    <div class="text-xs text-gray-500">@card.DescriptiveRating</div>
                                }
                                else
                                {
                                    <div class="font-bold text-gray-400">-</div>
                                    <div class="text-xs text-gray-500">@card.DescriptiveRating</div>
                                }
                            </td>
                            <td class="flex items-center justify-center gap-2 px-4 py-3">
                                <button @onclick="() => DownloadReportCard(card)" 
                                        class="flex items-center gap-1.5 rounded-lg bg-green-50 px-3 py-1.5 text-xs font-medium text-green-600 transition-colors hover:bg-green-100">
                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                    Download PDF
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private List<ReportCardDto> reportCards = new();
    private List<Section> availableSections = new();
    private List<string> availableSchoolYears = new();
    private string selectedSchoolYear = "";
    private int selectedSectionId = 0;
    private int teacherId = 0;
    private bool isLoading = false;
    private bool showToast = false;
    private string toastMessage = "";
    private ToastType toastType = ToastType.Success;

    protected override async Task OnInitializedAsync()
    {
        var currentUser = AuthService.CurrentUser;
        if (currentUser == null)
        {
            ShowToast("You must be logged in to view report cards.", ToastType.Error);
            return;
        }

        teacherId = currentUser.user_ID;

        // Initialize school years
        var currentYear = DateTime.Now.Year;
        var nextYear = currentYear + 1;
        selectedSchoolYear = $"{currentYear}-{nextYear}";
        availableSchoolYears = new List<string>();
        for (int i = 0; i < 3; i++)
        {
            var year = currentYear - i;
            availableSchoolYears.Add($"{year}-{year + 1}");
        }

        await LoadSectionsAsync();
    }

    private async Task LoadSectionsAsync()
    {
        try
        {
            if (teacherId == 0) return;

            availableSections = await TeacherService.GetAssignedSectionsForGradeEntryAsync(teacherId, selectedSchoolYear);
        }
        catch (Exception ex)
        {
            ShowToast($"Error loading sections: {ex.Message}", ToastType.Error);
        }
    }

    private async Task OnFilterChanged()
    {
        await LoadSectionsAsync();
        reportCards.Clear();
    }

    private async Task GenerateReportCards()
    {
        if (selectedSectionId == 0)
        {
            ShowToast("Please select a section.", ToastType.Error);
            return;
        }

        try
        {
            isLoading = true;
            StateHasChanged();

            reportCards = await GradeService.GetReportCardsAsync(selectedSectionId, selectedSchoolYear);

            if (reportCards.Any())
            {
                ShowToast($"Successfully generated {reportCards.Count} report card(s).", ToastType.Success);
            }
            else
            {
                ShowToast("No grades found for this section. Please ensure grades have been entered.", ToastType.Error);
            }
        }
        catch (Exception ex)
        {
            ShowToast($"Error generating report cards: {ex.Message}", ToastType.Error);
            reportCards.Clear();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task DownloadReportCard(ReportCardDto card)
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            var section = availableSections.FirstOrDefault(s => s.SectionName == card.Section);
            if (section == null)
            {
                ShowToast("Section not found.", ToastType.Error);
                return;
            }

            var pdfBytes = await PdfGenerator.GenerateReportCardAsync(card.StudentId, section.SectionId, card.SchoolYear);
            
            var fileName = $"ReportCard_{card.StudentId}_{card.SchoolYear.Replace("-", "_")}_{DateTime.Now:yyyyMMdd_HHmmss}.pdf";
            var base64Content = Convert.ToBase64String(pdfBytes);
            
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, "application/pdf", base64Content);
            
            ShowToast("Report card PDF generated successfully.", ToastType.Success);
        }
        catch (Exception ex)
        {
            ShowToast($"Error generating report card PDF: {ex.Message}", ToastType.Error);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowToast(string message, ToastType type)
    {
        toastMessage = message;
        toastType = type;
        showToast = true;
        StateHasChanged();
    }

    private void CloseToast()
    {
        showToast = false;
        StateHasChanged();
    }
}

