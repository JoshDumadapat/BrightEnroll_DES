@namespace BrightEnroll_DES.Components.Pages.Admin.Gradebook.GradebookComponents
@using BrightEnroll_DES.Services.Business.Academic
@using BrightEnroll_DES.Services.Authentication
@using BrightEnroll_DES.Data.Models
@using BrightEnroll_DES.Components
@inject GradeService GradeService
@inject TeacherService TeacherService
@inject IAuthService AuthService
@inject Microsoft.AspNetCore.Components.NavigationManager Navigation

<!-- Toast Notification -->
<ToastNotification Show="@showToast" Message="@toastMessage" Type="@toastType" OnClose="@CloseToast" Duration="4000" />

<div class="p-6">

    <!-- Class Selection -->
    <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-3">
        <div>
            <label class="mb-2 block text-sm font-medium text-gray-700">School Year:</label>
            <select @bind="selectedSchoolYear" @bind:after="OnSchoolYearChanged"
                    class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                @foreach (var year in availableSchoolYears)
                {
                    <option value="@year">@year</option>
                }
            </select>
        </div>
        <div>
            <label class="mb-2 block text-sm font-medium text-gray-700">Section:</label>
            <select @bind="selectedSectionId" @bind:after="OnSelectionChanged"
                    class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                <option value="0">Select Section</option>
                @foreach (var sec in availableSections)
                {
                    <option value="@sec.SectionId">@sec.SectionName</option>
                }
            </select>
        </div>
        <div>
            <label class="mb-2 block text-sm font-medium text-gray-700">Subject:</label>
            <select @bind="selectedSubjectId" @bind:after="OnSelectionChanged"
                    disabled="@(selectedSectionId == 0)"
                    class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 disabled:bg-gray-100 disabled:cursor-not-allowed">
                <option value="0">All Subjects</option>
                @foreach (var subj in availableSubjects)
                {
                    <option value="@subj.SubjectId">@subj.SubjectName</option>
                }
            </select>
        </div>
    </div>

    @if (selectedSectionId > 0)
    {
        <!-- Grade Entry Table -->
        <div class="mb-4 overflow-x-auto">
            <table class="min-w-full text-sm">
                <thead class="bg-gray-100 font-semibold text-gray-600">
                    <tr>
                        <th class="px-4 py-3 text-left">Student ID</th>
                        <th class="px-4 py-3 text-left">Name</th>
                        <th class="px-4 py-3 text-left">Subject</th>
                        <th class="px-4 py-3 text-center">Q1</th>
                        <th class="px-4 py-3 text-center">Q2</th>
                        <th class="px-4 py-3 text-center">Q3</th>
                        <th class="px-4 py-3 text-center">Q4</th>
                        <th class="px-4 py-3 text-center">Gen Ave</th>
                        <th class="px-4 py-3 text-center">Remarks</th>
                    </tr>
                </thead>
                <tbody class="divide-y">
                    @foreach (var student in students)
                    {
                        <tr class="transition hover:bg-gray-50">
                            <td class="px-4 py-3">@student.StudentId</td>
                            <td class="px-4 py-3">@student.Name</td>
                            <td class="px-4 py-3">@student.SubjectName</td>
                            <td class="px-4 py-3">
                                <input type="number" 
                                       value="@(student.Q1?.ToString() ?? "")"
                                       @onchange="@((ChangeEventArgs e) => OnGradeChanged(student, "Q1", e))"
                                       min="0" max="100" step="0.01"
                                       class="w-20 rounded-lg border border-gray-300 px-2 py-1 text-center text-xs outline-none focus:ring-2 focus:ring-blue-400" />
                            </td>
                            <td class="px-4 py-3">
                                <input type="number" 
                                       value="@(student.Q2?.ToString() ?? "")"
                                       @onchange="@((ChangeEventArgs e) => OnGradeChanged(student, "Q2", e))"
                                       min="0" max="100" step="0.01"
                                       class="w-20 rounded-lg border border-gray-300 px-2 py-1 text-center text-xs outline-none focus:ring-2 focus:ring-blue-400" />
                            </td>
                            <td class="px-4 py-3">
                                <input type="number" 
                                       value="@(student.Q3?.ToString() ?? "")"
                                       @onchange="@((ChangeEventArgs e) => OnGradeChanged(student, "Q3", e))"
                                       min="0" max="100" step="0.01"
                                       class="w-20 rounded-lg border border-gray-300 px-2 py-1 text-center text-xs outline-none focus:ring-2 focus:ring-blue-400" />
                            </td>
                            <td class="px-4 py-3">
                                <input type="number" 
                                       value="@(student.Q4?.ToString() ?? "")"
                                       @onchange="@((ChangeEventArgs e) => OnGradeChanged(student, "Q4", e))"
                                       min="0" max="100" step="0.01"
                                       class="w-20 rounded-lg border border-gray-300 px-2 py-1 text-center text-xs outline-none focus:ring-2 focus:ring-blue-400" />
                            </td>
                            <td class="px-4 py-3 text-center font-semibold text-blue-600">
                                @if (student.GeneralAverage > 0)
                                {
                                    @student.GeneralAverage.ToString("F2")
                                }
                                else
                                {
                                    <span class="text-gray-400">-</span>
                                }
                            </td>
                            <td class="px-4 py-3 text-center">
                                @if (!string.IsNullOrEmpty(student.Remarks))
                                {
                                    <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium @GetRemarksBadgeClass(student.Remarks)">
                                        @student.Remarks
                                    </span>
                                }
                                else
                                {
                                    <span class="text-gray-400">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-end gap-3">
            <button @onclick="SaveGrades" 
                    disabled="@isLoading"
                    class="rounded-lg bg-green-600 px-6 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-green-700 hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed">
                @if (isLoading)
                {
                    <span>Saving...</span>
                }
                else
                {
                    <span>Save Grades</span>
                }
            </button>
        </div>
    }
    else
    {
        <div class="py-12 text-center">
            <p class="text-gray-500">Please select a section to enter grades.</p>
        </div>
    }
</div>

@code {
    private string selectedSchoolYear = "";
    private int selectedSectionId = 0;
    private int selectedSubjectId = 0;
    private List<GradeStudent> students = new();
    private List<Section> availableSections = new();
    private List<Subject> availableSubjects = new();
    private List<string> availableSchoolYears = new();
    private int teacherId = 0;
    private bool isLoading = false;
    private bool showToast = false;
    private string toastMessage = "";
    private ToastType toastType = ToastType.Success;

    private class GradeStudent
    {
        public string StudentId { get; set; } = "";
        public string Name { get; set; } = "";
        public int SubjectId { get; set; }
        public string SubjectName { get; set; } = "";
        public decimal? Q1 { get; set; }
        public decimal? Q2 { get; set; }
        public decimal? Q3 { get; set; }
        public decimal? Q4 { get; set; }
        
        // General Average = Average of Q1, Q2, Q3, Q4 (only if all 4 quarters are complete)
        public decimal GeneralAverage
        {
            get
            {
                if (Q1.HasValue && Q2.HasValue && Q3.HasValue && Q4.HasValue &&
                    Q1.Value > 0 && Q2.Value > 0 && Q3.Value > 0 && Q4.Value > 0)
                {
                    return (Q1.Value + Q2.Value + Q3.Value + Q4.Value) / 4.0m;
                }
                return 0;
            }
        }
        
        public string Remarks { get; set; } = "";
    }

    protected override async Task OnInitializedAsync()
    {
        var currentUser = AuthService.CurrentUser;
        if (currentUser == null)
        {
            ShowToast("You must be logged in to access the gradebook.", ToastType.Error);
            return;
        }

        teacherId = currentUser.user_ID;
        await InitializeDataAsync();
    }

    private async Task InitializeDataAsync()
    {
        try
        {
            isLoading = true;
            
            // Get current school year
            var currentYear = DateTime.Now.Year;
            var nextYear = currentYear + 1;
            selectedSchoolYear = $"{currentYear}-{nextYear}";
            
            // Generate available school years (current and past 2 years)
            availableSchoolYears = new List<string>();
            for (int i = 0; i < 3; i++)
            {
                var year = currentYear - i;
                availableSchoolYears.Add($"{year}-{year + 1}");
            }

            await LoadAssignedSectionsAsync();
        }
        catch (Exception ex)
        {
            ShowToast($"Error initializing gradebook: {ex.Message}", ToastType.Error);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadAssignedSectionsAsync()
    {
        try
        {
            if (teacherId == 0) return;

            // Load only sections assigned to this teacher
            availableSections = await TeacherService.GetAssignedSectionsForGradeEntryAsync(teacherId, selectedSchoolYear);
            
            // Clear subjects when section changes
            availableSubjects.Clear();
            selectedSubjectId = 0;
        }
        catch (Exception ex)
        {
            ShowToast($"Error loading assigned sections: {ex.Message}", ToastType.Error);
        }
    }

    private async Task OnSchoolYearChanged()
    {
        selectedSectionId = 0;
        selectedSubjectId = 0;
        availableSections.Clear();
        availableSubjects.Clear();
        students.Clear();
        
        await LoadAssignedSectionsAsync();
    }

    private async Task OnSelectionChanged()
    {
        if (selectedSectionId > 0)
        {
            // Load subjects for the selected section
            await LoadAssignedSubjectsAsync();
        }
        else
        {
            availableSubjects.Clear();
            selectedSubjectId = 0;
            students.Clear();
        }

        if (selectedSectionId > 0)
        {
            await LoadStudentsAsync();
        }
        else
        {
            students.Clear();
        }
    }

    private async Task LoadAssignedSubjectsAsync()
    {
        try
        {
            if (teacherId == 0 || selectedSectionId == 0) return;

            // Load only subjects assigned to this teacher for the selected section
            availableSubjects = await TeacherService.GetAssignedSubjectsForGradeEntryAsync(teacherId, selectedSectionId);
        }
        catch (Exception ex)
        {
            ShowToast($"Error loading assigned subjects: {ex.Message}", ToastType.Error);
        }
    }

    private async Task LoadStudentsAsync()
    {
        if (selectedSectionId <= 0)
            return;

        try
        {
            isLoading = true;
            StateHasChanged();

            // Get subjects assigned to this teacher for the selected section
            var assignedSubjects = await TeacherService.GetAssignedSubjectsForGradeEntryAsync(teacherId, selectedSectionId);
            
            // Filter by selected subject if one is selected
            if (selectedSubjectId > 0)
            {
                assignedSubjects = assignedSubjects.Where(s => s.SubjectId == selectedSubjectId).ToList();
            }
            
            // Get students enrolled in the section
            var studentDtos = await GradeService.GetStudentsForGradeEntryAsync(selectedSectionId, selectedSchoolYear);
            
            // Get all existing grades for all subjects and all quarters
            var allGrades = await GradeService.GetAllGradesForSectionAsync(selectedSectionId, selectedSchoolYear);

            // Create a list of student-subject combinations
            var studentSubjectList = new List<GradeStudent>();
            
            foreach (var student in studentDtos)
            {
                foreach (var subject in assignedSubjects)
                {
                    var q1Grade = allGrades.FirstOrDefault(g => 
                        g.StudentId == student.StudentId && 
                        g.SubjectId == subject.SubjectId && 
                        g.GradingPeriod == "Q1");
                    var q2Grade = allGrades.FirstOrDefault(g => 
                        g.StudentId == student.StudentId && 
                        g.SubjectId == subject.SubjectId && 
                        g.GradingPeriod == "Q2");
                    var q3Grade = allGrades.FirstOrDefault(g => 
                        g.StudentId == student.StudentId && 
                        g.SubjectId == subject.SubjectId && 
                        g.GradingPeriod == "Q3");
                    var q4Grade = allGrades.FirstOrDefault(g => 
                        g.StudentId == student.StudentId && 
                        g.SubjectId == subject.SubjectId && 
                        g.GradingPeriod == "Q4");

                    var gradeStudent = new GradeStudent
                    {
                        StudentId = student.StudentId,
                        Name = student.Name,
                        SubjectId = subject.SubjectId,
                        SubjectName = subject.SubjectName,
                        Q1 = q1Grade?.FinalGrade,
                        Q2 = q2Grade?.FinalGrade,
                        Q3 = q3Grade?.FinalGrade,
                        Q4 = q4Grade?.FinalGrade
                    };

                    // Calculate remarks based on general average
                    if (gradeStudent.GeneralAverage > 0)
                    {
                        var transmutedGrade = GradeService.GetTransmutedGrade(gradeStudent.GeneralAverage);
                        gradeStudent.Remarks = GradeService.GetDescriptiveRating(transmutedGrade);
                    }
                    else if (gradeStudent.Q1.HasValue || gradeStudent.Q2.HasValue || 
                             gradeStudent.Q3.HasValue || gradeStudent.Q4.HasValue)
                    {
                        gradeStudent.Remarks = "Incomplete";
                    }
                    else
                    {
                        gradeStudent.Remarks = "No Grade";
                    }

                    studentSubjectList.Add(gradeStudent);
                }
            }

            students = studentSubjectList.OrderBy(s => s.Name).ThenBy(s => s.SubjectName).ToList();
        }
        catch (Exception ex)
        {
            ShowToast($"Error loading students: {ex.Message}", ToastType.Error);
            students.Clear();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void OnGradeChanged(GradeStudent student, string quarter, ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        decimal? parsedValue = null;
        
        if (!string.IsNullOrWhiteSpace(value) && decimal.TryParse(value, out var num))
        {
            parsedValue = num;
            // Validate range
            if (parsedValue < 0) parsedValue = 0;
            if (parsedValue > 100) parsedValue = 100;
        }

        switch (quarter)
        {
            case "Q1":
                student.Q1 = parsedValue;
                break;
            case "Q2":
                student.Q2 = parsedValue;
                break;
            case "Q3":
                student.Q3 = parsedValue;
                break;
            case "Q4":
                student.Q4 = parsedValue;
                break;
        }

        // Update remarks based on general average
        if (student.GeneralAverage > 0)
        {
            var transmutedGrade = GradeService.GetTransmutedGrade(student.GeneralAverage);
            student.Remarks = GradeService.GetDescriptiveRating(transmutedGrade);
        }
        else if (student.Q1.HasValue || student.Q2.HasValue || 
                 student.Q3.HasValue || student.Q4.HasValue)
        {
            student.Remarks = "Incomplete";
        }
        else
        {
            student.Remarks = "No Grade";
        }

        StateHasChanged();
    }

    private async Task SaveGrades()
    {
        if (selectedSectionId <= 0)
        {
            ShowToast("Please select a section.", ToastType.Error);
            return;
        }

        var currentUser = AuthService.CurrentUser;
        if (currentUser == null)
        {
            ShowToast("You must be logged in to save grades.", ToastType.Error);
            return;
        }

        try
        {
            isLoading = true;
            StateHasChanged();

            // Prepare grade inputs for all quarters
            var gradeInputs = new List<GradeInputDto>();
            
            foreach (var student in students)
            {
                // Q1
                if (student.Q1.HasValue)
                {
                    gradeInputs.Add(new GradeInputDto
                    {
                        StudentId = student.StudentId,
                        SubjectId = student.SubjectId,
                        SectionId = selectedSectionId,
                        SchoolYear = selectedSchoolYear,
                        GradingPeriod = "Q1",
                        FinalGrade = student.Q1.Value
                    });
                }
                
                // Q2
                if (student.Q2.HasValue)
                {
                    gradeInputs.Add(new GradeInputDto
                    {
                        StudentId = student.StudentId,
                        SubjectId = student.SubjectId,
                        SectionId = selectedSectionId,
                        SchoolYear = selectedSchoolYear,
                        GradingPeriod = "Q2",
                        FinalGrade = student.Q2.Value
                    });
                }
                
                // Q3
                if (student.Q3.HasValue)
                {
                    gradeInputs.Add(new GradeInputDto
                    {
                        StudentId = student.StudentId,
                        SubjectId = student.SubjectId,
                        SectionId = selectedSectionId,
                        SchoolYear = selectedSchoolYear,
                        GradingPeriod = "Q3",
                        FinalGrade = student.Q3.Value
                    });
                }
                
                // Q4
                if (student.Q4.HasValue)
                {
                    gradeInputs.Add(new GradeInputDto
                    {
                        StudentId = student.StudentId,
                        SubjectId = student.SubjectId,
                        SectionId = selectedSectionId,
                        SchoolYear = selectedSchoolYear,
                        GradingPeriod = "Q4",
                        FinalGrade = student.Q4.Value
                    });
                }
            }

            // Save grades
            var result = await GradeService.SaveQuarterlyGradesAsync(gradeInputs, currentUser.user_ID);

            if (result)
            {
                ShowToast($"Successfully saved grades for {students.Count} record(s).", ToastType.Success);
                // Reload to refresh general averages and remarks
                await LoadStudentsAsync();
            }
            else
            {
                ShowToast("Failed to save grades. Please try again.", ToastType.Error);
            }
        }
        catch (Exception ex)
        {
            ShowToast($"Error saving grades: {ex.Message}", ToastType.Error);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ShowToast(string message, ToastType type)
    {
        toastMessage = message;
        toastType = type;
        showToast = true;
        StateHasChanged();
    }

    private void CloseToast()
    {
        showToast = false;
        StateHasChanged();
    }

    private string GetRemarksBadgeClass(string remarks)
    {
        return remarks switch
        {
            "Outstanding" => "bg-green-100 text-green-800",
            "Very Satisfactory" => "bg-blue-100 text-blue-800",
            "Satisfactory" => "bg-yellow-100 text-yellow-800",
            "Fairly Satisfactory" => "bg-orange-100 text-orange-800",
            "Did Not Meet Expectations" => "bg-red-100 text-red-800",
            "Incomplete" => "bg-gray-100 text-gray-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }
}

