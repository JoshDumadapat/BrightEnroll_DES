@namespace BrightEnroll_DES.Components.Pages.Admin.Gradebook.GradebookComponents
@using BrightEnroll_DES.Services.Business.Academic
@using BrightEnroll_DES.Services.Authentication
@using BrightEnroll_DES.Data.Models
@inject GradeService GradeService
@inject TeacherService TeacherService
@inject IAuthService AuthService
@inject Microsoft.AspNetCore.Components.NavigationManager Navigation

<div class="p-6">
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="mb-4 rounded-lg bg-red-50 p-4 text-red-700">
            @errorMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="mb-4 rounded-lg bg-green-50 p-4 text-green-700">
            @successMessage
        </div>
    }

    <!-- Class Selection -->
    <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-4">
        <div>
            <label class="mb-2 block text-sm font-medium text-gray-700">School Year:</label>
            <select @bind="selectedSchoolYear" @bind:after="OnSchoolYearChanged"
                    class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                @foreach (var year in availableSchoolYears)
                {
                    <option value="@year">@year</option>
                }
            </select>
        </div>
        <div>
            <label class="mb-2 block text-sm font-medium text-gray-700">Section:</label>
            <select @bind="selectedSectionId" @bind:after="OnSelectionChanged"
                    class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                <option value="0">Select Section</option>
                @foreach (var sec in availableSections)
                {
                    <option value="@sec.SectionId">@sec.SectionName</option>
                }
            </select>
        </div>
        <div>
            <label class="mb-2 block text-sm font-medium text-gray-700">Subject:</label>
            <select @bind="selectedSubjectId" @bind:after="OnSelectionChanged"
                    disabled="@(selectedSectionId == 0)"
                    class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 disabled:bg-gray-100 disabled:cursor-not-allowed">
                <option value="0">Select Subject</option>
                @foreach (var subj in availableSubjects)
                {
                    <option value="@subj.SubjectId">@subj.SubjectName</option>
                }
            </select>
        </div>
        <div>
            <label class="mb-2 block text-sm font-medium text-gray-700">Grading Period:</label>
            <select @bind="selectedPeriod" @bind:after="OnSelectionChanged"
                    class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400">
                <option value="Q1">Quarter 1</option>
                <option value="Q2">Quarter 2</option>
                <option value="Q3">Quarter 3</option>
                <option value="Q4">Quarter 4</option>
            </select>
        </div>
    </div>

    @if (selectedSectionId > 0 && selectedSubjectId > 0)
    {
        <!-- Grade Entry Table -->
        <div class="mb-4 overflow-x-auto">
            <table class="min-w-full text-sm">
                <thead class="bg-gray-100 font-semibold text-gray-600">
                    <tr>
                        <th class="px-4 py-3 text-left">Student ID</th>
                        <th class="px-4 py-3 text-left">Name</th>
                        <th class="px-4 py-3 text-center">Quiz (@(GetQuizWeightDisplay()))</th>
                        <th class="px-4 py-3 text-center">Exam (@(GetExamWeightDisplay()))</th>
                        <th class="px-4 py-3 text-center">Project (@(GetProjectWeightDisplay()))</th>
                        <th class="px-4 py-3 text-center">Participation (@(GetParticipationWeightDisplay()))</th>
                        <th class="px-4 py-3 text-center">Final Grade</th>
                    </tr>
                </thead>
                <tbody class="divide-y">
                    @foreach (var student in students)
                    {
                        <tr class="transition hover:bg-gray-50">
                            <td class="px-4 py-3">@student.StudentId</td>
                            <td class="px-4 py-3">@student.Name</td>
                            <td class="px-4 py-3">
                                <input type="number" 
                                       value="@(student.Quiz?.ToString() ?? "")"
                                       @onchange="@((ChangeEventArgs e) => OnGradeChanged(student, nameof(student.Quiz), e))"
                                       min="0" max="100" step="0.01"
                                       class="w-20 rounded-lg border border-gray-300 px-2 py-1 text-center text-xs outline-none focus:ring-2 focus:ring-blue-400" />
                            </td>
                            <td class="px-4 py-3">
                                <input type="number" 
                                       value="@(student.Exam?.ToString() ?? "")"
                                       @onchange="@((ChangeEventArgs e) => OnGradeChanged(student, nameof(student.Exam), e))"
                                       min="0" max="100" step="0.01"
                                       class="w-20 rounded-lg border border-gray-300 px-2 py-1 text-center text-xs outline-none focus:ring-2 focus:ring-blue-400" />
                            </td>
                            <td class="px-4 py-3">
                                <input type="number" 
                                       value="@(student.Project?.ToString() ?? "")"
                                       @onchange="@((ChangeEventArgs e) => OnGradeChanged(student, nameof(student.Project), e))"
                                       min="0" max="100" step="0.01"
                                       class="w-20 rounded-lg border border-gray-300 px-2 py-1 text-center text-xs outline-none focus:ring-2 focus:ring-blue-400" />
                            </td>
                            <td class="px-4 py-3">
                                <input type="number" 
                                       value="@(student.Participation?.ToString() ?? "")"
                                       @onchange="@((ChangeEventArgs e) => OnGradeChanged(student, nameof(student.Participation), e))"
                                       min="0" max="100" step="0.01"
                                       class="w-20 rounded-lg border border-gray-300 px-2 py-1 text-center text-xs outline-none focus:ring-2 focus:ring-blue-400" />
                            </td>
                            <td class="px-4 py-3 text-center font-semibold">
                                @if (student.Quiz.HasValue || student.Exam.HasValue || student.Project.HasValue || student.Participation.HasValue)
                                {
                                    @student.FinalGrade.ToString("F2")
                                }
                                else
                                {
                                    <span class="text-gray-400">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-end gap-3">
            <button @onclick="ComputeGrades" 
                    disabled="@isLoading"
                    class="rounded-lg bg-blue-600 px-6 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed">
                Compute Grades
            </button>
            <button @onclick="SaveGrades" 
                    disabled="@isLoading"
                    class="rounded-lg bg-green-600 px-6 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-green-700 hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed">
                @if (isLoading)
                {
                    <span>Saving...</span>
                }
                else
                {
                    <span>Save Grades</span>
                }
            </button>
        </div>
    }
    else
    {
        <div class="py-12 text-center">
            <p class="text-gray-500">Please select a section and subject to enter grades.</p>
        </div>
    }
</div>

@code {
    private string selectedSchoolYear = "";
    private int selectedSectionId = 0;
    private int selectedSubjectId = 0;
    private string selectedPeriod = "Q1";
    private List<GradeStudent> students = new();
    private List<Section> availableSections = new();
    private List<Subject> availableSubjects = new();
    private List<string> availableSchoolYears = new();
    private int teacherId = 0;
    private string errorMessage = "";
    private string successMessage = "";
    private bool isLoading = false;

    private class GradeStudent
    {
        public string StudentId { get; set; } = "";
        public string Name { get; set; } = "";
        public decimal? Quiz { get; set; }
        public decimal? Exam { get; set; }
        public decimal? Project { get; set; }
        public decimal? Participation { get; set; }
        
        // Weights will be set from GradeService
        public decimal QuizWeight { get; set; } = 0.30m;
        public decimal ExamWeight { get; set; } = 0.40m;
        public decimal ProjectWeight { get; set; } = 0.20m;
        public decimal ParticipationWeight { get; set; } = 0.10m;
        
        public decimal FinalGrade => 
            (Quiz ?? 0) * QuizWeight + 
            (Exam ?? 0) * ExamWeight + 
            (Project ?? 0) * ProjectWeight + 
            (Participation ?? 0) * ParticipationWeight;
    }

    protected override async Task OnInitializedAsync()
    {
        var currentUser = AuthService.CurrentUser;
        if (currentUser == null)
        {
            errorMessage = "You must be logged in to access the gradebook.";
            return;
        }

        teacherId = currentUser.user_ID;
        await InitializeDataAsync();
    }

    private async Task InitializeDataAsync()
    {
        try
        {
            isLoading = true;
            
            // Get current school year
            var currentYear = DateTime.Now.Year;
            var nextYear = currentYear + 1;
            selectedSchoolYear = $"{currentYear}-{nextYear}";
            
            // Generate available school years (current and past 2 years)
            availableSchoolYears = new List<string>();
            for (int i = 0; i < 3; i++)
            {
                var year = currentYear - i;
                availableSchoolYears.Add($"{year}-{year + 1}");
            }

            await LoadAssignedSectionsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error initializing gradebook: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadAssignedSectionsAsync()
    {
        try
        {
            if (teacherId == 0) return;

            // Load only sections assigned to this teacher
            availableSections = await TeacherService.GetAssignedSectionsForGradeEntryAsync(teacherId, selectedSchoolYear);
            
            // Clear subjects when section changes
            availableSubjects.Clear();
            selectedSubjectId = 0;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading assigned sections: {ex.Message}";
        }
    }

    private async Task OnSchoolYearChanged()
    {
        errorMessage = "";
        successMessage = "";
        selectedSectionId = 0;
        selectedSubjectId = 0;
        availableSections.Clear();
        availableSubjects.Clear();
        students.Clear();
        
        await LoadAssignedSectionsAsync();
    }

    private async Task OnSelectionChanged()
    {
        errorMessage = "";
        successMessage = "";
        
        if (selectedSectionId > 0)
        {
            // Load subjects for the selected section
            await LoadAssignedSubjectsAsync();
        }
        else
        {
            availableSubjects.Clear();
            selectedSubjectId = 0;
            students.Clear();
        }

        if (selectedSectionId > 0 && selectedSubjectId > 0)
        {
            await LoadStudentsAsync();
        }
        else
        {
            students.Clear();
        }
    }

    private async Task LoadAssignedSubjectsAsync()
    {
        try
        {
            if (teacherId == 0 || selectedSectionId == 0) return;

            // Load only subjects assigned to this teacher for the selected section
            availableSubjects = await TeacherService.GetAssignedSubjectsForGradeEntryAsync(teacherId, selectedSectionId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading assigned subjects: {ex.Message}";
        }
    }

    private async Task LoadStudentsAsync()
    {
        if (selectedSectionId <= 0 || selectedSubjectId <= 0)
            return;

        try
        {
            isLoading = true;
            errorMessage = "";
            StateHasChanged();

            // Get grade weights for this subject
            var weights = await GradeService.GetGradeWeightsAsync(selectedSubjectId);

            // Get students enrolled in the section
            var studentDtos = await GradeService.GetStudentsForGradeEntryAsync(selectedSectionId, selectedSchoolYear);
            
            // Get existing grades if any
            var existingGrades = await GradeService.GetExistingGradesAsync(
                selectedSectionId, 
                selectedSubjectId, 
                selectedSchoolYear, 
                selectedPeriod);

            // Map to GradeStudent objects with weights
            students = studentDtos.Select(s => 
            {
                var existingGrade = existingGrades.ContainsKey(s.StudentId) ? existingGrades[s.StudentId] : null;
                return new GradeStudent
                {
                    StudentId = s.StudentId,
                    Name = s.Name,
                    Quiz = existingGrade?.Quiz,
                    Exam = existingGrade?.Exam,
                    Project = existingGrade?.Project,
                    Participation = existingGrade?.Participation,
                    QuizWeight = weights.QuizWeight,
                    ExamWeight = weights.ExamWeight,
                    ProjectWeight = weights.ProjectWeight,
                    ParticipationWeight = weights.ParticipationWeight
                };
            }).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading students: {ex.Message}";
            students.Clear();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void OnGradeChanged(GradeStudent student, string propertyName, ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        decimal? parsedValue = null;
        
        if (!string.IsNullOrWhiteSpace(value) && decimal.TryParse(value, out var num))
        {
            parsedValue = num;
        }

        switch (propertyName)
        {
            case nameof(GradeStudent.Quiz):
                student.Quiz = parsedValue;
                break;
            case nameof(GradeStudent.Exam):
                student.Exam = parsedValue;
                break;
            case nameof(GradeStudent.Project):
                student.Project = parsedValue;
                break;
            case nameof(GradeStudent.Participation):
                student.Participation = parsedValue;
                break;
        }

        StateHasChanged();
    }

    private void ComputeGrades()
    {
        // Grades are computed automatically via FinalGrade property
        StateHasChanged();
    }

    private async Task SaveGrades()
    {
        if (selectedSectionId <= 0 || selectedSubjectId <= 0)
        {
            errorMessage = "Please select a section and subject.";
            return;
        }

        var currentUser = AuthService.CurrentUser;
        if (currentUser == null)
        {
            errorMessage = "You must be logged in to save grades.";
            return;
        }

        try
        {
            isLoading = true;
            errorMessage = "";
            successMessage = "";
            StateHasChanged();

            // Prepare grade inputs
            var gradeInputs = students.Select(s => new GradeInputDto
            {
                StudentId = s.StudentId,
                SubjectId = selectedSubjectId,
                SectionId = selectedSectionId,
                SchoolYear = selectedSchoolYear,
                GradingPeriod = selectedPeriod,
                Quiz = s.Quiz,
                Exam = s.Exam,
                Project = s.Project,
                Participation = s.Participation,
                FinalGrade = s.FinalGrade
            }).ToList();

            // Save grades
            var result = await GradeService.SaveGradesAsync(gradeInputs, currentUser.user_ID);

            if (result)
            {
                successMessage = $"Successfully saved grades for {students.Count} student(s).";
            }
            else
            {
                errorMessage = "Failed to save grades. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving grades: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private string GetQuizWeightDisplay()
    {
        return students.FirstOrDefault()?.QuizWeight.ToString("P0") ?? "30%";
    }

    private string GetExamWeightDisplay()
    {
        return students.FirstOrDefault()?.ExamWeight.ToString("P0") ?? "40%";
    }

    private string GetProjectWeightDisplay()
    {
        return students.FirstOrDefault()?.ProjectWeight.ToString("P0") ?? "20%";
    }

    private string GetParticipationWeightDisplay()
    {
        return students.FirstOrDefault()?.ParticipationWeight.ToString("P0") ?? "10%";
    }
}

