@using BrightEnroll_DES.Data
@using BrightEnroll_DES.Data.Models
@using BrightEnroll_DES.Components.Pages.Admin.Payroll.PayrollCS
@using BrightEnroll_DES.Components.Pages.Admin.HumanResource.HRCS
@using BrightEnroll_DES.Components.Pages.Admin
@using Microsoft.EntityFrameworkCore
@using System.Linq
@inject AppDbContext DbContext

<div class="overflow-hidden rounded-xl bg-white shadow">
    <!-- Filters (Inside Container) -->
    <div class="border-b border-gray-200 px-3 py-4 sm:px-6">
        <label class="mb-2 block text-sm font-bold text-gray-700">Filter:</label>
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
                <div class="relative flex w-full items-center sm:w-auto">
                    <span class="absolute left-3 flex items-center justify-center">
                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </span>
                    <input type="text" placeholder="Search here..." @bind="searchText" @bind:after="OnSearchChanged"
                           class="w-full rounded-lg border border-gray-300 py-2 pl-10 pr-3 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-60" />
                </div>
                <div>
                    <label class="mb-1 block text-xs text-gray-600">Date From</label>
                    <input type="date" 
                           @bind="dateFrom" 
                           @bind:after="OnFilterChanged"
                           class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto" />
                </div>
                <div>
                    <label class="mb-1 block text-xs text-gray-600">Date To</label>
                    <input type="date" 
                           @bind="dateTo" 
                           @bind:after="OnFilterChanged"
                           class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto" />
                </div>
            </div>
            <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
                <button @onclick="OnClearFilters" class="flex w-full items-center justify-center gap-2 rounded-lg bg-gray-500 px-4 py-2 font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg sm:w-auto" style="font-size: 13px;">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Clear
                </button>
            </div>
        </div>
    </div>

    <!-- Records Table -->
    <div class="overflow-x-auto w-full">
        <table class="w-full border-collapse">
                <thead>
                    <tr class="border-b border-gray-200 bg-gray-50">
                        <th class="py-3 pl-6 pr-4 text-left text-sm font-semibold text-gray-700">Date</th>
                        <th class="py-3 px-4 text-left text-sm font-semibold text-gray-700">Role</th>
                        <th class="py-3 px-4 text-left text-sm font-semibold text-gray-700">Base Salary</th>
                        <th class="py-3 px-4 text-left text-sm font-semibold text-gray-700">Allowance</th>
                        <th class="py-3 px-4 text-left text-sm font-semibold text-gray-700">Gross Pay</th>
                        <th class="py-3 px-4 text-left text-sm font-semibold text-gray-700">Total Deductions</th>
                        <th class="py-3 px-4 text-left text-sm font-semibold text-gray-700">Net Pay</th>
                        <th class="py-3 pr-6 pl-4 text-left text-sm font-semibold text-gray-700">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (PaginatedRecords != null && PaginatedRecords.Any())
                    {
                        @foreach (var record in PaginatedRecords)
                        {
                            <tr class="border-b border-gray-100 hover:bg-gray-50">
                                <td class="py-3 pl-6 pr-4 text-sm text-gray-700">@record.Date.ToString("MMM dd, yyyy")</td>
                                <td class="py-3 px-4 text-sm font-medium text-gray-800">@record.Role</td>
                                <td class="py-3 px-4 text-sm text-gray-700">@Salary.FormatPeso(record.BaseSalary)</td>
                                <td class="py-3 px-4 text-sm text-gray-700">@Salary.FormatPeso(record.Allowance)</td>
                                <td class="py-3 px-4 text-sm font-medium text-gray-800">@Salary.FormatPeso(record.GrossPay)</td>
                                <td class="py-3 px-4 text-sm text-red-600">@Salary.FormatPeso(record.TotalDeductions)</td>
                                <td class="py-3 px-4 text-sm font-bold text-green-600">@Salary.FormatPeso(record.NetPay)</td>
                                <td class="py-3 pr-6 pl-4 text-sm">
                                    <span class="rounded-full bg-green-100 px-2 py-1 text-xs font-medium text-green-800">@record.Status</span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="py-12 text-center text-sm text-gray-500">
                                <div class="flex flex-col items-center justify-center">
                                    <svg class="h-12 w-12 text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                    <p class="text-base font-medium text-gray-600">No Records Available</p>
                                    <p class="text-sm text-gray-500 mt-1">There are no payroll records to display at this time.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    
    <!-- Footer with Pagination -->
    <Pagination TotalItems="@(FilteredRecords?.Count ?? 0)" 
                CurrentPage="@CurrentPage" 
                RowsPerPage="@RowsPerPage"
                ItemName="records"
                OnPageChanged="HandlePageChanged"
                OnRowsPerPageChanged="HandleRowsPerPageChanged" />
</div>

@code {
    private List<PayrollRecord> records = new();
    private string searchText = "";
    private DateTime? dateFrom = DateTime.Now.AddMonths(-1);
    private DateTime? dateTo = DateTime.Now;
    
    // Pagination state
    private int CurrentPage { get; set; } = 1;
    private int RowsPerPage { get; set; } = 5;

    protected override async Task OnInitializedAsync()
    {
        await LoadRecords();
    }

    private async Task LoadRecords()
    {
        try
        {
            // Load roles and create sample records
            // In a real implementation, this would load from a payroll_transactions table
            var roles = await DbContext.Roles
                .Where(r => r.IsActive)
                .OrderBy(r => r.RoleName)
                .ToListAsync();

            records = roles.Select(role =>
            {
                var payrollCalc = new PayrollRoleData
                {
                    Role = role.RoleName,
                    BaseSalary = role.BaseSalary,
                    Allowance = role.Allowance,
                    IsActive = true
                };
                payrollCalc.Recalculate();

                return new PayrollRecord
                {
                    Date = role.UpdatedDate ?? role.CreatedDate,
                    Role = role.RoleName,
                    BaseSalary = role.BaseSalary,
                    Allowance = role.Allowance,
                    GrossPay = payrollCalc.GrossPay,
                    TotalDeductions = payrollCalc.TotalDeductions,
                    NetPay = payrollCalc.NetPay,
                    Status = role.IsActive ? "Active" : "Inactive"
                };
            }).ToList();
        }
        catch
        {
            records = new List<PayrollRecord>();
        }
    }

    private List<PayrollRecord>? FilteredRecords
    {
        get
        {
            if (records == null || !records.Any())
                return null;
                
            var filtered = records.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(searchText))
            {
                filtered = filtered.Where(r => 
                    r.Role.Contains(searchText, StringComparison.OrdinalIgnoreCase));
            }

            if (dateFrom.HasValue)
            {
                filtered = filtered.Where(r => r.Date >= dateFrom.Value);
            }

            if (dateTo.HasValue)
            {
                filtered = filtered.Where(r => r.Date <= dateTo.Value);
            }

            return filtered.OrderByDescending(r => r.Date).ToList();
        }
    }
    
    // Computed property for paginated records
    private List<PayrollRecord>? PaginatedRecords
    {
        get
        {
            if (FilteredRecords == null || !FilteredRecords.Any())
                return null;
            
            int startIndex = (CurrentPage - 1) * RowsPerPage;
            return FilteredRecords.Skip(startIndex).Take(RowsPerPage).ToList();
        }
    }
    
    // Filter methods
    private void OnSearchChanged()
    {
        CurrentPage = 1; // Reset to first page when search changes
        StateHasChanged();
    }
    
    private void OnFilterChanged()
    {
        CurrentPage = 1; // Reset to first page when filter changes
        StateHasChanged();
    }
    
    private void OnClearFilters()
    {
        searchText = "";
        dateFrom = DateTime.Now.AddMonths(-1);
        dateTo = DateTime.Now;
        CurrentPage = 1;
        StateHasChanged();
    }
    
    // Pagination methods
    private void HandlePageChanged(int page)
    {
        CurrentPage = page;
        StateHasChanged();
    }
    
    private void HandleRowsPerPageChanged(int rowsPerPage)
    {
        RowsPerPage = rowsPerPage;
        CurrentPage = 1; // Reset to first page when rows per page changes
        StateHasChanged();
    }

    private class PayrollRecord
    {
        public DateTime Date { get; set; }
        public string Role { get; set; } = string.Empty;
        public decimal BaseSalary { get; set; }
        public decimal Allowance { get; set; }
        public decimal GrossPay { get; set; }
        public decimal TotalDeductions { get; set; }
        public decimal NetPay { get; set; }
        public string Status { get; set; } = string.Empty;
    }
}

