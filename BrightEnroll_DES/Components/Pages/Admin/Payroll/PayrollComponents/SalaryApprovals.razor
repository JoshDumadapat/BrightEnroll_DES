                <p class="text-sm text-gray-700 mb-4 leading-relaxed">
                    Are you sure you want to approve this salary change request for 
                    <strong class="text-gray-900">@(selectedRequest.User?.FirstName ?? "") @(selectedRequest.User?.LastName ?? "")</strong>?
                </p>
                
                <!-- Salary Comparison Cards -->
                <div class="mb-4 space-y-2.5">
                    <div class="rounded-xl bg-gray-50 p-3 border border-gray-200">
                        <p class="text-xs font-semibold text-gray-600 uppercase tracking-wide mb-2">Current Salary</p>
                        <div class="space-y-1">
                            <div class="flex justify-between items-center">
                                <span class="text-xs text-gray-500">Monthly:</span>
                                <span class="text-sm font-bold text-gray-900 text-right">₱@selectedRequest.CurrentBaseSalary.ToString("N2")</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-xs text-gray-500">Allowance:</span>
                                <span class="text-sm font-bold text-gray-900 text-right">₱@selectedRequest.CurrentAllowance.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                    <div class="rounded-xl bg-blue-50 p-3 border border-blue-200">
                        <p class="text-xs font-semibold text-blue-700 uppercase tracking-wide mb-2">Requested Salary</p>
                        <div class="space-y-1">
                            <div class="flex justify-between items-center">
                                <span class="text-xs text-blue-600">Monthly:</span>
                                <span class="text-sm font-bold text-blue-700 text-right">₱@selectedRequest.RequestedBaseSalary.ToString("N2")</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-xs text-blue-600">Allowance:</span>
                                <span class="text-sm font-bold text-blue-700 text-right">₱@selectedRequest.RequestedAllowance.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                    <div class="rounded-xl bg-green-50 p-3 border border-green-200">
                        <p class="text-xs font-semibold text-green-800 uppercase tracking-wide mb-2">Difference</p>
                        <div class="space-y-1">
                            <div class="flex justify-between items-center">
                                <span class="text-xs text-green-700">Monthly:</span>
                                <span class="text-sm font-bold text-green-700 text-right">₱@((selectedRequest.RequestedBaseSalary - selectedRequest.CurrentBaseSalary).ToString("N2"))</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-xs text-green-700">Allowance:</span>
                                <span class="text-sm font-bold text-green-700 text-right">₱@((selectedRequest.RequestedAllowance - selectedRequest.CurrentAllowance).ToString("N2"))</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Effective Date -->
                <div class="mb-4">
                    <label class="mb-1.5 block text-sm font-medium text-gray-800">
                        Effective Date <span class="text-gray-500 font-normal">(optional)</span>
                    </label>
                    <input type="date" @bind="approvalEffectiveDate" 
                           min="@DateTime.Today.ToString("yyyy-MM-dd")"
                           class="w-full rounded-xl border-2 border-gray-300 px-3 py-2 text-sm focus:border-green-500 focus:outline-none focus:ring-2 focus:ring-green-200 transition-all" />
                    <p class="mt-1.5 text-xs text-gray-500">Leave empty to use today's date</p>
                </div>

                <!-- Reason Provided -->
                @if (!string.IsNullOrWhiteSpace(selectedRequest.Reason))
                {
                    <div class="mb-3 rounded-xl bg-yellow-50 border border-yellow-200 p-3">
                        <p class="text-xs font-semibold text-yellow-800 uppercase tracking-wide mb-2">Reason Provided</p>
