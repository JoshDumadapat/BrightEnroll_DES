@using BrightEnroll_DES.Data
@using BrightEnroll_DES.Data.Models
@using BrightEnroll_DES.Services.Business.HR
@using BrightEnroll_DES.Services.Authentication
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components
@inject SalaryChangeRequestService SalaryChangeRequestService
@inject AppDbContext DbContext
@inject NavigationManager NavigationManager
@inject IAuthService AuthService

@code {
    [Parameter] public EventCallback OnApprovalChanged { get; set; }
}

<div class="overflow-hidden rounded-xl bg-white shadow">
    <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
        <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold text-gray-800">Salary Change Approval Requests</h2>
            <div class="flex items-center gap-4">
                <select @bind="filterStatus" @bind:after="LoadRequests" class="rounded-lg border border-gray-300 px-3 py-2 text-sm">
                    <option value="">All Status</option>
                    <option value="Pending">Pending</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                </select>
                <button @onclick="LoadRequests" class="rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700">
                    Refresh
                </button>
            </div>
        </div>
    </div>

    <div class="p-6">
        @if (isLoading)
        {
            <div class="flex items-center justify-center py-12">
                <svg class="h-8 w-8 animate-spin text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
            </div>
        }
        else if (!requests.Any())
        {
            <div class="py-12 text-center">
                <p class="text-gray-500">No salary change requests found.</p>
            </div>
        }
        else
        {
            <div class="space-y-4">
                @foreach (var request in requests)
                {
                    <div class="rounded-xl border @(request.Status == "Pending" ? "border-yellow-300 bg-yellow-50" : request.Status == "Approved" ? "border-green-300 bg-green-50" : "border-red-300 bg-red-50") p-5 shadow-sm hover:shadow-md transition-all">
                        <!-- Top Row: Employee Info and Action Buttons -->
                        <div class="mb-4 flex items-start justify-between gap-4">
                            <div class="flex-1">
                                <div class="flex items-center gap-3 flex-wrap">
                                    <div>
                                        <h3 class="text-base font-semibold text-gray-900">
                                            @(request.User?.FirstName ?? "N/A") @(request.User?.LastName ?? "")
                                        </h3>
                                        <p class="text-xs text-gray-600 mt-0.5">Employee ID: @(request.User?.SystemId ?? "N/A")</p>
                                    </div>
                                    <span class="@GetStatusBadgeClass(request.Status)">
                                        @request.Status
                                    </span>
                                    @if (request.IsInitialRegistration)
                                    {
                                        <span class="rounded-full bg-blue-100 px-2.5 py-1 text-xs font-medium text-blue-800">New Employee</span>
                                    }
                                </div>
                            </div>
                            
                            @if (request.Status == "Pending")
                            {
                                <div class="flex items-center gap-2">
                                    <button @onclick="() => ShowApproveModal(request)" 
                                            class="rounded-xl bg-gradient-to-r from-green-600 to-emerald-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:from-green-700 hover:to-emerald-700 hover:shadow-md transition-all active:scale-95">
                                        Approve
                                    </button>
                                    <button @onclick="() => ShowRejectModal(request)" 
                                            class="rounded-xl bg-gradient-to-r from-red-600 to-rose-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:from-red-700 hover:to-rose-700 hover:shadow-md transition-all active:scale-95">
                                        Reject
                                    </button>
                                </div>
                            }
                        </div>

                        <!-- Salary Information Cards -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mb-3">
                            <div class="rounded-xl bg-white p-4 border border-gray-200 shadow-sm">
                                <p class="text-xs font-semibold text-gray-600 uppercase tracking-wide mb-2">Current Salary</p>
                                <div class="space-y-1.5">
                                    <div class="flex justify-between items-center">
                                        <span class="text-xs text-gray-500">Monthly:</span>
                                        <span class="text-sm font-bold text-gray-900 text-right">₱@request.CurrentBaseSalary.ToString("N2")</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-xs text-gray-500">Allowance:</span>
                                        <span class="text-sm font-bold text-gray-900 text-right">₱@request.CurrentAllowance.ToString("N2")</span>
                                    </div>
                                    <div class="pt-1.5 border-t border-gray-200 flex justify-between items-center">
                                        <span class="text-xs font-medium text-gray-600">Total:</span>
                                        <span class="text-sm font-bold text-gray-900 text-right">₱@((request.CurrentBaseSalary + request.CurrentAllowance).ToString("N2"))</span>
                                    </div>
                                </div>
                            </div>
                            <div class="rounded-xl bg-blue-50 p-4 border border-blue-200 shadow-sm">
                                <p class="text-xs font-semibold text-blue-700 uppercase tracking-wide mb-2">Requested Salary</p>
                                <div class="space-y-1.5">
                                    <div class="flex justify-between items-center">
                                        <span class="text-xs text-blue-600">Monthly:</span>
                                        <span class="text-sm font-bold text-blue-700 text-right">₱@request.RequestedBaseSalary.ToString("N2")</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-xs text-blue-600">Allowance:</span>
                                        <span class="text-sm font-bold text-blue-700 text-right">₱@request.RequestedAllowance.ToString("N2")</span>
                                    </div>
                                    <div class="pt-1.5 border-t border-blue-200 flex justify-between items-center">
                                        <span class="text-xs font-medium text-blue-600">Total:</span>
                                        <span class="text-sm font-bold text-blue-700 text-right">₱@((request.RequestedBaseSalary + request.RequestedAllowance).ToString("N2"))</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Difference Card -->
                        <div class="mb-3 rounded-xl bg-green-50 border border-green-200 p-4 shadow-sm">
                            <p class="text-xs font-semibold text-green-800 uppercase tracking-wide mb-2">Difference</p>
                            <div class="space-y-1.5">
                                <div class="flex justify-between items-center">
                                    <span class="text-xs text-green-700">Monthly:</span>
                                    <div class="text-right">
                                        <span class="text-sm font-bold text-green-700">₱@((request.RequestedBaseSalary - request.CurrentBaseSalary).ToString("N2"))</span>
                                        <span class="text-xs font-medium text-green-600 ml-2">(@((((request.RequestedBaseSalary - request.CurrentBaseSalary) / request.CurrentBaseSalary) * 100).ToString("F1"))%)</span>
                                    </div>
                                </div>
                                <div class="flex justify-between items-center">
                                    <span class="text-xs text-green-700">Allowance:</span>
                                    <span class="text-sm font-bold text-green-700 text-right">₱@((request.RequestedAllowance - request.CurrentAllowance).ToString("N2"))</span>
                                </div>
                            </div>
                        </div>

                        <!-- Reason Section -->
                        @if (!string.IsNullOrWhiteSpace(request.Reason))
                        {
                            <div class="mb-3 rounded-xl bg-white border border-gray-200 p-4 shadow-sm">
                                <p class="text-xs font-semibold text-gray-600 uppercase tracking-wide mb-2">Reason</p>
                                <p class="text-sm text-gray-700 leading-relaxed">@request.Reason</p>
                            </div>
                        }

                        <!-- Metadata -->
                        <div class="flex flex-wrap items-center gap-4 text-xs text-gray-600 pt-3 border-t border-gray-200">
                            <div>
                                <span class="font-medium text-gray-700">Requested by:</span> @(request.RequestedByUser?.FirstName ?? "N/A") @(request.RequestedByUser?.LastName ?? "")
                            </div>
                            <div>
                                <span class="font-medium text-gray-700">Date:</span> @request.RequestedAt.ToString("MMMM dd, yyyy hh:mm tt")
                            </div>
                            <div>
                                <span class="font-medium text-gray-700">School Year:</span> @request.SchoolYear
                            </div>
                        </div>

                        @if (request.Status == "Approved" && request.ApprovedByUser != null)
                        {
                            <div class="text-xs text-gray-600 mt-2">
                                <span class="font-medium text-gray-700">Approved by:</span> @(request.ApprovedByUser?.FirstName ?? "N/A") @(request.ApprovedByUser?.LastName ?? "") 
                                on @(request.ApprovedAt?.ToString("MMMM dd, yyyy hh:mm tt") ?? "N/A")
                            </div>
                        }

                        @if (request.Status == "Rejected" && !string.IsNullOrWhiteSpace(request.RejectionReason))
                        {
                            <div class="mt-3 rounded-xl bg-red-50 border border-red-200 p-4 shadow-sm">
                                <p class="text-xs font-semibold text-red-800 uppercase tracking-wide mb-2">Rejection Reason</p>
                                <p class="text-sm text-red-700 leading-relaxed">@request.RejectionReason</p>
                                @if (request.ApprovedByUser != null)
                                {
                                    <p class="text-xs text-red-600 mt-2">
                                        <span class="font-medium">Rejected by:</span> @(request.ApprovedByUser?.FirstName ?? "N/A") @(request.ApprovedByUser?.LastName ?? "") 
                                        on @(request.ApprovedAt?.ToString("MMMM dd, yyyy hh:mm tt") ?? "N/A")
                                    </p>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        }
    </div>
</div>

