                <button @onclick="CloseRejectModal" 
                        class="rounded-xl border-2 border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 transition-all hover:bg-gray-50 hover:border-gray-400 hover:shadow-sm active:scale-95">
                    Cancel
                </button>
                <button @onclick="ConfirmReject" disabled="@(isProcessing || string.IsNullOrWhiteSpace(rejectionReason))" 
                        class="rounded-xl bg-gradient-to-r from-red-600 to-rose-600 px-4 py-2 text-sm font-medium text-white shadow-sm transition-all hover:from-red-700 hover:to-rose-700 hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed active:scale-95">
                    @if (isProcessing)
                    {
                        <span>Processing...</span>
                    }
                    else
                    {
                        <span>Confirm Rejection</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<SalaryChangeRequest> requests = new();
    private string filterStatus = "";
    private bool isLoading = true;
    private bool isProcessing = false;
    private bool showApproveModal = false;
    private bool showRejectModal = false;
    private SalaryChangeRequest? selectedRequest = null;
    private string rejectionReason = "";
    private int currentUserId = 0;
    private DateTime? approvalEffectiveDate = null;

    protected override async Task OnInitializedAsync()
    {
        // Get current user ID from authentication
        var currentUser = AuthService.CurrentUser;
        if (currentUser != null)
        {
            currentUserId = currentUser.user_ID;
        }
        
        await LoadRequests();
    }

    private async Task LoadRequests()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            if (string.IsNullOrWhiteSpace(filterStatus))
            {
                requests = await SalaryChangeRequestService.GetPendingRequestsAsync();
            }
            else
            {
                var allRequests = await DbContext.SalaryChangeRequests
                    .Include(r => r.User)
                    .Include(r => r.RequestedByUser)
                    .Include(r => r.ApprovedByUser)
                    .Where(r => r.Status == filterStatus)
                    .OrderByDescending(r => r.RequestedAt)
                    .ToListAsync();
                requests = allRequests;
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading requests: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "rounded-full bg-yellow-100 px-3 py-1 text-xs font-medium text-yellow-800",
            "Approved" => "rounded-full bg-green-100 px-3 py-1 text-xs font-medium text-green-800",
            "Rejected" => "rounded-full bg-red-100 px-3 py-1 text-xs font-medium text-red-800",
            _ => "rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-800"
        };
    }

    private void ShowApproveModal(SalaryChangeRequest request)
    {
        selectedRequest = request;
        approvalEffectiveDate = null; // Reset to default (today)
        showApproveModal = true;
        StateHasChanged();
    }

    private void CloseApproveModal()
    {
        showApproveModal = false;
        selectedRequest = null;
        approvalEffectiveDate = null;
        StateHasChanged();
    }

    private void ShowRejectModal(SalaryChangeRequest request)
    {
        selectedRequest = request;
        rejectionReason = "";
        showRejectModal = true;
        StateHasChanged();
    }

    private void CloseRejectModal()
    {
        showRejectModal = false;
        selectedRequest = null;
        rejectionReason = "";
        StateHasChanged();
    }

    private async Task ConfirmApprove()
    {
        if (selectedRequest == null) return;

        isProcessing = true;
        StateHasChanged();

        try
        {
            // Use provided effective date or null (service will default to today)
            var effectiveDate = approvalEffectiveDate ?? DateTime.Today;
            var success = await SalaryChangeRequestService.ApproveRequestAsync(selectedRequest.RequestId, currentUserId, effectiveDate);
            if (success)
            {
                CloseApproveModal();
                await LoadRequests();
                // Refresh parent component's pending count if possible
                if (OnApprovalChanged.HasDelegate)
                {
                    await OnApprovalChanged.InvokeAsync();
                }
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error approving request: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task ConfirmReject()
    {
        if (selectedRequest == null || string.IsNullOrWhiteSpace(rejectionReason)) return;

        isProcessing = true;
        StateHasChanged();

        try
        {
            var success = await SalaryChangeRequestService.RejectRequestAsync(selectedRequest.RequestId, currentUserId, rejectionReason);
            if (success)
            {
                CloseRejectModal();
                await LoadRequests();
                // Refresh parent component's pending count if possible
                if (OnApprovalChanged.HasDelegate)
                {
                    await OnApprovalChanged.InvokeAsync();
                }
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error rejecting request: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }
}
