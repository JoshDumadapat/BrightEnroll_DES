@using BrightEnroll_DES.Components.Pages.Admin.Payroll.PayrollCS
@using BrightEnroll_DES.Components.Pages.Admin.HumanResource.HRCS
@using BrightEnroll_DES.Components.Pages.Admin
@using System.Linq

<div class="overflow-hidden rounded-xl bg-white shadow">
    <!-- Filters (Inside Container) -->
    <div class="border-b border-gray-200 px-3 py-4 sm:px-6">
        <label class="mb-2 block text-sm font-bold text-gray-700">Filter:</label>
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
                <div class="relative flex w-full items-center sm:w-auto">
                    <span class="absolute left-3 flex items-center justify-center">
                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </span>
                    <input type="text" placeholder="Search here..." @bind="searchText" @bind:after="OnSearchChanged"
                           class="w-full rounded-lg border border-gray-300 py-2 pl-10 pr-3 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-60" />
                </div>
                <select @bind="statusFilter" @bind:after="OnFilterChanged" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto">
                    <option value="">Status</option>
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
                <select @bind="salaryRangeFilter" @bind:after="OnFilterChanged" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto">
                    <option value="">Monthly Salary Range</option>
                    <option value="0-20000">₱0 - ₱20,000</option>
                    <option value="20000-30000">₱20,000 - ₱30,000</option>
                    <option value="30000-40000">₱30,000 - ₱40,000</option>
                    <option value="40000-50000">₱40,000 - ₱50,000</option>
                    <option value="50000+">₱50,000+</option>
                </select>
            </div>
            <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
                <button @onclick="OnClearFilters" class="flex w-full items-center justify-center gap-2 rounded-lg bg-gray-500 px-4 py-2 font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg sm:w-auto" style="font-size: 13px;">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Clear
                </button>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto w-full">
    <table class="w-full border-collapse">
        <thead>
            <tr class="border-b border-gray-200 bg-gray-50">
                <th class="py-3 pl-6 pr-4 text-left text-xs font-semibold text-gray-700">Role</th>
                <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Monthly Salary (₱)</th>
                <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Allowance (₱)</th>
                <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Gross Pay (₱)</th>
                <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">SSS (₱)</th>
                <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">PhilHealth (₱)</th>
                <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Pag-IBIG (₱)</th>
                <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Withholding Tax (₱)</th>
                <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Total Deductions (₱)</th>
                <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">Net Pay (₱)</th>
                <th class="py-3 px-4 text-left text-xs font-semibold text-gray-700">13th Month (₱)</th>
                <th class="py-3 pr-6 pl-4 text-center text-xs font-semibold text-gray-700">Status</th>
            </tr>
        </thead>
        <tbody>
            @if (PaginatedPayrollData != null && PaginatedPayrollData.Any())
            {
                @foreach (var item in PaginatedPayrollData)
                {
                var isSelected = SelectedRole == item.Role;
                var currentItem = item;
                <tr class="border-b border-gray-100 cursor-pointer transition-colors @(isSelected ? "bg-blue-50 border-blue-200" : "hover:bg-gray-50")" @onclick="() => HandleRowClick(currentItem.Role)">
                    <td class="py-3 pl-6 pr-4 text-sm font-medium @(isSelected ? "text-blue-700" : "text-gray-800")">
                        <div class="flex items-center gap-2">
                            @item.Role
                            @if (isSelected)
                            {
                                <svg class="h-4 w-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            }
                        </div>
                    </td>
                    
                    <!-- Monthly Salary (Read-only) -->
                    <td class="py-3 px-4 text-sm text-gray-700">
                        @Salary.FormatPeso(item.BaseSalary)
                    </td>
                    
                    <!-- Allowance (Read-only) -->
                    <td class="py-3 px-4 text-sm text-gray-700">
                        @Salary.FormatPeso(item.Allowance)
                    </td>
                    
                    <!-- Gross Pay (Read-only) -->
                    <td class="py-3 px-4 text-sm text-gray-700 font-medium">
                        @Salary.FormatPeso(item.GrossPay)
                    </td>
                    
                    <!-- SSS (Read-only) -->
                    <td class="py-3 px-4 text-sm text-gray-600">
                        @Salary.FormatPeso(item.SSS)
                    </td>
                    
                    <!-- PhilHealth (Read-only) -->
                    <td class="py-3 px-4 text-sm text-gray-600">
                        @Salary.FormatPeso(item.PhilHealth)
                    </td>
                    
                    <!-- Pag-IBIG (Read-only) -->
                    <td class="py-3 px-4 text-sm text-gray-600">
                        @Salary.FormatPeso(item.PagIbig)
                    </td>
                    
                    <!-- Withholding Tax (Read-only) -->
                    <td class="py-3 px-4 text-sm text-gray-600">
                        @Salary.FormatPeso(item.WithholdingTax)
                    </td>
                    
                    <!-- Total Deductions (Read-only) -->
                    <td class="py-3 px-4 text-sm font-semibold text-red-600">
                        @Salary.FormatPeso(item.TotalDeductions)
                    </td>
                    
                    <!-- Net Pay (Read-only) -->
                    <td class="py-3 px-4 text-sm font-bold text-green-600">
                        @Salary.FormatPeso(item.NetPay)
                    </td>
                    
                    <!-- 13th Month Pay (Read-only) -->
                    <td class="py-3 px-4 text-sm text-gray-600">
                        @Salary.FormatPeso(item.ThirteenthMonthPay)
                    </td>
                    
                    <!-- Status -->
                    <td class="py-3 pr-6 pl-4 text-center" @onclick:stopPropagation="true">
                        @if (IsHRUser)
                        {
                            <span class="inline-flex items-center px-2.5 py-1 rounded-md text-[11px] font-medium whitespace-nowrap @(item.IsActive ? "text-green-700 bg-green-100" : "text-red-700 bg-red-100")">
                                @(item.IsActive ? "Active" : "Inactive")
                            </span>
                        }
                        else
                        {
                            <button @onclick="() => OpenStatusChangeModal(item)" 
                                    class="inline-flex items-center px-2.5 py-1 rounded-md text-[11px] font-medium transition-colors duration-150 whitespace-nowrap @(item.IsActive ? "text-green-700 bg-green-100 hover:bg-green-200" : "text-red-700 bg-red-100 hover:bg-red-200")">
                                @(item.IsActive ? "Active" : "Inactive")
                            </button>
                        }
                    </td>
                </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="12" class="py-12 text-center text-sm text-gray-500">
                        <div class="flex flex-col items-center justify-center">
                            <svg class="h-12 w-12 text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            <p class="text-base font-medium text-gray-600">No Records Available</p>
                            <p class="text-sm text-gray-500 mt-1">There are no payroll records to display at this time.</p>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    
    <!-- Footer with Pagination -->
    <Pagination TotalItems="@(FilteredPayrollData?.Count ?? 0)" 
                CurrentPage="@CurrentPage" 
                RowsPerPage="@RowsPerPage"
                ItemName="roles"
                OnPageChanged="HandlePageChanged"
                OnRowsPerPageChanged="HandleRowsPerPageChanged" />
</div>

<!-- Status Change Confirmation Modal -->
@if (ShowStatusChangeModal && SelectedRoleForStatusChange != null)
{
    <div class="fixed inset-0 z-[60] flex items-center justify-center bg-black bg-opacity-50" @onclick="CloseStatusChangeModal">
        <div class="w-full max-w-md rounded-2xl bg-white shadow-xl" @onclick:stopPropagation="true">
            <div class="flex items-center justify-between rounded-t-2xl bg-white px-6 py-2.5 border-b border-gray-200">
                <h3 class="text-base font-semibold @(SelectedRoleForStatusChange.IsActive ? "text-red-500" : "text-green-500")">
                    @(SelectedRoleForStatusChange.IsActive ? "Deactivate Role" : "Activate Role")
                </h3>
                <button @onclick="CloseStatusChangeModal" class="text-gray-400 hover:text-gray-600">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="px-6 py-4">
                <p class="text-sm text-gray-700 mb-4">
                    Are you sure you want to <strong>@(SelectedRoleForStatusChange.IsActive ? "deactivate" : "activate")</strong> the role <strong>@SelectedRoleForStatusChange.Role</strong>?
                </p>
                @if (SelectedRoleForStatusChange.IsActive)
                {
                    <div class="mb-4">
                        <label class="mb-2 block text-sm font-medium text-gray-700">
                            Reason for Deactivation <span class="text-red-500">*</span>
                        </label>
                        <textarea @bind="statusChangeReason" 
                                  rows="3"
                                  placeholder="Enter reason for deactivating this role..."
                                  class="w-full rounded-lg border @(showStatusChangeError && string.IsNullOrWhiteSpace(statusChangeReason) ? "border-red-500" : "border-gray-300") bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400"></textarea>
                        @if (string.IsNullOrWhiteSpace(statusChangeReason) && showStatusChangeError)
                        {
                            <p class="mt-1 text-xs text-red-600">Please provide a reason for deactivation.</p>
                        }
                    </div>
                }
                else
                {
                    <div class="mb-4">
                        <label class="mb-2 block text-sm font-medium text-gray-700">
                            Reason for Activation (Optional)
                        </label>
                        <textarea @bind="statusChangeReason" 
                                  rows="3"
                                  placeholder="Enter reason for activating this role (optional)..."
                                  class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-700 outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-400"></textarea>
                    </div>
                }
            </div>
            <div class="flex justify-end gap-2 border-t border-gray-200 px-6 py-3">
                <button @onclick="CloseStatusChangeModal" class="rounded-lg border border-gray-300 bg-white px-3 py-1.5 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    Cancel
                </button>
                <button @onclick="ConfirmStatusChange" class="rounded-lg @(SelectedRoleForStatusChange.IsActive ? "bg-red-600 hover:bg-red-700" : "bg-green-600 hover:bg-green-700") px-3 py-1.5 text-sm font-medium text-white">
                    @(SelectedRoleForStatusChange.IsActive ? "Deactivate" : "Activate")
                </button>
            </div>
        </div>
    </div>
}


@code {
    [Parameter] public List<PayrollRoleData> PayrollData { get; set; } = new();
    [Parameter] public EventCallback<PayrollRoleData> OnSalaryUpdated { get; set; }
    [Parameter] public EventCallback<string> OnRoleSelected { get; set; }
    [Parameter] public string? SelectedRole { get; set; }
    [Parameter] public bool IsHRUser { get; set; } = false;

    // Filter properties
    private string searchText = "";
    private string statusFilter = "";
    private string salaryRangeFilter = "";
    
    // Pagination state
    private int CurrentPage { get; set; } = 1;
    private int RowsPerPage { get; set; } = 5;

    // Status change modal state
    private bool ShowStatusChangeModal { get; set; } = false;
    private PayrollRoleData? SelectedRoleForStatusChange { get; set; }
    private string statusChangeReason { get; set; } = "";
    private bool showStatusChangeError { get; set; } = false;

    // Filtered data
    private List<PayrollRoleData>? FilteredPayrollData
    {
        get
        {
            if (PayrollData == null || !PayrollData.Any())
                return null;
                
            var filtered = PayrollData.AsEnumerable();

            // Search filter
            if (!string.IsNullOrWhiteSpace(searchText))
            {
                filtered = filtered.Where(r => 
                    r.Role.Contains(searchText, StringComparison.OrdinalIgnoreCase));
            }

            // Status filter
            if (!string.IsNullOrWhiteSpace(statusFilter))
            {
                bool isActive = statusFilter == "true";
                filtered = filtered.Where(r => r.IsActive == isActive);
            }

            // Salary range filter
            if (!string.IsNullOrWhiteSpace(salaryRangeFilter))
            {
                filtered = salaryRangeFilter switch
                {
                    "0-20000" => filtered.Where(r => r.BaseSalary >= 0 && r.BaseSalary <= 20000),
                    "20000-30000" => filtered.Where(r => r.BaseSalary > 20000 && r.BaseSalary <= 30000),
                    "30000-40000" => filtered.Where(r => r.BaseSalary > 30000 && r.BaseSalary <= 40000),
                    "40000-50000" => filtered.Where(r => r.BaseSalary > 40000 && r.BaseSalary <= 50000),
                    "50000+" => filtered.Where(r => r.BaseSalary > 50000),
                    _ => filtered
                };
            }

            return filtered.OrderBy(r => r.Role).ToList();
        }
    }
    
    // Computed property for paginated data
    private List<PayrollRoleData>? PaginatedPayrollData
    {
        get
        {
            if (FilteredPayrollData == null || !FilteredPayrollData.Any())
                return null;
            
            int startIndex = (CurrentPage - 1) * RowsPerPage;
            return FilteredPayrollData.Skip(startIndex).Take(RowsPerPage).ToList();
        }
    }

    // Filter methods
    private void OnSearchChanged()
    {
        CurrentPage = 1; // Reset to first page when search changes
        StateHasChanged();
    }
    
    private void OnFilterChanged()
    {
        CurrentPage = 1; // Reset to first page when filter changes
        StateHasChanged();
    }
    
    private void OnClearFilters()
    {
        searchText = "";
        statusFilter = "";
        salaryRangeFilter = "";
        CurrentPage = 1;
        StateHasChanged();
    }
    
    // Pagination methods
    private void HandlePageChanged(int page)
    {
        CurrentPage = page;
        StateHasChanged();
    }
    
    private void HandleRowsPerPageChanged(int rowsPerPage)
    {
        RowsPerPage = rowsPerPage;
        CurrentPage = 1; // Reset to first page when rows per page changes
        StateHasChanged();
    }

    private void OpenStatusChangeModal(PayrollRoleData item)
    {
        // Store reference to the item for status change
        SelectedRoleForStatusChange = item;
        statusChangeReason = "";
        showStatusChangeError = false;
        ShowStatusChangeModal = true;
        StateHasChanged();
    }

    private void CloseStatusChangeModal()
    {
        ShowStatusChangeModal = false;
        SelectedRoleForStatusChange = null;
        statusChangeReason = "";
        showStatusChangeError = false;
        StateHasChanged();
    }

    private void ConfirmStatusChange()
    {
        if (SelectedRoleForStatusChange == null)
            return;

        // Validate reason is required for deactivation
        if (SelectedRoleForStatusChange.IsActive && string.IsNullOrWhiteSpace(statusChangeReason))
        {
            showStatusChangeError = true;
            StateHasChanged();
            return;
        }

        showStatusChangeError = false;

        // Toggle the status
        SelectedRoleForStatusChange.IsActive = !SelectedRoleForStatusChange.IsActive;

        // Invoke the callback to update the database
        // The callback will handle the database update
        OnSalaryUpdated.InvokeAsync(SelectedRoleForStatusChange);

        // Close the modal
        CloseStatusChangeModal();
    }

    private void ToggleStatus(PayrollRoleData item)
    {
        // This method is kept for backward compatibility but should not be called directly
        // Use OpenStatusChangeModal instead
        OpenStatusChangeModal(item);
    }

    private async Task SelectRole(string role)
    {
        SelectedRole = role; // Update local state immediately for visual feedback
        StateHasChanged();
        await OnRoleSelected.InvokeAsync(role);
    }
    
    private async Task HandleRowClick(string role)
    {
        // Don't update SelectedRole here - let the modal handle it
        await OnRoleSelected.InvokeAsync(role);
    }
}

