@page "/inventory"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Services.RoleBase
@inject IAuthorizationService AuthorizationService

<PageTitle>Inventory</PageTitle>

<RoleAuthorizeView RequiredPermission="@Permissions.ViewInventory">

<div class="flex min-h-[70vh] items-center justify-center px-4 py-10 bg-gradient-to-b from-slate-50 to-slate-100">
    <div class="w-full max-w-xl text-center">
        <!-- Lock Icon -->
        <div class="mb-4 flex justify-center">
            <div class="flex h-14 w-14 items-center justify-center rounded-full bg-white shadow-sm border border-slate-200">
                <svg class="h-7 w-7 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
