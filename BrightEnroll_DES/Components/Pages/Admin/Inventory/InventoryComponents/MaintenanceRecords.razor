@namespace BrightEnroll_DES.Components.Pages.Admin.Inventory.InventoryComponents
@using BrightEnroll_DES.Services.Business.Inventory
@using System.Text.Json
@inject AssetService AssetService
@inject IJSRuntime JSRuntime

<div class="space-y-6">
    <!-- Action Bar -->
    <div class="flex justify-end">
        <button @onclick="ShowScheduleModal" 
                class="flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Schedule Maintenance
        </button>
    </div>

    <!-- Table Section -->
    <div class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm">
        @if (isLoading)
        {
            <div class="py-16 text-center">
                <div class="inline-block h-8 w-8 animate-spin rounded-full border-4 border-solid border-blue-600 border-r-transparent"></div>
                <p class="mt-4 text-sm text-gray-500">Loading maintenance records...</p>
            </div>
        }
        else if (maintenanceRecords.Count == 0)
        {
            <div class="py-16 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <p class="mt-4 text-sm font-medium text-gray-900">No maintenance records found</p>
                <p class="mt-1 text-sm text-gray-500">Get started by scheduling a maintenance.</p>
            </div>
        }
        else
        {
            <!-- Table -->
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700">Asset ID</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700">Asset Name</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700">Brand</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700">Maintenance Type</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700">Scheduled Date</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700">Status</th>
                            <th class="px-6 py-3 text-center text-xs font-semibold uppercase tracking-wider text-gray-700">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 bg-white">
                        @foreach (var record in maintenanceRecords)
                        {
                            <tr class="transition-colors hover:bg-gray-50">
                                <td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-gray-900">@record.AssetId</td>
                                <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-700">@record.AssetName</td>
                                <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-700">@(string.IsNullOrWhiteSpace(record.Brand) ? "N/A" : record.Brand)</td>
                                <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-700">@record.MaintenanceType</td>
                                <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-700">@record.ScheduledDate.ToString("MMM dd, yyyy")</td>
                                <td class="whitespace-nowrap px-6 py-4 text-sm">
                                    @if (record.Status == "Completed")
                                    {
                                        <span class="inline-flex rounded-full bg-green-100 px-2.5 py-1 text-xs font-medium text-green-800">Completed</span>
                                    }
                                    else if (record.Status == "Pending")
                                    {
                                        <span class="inline-flex rounded-full bg-orange-100 px-2.5 py-1 text-xs font-medium text-orange-800">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex rounded-full bg-blue-100 px-2.5 py-1 text-xs font-medium text-blue-800">In Progress</span>
                                    }
                                </td>
                                <td class="whitespace-nowrap px-6 py-4 text-center text-sm">
                                    <button @onclick="() => ViewMaintenanceRecord(record)" 
                                            class="inline-flex items-center gap-1.5 rounded-lg bg-blue-50 px-3 py-1.5 text-xs font-medium text-blue-700 transition-colors hover:bg-blue-100">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 16 16" fill="currentColor">
                                            <path d="M5 1a2 2 0 0 0-2 2v2.256c.318-.112.653-.19 1-.229V3a1 1 0 0 1 1-1h3v2.5A1.5 1.5 0 0 0 9.5 6H12v7a1 1 0 0 1-1 1h-.085c.114.323.114.677 0 1H11a2 2 0 0 0 2-2V5.414a1.5 1.5 0 0 0-.44-1.06L9.647 1.439A1.5 1.5 0 0 0 8.586 1H5Zm6.793 4H9.5a.5.5 0 0 1-.5-.5V2.207L11.793 5Zm-5.197 7.303a3.5 3.5 0 1 1 .707-.707l2.55 2.55a.5.5 0 0 1-.707.708l-2.55-2.55ZM7 9.5a2.5 2.5 0 1 0-5 0a2.5 2.5 0 0 0 5 0Z"/>
                                        </svg>
                                        View
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer -->
            <div class="border-t border-gray-200 bg-gray-50 px-6 py-3">
                <div class="flex items-center justify-between">
                    <p class="text-sm text-gray-700">
                        Showing <span class="font-medium">@maintenanceRecords.Count</span> record@(maintenanceRecords.Count != 1 ? "s" : "")
                    </p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Schedule Maintenance Modal -->
@if (showModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
        <div class="w-full max-w-md rounded-lg bg-white p-6 shadow-xl">
            <div class="mb-4 flex items-center justify-between">
                <h2 class="text-xl font-bold text-gray-800">Schedule Maintenance</h2>
                <button @onclick="CloseModal" class="text-gray-400 hover:text-gray-600">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <div class="space-y-4">
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Asset *</label>
                    <select @bind="selectedAssetId" 
                            class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:ring-2 focus:ring-blue-400">
                        <option value="">Select Asset</option>
                        @foreach (var asset in availableAssets)
                        {
                            var displayText = string.IsNullOrWhiteSpace(asset.Brand) 
                                ? $"{asset.AssetName} ({asset.AssetId})"
                                : $"{asset.AssetName} - {asset.Brand} ({asset.AssetId})";
                            <option value="@asset.AssetId">@displayText</option>
                        }
                    </select>
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Maintenance Type *</label>
                    <select @bind="maintenanceType" 
                            class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:ring-2 focus:ring-blue-400">
                        <option value="">Select Type</option>
                        <option value="Cleaning">Cleaning</option>
                        <option value="Repair">Repair</option>
                        <option value="Calibration">Calibration</option>
                        <option value="Inspection">Inspection</option>
                    </select>
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Scheduled Date *</label>
                    <input type="date" value="@(scheduledDate.ToString("yyyy-MM-dd"))" 
                           @onchange="@((ChangeEventArgs e) => { if (DateTime.TryParse(e.Value?.ToString(), out var date)) scheduledDate = date; })"
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
            </div>

            <div class="mt-6 flex justify-end gap-3">
                <button @onclick="CloseModal" 
                        class="rounded-lg bg-gray-500 px-6 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg">
                    Cancel
                </button>
                <button @onclick="SaveMaintenance" 
                        class="rounded-lg bg-blue-600 px-6 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg">
                    Schedule
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<MaintenanceRecord> maintenanceRecords = new();
    private List<BrightEnroll_DES.Data.Models.Asset> availableAssets = new();
    private bool isLoading = false;
    private bool showModal = false;
    private bool showViewModal = false;
    private MaintenanceRecord? viewingRecord = null;
    private string selectedAssetId = "";
    private string maintenanceType = "";
    private DateTime scheduledDate = DateTime.Now.AddDays(7);
    private bool showToast = false;
    private string toastMessage = "";
    private ToastType toastType = ToastType.Success;

    private class MaintenanceRecord
    {
        public string RecordId { get; set; } = Guid.NewGuid().ToString();
        public string AssetId { get; set; } = "";
        public string AssetName { get; set; } = "";
        public string Brand { get; set; } = "";
        public string MaintenanceType { get; set; } = "";
        public DateTime ScheduledDate { get; set; }
        public string Status { get; set; } = "";
        public DateTime CreatedDate { get; set; } = DateTime.Now;
    }

    private const string STORAGE_KEY = "maintenance_records";

    protected override async Task OnInitializedAsync()
    {
        await LoadMaintenanceRecords();
        await LoadAvailableAssets();
    }

    private async Task LoadMaintenanceRecords()
    {
        isLoading = true;
        try
        {
            // Load assets first to sync brand information
            await LoadAvailableAssets();
            
            // Try to load from localStorage
            var storedData = await JSRuntime.InvokeAsync<string>("localStorage.getItem", STORAGE_KEY);
            
            if (!string.IsNullOrWhiteSpace(storedData))
            {
                try
                {
                    var records = JsonSerializer.Deserialize<List<MaintenanceRecord>>(storedData);
                    if (records != null && records.Count > 0)
                    {
                        // Sync brand information from current assets
                        foreach (var record in records)
                        {
                            var asset = availableAssets.FirstOrDefault(a => a.AssetId == record.AssetId);
                            if (asset != null)
                            {
                                // Update asset name and brand if asset still exists
                                record.AssetName = asset.AssetName;
                                record.Brand = asset.Brand ?? "";
                            }
                        }
                        
                        // Remove duplicates (same asset, same type, same scheduled date)
                        maintenanceRecords = records
                            .GroupBy(r => new { r.AssetId, r.MaintenanceType, r.ScheduledDate.Date })
                            .Select(g => g.OrderByDescending(r => r.CreatedDate).First())
                            .OrderByDescending(r => r.ScheduledDate)
                            .ToList();
                        
                        // Update status based on scheduled date
                        bool statusUpdated = false;
                        foreach (var record in maintenanceRecords)
                        {
                            if (record.Status == "Pending" && record.ScheduledDate <= DateTime.Now)
                            {
                                record.Status = "In Progress";
                                statusUpdated = true;
                            }
                        }
                        
                        // Save back if status was updated or duplicates were removed
                        if (statusUpdated || maintenanceRecords.Count != records.Count)
                        {
                            await SaveMaintenanceRecordsToStorage();
                        }
                    }
                    else
                    {
                        maintenanceRecords = new List<MaintenanceRecord>();
                    }
                }
                catch (JsonException)
                {
                    // If deserialization fails, start with empty list
                    maintenanceRecords = new List<MaintenanceRecord>();
                }
            }
            else
            {
                // Initialize with empty list if no stored data
                maintenanceRecords = new List<MaintenanceRecord>();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading maintenance records: {ex.Message}");
            maintenanceRecords = new List<MaintenanceRecord>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SaveMaintenanceRecordsToStorage()
    {
        try
        {
            var options = new JsonSerializerOptions
            {
                WriteIndented = false
            };
            var json = JsonSerializer.Serialize(maintenanceRecords, options);
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", STORAGE_KEY, json);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving maintenance records: {ex.Message}");
        }
    }

    private async Task LoadAvailableAssets()
    {
        try
        {
            availableAssets = await AssetService.GetAllAssetsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading assets: {ex.Message}");
        }
    }

    private void ShowScheduleModal()
    {
        showModal = true;
        selectedAssetId = "";
        maintenanceType = "";
        scheduledDate = DateTime.Now.AddDays(7);
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private void ViewMaintenanceRecord(MaintenanceRecord record)
    {
        viewingRecord = record;
        showViewModal = true;
    }

    private void CloseViewModal()
    {
        showViewModal = false;
        viewingRecord = null;
    }

    private async Task SaveMaintenance()
    {
        if (string.IsNullOrWhiteSpace(selectedAssetId) || string.IsNullOrWhiteSpace(maintenanceType))
        {
            ShowToast("Please select an asset and maintenance type.", ToastType.Error);
            return;
        }

        var asset = availableAssets.FirstOrDefault(a => a.AssetId == selectedAssetId);
        if (asset != null)
        {
            // Check for duplicate: same asset, same type, same scheduled date
            var isDuplicate = maintenanceRecords.Any(r => 
                r.AssetId == asset.AssetId && 
                r.MaintenanceType == maintenanceType && 
                r.ScheduledDate.Date == scheduledDate.Date);

            if (isDuplicate)
            {
                ShowToast($"A {maintenanceType} maintenance for this asset is already scheduled on {scheduledDate:MMM dd, yyyy}.", ToastType.Error);
                return;
            }

            var newRecord = new MaintenanceRecord
            {
                AssetId = asset.AssetId,
                AssetName = asset.AssetName,
                Brand = asset.Brand ?? "",
                MaintenanceType = maintenanceType,
                ScheduledDate = scheduledDate,
                Status = "Pending",
                CreatedDate = DateTime.Now
            };

            maintenanceRecords.Add(newRecord);
            // Sort by scheduled date descending
            maintenanceRecords = maintenanceRecords.OrderByDescending(r => r.ScheduledDate).ToList();
            await SaveMaintenanceRecordsToStorage();
            ShowToast($"Maintenance scheduled successfully for {asset.AssetName}.", ToastType.Success);
            StateHasChanged();
        }

        CloseModal();
    }

    private void ShowToast(string message, ToastType type)
    {
        toastMessage = message;
        toastType = type;
        showToast = true;
        StateHasChanged();
    }

    private void CloseToast()
    {
        showToast = false;
        StateHasChanged();
    }
}

<!-- View Maintenance Record Modal -->
@if (showViewModal && viewingRecord != null)
{
    <div class="fixed inset-0 z-[60] flex items-center justify-center bg-black bg-opacity-50" @onclick="CloseViewModal">
        <div class="w-full max-w-2xl rounded-2xl bg-white shadow-xl" @onclick:stopPropagation="true">
            <div class="flex items-center justify-between rounded-t-2xl bg-white px-6 py-2.5 border-b border-gray-200">
                <h3 class="text-base font-semibold text-gray-800">Maintenance Record Details</h3>
                <button @onclick="CloseViewModal" class="text-gray-400 hover:text-gray-600">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="px-6 py-4">
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                    <div>
                        <label class="text-xs font-semibold uppercase tracking-wider text-gray-500">Asset ID</label>
                        <p class="mt-1 text-sm font-medium text-gray-900">@viewingRecord.AssetId</p>
                    </div>
                    <div>
                        <label class="text-xs font-semibold uppercase tracking-wider text-gray-500">Asset Name</label>
                        <p class="mt-1 text-sm font-medium text-gray-900">@viewingRecord.AssetName</p>
                    </div>
                    <div>
                        <label class="text-xs font-semibold uppercase tracking-wider text-gray-500">Brand</label>
                        <p class="mt-1 text-sm font-medium text-gray-900">@(string.IsNullOrWhiteSpace(viewingRecord.Brand) ? "N/A" : viewingRecord.Brand)</p>
                    </div>
                    <div>
                        <label class="text-xs font-semibold uppercase tracking-wider text-gray-500">Maintenance Type</label>
                        <p class="mt-1 text-sm font-medium text-gray-900">@viewingRecord.MaintenanceType</p>
                    </div>
                    <div>
                        <label class="text-xs font-semibold uppercase tracking-wider text-gray-500">Scheduled Date</label>
                        <p class="mt-1 text-sm font-medium text-gray-900">@viewingRecord.ScheduledDate.ToString("MMMM dd, yyyy")</p>
                    </div>
                    <div>
                        <label class="text-xs font-semibold uppercase tracking-wider text-gray-500">Status</label>
                        <p class="mt-1">
                            @if (viewingRecord.Status == "Completed")
                            {
                                <span class="inline-flex rounded-full bg-green-100 px-2.5 py-1 text-xs font-medium text-green-800">Completed</span>
                            }
                            else if (viewingRecord.Status == "Pending")
                            {
                                <span class="inline-flex rounded-full bg-orange-100 px-2.5 py-1 text-xs font-medium text-orange-800">Pending</span>
                            }
                            else
                            {
                                <span class="inline-flex rounded-full bg-blue-100 px-2.5 py-1 text-xs font-medium text-blue-800">In Progress</span>
                            }
                        </p>
                    </div>
                    <div>
                        <label class="text-xs font-semibold uppercase tracking-wider text-gray-500">Days Until Scheduled</label>
                        <p class="mt-1 text-sm font-medium text-gray-900">
                            @{
                                var daysUntil = (viewingRecord.ScheduledDate - DateTime.Now).Days;
                                if (daysUntil < 0)
                                {
                                    <span class="text-red-600">@Math.Abs(daysUntil) day(s) overdue</span>
                                }
                                else if (daysUntil == 0)
                                {
                                    <span class="text-orange-600">Due today</span>
                                }
                                else
                                {
                                    <span>@daysUntil day(s) remaining</span>
                                }
                            }
                        </p>
                    </div>
                </div>
            </div>
            <div class="flex justify-end gap-2 border-t border-gray-200 px-6 py-3">
                <button @onclick="CloseViewModal" class="rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    Close
                </button>
            </div>
        </div>
    </div>
}

<!-- Toast Notification -->
<ToastNotification Show="@showToast" Message="@toastMessage" Type="@toastType" OnClose="CloseToast" />
