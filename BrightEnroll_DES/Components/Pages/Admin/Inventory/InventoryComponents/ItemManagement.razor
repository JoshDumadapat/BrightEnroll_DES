@namespace BrightEnroll_DES.Components.Pages.Admin.Inventory.InventoryComponents
@using BrightEnroll_DES.Services.Business.Inventory
@using BrightEnroll_DES.Data.Models
@using Microsoft.AspNetCore.Components.Web
@inject InventoryService InventoryService

<div class="space-y-6">
    <!-- Search and Filter Section -->
    <div class="rounded-lg border border-gray-200 bg-white p-4 shadow-sm">
        <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
            <!-- Search Bar -->
            <div class="relative flex-1 max-w-md">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 flex items-center justify-center">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </span>
                <input type="text" @bind="searchTerm" @bind:event="oninput" @onkeypress="HandleSearchKeyPress"
                       placeholder="Search items by name, code, or category..."
                       class="w-full rounded-lg border border-gray-300 py-2.5 pl-10 pr-4 text-sm text-gray-700 placeholder-gray-400 outline-none transition-all focus:border-blue-400 focus:ring-2 focus:ring-blue-400" />
            </div>

            <!-- Filters Row -->
            <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
                <select @bind="selectedCategory" @bind:after="LoadItems"
                        class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-700 outline-none transition-all focus:border-blue-400 focus:ring-2 focus:ring-blue-400 sm:w-auto sm:min-w-[160px]">
                    <option value="">All Categories</option>
                    @foreach (var category in categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
                <button @onclick="ShowAddModal" 
                        class="flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg sm:w-auto">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add Item
                </button>
            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm">
        @if (isLoading)
        {
            <div class="py-16 text-center">
                <div class="inline-block h-8 w-8 animate-spin rounded-full border-4 border-solid border-blue-600 border-r-transparent"></div>
                <p class="mt-4 text-sm text-gray-500">Loading items...</p>
            </div>
        }
        else if (items.Count == 0)
        {
            <div class="py-16 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
                <p class="mt-4 text-sm font-medium text-gray-900">No items found</p>
                <p class="mt-1 text-sm text-gray-500">Get started by adding a new item.</p>
            </div>
        }
        else
        {
            <!-- Table -->
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700">Item Code</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700">Item Name</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700">Category</th>
                            <th class="px-6 py-3 text-center text-xs font-semibold uppercase tracking-wider text-gray-700">Quantity</th>
                            <th class="px-6 py-3 text-center text-xs font-semibold uppercase tracking-wider text-gray-700">Unit</th>
                            <th class="px-6 py-3 text-right text-xs font-semibold uppercase tracking-wider text-gray-700">Unit Price</th>
                            <th class="px-6 py-3 text-center text-xs font-semibold uppercase tracking-wider text-gray-700">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 bg-white">
                        @foreach (var item in items)
                        {
                            <tr class="transition-colors hover:bg-gray-50">
                                <td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-gray-900">@item.ItemCode</td>
                                <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-700">@item.ItemName</td>
                                <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-700">@item.Category</td>
                                <td class="whitespace-nowrap px-6 py-4 text-center text-sm">
                                    @if (item.Quantity <= item.ReorderLevel)
                                    {
                                        <span class="font-semibold text-red-600">@item.Quantity</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-900">@item.Quantity</span>
                                    }
                                </td>
                                <td class="whitespace-nowrap px-6 py-4 text-center text-sm text-gray-700">@item.Unit</td>
                                <td class="whitespace-nowrap px-6 py-4 text-right text-sm font-medium text-gray-900">â‚±@item.UnitPrice.ToString("N2")</td>
                                <td class="whitespace-nowrap px-6 py-4 text-center text-sm">
                                    <div class="flex items-center justify-center gap-2">
                                        <button @onclick="() => EditItem(item)" 
                                                class="inline-flex items-center gap-1.5 rounded-lg bg-blue-50 px-3 py-1.5 text-xs font-medium text-blue-700 transition-colors hover:bg-blue-100">
                                            <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                            Edit
                                        </button>
                                        <button @onclick="() => ShowDeleteConfirmation(item)" 
                                                class="inline-flex items-center gap-1.5 rounded-lg bg-red-50 px-3 py-1.5 text-xs font-medium text-red-700 transition-colors hover:bg-red-100">
                                            <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                            Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer -->
            <div class="border-t border-gray-200 bg-gray-50 px-6 py-3">
                <div class="flex items-center justify-between">
                    <p class="text-sm text-gray-700">
                        Showing <span class="font-medium">@items.Count</span> item@(items.Count != 1 ? "s" : "")
                    </p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Add/Edit Item Modal -->
@if (showModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
        <div class="w-full max-w-2xl rounded-lg bg-white p-6 shadow-xl">
            <div class="mb-4 flex items-center justify-between">
                <h2 class="text-xl font-bold text-gray-800">@(editingItem == null ? "Add Item" : "Edit Item")</h2>
                <button @onclick="CloseModal" class="text-gray-400 hover:text-gray-600">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Item Name *</label>
                    <input type="text" @bind="itemForm.ItemName" 
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Category *</label>
                    <select @bind="itemForm.Category" 
                            class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:ring-2 focus:ring-blue-400">
                        <option value="">Select Category</option>
                        <option value="Supplies">Supplies</option>
                        <option value="Equipment">Equipment</option>
                        <option value="Materials">Materials</option>
                    </select>
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Unit *</label>
                    <select @bind="itemForm.Unit" 
                            class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:ring-2 focus:ring-blue-400">
                        <option value="Piece">Piece</option>
                        <option value="Box">Box</option>
                        <option value="Ream">Ream</option>
                        <option value="Pack">Pack</option>
                        <option value="Set">Set</option>
                    </select>
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Quantity *</label>
                    <input type="number" @bind="itemForm.Quantity" 
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Reorder Level</label>
                    <input type="number" @bind="itemForm.ReorderLevel" 
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Max Stock</label>
                    <input type="number" @bind="itemForm.MaxStock" 
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Unit Price</label>
                    <input type="number" @bind="itemForm.UnitPrice" step="0.01" 
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Supplier</label>
                    <input type="text" @bind="itemForm.Supplier" 
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
                <div class="sm:col-span-2">
                    <label class="mb-2 block text-sm font-medium text-gray-700">Description</label>
                    <textarea @bind="itemForm.Description" rows="3"
                              class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400"></textarea>
                </div>
            </div>

            <div class="mt-6 flex justify-end gap-3">
                <button @onclick="CloseModal" 
                        class="rounded-lg bg-gray-500 px-6 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg">
                    Cancel
                </button>
                <button @onclick="SaveItem" 
                        disabled="@isSaving"
                        class="rounded-lg bg-blue-600 px-6 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg disabled:bg-gray-400 disabled:cursor-not-allowed">
                    @if (isSaving)
                    {
                        <span>Saving...</span>
                    }
                    else
                    {
                        <span>Save</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
@if (showDeleteModal && itemToDelete != null)
{
    <div class="fixed inset-0 z-[60] flex items-center justify-center bg-black bg-opacity-50" @onclick="CloseDeleteModal">
        <div class="w-full max-w-md rounded-2xl bg-white shadow-xl" @onclick:stopPropagation="true">
            <div class="flex items-center justify-between rounded-t-2xl bg-white px-6 py-2.5 border-b border-gray-200">
                <h3 class="text-base font-semibold text-red-500">Delete Item</h3>
                <button @onclick="CloseDeleteModal" class="text-gray-400 hover:text-gray-600">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="px-6 py-4">
                <p class="text-sm text-gray-700">Are you sure you want to delete <strong>@itemToDelete.ItemName</strong> (@itemToDelete.ItemCode)?</p>
                <p class="mt-2 text-xs text-gray-500">This action cannot be undone.</p>
            </div>
            <div class="flex justify-end gap-2 border-t border-gray-200 px-6 py-3">
                <button @onclick="CloseDeleteModal" class="rounded-lg border border-gray-300 bg-white px-3 py-1.5 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    Cancel
                </button>
                <button @onclick="ConfirmDeleteItem" class="rounded-lg bg-red-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-red-700">
                    Delete
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<InventoryItem> items = new();
    private List<string> categories = new();
    private string searchTerm = "";
    private string selectedCategory = "";
    private bool isLoading = false;
    private bool showModal = false;
    private bool isSaving = false;
    private InventoryItem? editingItem = null;
    private InventoryItem itemForm = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadItems();
        await LoadCategories();
    }

    private async Task LoadItems()
    {
        isLoading = true;
        try
        {
            items = await InventoryService.GetAllItemsAsync(
                category: string.IsNullOrWhiteSpace(selectedCategory) ? null : selectedCategory,
                searchTerm: string.IsNullOrWhiteSpace(searchTerm) ? null : searchTerm
            );
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading items: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadCategories()
    {
        try
        {
            categories = await InventoryService.GetItemCategoriesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading categories: {ex.Message}");
        }
    }

    private void ShowAddModal()
    {
        editingItem = null;
        itemForm = new InventoryItem
        {
            Unit = "Piece",
            ReorderLevel = 10,
            MaxStock = 1000
        };
        showModal = true;
    }

    private void EditItem(InventoryItem item)
    {
        editingItem = item;
        itemForm = new InventoryItem
        {
            ItemId = item.ItemId,
            ItemCode = item.ItemCode,
            ItemName = item.ItemName,
            Category = item.Category,
            Unit = item.Unit,
            Quantity = item.Quantity,
            ReorderLevel = item.ReorderLevel,
            MaxStock = item.MaxStock,
            UnitPrice = item.UnitPrice,
            Supplier = item.Supplier,
            Description = item.Description
        };
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        editingItem = null;
        itemForm = new InventoryItem();
    }

    private async Task SaveItem()
    {
        if (string.IsNullOrWhiteSpace(itemForm.ItemName) || 
            string.IsNullOrWhiteSpace(itemForm.Category))
        {
            return; // TODO: Show validation error
        }

        isSaving = true;
        try
        {
            if (editingItem == null)
            {
                await InventoryService.CreateItemAsync(itemForm);
            }
            else
            {
                await InventoryService.UpdateItemAsync(itemForm.ItemId, itemForm);
            }
            
            await LoadItems();
            CloseModal();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving item: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private bool showDeleteModal = false;
    private InventoryItem? itemToDelete = null;

    private void ShowDeleteConfirmation(InventoryItem item)
    {
        itemToDelete = item;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        itemToDelete = null;
    }

    private async Task ConfirmDeleteItem()
    {
        if (itemToDelete == null) return;

        try
        {
            await InventoryService.DeleteItemAsync(itemToDelete.ItemId);
            await LoadItems();
            CloseDeleteModal();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting item: {ex.Message}");
        }
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await LoadItems();
        }
    }
}
