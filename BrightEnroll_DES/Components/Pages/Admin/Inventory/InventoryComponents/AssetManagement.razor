@namespace BrightEnroll_DES.Components.Pages.Admin.Inventory.InventoryComponents
@using BrightEnroll_DES.Services.Business.Inventory
@using BrightEnroll_DES.Data.Models
@using BrightEnroll_DES.Components
@using Microsoft.AspNetCore.Components.Web
@inject AssetService AssetService
@inject ILoadingService LoadingService

<div class="space-y-6">
    <!-- Search and Filter Section -->
    <div class="rounded-lg border border-gray-200 bg-white p-4 shadow-sm">
        <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
            <!-- Search Bar -->
            <div class="relative flex-1 max-w-md">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 flex items-center justify-center">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </span>
                <input type="text" @bind="searchTerm" @bind:event="oninput" @onkeypress="HandleSearchKeyPress"
                       placeholder="Search assets by name, ID, or location..."
                       class="w-full rounded-lg border border-gray-300 py-2.5 pl-10 pr-4 text-sm text-gray-700 placeholder-gray-400 outline-none transition-all focus:border-blue-400 focus:ring-2 focus:ring-blue-400" />
            </div>

            <!-- Filters Row -->
            <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
                <select @bind="selectedCategory" @bind:after="LoadAssets"
                        class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-700 outline-none transition-all focus:border-blue-400 focus:ring-2 focus:ring-blue-400 sm:w-auto sm:min-w-[160px]">
                    <option value="">All Categories</option>
                    @foreach (var category in categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
                <select @bind="selectedStatus" @bind:after="LoadAssets"
                        class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2.5 text-sm text-gray-700 outline-none transition-all focus:border-blue-400 focus:ring-2 focus:ring-blue-400 sm:w-auto sm:min-w-[140px]">
                    <option value="">All Status</option>
                    <option value="Available">Available</option>
                    <option value="In Use">In Use</option>
                    <option value="Maintenance">Maintenance</option>
                    <option value="Damaged">Damaged</option>
                </select>
                <button @onclick="ShowAddModal" 
                        class="flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg sm:w-auto">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add Asset
                </button>
            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm">
        @if (isLoading)
        {
            <div class="py-16 text-center">
                <div class="inline-block h-8 w-8 animate-spin rounded-full border-4 border-solid border-blue-600 border-r-transparent"></div>
                <p class="mt-4 text-sm text-gray-500">Loading assets...</p>
            </div>
        }
        else if (assets.Count == 0)
        {
            <div class="py-16 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
                <p class="mt-4 text-sm font-medium text-gray-900">No assets found</p>
                <p class="mt-1 text-sm text-gray-500">Get started by adding a new asset.</p>
            </div>
        }
        else
        {
            <!-- Table -->
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700">Asset ID</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700">Name</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700">Category</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wider text-gray-700">Location</th>
                            <th class="px-6 py-3 text-center text-xs font-semibold uppercase tracking-wider text-gray-700">Status</th>
                            <th class="px-6 py-3 text-right text-xs font-semibold uppercase tracking-wider text-gray-700">Value</th>
                            <th class="px-6 py-3 text-center text-xs font-semibold uppercase tracking-wider text-gray-700">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 bg-white">
                        @foreach (var asset in assets)
                        {
                            <tr class="transition-colors hover:bg-gray-50">
                                <td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-gray-900">@asset.AssetId</td>
                                <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-700">@asset.AssetName</td>
                                <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-700">@asset.Category</td>
                                <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-700">@asset.Location</td>
                                <td class="whitespace-nowrap px-6 py-4 text-center text-sm">
                                    @if (asset.Status == "Available")
                                    {
                                        <span class="inline-flex rounded-full bg-green-100 px-2.5 py-1 text-xs font-medium text-green-800">Available</span>
                                    }
                                    else if (asset.Status == "In Use")
                                    {
                                        <span class="inline-flex rounded-full bg-blue-100 px-2.5 py-1 text-xs font-medium text-blue-800">In Use</span>
                                    }
                                    else if (asset.Status == "Maintenance")
                                    {
                                        <span class="inline-flex rounded-full bg-orange-100 px-2.5 py-1 text-xs font-medium text-orange-800">Maintenance</span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex rounded-full bg-red-100 px-2.5 py-1 text-xs font-medium text-red-800">Damaged</span>
                                    }
                                </td>
                                <td class="whitespace-nowrap px-6 py-4 text-right text-sm font-medium text-gray-900">â‚±@asset.CurrentValue.ToString("N2")</td>
                                <td class="whitespace-nowrap px-6 py-4 text-center text-sm">
                                    <div class="flex items-center justify-center gap-2">
                                        <button @onclick="() => EditAsset(asset)" 
                                                class="inline-flex items-center gap-1.5 rounded-lg bg-blue-50 px-3 py-1.5 text-xs font-medium text-blue-700 transition-colors hover:bg-blue-100">
                                            <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                            Edit
                                        </button>
                                        <button @onclick="() => ShowDeleteConfirmation(asset)" 
                                                class="inline-flex items-center gap-1.5 rounded-lg bg-red-50 px-3 py-1.5 text-xs font-medium text-red-700 transition-colors hover:bg-red-100">
                                            <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                            Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer -->
            <div class="border-t border-gray-200 bg-gray-50 px-6 py-3">
                <div class="flex items-center justify-between">
                    <p class="text-sm text-gray-700">
                        Showing <span class="font-medium">@assets.Count</span> asset@(assets.Count != 1 ? "s" : "")
                    </p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Add/Edit Asset Modal -->
@if (showModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
        <div class="w-full max-w-2xl rounded-lg bg-white p-6 shadow-xl">
            <div class="mb-4 flex items-center justify-between">
                <h2 class="text-xl font-bold text-gray-800">@(editingAsset == null ? "Add Asset" : "Edit Asset")</h2>
                <button @onclick="CloseModal" class="text-gray-400 hover:text-gray-600">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Asset Name *</label>
                    <input type="text" @bind="assetForm.AssetName" 
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Category *</label>
                    <select @bind="assetForm.Category" 
                            class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:ring-2 focus:ring-blue-400">
                        <option value="">Select Category</option>
                        <option value="Equipment">Equipment</option>
                        <option value="Furniture">Furniture</option>
                        <option value="Technology">Technology</option>
                        <option value="Supplies">Supplies</option>
                    </select>
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Brand</label>
                    <input type="text" @bind="assetForm.Brand" 
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Model</label>
                    <input type="text" @bind="assetForm.Model" 
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Serial Number</label>
                    <input type="text" @bind="assetForm.SerialNumber" 
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Location *</label>
                    <input type="text" @bind="assetForm.Location" 
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Status *</label>
                    <select @bind="assetForm.Status" 
                            class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:ring-2 focus:ring-blue-400">
                        <option value="Available">Available</option>
                        <option value="In Use">In Use</option>
                        <option value="Maintenance">Maintenance</option>
                        <option value="Damaged">Damaged</option>
                    </select>
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Purchase Date</label>
                    <input type="date" value="@(assetForm.PurchaseDate?.ToString("yyyy-MM-dd") ?? "")" 
                           @onchange="@((ChangeEventArgs e) => { if (DateTime.TryParse(e.Value?.ToString(), out var date)) assetForm.PurchaseDate = date; })"
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700">Purchase Cost</label>
                    <input type="number" @bind="assetForm.PurchaseCost" step="0.01" 
                           class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400" />
                </div>
                <div class="sm:col-span-2">
                    <label class="mb-2 block text-sm font-medium text-gray-700">Description</label>
                    <textarea @bind="assetForm.Description" rows="3"
                              class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm text-gray-700 outline-none focus:ring-2 focus:ring-blue-400"></textarea>
                </div>
            </div>

            <div class="mt-6 flex justify-end gap-3">
                <button @onclick="CloseModal" 
                        class="rounded-lg bg-gray-500 px-6 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg">
                    Cancel
                </button>
                <button @onclick="SaveAsset" 
                        disabled="@isSaving"
                        class="rounded-lg bg-blue-600 px-6 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 hover:shadow-lg disabled:bg-gray-400 disabled:cursor-not-allowed">
                    @if (isSaving)
                    {
                        <span>Saving...</span>
                    }
                    else
                    {
                        <span>Save</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
@if (showDeleteModal && assetToDelete != null)
{
    <div class="fixed inset-0 z-[60] flex items-center justify-center bg-black bg-opacity-50" @onclick="CloseDeleteModal">
        <div class="w-full max-w-md rounded-2xl bg-white shadow-xl" @onclick:stopPropagation="true">
            <div class="flex items-center justify-between rounded-t-2xl bg-white px-6 py-2.5 border-b border-gray-200">
                <h3 class="text-base font-semibold text-red-500">Delete Asset</h3>
                <button @onclick="CloseDeleteModal" class="text-gray-400 hover:text-gray-600">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="px-6 py-4">
                <p class="text-sm text-gray-700">Are you sure you want to delete <strong>@assetToDelete.AssetName</strong> (@assetToDelete.AssetId)?</p>
                <p class="mt-2 text-xs text-gray-500">This action cannot be undone.</p>
            </div>
            <div class="flex justify-end gap-2 border-t border-gray-200 px-6 py-3">
                <button @onclick="CloseDeleteModal" class="rounded-lg border border-gray-300 bg-white px-3 py-1.5 text-sm font-medium text-gray-700 hover:bg-gray-50">
                    Cancel
                </button>
                <button @onclick="ConfirmDeleteAsset" class="rounded-lg bg-red-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-red-700">
                    Delete
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<Asset> assets = new();
    private List<string> categories = new();
    private string searchTerm = "";
    private string selectedCategory = "";
    private string selectedStatus = "";
    private bool isLoading = false;
    private bool showModal = false;
    private bool isSaving = false;
    private Asset? editingAsset = null;
    private Asset assetForm = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadAssets();
        await LoadCategories();
    }

    private async Task LoadAssets()
    {
        isLoading = true;
        try
        {
            assets = await AssetService.GetAllAssetsAsync(
                category: string.IsNullOrWhiteSpace(selectedCategory) ? null : selectedCategory,
                status: string.IsNullOrWhiteSpace(selectedStatus) ? null : selectedStatus,
                searchTerm: string.IsNullOrWhiteSpace(searchTerm) ? null : searchTerm
            );
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading assets: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadCategories()
    {
        try
        {
            categories = await AssetService.GetAssetCategoriesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading categories: {ex.Message}");
        }
    }

    private void ShowAddModal()
    {
        editingAsset = null;
        assetForm = new Asset
        {
            Status = "Available",
            PurchaseDate = DateTime.Now
        };
        showModal = true;
    }

    private void EditAsset(Asset asset)
    {
        editingAsset = asset;
        assetForm = new Asset
        {
            AssetId = asset.AssetId,
            AssetName = asset.AssetName,
            Category = asset.Category,
            Brand = asset.Brand,
            Model = asset.Model,
            SerialNumber = asset.SerialNumber,
            Location = asset.Location,
            Status = asset.Status,
            PurchaseDate = asset.PurchaseDate,
            PurchaseCost = asset.PurchaseCost,
            CurrentValue = asset.CurrentValue,
            Description = asset.Description
        };
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        editingAsset = null;
        assetForm = new Asset();
    }

    private async Task SaveAsset()
    {
        if (string.IsNullOrWhiteSpace(assetForm.AssetName) || 
            string.IsNullOrWhiteSpace(assetForm.Category) || 
            string.IsNullOrWhiteSpace(assetForm.Location))
        {
            return; // TODO: Show validation error
        }

        isSaving = true;
        try
        {
            if (editingAsset == null)
            {
                await AssetService.CreateAssetAsync(assetForm);
            }
            else
            {
                await AssetService.UpdateAssetAsync(assetForm.AssetId, assetForm);
            }
            
            await LoadAssets();
            CloseModal();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving asset: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private bool showDeleteModal = false;
    private Asset? assetToDelete = null;

    private void ShowDeleteConfirmation(Asset asset)
    {
        assetToDelete = asset;
        showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        showDeleteModal = false;
        assetToDelete = null;
    }

    private async Task ConfirmDeleteAsset()
    {
        if (assetToDelete == null) return;

        try
        {
            await AssetService.DeleteAssetAsync(assetToDelete.AssetId);
            await LoadAssets();
            CloseDeleteModal();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting asset: {ex.Message}");
        }
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await LoadAssets();
        }
    }
}
