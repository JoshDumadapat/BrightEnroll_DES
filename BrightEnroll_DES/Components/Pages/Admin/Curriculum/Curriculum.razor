    private async Task HandleAddSubject()
    {
        try
        {
            var gradeLevel = GradeLevels.FirstOrDefault(g => g.GradeLevelName == NewSubject.GradeLevel);
            if (gradeLevel == null)
            {
                Logger.LogWarning("Grade level not found: {GradeLevel}", NewSubject.GradeLevel);
                return;
            }

            if (NewSubject.Schedules == null || !NewSubject.Schedules.Any())
            {
                Logger.LogWarning("No subjects with schedules to add");
                return;
            }

            int successCount = 0;
            int skipCount = 0;
            List<string> errorMessages = new List<string>();

            // Refresh DbSubjects before processing
            DbSubjects = await CurriculumService.GetAllSubjectsAsync();

            // Create subjects and their schedules in batch
            foreach (var scheduleItem in NewSubject.Schedules)
            {
                try
                {
                    if (!TimeSpan.TryParse(scheduleItem.StartTime, out var startTime) ||
                        !TimeSpan.TryParse(scheduleItem.EndTime, out var endTime))
                    {
                        errorMessages.Add($"Invalid time format for subject '{scheduleItem.SubjectName}'. Skipped.");
                        Logger.LogWarning("Invalid time format for subject: {SubjectName}", scheduleItem.SubjectName);
                        skipCount++;
                        continue;
                    }

                    // Refresh DbSubjects to see newly created subjects in this batch
                    DbSubjects = await CurriculumService.GetAllSubjectsAsync();

                    // Check if subject with same name already exists in database for this grade level
                    var existingSubject = DbSubjects.FirstOrDefault(s => 
                        s.SubjectName.Equals(scheduleItem.SubjectName, StringComparison.OrdinalIgnoreCase) &&
                        s.GradeLevelId == gradeLevel.GradeLevelId);

                    // If subject name already exists, prevent insertion and show error
                    if (existingSubject != null)
                    {
                        // Check if this exact schedule combination already exists in database
                        var existingSchedules = await CurriculumService.GetSubjectSchedulesBySubjectAndTimeAsync(
                            existingSubject.SubjectId, 
                            gradeLevel.GradeLevelId, 
                            startTime, 
                            endTime);

                        // Check if all days in the new schedule already exist
                        var existingDays = existingSchedules.Select(ss => ss.DayOfWeek).ToList();
                        var allDaysExist = scheduleItem.Days.All(day => existingDays.Contains(day));

                        if (allDaysExist && existingDays.Count == scheduleItem.Days.Count)
                        {
                            errorMessages.Add($"❌ Subject '{scheduleItem.SubjectName}' with the same schedule (Time: {scheduleItem.StartTime} - {scheduleItem.EndTime}, Days: {string.Join(", ", scheduleItem.Days)}) already exists in the database. This duplicate was not inserted.");
                            Logger.LogWarning("Subject '{SubjectName}' with the same schedule already exists in database. Skipping.", scheduleItem.SubjectName);
                            skipCount++;
                            continue; // Skip this subject - exact duplicate schedule
                        }
                        else
                        {
                            // Subject name exists but with different schedule - still prevent duplicate name
                            errorMessages.Add($"❌ Subject name '{scheduleItem.SubjectName}' already exists in the database for this grade level. Each subject name can only be added once per grade level. Please use a different subject name or edit the existing subject. This duplicate was not inserted.");
                            Logger.LogWarning("Subject name '{SubjectName}' already exists in database for grade level {GradeLevelId}. Skipping duplicate name.", scheduleItem.SubjectName, gradeLevel.GradeLevelId);
                            skipCount++;
                            continue; // Skip this subject - duplicate name
                        }
                    }

                    // Create new subject (existingSubject is null at this point because we returned early if it existed)
                    DataModels.Subject dbSubject = new DataModels.Subject
                    {
                        SubjectName = scheduleItem.SubjectName,
                        GradeLevelId = gradeLevel.GradeLevelId,
                        Description = scheduleItem.Description
                    };
                    dbSubject = await CurriculumService.CreateSubjectAsync(dbSubject);
                    
                    // Verify subject was created successfully
                    if (dbSubject == null || dbSubject.SubjectId <= 0)
                    {
                        errorMessages.Add($"❌ Failed to create subject '{scheduleItem.SubjectName}'. Subject ID is invalid.");
                        Logger.LogError("Subject creation failed for '{SubjectName}'. SubjectId is {SubjectId}", 
                            scheduleItem.SubjectName, dbSubject?.SubjectId ?? 0);
                        skipCount++;
                        continue;
                    }
                    
                    Logger.LogInformation("Subject created successfully: SubjectId={SubjectId}, SubjectName={SubjectName}, GradeLevelId={GradeLevelId}", 
                        dbSubject.SubjectId, dbSubject.SubjectName, dbSubject.GradeLevelId);
                    
                    // Refresh DbSubjects after creating new subject
                    DbSubjects = await CurriculumService.GetAllSubjectsAsync();

                    // Create schedules for each day (only if it doesn't already exist)
                    int schedulesCreated = 0;
                    foreach (var day in scheduleItem.Days)
                    {
                        try
                        {
                            // Check if schedule already exists for this day, subject, and time
                            var existingSchedule = await CurriculumService.GetSubjectScheduleBySubjectDayAndTimeAsync(
                                dbSubject.SubjectId,
                                gradeLevel.GradeLevelId,
                                day,
                                startTime,
                                endTime);

                            if (existingSchedule == null)
                            {
                                // Create schedule with only the required properties (no navigation properties)
                                var subjectSchedule = new DataModels.SubjectSchedule
                                {
                                    SubjectId = dbSubject.SubjectId,
                                    GradeLevelId = gradeLevel.GradeLevelId,
                                    DayOfWeek = day.Trim().ToUpper(), // Ensure day is trimmed and uppercase
                                    StartTime = startTime,
                                    EndTime = endTime,
                                    IsDefault = true,
                                    CreatedAt = DateTime.Now
                                };
                                
                                // Explicitly set navigation properties to null to avoid EF Core confusion
                                subjectSchedule.Subject = null;
                                subjectSchedule.GradeLevel = null;
                                
                                var createdSchedule = await CurriculumService.CreateSubjectScheduleAsync(subjectSchedule);
                                schedulesCreated++;
                                Logger.LogInformation("Created schedule for subject '{SubjectName}': Day={Day}, Time={StartTime}-{EndTime}, ScheduleId={ScheduleId}", 
                                    scheduleItem.SubjectName, day, startTime, endTime, createdSchedule.ScheduleId);
                            }
                            else
                            {
                                Logger.LogWarning("Schedule already exists for subject '{SubjectName}': Day={Day}, Time={StartTime}-{EndTime}", 
                                    scheduleItem.SubjectName, day, startTime, endTime);
                            }
                        }
                        catch (Exception scheduleEx)
                        {
                            Logger.LogError(scheduleEx, "Error creating schedule for subject '{SubjectName}', day '{Day}': {Error}", 
                                scheduleItem.SubjectName, day, scheduleEx.Message);
                            errorMessages.Add($"❌ Failed to create schedule for subject '{scheduleItem.SubjectName}' on day '{day}': {scheduleEx.Message}");
                        }
                    }

                    if (schedulesCreated > 0)
                    {
                        successCount++;
                        Logger.LogInformation("Successfully created {ScheduleCount} schedule(s) for subject '{SubjectName}'", 
                            schedulesCreated, scheduleItem.SubjectName);
                    }
                    else
                    {
                        errorMessages.Add($"❌ No schedules were created for subject '{scheduleItem.SubjectName}'. All schedules may already exist or there was an error.");
                        skipCount++;
                    }
                }
                catch (Exception ex)
                {
                    Logger.LogError(ex, "Error processing subject: {SubjectName}", scheduleItem.SubjectName);
                    skipCount++;
                }
            }

            Logger.LogInformation("Added {SuccessCount} subject(s), skipped {SkipCount} duplicate(s)", successCount, skipCount);

            // Show error messages if any subjects were skipped
            if (errorMessages.Any())
            {
                var errorMessage = string.Join("\n", errorMessages);
                Logger.LogWarning("Some subjects were not added:\n{Errors}", errorMessage);
                
                // Show error modal to user
                ErrorModalTitle = "Error Adding Subjects";
                ErrorModalMessage = errorMessage;
                ShowErrorModal = true;
            }

            // Reload all data to refresh UI
            await LoadDataAsync();
            
            // Only close modal if at least one subject was successfully added AND no errors
            if (successCount > 0 && !errorMessages.Any())
            {
                await CloseAddSubjectModal();
                
                // Show success toast
                toastMessage = successCount == 1 
                    ? $"Subject '{NewSubject.Name}' added successfully."
                    : $"{successCount} subject(s) added successfully.";
                toastType = ToastType.Success;
                showToast = true;
            }
            else if (errorMessages.Any() && successCount == 0)
            {
                // If all subjects failed, keep modal open - error modal will show the issues
                // Don't close the add subject modal so user can fix issues
            }
            else if (successCount > 0 && errorMessages.Any())
            {
                // Some succeeded, some failed - close modal but show error
                await CloseAddSubjectModal();
                
                // Show success toast (errors are shown in error modal)
                toastMessage = $"{successCount} subject(s) added successfully.";
                toastType = ToastType.Success;
                showToast = true;
            }
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error adding subjects");
            StateHasChanged();
        }
    }

    private async Task HandleEditSubject()
    {
        try
        {
            var subjectId = int.Parse(EditingSubject.Id.Replace("SUB-", ""));
            var dbSubject = await CurriculumService.GetSubjectByIdAsync(subjectId);
            
            if (dbSubject == null)
            {
                Logger.LogWarning("Subject not found: {SubjectId}", subjectId);
                return;
            }

            var gradeLevel = GradeLevels.FirstOrDefault(g => g.GradeLevelName == EditingSubject.GradeLevel);
            if (gradeLevel == null)
            {
