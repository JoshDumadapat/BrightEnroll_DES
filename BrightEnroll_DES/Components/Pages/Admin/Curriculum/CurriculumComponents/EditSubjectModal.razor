<!-- Validation Error Modal -->
@if (showValidationModal)
{
    <div class="fixed inset-0 z-[60] flex items-center justify-center bg-black bg-opacity-50" @onclick="CloseValidationModal">
        <div id="edit-subject-validation-modal" class="w-full max-w-md rounded-2xl bg-white shadow-xl" @onclick:stopPropagation="true">
            <div class="flex items-center rounded-t-2xl bg-red-500 px-6 py-2">
                <h3 class="text-base font-semibold text-white">Validation Error</h3>
            </div>
            <div class="px-6 py-4">
                <p class="mb-3 text-sm font-medium text-gray-800">Please fill in the following required fields:</p>
                <ul class="list-inside list-disc space-y-1 text-sm text-gray-700">
                    @foreach (var error in validationErrors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
            <div class="flex justify-end border-t border-gray-200 px-6 py-3">
                <button @onclick="CloseValidationModal" class="rounded-lg px-3 py-1.5 text-sm font-medium text-white hover:opacity-90 bg-red-500">
                    OK
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public Subject Subject { get; set; } = new();
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnSubmit { get; set; }

    private List<DataModels.GradeLevel> GradeLevels { get; set; } = new();
    private bool showSubmitConfirmModal = false;
    private bool showCancelConfirmModal = false;
    private bool showValidationModal = false;
    private List<string> validationErrors = new();
    private bool isSubmitting = false;
    private string errorMessage = "";
    private int? SubjectId { get; set; }
    private bool isLoading = false;
    private bool isInitialized = false;
    private SemaphoreSlim loadSemaphore = new SemaphoreSlim(1, 1);
    private bool hasValidationErrors = false;
    
    private readonly List<string> DaysOfWeek = new() { "M", "T", "W", "TH", "F", "Sat", "Sun" };

    protected override async Task OnParametersSetAsync()
    {
        // Only load data when modal first opens, not on every parameter change
        if (Show && !isLoading && !isInitialized && !isSubmitting)
        {
            isInitialized = true;
            await LoadDataAsync();
            // Extract subject ID from the Subject.Id (format: "SUB-001")
            if (!string.IsNullOrEmpty(Subject.Id) && Subject.Id.StartsWith("SUB-"))
            {
                var idPart = Subject.Id.Replace("SUB-", "");
                if (int.TryParse(idPart, out var id))
                {
                    SubjectId = id;
                    await LoadExistingSchedules();
                }
            }
        }
        else if (!Show)
        {
            // Reset when modal closes
            isInitialized = false;
            isLoading = false;
            errorMessage = "";
        }
    }

    private async Task LoadDataAsync()
    {
        if (isLoading) return;
        
        await loadSemaphore.WaitAsync();
        try
        {
            isLoading = true;
            GradeLevels = await CurriculumService.GetAllGradeLevelsAsync();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading data: {ex.Message}");
            errorMessage = $"Error loading data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            loadSemaphore.Release();
        }
    }

    private async Task LoadExistingSchedules()
    {
        if (!SubjectId.HasValue || isLoading || isSubmitting) return;

        await loadSemaphore.WaitAsync();
        try
        {
            isLoading = true;
            errorMessage = ""; // Clear any previous errors
            
            // Add a small delay to ensure any previous operations complete
            await Task.Delay(100);
            
            var schedules = await CurriculumService.GetSubjectSchedulesBySubjectIdAsync(SubjectId.Value);
            
            // Group schedules by time slot and convert to SubjectScheduleItem format
            // Use Distinct() to avoid duplicate days and ensure proper ordering
            var scheduleItems = schedules
                .GroupBy(s => new { s.StartTime, s.EndTime })
                .Select(g => new SubjectScheduleItem
                {
                    SubjectName = Subject.Name,
                    StartTime = g.Key.StartTime.ToString(@"hh\:mm"),
                    EndTime = g.Key.EndTime.ToString(@"hh\:mm"),
                    Days = g.Select(s => s.DayOfWeek.Trim().ToUpper())
                            .Distinct()
                            .OrderBy(d => GetDayOrder(d))
                            .ToList(),
                    Description = Subject.Description ?? ""
                })
                .ToList();
            
            Subject.Schedules = scheduleItems;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading schedules: {ex.Message}");
            errorMessage = $"Error loading schedules: {ex.Message}";
            StateHasChanged();
        }
        finally
        {
            isLoading = false;
            loadSemaphore.Release();
        }
    }

    private void OnSubjectChanged()
    {
        errorMessage = "";
        hasValidationErrors = false;
        StateHasChanged();
    }

    private void OnScheduleChanged()
    {
        errorMessage = "";
        // Validate schedules and remove duplicates
        if (Subject.Schedules != null)
        {
            // First, clean up each schedule's days list (remove duplicates, normalize, sort)
            foreach (var schedule in Subject.Schedules)
            {
                schedule.Days = schedule.Days
                    .Select(d => d.Trim().ToUpper())
                    .Distinct()
                    .OrderBy(d => GetDayOrder(d))
                    .ToList();
            }
            
            // Regroup schedules by time slot to handle time changes (only if times are valid)
            var validSchedules = Subject.Schedules
                .Where(s => !string.IsNullOrWhiteSpace(s.StartTime) && !string.IsNullOrWhiteSpace(s.EndTime))
                .ToList();
            
            if (validSchedules.Any())
            {
                var regroupedSchedules = validSchedules
                    .GroupBy(s => new { s.StartTime, s.EndTime })
                    .Select(g => new SubjectScheduleItem
                    {
                        SubjectName = g.First().SubjectName,
                        StartTime = g.Key.StartTime,
                        EndTime = g.Key.EndTime,
                        Days = g.SelectMany(s => s.Days)
                                .Select(d => d.Trim().ToUpper())
                                .Distinct()
                                .OrderBy(d => GetDayOrder(d))
                                .ToList(),
                        Description = g.First().Description ?? ""
                    })
                    .ToList();
                
                Subject.Schedules = regroupedSchedules;
            }
            
            // Validate each schedule
            foreach (var schedule in Subject.Schedules)
            {
                schedule.ErrorMessage = "";
                
                if (!TimeSpan.TryParse(schedule.StartTime, out var startTime) || 
                    !TimeSpan.TryParse(schedule.EndTime, out var endTime))
                {
                    schedule.ErrorMessage = "Invalid time format.";
                    continue;
                }

                if (endTime <= startTime)
                {
                    schedule.ErrorMessage = "End time must be after start time.";
                    continue;
                }

                if (!schedule.Days.Any())
                {
                    schedule.ErrorMessage = "At least one day must be selected.";
                    continue;
                }
            }
        }
        StateHasChanged();
    }

    private void OnGradeLevelChanged()
    {
        errorMessage = "";
        hasValidationErrors = false;
        StateHasChanged();
    }

    private void ToggleDay(SubjectScheduleItem schedule, string day)
    {
        // Normalize the day for comparison
        var normalizedDay = day.Trim().ToUpper();
        
        // Check if the day is currently in the list (case-insensitive)
        var dayExists = schedule.Days.Any(d => d.Trim().ToUpper() == normalizedDay);
        
        if (dayExists)
        {
            // Remove the day (uncheck)
            schedule.Days.RemoveAll(d => d.Trim().ToUpper() == normalizedDay);
        }
        else
        {
            // Add the day (check)
            schedule.Days.Add(day);
        }
        
        // Remove duplicates and sort
        schedule.Days = schedule.Days
            .Select(d => d.Trim().ToUpper())
            .Distinct()
            .OrderBy(d => GetDayOrder(d))
            .ToList();
        
        OnScheduleChanged();
    }

    private int GetDayOrder(string day)
    {
        var normalizedDay = day.Trim().ToUpper();
        return normalizedDay switch
        {
            "M" => 1,
            "T" => 2,
            "W" => 3,
            "TH" => 4,
            "F" => 5,
            "SAT" => 6,
            "SUN" => 7,
            _ => 99
        };
    }

    private bool CanSubmit
    {
        get
        {
            if (string.IsNullOrWhiteSpace(Subject.Name))
                return false;
            
            if (string.IsNullOrWhiteSpace(Subject.GradeLevel))
                return false;
            
            if (Subject.Schedules == null || !Subject.Schedules.Any())
                return false;
            
            // Validate all schedules
            foreach (var schedule in Subject.Schedules)
            {
                if (!TimeSpan.TryParse(schedule.StartTime, out var startTime) || 
                    !TimeSpan.TryParse(schedule.EndTime, out var endTime))
                    return false;
                
                if (endTime <= startTime)
                    return false;
                
                if (!schedule.Days.Any())
                    return false;
            }
            
            return true;
        }
    }

    private bool HasData()
    {
        return !string.IsNullOrWhiteSpace(Subject.Name) ||
               !string.IsNullOrWhiteSpace(Subject.GradeLevel) ||
               (Subject.Schedules != null && Subject.Schedules.Any());
    }

    private void ShowSubmitConfirm()
    {
        if (!ValidateForm())
        {
            hasValidationErrors = true;
            showValidationModal = true;
            StateHasChanged();
            return;
        }
        hasValidationErrors = false;
        showSubmitConfirmModal = true;
    }

    private bool ValidateForm()
    {
        validationErrors.Clear();
        
        if (string.IsNullOrWhiteSpace(Subject.Name))
        {
            validationErrors.Add("Subject Name is required");
        }
        
        if (string.IsNullOrWhiteSpace(Subject.GradeLevel))
        {
            validationErrors.Add("Grade Level is required");
        }
        
        if (Subject.Schedules == null || !Subject.Schedules.Any())
        {
            validationErrors.Add("At least one schedule is required");
        }
        else
        {
            foreach (var schedule in Subject.Schedules)
            {
                if (!TimeSpan.TryParse(schedule.StartTime, out var startTime) || 
                    !TimeSpan.TryParse(schedule.EndTime, out var endTime))
                {
                    validationErrors.Add($"Invalid time format for schedule: {schedule.StartTime} - {schedule.EndTime}");
                }
                else if (endTime <= startTime)
                {
                    validationErrors.Add($"End time must be after start time for schedule: {schedule.StartTime} - {schedule.EndTime}");
                }
                
                if (!schedule.Days.Any())
                {
                    validationErrors.Add("At least one day must be selected for each schedule");
                }
            }
        }
        
        return validationErrors.Count == 0;
    }

    private void CloseValidationModal()
    {
        showValidationModal = false;
    }

    private void CloseSubmitConfirmModal()
    {
        showSubmitConfirmModal = false;
    }

    private async Task ConfirmSubmit()
    {
        showSubmitConfirmModal = false;
        await HandleSubmit();
    }

    private void ShowCancelConfirm()
    {
        if (HasData())
        {
            showCancelConfirmModal = true;
        }
        else
        {
            OnClose.InvokeAsync();
        }
    }

    private void CloseCancelConfirmModal()
    {
        showCancelConfirmModal = false;
    }

    private async Task ConfirmCancel()
    {
        showCancelConfirmModal = false;
        await OnClose.InvokeAsync();
    }

    private async Task HandleBackdropClick()
    {
        if (showSubmitConfirmModal || showCancelConfirmModal || showValidationModal)
        {
            return;
        }
        
        if (!HasData())
        {
            await OnClose.InvokeAsync();
        }
        else
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("handleModalBackdropClick", "edit-subject-modal");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error calling handleModalBackdropClick: {ex.Message}");
            }
        }
    }

    private async Task HandleSubmit()
    {
        // Wait for any ongoing loading operations to complete
        if (isLoading)
        {
            await loadSemaphore.WaitAsync();
            try
            {
                // Wait for loading to finish
            }
            finally
            {
                loadSemaphore.Release();
            }
        }
        
        isSubmitting = true;
        try
        {
            await OnSubmit.InvokeAsync();
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }
}
