    private IEnumerable<DataModels.Subject> GetSelectableSubjects()
    {
        // Subjects already used in other rows should not be selectable.
        // When editing, allow the current row's subject to stay selectable.
        var usedSubjectIds = new HashSet<int>();

        for (int i = 0; i < AssignmentRows.Count; i++)
        {
            if (IsEditingRow && EditingRowIndex.HasValue && i == EditingRowIndex.Value)
            {
                continue;
            }

            usedSubjectIds.Add(AssignmentRows[i].SubjectId);
        }

        return AvailableSubjects
            .Where(s => !usedSubjectIds.Contains(s.SubjectId));
    }

