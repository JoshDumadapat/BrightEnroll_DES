    private string GetBodyGradientStart(string headerColor)
    {
        // Convert hex to rgba with 15% opacity for a very subtle tint
        return HexToRgba(headerColor, 0.15);
    }

    private string GetBodyGradientEnd(string headerColor)
    {
        // Convert hex to rgba with 5% opacity for an even more subtle fade to white
        return HexToRgba(headerColor, 0.05);
    }

    private string HexToRgba(string hex, double opacity)
    {
        // Remove # if present
        hex = hex.TrimStart('#');
        
        // Parse hex to RGB
        var r = Convert.ToInt32(hex.Substring(0, 2), 16);
        var g = Convert.ToInt32(hex.Substring(2, 2), 16);
        var b = Convert.ToInt32(hex.Substring(4, 2), 16);
        
        return $"rgba({r}, {g}, {b}, {opacity})";
    }
}

