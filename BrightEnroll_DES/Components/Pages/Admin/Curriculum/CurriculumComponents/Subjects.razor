<!-- Filters -->
<div class="border-b border-gray-200 px-3 py-4 sm:px-6">
    <label class="mb-2 block text-sm font-bold text-gray-700">Filter:</label>
    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
            <div class="relative flex w-full items-center sm:w-auto">
                <span class="absolute left-3 flex items-center justify-center">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </span>
                <input type="text" placeholder="Search here..." @bind="SearchText" @bind:after="OnSearchChanged"
                       class="w-full rounded-lg border border-gray-300 py-2 pl-10 pr-3 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-60" />
            </div>
            <select @bind="GradeFilter" @bind:after="OnFilterChanged" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto">
                <option value="">Grade</option>
                @foreach (var grade in GradeLevels)
                {
                    <option value="@grade">@grade</option>
                }
            </select>
        </div>
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
            <button @onclick="OnClearFilters" class="flex w-full items-center justify-center gap-2 rounded-lg bg-gray-500 px-4 py-2 font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg sm:w-auto" style="font-size: 13px;">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Clear
            </button>
            @if (!IsViewOnly)
            {
            <button @onclick="OnAddSubject" class="w-full rounded-lg bg-blue-600 px-5 py-2 text-sm font-medium text-white shadow transition-all hover:bg-blue-700 sm:w-auto">
                + Add Subject
            </button>
            }
        </div>
    </div>
</div>

<!-- Grade Cards Layout -->
@if (GroupedSubjects != null && GroupedSubjects.Any())
{
    <div class="grid grid-cols-1 gap-6 px-3 py-6 sm:px-6 lg:grid-cols-2 xl:grid-cols-3">
        @foreach (var gradeGroup in GroupedSubjects)
        {
            var gradeColors = GetGradeColors(gradeGroup.Key);
            <div class="group relative overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm transition-all duration-200 hover:shadow-lg">
                <!-- Grade Header -->
                <div class="rounded-t-2xl border-b border-gray-100 px-5 py-4" style="background: linear-gradient(to right, @gradeColors.HeaderFrom, @gradeColors.HeaderTo);">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="flex h-10 w-10 items-center justify-center rounded-xl shadow-md" style="background: linear-gradient(to bottom right, @gradeColors.IconFrom, @gradeColors.IconTo);">
                                @GetGradeIcon(gradeGroup.Key)
                            </div>
                            <div>
                                <h3 class="text-lg font-bold text-gray-800">@gradeGroup.Key</h3>
                                <p class="text-xs text-gray-600">@gradeGroup.Value.Count subject@(gradeGroup.Value.Count != 1 ? "s" : "")</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Subjects List - Original vertical list with scroll -->
                <div class="max-h-96 overflow-y-auto divide-y divide-gray-100 rounded-b-2xl" style="background: linear-gradient(to bottom, @GetBodyGradientStart(gradeColors.HeaderFrom), @GetBodyGradientEnd(gradeColors.HeaderTo));">
                    @foreach (var subject in gradeGroup.Value)
                    {
                        <div class="group/item transition-colors hover:bg-white/70">
                            <div class="px-5 py-4">
                                <div class="flex items-start justify-between gap-3">
                                    <div class="flex-1 min-w-0">
                                        <h4 class="mb-1.5 text-sm font-semibold text-gray-900">@subject.Name</h4>
                                        <div class="flex flex-wrap items-center gap-3 text-xs text-gray-600">
                                            <div class="flex items-center gap-1.5">
                                                <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                                                </svg>
                                                <span>@subject.Id</span>
                                            </div>
                                            @if (!string.IsNullOrWhiteSpace(subject.Code))
                                            {
                                                <div class="flex items-center gap-1.5">
                                                    <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
                                                    </svg>
                                                    <span>@subject.Code</span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    @if (!IsViewOnly)
                                    {
                                    <div class="flex items-center gap-1.5">
                                        <button @onclick="() => OnEditSubject.InvokeAsync(subject)" 
                                                    class="flex items-center justify-center rounded-xl bg-yellow-50 p-2 text-yellow-600 transition-all duration-200 hover:bg-yellow-100 hover:shadow-sm"
                                                title="Edit Subject">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                                            </svg>
