@namespace BrightEnroll_DES.Components.Pages.Admin.Curriculum.CurriculumComponents
@using BrightEnroll_DES.Components.Pages.Admin.Curriculum.CurriculumComponents
@using BrightEnroll_DES.Components.Pages.Admin.Curriculum.CurriculumCS
@using BrightEnroll_DES.Components.Pages.Admin
@using System.Linq

<!-- Filters -->
<div class="border-b border-gray-200 px-3 py-4 sm:px-6">
    <label class="mb-2 block text-sm font-bold text-gray-700">Filter:</label>
    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
            <div class="relative flex w-full items-center sm:w-auto">
                <span class="absolute left-3 flex items-center justify-center">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </span>
                <input type="text" placeholder="Search here..." @bind="SearchText" @bind:after="OnSearchChanged"
                       class="w-full rounded-lg border border-gray-300 py-2 pl-10 pr-3 text-sm text-gray-700 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-60" />
            </div>
            <select @bind="TypeFilter" @bind:after="OnFilterChanged" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto">
                <option value="">Room Type</option>
                <option value="Lecture Room">Lecture Room</option>
                <option value="Laboratory">Laboratory</option>
                <option value="Computer Laboratory">Computer Laboratory</option>
                <option value="Music Room">Music Room</option>
                <option value="Library Area">Library Area</option>
                <option value="Faculty Room">Faculty Room</option>
                <option value="Special Room (SPED)">Special Room (SPED)</option>
            </select>
            <select @bind="BuildingFilter" @bind:after="OnFilterChanged" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto">
                <option value="">Building</option>
                @foreach (var building in AvailableBuildings)
                {
                    <option value="@building">@building</option>
                }
            </select>
            <select @bind="StatusFilter" @bind:after="OnFilterChanged" class="w-full rounded-lg border border-gray-300 bg-white px-3 py-2 text-sm text-gray-600 outline-none focus:border-gray-300 focus:ring-2 focus:ring-blue-400 sm:w-auto">
                <option value="">Status</option>
                <option value="Available">Available</option>
                <option value="Unavailable">Unavailable</option>
            </select>
        </div>
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
            <button @onclick="OnClearFilters" class="flex w-full items-center justify-center gap-2 rounded-lg bg-gray-500 px-4 py-2 font-semibold text-white shadow-md transition-all duration-300 hover:bg-gray-600 hover:shadow-lg sm:w-auto" style="font-size: 13px;">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Clear
            </button>
            @if (!IsViewOnly)
            {
                <button @onclick="OnAddClassroom" class="w-full rounded-lg bg-blue-600 px-5 py-2 text-sm font-medium text-white shadow transition-all hover:bg-blue-700 sm:w-auto">
                    + Add Classroom
                </button>
            }
        </div>
    </div>
</div>

<!-- Table -->
<table class="min-w-full text-sm">
    <thead class="bg-gray-100 font-semibold text-gray-600">
        <tr>
            <th class="px-4 py-3 text-left">Room Name</th>
            <th class="px-4 py-3 text-left">Room Type</th>
            <th class="px-4 py-3 text-left">Building</th>
            <th class="px-4 py-3 text-left">Floor</th>
            <th class="px-4 py-3 text-left">Capacity</th>
            <th class="px-4 py-3 text-left">Status</th>
            <th class="px-4 py-3 text-left">Notes</th>
            <th class="px-4 py-3 text-center">Actions</th>
        </tr>
    </thead>
    <tbody class="divide-y">
        @if (PaginatedClassrooms != null && PaginatedClassrooms.Any())
        {
            @foreach (var classroom in PaginatedClassrooms)
            {
                <tr class="transition hover:bg-gray-50">
                    <td class="px-4 py-3 font-medium">@classroom.RoomName</td>
                    <td class="px-4 py-3">@classroom.RoomType</td>
                    <td class="px-4 py-3">@classroom.BuildingName</td>
                    <td class="px-4 py-3">@classroom.FloorNumber</td>
                    <td class="px-4 py-3">@classroom.Capacity</td>
                    <td class="px-4 py-3">
                        @if (!IsViewOnly)
                        {
                            <button @onclick="() => OnToggleStatus.InvokeAsync(classroom)" 
                                    class="inline-block rounded-md px-2.5 py-1 text-[11px] font-medium transition-colors @(classroom.IsActive ? "bg-green-100 text-green-700 hover:bg-green-200" : "bg-red-100 text-red-700 hover:bg-red-200")">
                                @(classroom.IsActive ? "Available" : "Unavailable")
                            </button>
                        }
                        else
                        {
                            <span class="inline-block rounded-md px-2.5 py-1 text-[11px] font-medium @(classroom.IsActive ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700")">
                                @(classroom.IsActive ? "Available" : "Unavailable")
                            </span>
                        }
                    </td>
                    <td class="px-4 py-3">
                        @if (!string.IsNullOrWhiteSpace(classroom.Notes))
                        {
                            <span class="text-xs text-gray-600" title="@classroom.Notes">
                                @(classroom.Notes.Length > 50 ? classroom.Notes.Substring(0, 50) + "..." : classroom.Notes)
                            </span>
                        }
                        else
                        {
                            <span class="text-xs text-gray-400">-</span>
                        }
                    </td>
                    <td class="flex items-center justify-center gap-2 px-4 py-3">
                        @if (!IsViewOnly)
                        {
                            <button @onclick="() => OnEditClassroom.InvokeAsync(classroom)" 
                                    class="flex items-center gap-1.5 rounded-lg bg-yellow-100 px-3 py-1.5 text-xs font-medium text-yellow-700 transition-colors hover:bg-yellow-200">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                                </svg>
                                <span class="hidden sm:inline">Edit</span>
                            </button>
                        }
                        else
                        {
                            <span class="text-xs text-gray-400">View Only</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="px-4 py-12 text-center text-gray-500">
                    <div class="flex flex-col items-center justify-center">
                        <svg class="h-12 w-12 text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        <p class="text-base font-medium text-gray-600">No Data Available Currently</p>
                        <p class="text-sm text-gray-500 mt-1">There are no classrooms to display at this time.</p>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Footer with Pagination -->
<Pagination TotalItems="@FilteredClassroomsList.Count" 
            CurrentPage="@CurrentPage" 
            RowsPerPage="@RowsPerPage"
            ItemName="classrooms"
            OnPageChanged="HandlePageChanged"
            OnRowsPerPageChanged="HandleRowsPerPageChanged" />

@code {
    [Parameter] public List<Classroom> ClassroomsList { get; set; } = new();
    [Parameter] public bool IsViewOnly { get; set; } = false;
    [Parameter] public EventCallback OnAddClassroom { get; set; }
    [Parameter] public EventCallback<Classroom> OnEditClassroom { get; set; }
    [Parameter] public EventCallback<Classroom> OnToggleStatus { get; set; }

    private string SearchText { get; set; } = "";
    private string TypeFilter { get; set; } = "";
    private string BuildingFilter { get; set; } = "";
    private string StatusFilter { get; set; } = "";

    private List<string> AvailableBuildings =>
        ClassroomsList?
            .Select(c => c.BuildingName)
            .Where(b => !string.IsNullOrWhiteSpace(b))
            .Distinct()
            .OrderBy(b => b)
            .ToList() ?? new List<string>();

    // Pagination state
    private int CurrentPage { get; set; } = 1;
    private int RowsPerPage { get; set; } = 5;

    private List<Classroom> FilteredClassroomsList
    {
        get
        {
            var filtered = ClassroomsList.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(SearchText))
            {
                filtered = filtered.Where(c => c.RoomName.Contains(SearchText, StringComparison.OrdinalIgnoreCase));
            }

            if (!string.IsNullOrWhiteSpace(TypeFilter))
            {
                filtered = filtered.Where(c => c.RoomType == TypeFilter);
            }

            if (!string.IsNullOrWhiteSpace(BuildingFilter))
            {
                filtered = filtered.Where(c => c.BuildingName == BuildingFilter);
            }

            if (!string.IsNullOrWhiteSpace(StatusFilter))
            {
                bool isActive = StatusFilter == "Available";
                filtered = filtered.Where(c => c.IsActive == isActive);
            }

            return filtered.ToList();
        }
    }

    // Computed property for paginated classrooms
    private List<Classroom> PaginatedClassrooms
    {
        get
        {
            var filtered = FilteredClassroomsList;
            if (filtered == null || !filtered.Any())
                return new List<Classroom>();

            int startIndex = (CurrentPage - 1) * RowsPerPage;
            return filtered.Skip(startIndex).Take(RowsPerPage).ToList();
        }
    }

    private void OnSearchChanged()
    {
        StateHasChanged();
    }

    private void OnFilterChanged()
    {
        StateHasChanged();
    }

    private void OnClearFilters()
    {
        SearchText = "";
        TypeFilter = "";
        BuildingFilter = "";
        StatusFilter = "";
        CurrentPage = 1;
        StateHasChanged();
    }

    private void HandlePageChanged(int page)
    {
        CurrentPage = page;
        StateHasChanged();
    }

    private void HandleRowsPerPageChanged(int rowsPerPage)
    {
        RowsPerPage = rowsPerPage;
        CurrentPage = 1;
        StateHasChanged();
    }
}

