@page "/teacher-dashboard"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Services
@using BrightEnroll_DES.Services.Business.Academic
@using BrightEnroll_DES.Services.Authentication
@using BrightEnroll_DES.Services.RoleBase
@using BrightEnroll_DES.Data.Models
@using Microsoft.EntityFrameworkCore
@inject ILoadingService LoadingService
@inject IAuthService AuthService
@inject IAuthorizationService AuthorizationService
@inject TeacherService TeacherService
@inject SchoolYearService SchoolYearService
@inject NavigationManager NavigationManager

<PageTitle>Teacher Dashboard</PageTitle>

<RoleAuthorizeView RequiredPermission="@Permissions.ViewDashboard">
    @if (IsTeacher)
    {
        <div class="text-gray-800">
            <div class="mb-6 flex items-center justify-between">
                <h1 class="text-2xl font-bold text-gray-800">Teacher Dashboard</h1>
                @if (!string.IsNullOrEmpty(CurrentSchoolYear))
                {
                    <div class="flex items-center gap-2 rounded-lg border border-blue-200 bg-blue-50 px-4 py-2">
                        <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span class="text-sm font-semibold text-blue-800">School Year: <span class="font-bold">@CurrentSchoolYear</span></span>
                    </div>
                }
            </div>

            <!-- Statistics Cards Row -->
            <div class="mb-6 grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
                <!-- Assigned Classes Count -->
                <div class="rounded-xl border border-gray-100 bg-white p-4 shadow-sm">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-semibold text-gray-600">Assigned Classes</p>
                            <p class="text-2xl font-bold text-gray-800">@AssignedClassesCount</p>
                        </div>
                        <div class="rounded-full bg-blue-100 p-3">
                            <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- Pending Grades Count -->
                <div class="rounded-xl border border-gray-100 bg-white p-4 shadow-sm">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-semibold text-gray-600">Pending Grades</p>
                            <p class="text-2xl font-bold text-red-600">@PendingGradesCount</p>
                        </div>
                        <div class="rounded-full bg-red-100 p-3">
                            <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                        </div>
                    </div>
                </div>

                <!-- Today's Classes Count -->
                <div class="rounded-xl border border-gray-100 bg-white p-4 shadow-sm">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-semibold text-gray-600">Today's Classes</p>
                            <p class="text-2xl font-bold text-green-600">@TodaysScheduleCount</p>
                        </div>
                        <div class="rounded-full bg-green-100 p-3">
                            <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content Grid -->
            <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
                <!-- Left Column: Today's Schedule & Quick Actions -->
                <div class="lg:col-span-2 space-y-6">
                    <!-- Today's Schedule Widget -->
                    <div class="overflow-hidden rounded-xl border border-gray-100 bg-white shadow-sm">
                        <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                            <h2 class="text-lg font-bold text-gray-800">Today's Schedule</h2>
                            <p class="text-sm text-gray-600">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
                        </div>
                        <div class="p-6">
                            @if (TodaysSchedule != null && TodaysSchedule.Any())
                            {
                                <div class="space-y-4">
                                    @foreach (var schedule in TodaysSchedule)
                                    {
                                        <div class="flex items-center justify-between rounded-lg border border-gray-200 p-4 hover:bg-gray-50">
                                            <div class="flex-1">
                                                <div class="flex items-center gap-2">
                                                    <span class="font-semibold text-gray-800">@schedule.SectionName</span>
                                                    <span class="text-sm text-gray-500">(@schedule.GradeLevel)</span>
                                                </div>
                                                <p class="text-sm text-gray-600">@schedule.SubjectName</p>
                                                <p class="text-xs text-gray-500">
                                                    @schedule.RoomName
                                                    @if (!string.IsNullOrEmpty(schedule.BuildingName))
                                                    {
                                                        <span> - @schedule.BuildingName</span>
                                                    }
                                                </p>
                                            </div>
                                            <div class="text-right">
                                                <p class="font-semibold text-gray-800">
                                                    @FormatTime(schedule.StartTime) - @FormatTime(schedule.EndTime)
                                                </p>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="py-8 text-center text-gray-500">
                                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    <p class="mt-2 text-sm">No classes scheduled for today</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Pending Grades Widget -->
                    @if (PendingGrades != null && PendingGrades.Any())
                    {
                        <div class="overflow-hidden rounded-xl border border-gray-100 bg-white shadow-sm">
                            <div class="border-b border-gray-200 bg-red-50 px-6 py-4">
                                <h2 class="text-lg font-bold text-gray-800">Pending Grade Entries</h2>
                                <p class="text-sm text-gray-600">Grading periods where grades have not been submitted</p>
                            </div>
                            <div class="p-6">
                                <div class="space-y-3">
                                    @foreach (var item in PendingGrades)
                                    {
                                        <div class="flex items-center justify-between rounded-lg border border-red-200 bg-red-50 p-4">
                                            <div>
                                                <p class="font-semibold text-gray-800">@item.SubjectName</p>
                                                <p class="text-sm text-gray-600">@item.SectionName (@item.GradeLevel) - @item.GradingPeriod</p>
                                                <p class="text-xs text-gray-500">@item.StudentCount students</p>
                                            </div>
                                            <button @onclick="() => NavigateToGradebook(item.SubjectId, item.SectionId)" 
                                                    class="rounded-lg bg-red-600 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-red-700">
                                                Enter Grades
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Right Column: Quick Actions & Recent Activity -->
                <div class="space-y-6">
                    <!-- Quick Actions -->
                    <div class="overflow-hidden rounded-xl border border-gray-100 bg-white shadow-sm">
                        <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                            <h2 class="text-lg font-bold text-gray-800">Quick Actions</h2>
                        </div>
                        <div class="p-6">
                            <div class="space-y-3">
                                <button @onclick="() => NavigateToGradebook()" 
                                        class="w-full rounded-lg bg-green-600 px-4 py-3 text-left font-medium text-white transition-colors hover:bg-green-700">
                                    <div class="flex items-center gap-3">
                                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                        </svg>
                                        <span>Enter Grades</span>
                                    </div>
                                </button>
                                <button @onclick="() => NavigateToStudentRecord()" 
                                        class="w-full rounded-lg bg-purple-600 px-4 py-3 text-left font-medium text-white transition-colors hover:bg-purple-700">
                                    <div class="flex items-center gap-3">
                                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                                        </svg>
                                        <span>View Student Records</span>
                                    </div>
                                </button>
                                <button @onclick="() => NavigateToCurriculum()" 
                                        class="w-full rounded-lg bg-indigo-600 px-4 py-3 text-left font-medium text-white transition-colors hover:bg-indigo-700">
                                    <div class="flex items-center gap-3">
                                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                        </svg>
                                        <span>View Curriculum</span>
                                    </div>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Activity Feed -->
                    <div class="overflow-hidden rounded-xl border border-gray-100 bg-white shadow-sm">
                        <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
                            <h2 class="text-lg font-bold text-gray-800">Recent Activity</h2>
                        </div>
                        <div class="p-6">
                            @if (RecentActivity != null && RecentActivity.Any())
                            {
                                <div class="space-y-4">
                                    @foreach (var activity in RecentActivity)
                                    {
                                        <div class="border-l-4 border-blue-500 pl-4">
                                            <p class="text-sm font-medium text-gray-800">@activity.Action</p>
                                            @if (!string.IsNullOrEmpty(activity.Details))
                                            {
                                                <p class="text-xs text-gray-600">@activity.Details</p>
                                            }
                                            <p class="text-xs text-gray-500">@activity.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</p>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="py-8 text-center text-gray-500">
                                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <p class="mt-2 text-sm">No recent activity</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-12">
            <p class="text-gray-600">This page is only accessible to teachers.</p>
        </div>
    }
</RoleAuthorizeView>

@code {
    private bool IsTeacher { get; set; }
    private int TeacherId { get; set; }
    private int AssignedClassesCount { get; set; }
    private int PendingGradesCount { get; set; }
    private int TodaysScheduleCount { get; set; }
    private List<TodayScheduleItem>? TodaysSchedule { get; set; }
    private List<PendingGradeItem>? PendingGrades { get; set; }
    private List<TeacherActivityLog>? RecentActivity { get; set; }
    private string CurrentSchoolYear { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        LoadingService.HideLoading();
        
        if (AuthService.IsAuthenticated && AuthService.CurrentUser != null)
        {
            IsTeacher = AuthorizationService.HasRole("Teacher");
            if (IsTeacher)
            {
                TeacherId = AuthService.CurrentUser.user_ID;
                await LoadDashboardData();
            }
        }
    }

    private async Task LoadDashboardData()
    {
        try
        {
            // Load current school year
            CurrentSchoolYear = await SchoolYearService.GetActiveSchoolYearNameAsync() ?? "";
            
            AssignedClassesCount = await TeacherService.GetAssignedClassesCountAsync(TeacherId);
            TodaysSchedule = await TeacherService.GetTodayScheduleAsync(TeacherId);
            TodaysScheduleCount = TodaysSchedule?.Count ?? 0;
            PendingGrades = await TeacherService.GetPendingGradesAsync(TeacherId);
            PendingGradesCount = PendingGrades?.Count ?? 0;
            RecentActivity = await TeacherService.GetRecentActivityAsync(TeacherId, 10);
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading dashboard data: {ex.Message}");
        }
    }

    private string FormatTime(TimeSpan time)
    {
        var hours = time.Hours > 12 ? time.Hours - 12 : (time.Hours == 0 ? 12 : time.Hours);
        var minutes = time.Minutes.ToString("D2");
        var amPm = time.Hours < 12 ? "AM" : "PM";
        return $"{hours}:{minutes} {amPm}";
    }

    private void NavigateToGradebook(int? subjectId = null, int? sectionId = null)
    {
        NavigationManager.NavigateTo("/gradebook");
    }

    private void NavigateToStudentRecord()
    {
        NavigationManager.NavigateTo("/student-record");
    }

    private void NavigateToCurriculum()
    {
        NavigationManager.NavigateTo("/curriculum-management");
    }
}

