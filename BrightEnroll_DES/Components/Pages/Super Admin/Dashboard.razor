@page "/system-admin/dashboard"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Services
@using BrightEnroll_DES.Services.AuthFunction
@inject IAuthService AuthService
@inject ILoadingService LoadingService
@inject NavigationManager Navigation

<PageTitle>Super Admin Dashboard</PageTitle>

<div class="text-gray-800">
    <h1 class="mb-6 text-2xl font-bold text-gray-800">Dashboard</h1>
    <p class="mb-6 text-sm text-gray-600">Welcome back, @GetAdminName()! Manage your school customers and track business metrics.</p>
</div>

<!-- Key Metrics -->
<div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
    <!-- Total Customers -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-start justify-between">
            <div>
                <p class="mb-1 text-sm font-medium text-gray-500">Total Customers</p>
                <h3 class="text-3xl font-bold text-gray-800">@TotalCustomers</h3>
                <p class="mt-1 text-xs text-green-600">+5 this month</p>
            </div>
            <div class="rounded-xl bg-blue-100 p-3">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Active Subscriptions -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-start justify-between">
            <div>
                <p class="mb-1 text-sm font-medium text-gray-500">Active Subscriptions</p>
                <h3 class="text-3xl font-bold text-gray-800">@ActiveSubscriptions</h3>
                <p class="mt-1 text-xs text-green-600">98% retention rate</p>
            </div>
            <div class="rounded-xl bg-green-100 p-3">
                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Monthly Revenue -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-start justify-between">
            <div>
                <p class="mb-1 text-sm font-medium text-gray-500">Monthly Revenue</p>
                <h3 class="text-3xl font-bold text-gray-800">?@MonthlyRevenue.ToString("N0")</h3>
                <p class="mt-1 text-xs text-green-600">+12% from last month</p>
            </div>
            <div class="rounded-xl bg-purple-100 p-3">
                <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Open Tickets -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
        <div class="mb-4 flex items-start justify-between">
            <div>
                <p class="mb-1 text-sm font-medium text-gray-500">Open Support Tickets</p>
                <h3 class="text-3xl font-bold text-gray-800">@OpenTickets</h3>
                <p class="mt-1 text-xs text-orange-600">3 high priority</p>
            </div>
            <div class="rounded-xl bg-orange-100 p-3">
                <svg class="h-6 w-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="mb-6">
    <h2 class="mb-4 text-xl font-bold text-gray-800">Quick Actions</h2>
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <button @onclick="NavigateToCustomers" class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition-all hover:shadow-md">
            <div class="rounded-lg bg-blue-100 p-3">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
            </div>
            <div class="text-left">
                <h3 class="font-semibold text-gray-800">Customer Management</h3>
                <p class="text-sm text-gray-500">View and manage school customers</p>
            </div>
        </button>

        <button @onclick="NavigateToSales" class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition-all hover:shadow-md">
            <div class="rounded-lg bg-green-100 p-3">
                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
            </div>
            <div class="text-left">
                <h3 class="font-semibold text-gray-800">Sales Pipeline</h3>
                <p class="text-sm text-gray-500">Track leads and conversions</p>
            </div>
        </button>

        <button @onclick="NavigateToSubscriptions" class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition-all hover:shadow-md">
            <div class="rounded-lg bg-purple-100 p-3">
                <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
            </div>
            <div class="text-left">
                <h3 class="font-semibold text-gray-800">Subscriptions</h3>
                <p class="text-sm text-gray-500">Manage billing and plans</p>
            </div>
        </button>

        <button @onclick="NavigateToSupport" class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition-all hover:shadow-md">
            <div class="rounded-lg bg-orange-100 p-3">
                <svg class="h-6 w-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
            </div>
            <div class="text-left">
                <h3 class="font-semibold text-gray-800">Support Tickets</h3>
                <p class="text-sm text-gray-500">Handle customer support</p>
            </div>
        </button>

        <button @onclick="NavigateToContracts" class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition-all hover:shadow-md">
            <div class="rounded-lg bg-indigo-100 p-3">
                <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
            </div>
            <div class="text-left">
                <h3 class="font-semibold text-gray-800">Contracts & Licensing</h3>
                <p class="text-sm text-gray-500">Manage agreements and licenses</p>
            </div>
        </button>

        <button @onclick="NavigateToUpdates" class="flex items-center gap-4 rounded-xl border border-gray-200 bg-white p-4 shadow-sm transition-all hover:shadow-md">
            <div class="rounded-lg bg-teal-100 p-3">
                <svg class="h-6 w-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
            </div>
            <div class="text-left">
                <h3 class="font-semibold text-gray-800">Version Management</h3>
                <p class="text-sm text-gray-500">Track updates and features</p>
            </div>
        </button>
    </div>
</div>

<!-- Recent Activities -->
<div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
    <!-- Recent Sales -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm">
        <div class="mb-4 flex items-center justify-between">
            <h2 class="text-xl font-bold text-gray-800">Recent Sales</h2>
            <button @onclick="NavigateToSales" class="text-sm font-medium text-blue-600 hover:text-blue-800">
                View All
            </button>
        </div>
        <div class="space-y-3">
            @foreach (var sale in RecentSales)
            {
                <div class="flex items-center justify-between rounded-lg border border-gray-200 p-4">
                    <div>
                        <h3 class="font-semibold text-gray-800">@sale.SchoolName</h3>
                        <p class="text-sm text-gray-500">@sale.Plan - @sale.Date.ToString("MMM dd, yyyy")</p>
                    </div>
                    <div class="text-right">
                        <p class="font-semibold text-green-600">?@sale.Amount.ToString("N0")</p>
                        <span class="inline-flex rounded-full bg-green-100 px-2 py-1 text-xs font-medium text-green-800">Converted</span>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Expiring Subscriptions -->
    <div class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm">
        <div class="mb-4 flex items-center justify-between">
            <h2 class="text-xl font-bold text-gray-800">Expiring Soon</h2>
            <button @onclick="NavigateToSubscriptions" class="text-sm font-medium text-blue-600 hover:text-blue-800">
                View All
            </button>
        </div>
        <div class="space-y-3">
            @foreach (var subscription in ExpiringSoon)
            {
                <div class="flex items-center justify-between rounded-lg border border-orange-200 bg-orange-50 p-4">
                    <div>
                        <h3 class="font-semibold text-gray-800">@subscription.SchoolName</h3>
                        <p class="text-sm text-gray-600">Expires: @subscription.ExpiryDate.ToString("MMM dd, yyyy")</p>
                    </div>
                    <button class="rounded-full bg-orange-600 px-4 py-2 text-sm font-medium text-white hover:bg-orange-700">
                        Renew
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private int TotalCustomers { get; set; } = 48;
    private int ActiveSubscriptions { get; set; } = 45;
    private decimal MonthlyRevenue { get; set; } = 2450000;
    private int OpenTickets { get; set; } = 12;

    private List<RecentSale> RecentSales { get; set; } = new();
    private List<ExpiringSubscription> ExpiringSoon { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        // Check if user is Super Admin
        if (AuthService.CurrentUser?.user_role != "Super Admin")
        {
            Navigation.NavigateTo("/dashboard");
            return;
        }

        LoadingService.ShowLoading("Loading dashboard...");
        
        try
        {
            await LoadDashboardData();
        }
        finally
        {
            LoadingService.HideLoading();
        }
    }

    private async Task LoadDashboardData()
    {
        await Task.Delay(500);

        // Mock recent sales
        RecentSales = new List<RecentSale>
        {
            new RecentSale { SchoolName = "St. Mary's Academy", Plan = "Premium Plan", Amount = 85000, Date = DateTime.Now.AddDays(-2) },
            new RecentSale { SchoolName = "Hope Christian School", Plan = "Standard Plan", Amount = 55000, Date = DateTime.Now.AddDays(-5) },
            new RecentSale { SchoolName = "Bright Future High School", Plan = "Basic Plan", Amount = 35000, Date = DateTime.Now.AddDays(-7) }
        };

        // Mock expiring subscriptions
        ExpiringSoon = new List<ExpiringSubscription>
        {
            new ExpiringSubscription { SchoolName = "Golden Gate Academy", ExpiryDate = DateTime.Now.AddDays(15) },
            new ExpiringSubscription { SchoolName = "Sacred Heart School", ExpiryDate = DateTime.Now.AddDays(22) },
            new ExpiringSubscription { SchoolName = "New Dawn Institute", ExpiryDate = DateTime.Now.AddDays(28) }
        };
    }

    private string GetAdminName()
    {
        var user = AuthService.CurrentUser;
        if (user == null) return "System Admin";
        
        return $"{user.first_name} {user.last_name}";
    }

    private void NavigateToCustomers() => Navigation.NavigateTo("/system-admin/customers");
    private void NavigateToSales() => Navigation.NavigateTo("/system-admin/sales");
    private void NavigateToSubscriptions() => Navigation.NavigateTo("/system-admin/subscriptions");
    private void NavigateToSupport() => Navigation.NavigateTo("/system-admin/support");
    private void NavigateToContracts() => Navigation.NavigateTo("/system-admin/contracts");
    private void NavigateToUpdates() => Navigation.NavigateTo("/system-admin/updates");

    public class RecentSale
    {
        public string SchoolName { get; set; } = string.Empty;
        public string Plan { get; set; } = string.Empty;
        public decimal Amount { get; set; }
        public DateTime Date { get; set; }
    }

    public class ExpiringSubscription
    {
        public string SchoolName { get; set; } = string.Empty;
        public DateTime ExpiryDate { get; set; }
    }
}
