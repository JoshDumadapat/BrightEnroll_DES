@page "/system-admin/support"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Services
@using BrightEnroll_DES.Services.Authentication
@using BrightEnroll_DES.Services.Business.SuperAdmin
@using BrightEnroll_DES.Data.Models
@using System
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject SuperAdminService SuperAdminService

<PageTitle>Support Tickets</PageTitle>

<div class="mb-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-xl font-bold text-gray-900">Support Ticket System</h1>
        </div>
    </div>
</div>

<!-- Stats -->
<div class="mb-6 grid grid-cols-1 gap-3 sm:grid-cols-4">
    <div class="rounded-xl border-2 border-gray-200 bg-white p-4 shadow-md">
        <div class="flex flex-col">
            <div class="flex items-start gap-2 mb-2">
                <div class="rounded-lg bg-red-50 p-2 flex-shrink-0">
                    <svg class="h-5 w-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-bold text-red-700">Open Tickets</p>
                </div>
            </div>
            <div class="text-right">
                <p class="text-2xl font-bold text-red-600">@OpenTickets</p>
            </div>
        </div>
    </div>
    <div class="rounded-xl border-2 border-gray-200 bg-white p-4 shadow-md">
        <div class="flex flex-col">
            <div class="flex items-start gap-2 mb-2">
                <div class="rounded-lg bg-yellow-50 p-2 flex-shrink-0">
                    <svg class="h-5 w-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-bold text-yellow-700">In Progress</p>
                </div>
            </div>
            <div class="text-right">
                <p class="text-2xl font-bold text-yellow-600">@InProgressTickets</p>
            </div>
        </div>
    </div>
    <div class="rounded-xl border-2 border-gray-200 bg-white p-4 shadow-md">
        <div class="flex flex-col">
            <div class="flex items-start gap-2 mb-2">
                <div class="rounded-lg bg-green-50 p-2 flex-shrink-0">
                    <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-bold text-green-700">Resolved Today</p>
                </div>
            </div>
            <div class="text-right">
                <p class="text-2xl font-bold text-green-600">@ResolvedToday</p>
            </div>
        </div>
    </div>
    <div class="rounded-xl border-2 border-gray-200 bg-white p-4 shadow-md">
        <div class="flex flex-col">
            <div class="flex items-start gap-2 mb-2">
                <div class="rounded-lg bg-blue-50 p-2 flex-shrink-0">
                    <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-bold text-blue-700">Total Tickets</p>
                </div>
            </div>
            <div class="text-right">
                <p class="text-2xl font-bold text-blue-600">@TotalTickets</p>
            </div>
        </div>
    </div>
</div>

<!-- Tickets Table -->
<div class="rounded-xl border border-gray-100 bg-white shadow-sm">
    <div class="border-b p-6">
        <div class="flex items-center justify-between">
            <h2 class="text-lg font-bold text-gray-800">Support Tickets</h2>
            <button @onclick="RefreshTickets" disabled="@_isLoading" class="flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                <svg class="h-4 w-4 @(_isLoading ? "animate-spin" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                Refresh
            </button>
        </div>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-semibold uppercase text-gray-600">Ticket ID</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold uppercase text-gray-600">School</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold uppercase text-gray-600">Category</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold uppercase text-gray-600">Subject</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold uppercase text-gray-600">Priority</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold uppercase text-gray-600">Assigned To</th>
                    <th class="px-6 py-3 text-center text-xs font-semibold uppercase text-gray-600">Status</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @if (Tickets.Any())
                {
                    @foreach (var ticket in Tickets)
                    {
                        <tr class="hover:bg-gray-50 cursor-pointer transition-colors" @onclick="() => OpenTicketModal(ticket.TicketId)">
                            <td class="px-6 py-4 text-sm font-medium text-blue-600">@ticket.TicketNumber</td>
                            <td class="px-6 py-4 text-sm text-gray-800">@GetSchoolName(ticket)</td>
                            <td class="px-6 py-4 text-sm text-gray-600">@(ticket.Category ?? "N/A")</td>
                            <td class="px-6 py-4 text-sm text-gray-600">@ticket.Subject</td>
                            <td class="px-6 py-4">
                                <span class="inline-flex rounded-full px-3 py-1 text-xs font-medium @GetPriorityClass(ticket.Priority)">@ticket.Priority</span>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600">
                                @if (ticket.AssignedToUser != null)
                                {
                                    @($"{ticket.AssignedToUser.FirstName ?? ""} {ticket.AssignedToUser.LastName ?? ""}".Trim())
                                }
                                else
                                {
                                    <span class="text-gray-400">Unassigned</span>
                                }
                            </td>
                            <td class="px-6 py-4 text-center">
                                <span class="inline-flex rounded-full px-3 py-1 text-xs font-medium @GetStatusClass(GetDisplayStatus(ticket.Status))">@GetDisplayStatus(ticket.Status)</span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                            <svg class="mx-auto mb-4 h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                            </svg>
                            <p>No support tickets found</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Ticket Detail Modal -->
@if (showTicketModal && selectedTicket != null)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" @onclick="CloseTicketModal">
        <div class="w-full max-w-4xl max-h-[90vh] overflow-y-auto rounded-2xl bg-white shadow-xl" @onclick:stopPropagation="true">
            <!-- Modal Header -->
            <div class="sticky top-0 flex items-center justify-between border-b border-gray-200 bg-white px-6 py-4 rounded-t-2xl">
                <h3 class="text-xl font-semibold text-gray-800">Ticket Details - @selectedTicket.TicketNumber</h3>
                <button @onclick="CloseTicketModal" class="text-gray-400 hover:text-gray-600 transition-colors">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Modal Body -->
            <div class="px-6 py-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <!-- Ticket Information -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Ticket Number</label>
                        <p class="text-sm text-gray-900 font-medium">@selectedTicket.TicketNumber</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">School</label>
                        <p class="text-sm text-gray-900">@GetSchoolName(selectedTicket)</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                        <p class="text-sm text-gray-900">@(selectedTicket.Category ?? "N/A")</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Priority</label>
                        <select @bind="selectedTicket.Priority" class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200">
                            <option value="Low">Low</option>
                            <option value="Medium">Medium</option>
                            <option value="High">High</option>
                            <option value="Critical">Critical</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                        <select @bind="selectedTicket.Status" @bind:after="OnStatusChanged" class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200">
                            <option value="Open">Pending</option>
                            <option value="In Progress">In Process</option>
                            <option value="Resolved">Done</option>
                            <option value="Closed">Closed</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Created At</label>
                        <p class="text-sm text-gray-900">@selectedTicket.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                    </div>
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Subject</label>
                    <InputText @bind-Value="selectedTicket.Subject" class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200" />
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                    <InputTextArea @bind-Value="selectedTicket.Description" rows="6" class="w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-200" />
                </div>

                @if (selectedTicket.AssignedToUser != null)
                {
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Assigned To</label>
                        <p class="text-sm text-gray-900">@($"{selectedTicket.AssignedToUser.FirstName ?? ""} {selectedTicket.AssignedToUser.LastName ?? ""}".Trim())</p>
                    </div>
                }

                @if (selectedTicket.ResolvedAt.HasValue)
                {
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Resolved At</label>
                        <p class="text-sm text-gray-900">@selectedTicket.ResolvedAt.Value.ToString("MMM dd, yyyy HH:mm")</p>
                    </div>
                }
            </div>

            <!-- Modal Footer -->
            <div class="sticky bottom-0 flex justify-end gap-3 border-t border-gray-200 bg-white px-6 py-4 rounded-b-2xl">
                <button @onclick="CloseTicketModal" class="rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                    Cancel
                </button>
                <button @onclick="SaveTicketChanges" disabled="@isSaving" class="rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                    @if (isSaving)
                    {
                        <span class="flex items-center">
                            <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            Saving...
                        </span>
                    }
                    else
                    {
                        <span>Save Changes</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<SupportTicket> Tickets { get; set; } = new();
    private int OpenTickets { get; set; }
    private int InProgressTickets { get; set; }
    private int ResolvedToday { get; set; }
    private int TotalTickets { get; set; }

    private bool _dataLoaded = false;
    private bool _isLoading = false;
    private DateTime? _lastRefreshTime = null;

    protected override void OnInitialized()
    {
        // Check if user is Super Admin (handle both "Super Admin" and "SuperAdmin")
        var currentUser = AuthService?.CurrentUser;
        var userRole = currentUser?.user_role;
        var isSuperAdmin = !string.IsNullOrWhiteSpace(userRole) && 
                          (userRole.Equals("Super Admin", StringComparison.OrdinalIgnoreCase) ||
                           userRole.Replace(" ", "").Equals("SuperAdmin", StringComparison.OrdinalIgnoreCase));
        
        if (!isSuperAdmin)
        {
            Navigation.NavigateTo("/dashboard");
            return;
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        // Refresh tickets when navigating to this page (including when returning from other pages)
        // Only refresh if we've loaded data before and it's been more than 1 second since last refresh
        // This ensures new tickets created elsewhere are visible without causing excessive refreshes
        if (_dataLoaded && !_isLoading)
        {
            var timeSinceLastRefresh = _lastRefreshTime.HasValue 
                ? (DateTime.Now - _lastRefreshTime.Value).TotalSeconds 
                : double.MaxValue;
            
            // Only refresh if it's been at least 1 second since last refresh
            if (timeSinceLastRefresh >= 1.0)
            {
                await LoadTickets();
                StateHasChanged();
            }
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || _dataLoaded || _isLoading) return;
        _isLoading = true;

        try
        {
            // Load data silently without loading screen
            try
            {
                await LoadTickets();
                _dataLoaded = true;
                StateHasChanged();
            }
            catch (Exception ex)
            {
                System.Diagnostics.Debug.WriteLine($"[Support] Error loading tickets: {ex.Message}");
                Tickets = new List<SupportTicket>();
                _dataLoaded = true;
                StateHasChanged();
            }
            finally
            {
                _isLoading = false;
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"[Support] Critical error: {ex.Message}");
            Tickets = new List<SupportTicket>();
            _dataLoaded = true;
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadTickets()
    {
        if (SuperAdminService == null)
        {
            Tickets = new List<SupportTicket>();
            return;
        }

        Tickets = await SuperAdminService.GetAllSupportTicketsAsync();
        
        OpenTickets = Tickets.Count(t => t.Status == "Open" || t.Status == "Pending");
        InProgressTickets = Tickets.Count(t => t.Status == "In Progress" || t.Status == "In Process");
        ResolvedToday = Tickets.Count(t => (t.Status == "Resolved" || t.Status == "Done") && t.ResolvedAt.HasValue && t.ResolvedAt.Value.Date == DateTime.Today);
        TotalTickets = Tickets.Count;
        
        _lastRefreshTime = DateTime.Now;
    }

    private async Task RefreshTickets()
    {
        if (_isLoading) return;
        
        _isLoading = true;
        try
        {
            await LoadTickets();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"[Support] Error refreshing tickets: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }



    private string GetPriorityClass(string priority) => priority switch
    {
        "Critical" => "bg-red-100 text-red-800",
        "High" => "bg-orange-100 text-orange-800",
        "Medium" => "bg-yellow-100 text-yellow-800",
        "Low" => "bg-blue-100 text-blue-800",
        _ => "bg-gray-100 text-gray-800"
    };

    private string GetStatusClass(string status) => status switch
    {
        "Pending" => "bg-yellow-100 text-yellow-800",
        "In Process" => "bg-blue-100 text-blue-800",
        "Done" => "bg-green-100 text-green-800",
        "Open" => "bg-yellow-100 text-yellow-800", // Legacy support
        "In Progress" => "bg-blue-100 text-blue-800", // Legacy support
        "Resolved" => "bg-green-100 text-green-800", // Legacy support
        "Closed" => "bg-gray-100 text-gray-800",
        _ => "bg-gray-100 text-gray-800"
    };

    private string GetDisplayStatus(string status) => status switch
    {
        "Open" => "Pending",
        "In Progress" => "In Process",
        "Resolved" => "Done",
        _ => status
    };

    private string GetSchoolName(SupportTicket ticket)
    {
        if (ticket.Customer != null && !string.IsNullOrWhiteSpace(ticket.Customer.SchoolName))
        {
            return ticket.Customer.SchoolName;
        }
        return "N/A";
    }

    private SupportTicket? selectedTicket = null;
    private bool showTicketModal = false;
    private bool isSaving = false;

    private async Task OpenTicketModal(int ticketId)
    {
        try
        {
            selectedTicket = await SuperAdminService.GetSupportTicketByIdAsync(ticketId);
            if (selectedTicket != null)
            {
                showTicketModal = true;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading ticket: {ex.Message}");
        }
    }

    private void CloseTicketModal()
    {
        showTicketModal = false;
        selectedTicket = null;
        StateHasChanged();
    }

    private void OnStatusChanged()
    {
        if (selectedTicket != null && (selectedTicket.Status == "Resolved" || selectedTicket.Status == "Done"))
        {
            if (!selectedTicket.ResolvedAt.HasValue)
            {
                selectedTicket.ResolvedAt = DateTime.Now;
            }
        }
    }

    private async Task SaveTicketChanges()
    {
        if (selectedTicket == null) return;

        isSaving = true;
        try
        {
            // Map display status back to database status
            if (selectedTicket.Status == "Done")
            {
                selectedTicket.Status = "Resolved";
            }
            else if (selectedTicket.Status == "In Process")
            {
                selectedTicket.Status = "In Progress";
            }
            else if (selectedTicket.Status == "Pending")
            {
                selectedTicket.Status = "Open";
            }

            await SuperAdminService.UpdateSupportTicketAsync(selectedTicket);
            await LoadTickets();
            CloseTicketModal();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error saving ticket: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }
}
