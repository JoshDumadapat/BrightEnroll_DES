@page "/system-admin/audit-log"
@layout Components.Layout.MainLayout
@using BrightEnroll_DES.Components.Pages.Admin.AuditLog.AuditLogComponents
@using BrightEnroll_DES.Components.Pages.Admin.AuditLog.AuditLogCS
@using BrightEnroll_DES.Services.Business.Audit
@using BrightEnroll_DES.Data.Models
@using BrightEnroll_DES.Services.Authentication
@using System
@inject AuditLogService AuditLogService
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Audit Log</PageTitle>

<div class="text-gray-800">
    <div class="mb-6 flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Audit Log</h1>
            <p class="mt-1 text-sm text-gray-600">System activity and transaction logs</p>
        </div>
    </div>
    
    <!-- Summary Cards -->
    <div class="mb-6 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
        <!-- Total Logs Card -->
        <div @onclick="FilterByTotal" 
             class="group cursor-pointer rounded-xl border border-blue-200 bg-white p-4 shadow-sm transition-all duration-300 hover:border-blue-300 hover:shadow-md @(ActiveCardFilter == "total" ? "ring-2 ring-blue-500" : "")">
            <div class="flex items-center gap-3">
                <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-blue-50">
                    <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                </div>
                <div class="flex-1">
                    <p class="text-xs font-semibold text-gray-700">Total Logs</p>
                    <p class="text-2xl font-bold text-gray-900">@TotalLogsCount</p>
                </div>
            </div>
        </div>

        <!-- Important Logs Card -->
        <div @onclick="FilterByImportant" 
             class="group cursor-pointer rounded-xl border border-red-200 bg-white p-4 shadow-sm transition-all duration-300 hover:border-red-300 hover:shadow-md @(ActiveCardFilter == "important" ? "ring-2 ring-red-500" : "")">
            <div class="flex items-center gap-3">
                <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-red-50">
                    <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
                <div class="flex-1">
                    <p class="text-xs font-semibold text-gray-700">Failed Logs</p>
                    <p class="text-2xl font-bold text-gray-900">@ImportantLogsCount</p>
                </div>
            </div>
        </div>

        <!-- High Severity Card -->
        <div @onclick="FilterByHighSeverity" 
             class="group cursor-pointer rounded-xl border border-orange-200 bg-white p-4 shadow-sm transition-all duration-300 hover:border-orange-300 hover:shadow-md @(ActiveCardFilter == "highSeverity" ? "ring-2 ring-orange-500" : "")">
            <div class="flex items-center gap-3">
                <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-orange-50">
                    <svg class="h-6 w-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                </div>
                <div class="flex-1">
                    <p class="text-xs font-semibold text-gray-700">High Severity</p>
                    <p class="text-2xl font-bold text-gray-900">@HighSeverityCount</p>
                </div>
            </div>
        </div>

        <!-- Recent (7 days) Card -->
        <div @onclick="FilterByRecent" 
             class="group cursor-pointer rounded-xl border border-green-200 bg-white p-4 shadow-sm transition-all duration-300 hover:border-green-300 hover:shadow-md @(ActiveCardFilter == "recent" ? "ring-2 ring-green-500" : "")">
            <div class="flex items-center gap-3">
                <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-green-50">
                    <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="flex-1">
                    <p class="text-xs font-semibold text-gray-700">Recent (7 days)</p>
                    <p class="text-2xl font-bold text-gray-900">@RecentLogsCount</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Loading Indicator -->
    @if (isLoading)
    {
        <div class="mb-6 flex items-center justify-center rounded-xl bg-white p-8 shadow">
            <div class="text-center">
                <svg class="mx-auto h-8 w-8 animate-spin text-blue-600" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <p class="mt-2 text-sm text-gray-600">Loading audit logs...</p>
            </div>
        </div>
    }
    else
    {
        <!-- Card Container -->
        <div class="mb-6 overflow-hidden rounded-xl bg-white shadow">
            <AuditLogTable Logs="AuditLogs" RowsPerPage="RowsPerPage" @ref="auditLogTable" />
        </div>
    }
</div>

@code {
    private int RowsPerPage { get; set; } = 10;
    private AuditLogTable? auditLogTable;
    private string ActiveCardFilter { get; set; } = "";
    private bool isLoading = true;

    private List<AuditLogEntry> AuditLogs = new();
    private int TotalLogsCount { get; set; } = 0;
    private int ImportantLogsCount { get; set; } = 0;
    private int HighSeverityCount { get; set; } = 0;
    private int RecentLogsCount { get; set; } = 0;

    protected override void OnInitialized()
    {
        // Check if user is Super Admin (handle both "Super Admin" and "SuperAdmin")
        var currentUser = AuthService?.CurrentUser;
        var userRole = currentUser?.user_role;
        var isSuperAdmin = !string.IsNullOrWhiteSpace(userRole) && 
                          (userRole.Equals("Super Admin", StringComparison.OrdinalIgnoreCase) ||
                           userRole.Replace(" ", "").Equals("SuperAdmin", StringComparison.OrdinalIgnoreCase));
        
        if (!isSuperAdmin)
        {
            Navigation.NavigateTo("/dashboard");
            return;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;
        await LoadAuditLogs();
    }

    private async Task LoadAuditLogs()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // Fetch all audit logs from database
            var logs = await AuditLogService.GetAuditLogsAsync();
            
            // Convert AuditLog models to AuditLogEntry for display
            var newLogs = logs.Select(log => new AuditLogEntry
            {
                Id = $"LOG-{log.LogId:D5}",
                Timestamp = log.Timestamp,
                User = log.UserName ?? "Unknown",
                Role = log.UserRole ?? "Unknown",
                Action = log.Action,
                Module = log.Module ?? "Unknown",
                Description = log.Description ?? "",
                IpAddress = log.IpAddress ?? "N/A",
                Status = log.Status ?? "Unknown",
                Severity = log.Severity ?? "Low",
                EntityType = log.EntityType,
                EntityId = log.EntityId,
                OldValues = log.OldValues,
                NewValues = log.NewValues
            }).ToList();

            // Update data atomically to prevent UI flicker
            AuditLogs = newLogs;

            // Calculate counts from database (more accurate)
            TotalLogsCount = await AuditLogService.GetTotalLogsCountAsync();
            ImportantLogsCount = await AuditLogService.GetFailedLogsCountAsync();
            HighSeverityCount = await AuditLogService.GetHighSeverityLogsCountAsync();
            RecentLogsCount = await AuditLogService.GetRecentLogsCountAsync();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading audit logs: {ex.Message}");
            
            // If table doesn't exist or error occurs, set empty data
            if (AuditLogs.Count == 0)
            {
                AuditLogs = new List<AuditLogEntry>();
                TotalLogsCount = 0;
                ImportantLogsCount = 0;
                HighSeverityCount = 0;
                RecentLogsCount = 0;
            }
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void FilterByTotal()
    {
        if (auditLogTable == null) return;
        ActiveCardFilter = ActiveCardFilter == "total" ? "" : "total";
        if (ActiveCardFilter == "total")
        {
            auditLogTable.ClearAllFilters();
        }
        else
        {
            auditLogTable.ClearAllFilters();
        }
    }

    private void FilterByImportant()
    {
        if (auditLogTable == null) return;
        ActiveCardFilter = ActiveCardFilter == "important" ? "" : "important";
        if (ActiveCardFilter == "important")
        {
            auditLogTable.SetStatusFilter("Failed");
        }
        else
        {
            auditLogTable.ClearAllFilters();
        }
    }

    private void FilterByHighSeverity()
    {
        if (auditLogTable == null) return;
        ActiveCardFilter = ActiveCardFilter == "highSeverity" ? "" : "highSeverity";
        if (ActiveCardFilter == "highSeverity")
        {
            auditLogTable.SetStatusFilter("Failed");
        }
        else
        {
            auditLogTable.ClearAllFilters();
        }
    }

    private void FilterByRecent()
    {
        if (auditLogTable == null) return;
        ActiveCardFilter = ActiveCardFilter == "recent" ? "" : "recent";
        if (ActiveCardFilter == "recent")
        {
            auditLogTable.SetDateFilter(DateTime.Now.AddDays(-7), DateTime.Now);
        }
        else
        {
            auditLogTable.ClearAllFilters();
        }
    }
}
